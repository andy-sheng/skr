<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_item_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_40">

        <com.base.image.fresco.BaseImageView
            android:id="@+id/user_list_avatar"
            android:layout_width="@dimen/search_item_avatar_size"
            android:layout_height="@dimen/search_item_avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:roundAsCircle="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_toLeftOf="@id/btn_area"
            android:layout_toRightOf="@id/user_list_avatar"
            android:gravity="left|center_vertical">

            <LinearLayout
                android:id="@+id/name_gender_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_black_trans_90"
                    android:textSize="@dimen/text_size_42" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_tip"
                android:layout_marginRight="@dimen/margin_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_gender_level"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/text_size_32" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_40">

         <ImageView
             android:id="@+id/show_dialog"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:src="@drawable/right_line"
             />


            <TextView
                android:id="@+id/cancel_banspeaker_tv"
                android:layout_width="@dimen/view_dimen_180"
                android:layout_height="@dimen/view_dimen_75"
                android:layout_marginRight="@dimen/view_dimen_20"
                android:layout_centerVertical="true"
                android:background="@drawable/room_management_btn_press_bg"
                android:gravity="center"
                android:textColor="@drawable/room_manage_btn_color"
                android:textSize="@dimen/text_size_36"
                android:focusable="true"
                android:text="@string/cancel_banspeaker"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_trans_10" />
</LinearLayout>
