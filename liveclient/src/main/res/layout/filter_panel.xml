<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_270"
        android:layout_marginLeft="13.33dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="13.33dp"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/param_adjuster_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_232"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minimize_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_50"
            android:gravity="center"
            android:text="@string/low"
            android:textColor="@color/color_white_trans_35"
            android:textSize="@dimen/control_panel_text_size" />

        <com.base.view.RotatedSeekBar
            android:id="@+id/volume_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/maximize_btn"
            android:layout_toRightOf="@id/minimize_btn"
            app:appSeekBarLeftPadding="10dp"
            app:appSeekBarRightPadding="10dp"
            app:appShapeColorBK="@color/color_white_trans_50"
            app:appShapeColorFT="#FED533"
            app:appShapeSize="@dimen/margin_2"
            app:appThumbDrawable="@drawable/live_icon_jindutiao_yuan_white"
            app:appThumbDrawablePress="@drawable/live_icon_jindutiao_yuan_yellow"
            app:appThumbSize="16.66dp"
            app:appThumbSizePress="11dp" />

        <TextView
            android:id="@+id/maximize_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_50"
            android:text="@string/high"
            android:textColor="@color/color_white_trans_35"
            android:textSize="@dimen/control_panel_text_size" />

    </RelativeLayout>

</LinearLayout>