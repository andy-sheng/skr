<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_black_trans_50">

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_70"
        android:layout_marginTop="@dimen/margin_90"
        android:drawableLeft="@drawable/bg_img_huati_location"
        android:drawablePadding="@dimen/margin_10"
        android:gravity="center"
        android:shadowColor="@color/color_black_trans_50"
        android:shadowRadius="2"
        android:text="@string/default_location_hint"
        android:textColor="@color/color_white_trans_80"
        android:textSize="@dimen/text_size_36"/>

    <ImageView
        android:id="@+id/turn_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginTop="20dp"
        android:padding="10.67dp"
        android:src="@drawable/start_live_icon_flip"/>

    <com.wali.live.livesdk.live.view.BeautyView
        android:id="@+id/beauty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/turn_over"/>

    <!--封面/直播标题等-->
    <RelativeLayout
        android:id="@+id/live_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_532"
        android:layout_below="@+id/location"
        android:layout_marginTop="100dp"
        android:background="@color/color_black_trans_30">

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_360"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/cover_layout"
                android:layout_width="@dimen/view_dimen_270"
                android:layout_height="@dimen/view_dimen_270"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="21.66dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cover_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cover_view"
                    android:layout_width="33.33dp"
                    android:layout_height="33.33dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/text_size_58"
                    android:background="@drawable/start_live_icon_cover"
                    android:visibility="visible"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundTopLeft="false"
                    fresco:roundTopRight="false"
                    fresco:roundedCornerRadius="5dp"
                    fresco:roundingBorderColor="@color/color_white"
                    fresco:roundingBorderWidth="1dp"/>

                <TextView
                    android:id="@+id/cover_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cover_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_45"
                    android:layout_marginTop="@dimen/margin_18"
                    android:gravity="top"
                    android:text="@string/select_cover"
                    android:textColor="@color/color_white80_pressed_white40"
                    android:textSize="@dimen/text_size_36"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/live_title_et"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/cover_layout"
                android:layout_marginLeft="@dimen/view_dimen_42"
                android:layout_marginRight="@dimen/margin_40"
                android:layout_toRightOf="@id/cover_layout"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/prepare_live_edittext_hint"
                android:imeOptions="flagNoExtractUi"
                android:longClickable="false"
                android:maxLength="28"
                android:maxLines="2"
                android:shadowColor="@color/color_black_trans_50"
                android:shadowRadius="2"
                android:textColor="@color/color_white_trans_70"
                android:textColorHint="@color/color_white_trans_70"
                android:textCursorDrawable="@drawable/edit_text_input_cursor"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_size_44"/>
        </RelativeLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/title_container"
            android:background="@color/color_white_trans_20"/>

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_172"
            android:layout_below="@+id/bottom_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tag_name_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tag_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/start_live_icon_tag"
                    android:drawablePadding="4.5dp"
                    android:gravity="center"
                    android:shadowColor="@color/color_black_trans_50"
                    android:shadowRadius="1"
                    android:text="@string/quanzi_default_name"
                    android:textColor="@color/color_white_pressed_white60_selected_fed533"
                    android:textSize="@dimen/text_size_36"/>
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="28.67dp"
                android:background="@color/color_white_trans_20"/>

            <RelativeLayout
                android:id="@+id/add_topic_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/add_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/start_live_icon_topic"
                    android:drawablePadding="4.5dp"
                    android:gravity="center"
                    android:shadowColor="@color/color_black_trans_50"
                    android:shadowRadius="1"
                    android:text="@string/add_topic"
                    android:textColor="@color/color_white_pressed_white60"
                    android:textSize="@dimen/text_size_36"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--开始直播按钮-->
    <TextView
        android:id="@+id/begin_btn"
        android:layout_width="@dimen/view_dimen_800"
        android:layout_height="@dimen/margin_110"
        android:layout_above="@+id/close_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_104"
        android:layout_marginTop="@dimen/margin_50"
        android:background="@drawable/live_begin_btn_bg"
        android:gravity="center"
        android:text="@string/live_start"
        android:textColor="@color/color_black_trans_80"
        android:textSize="@dimen/text_size_44"/>

    <!--关闭按钮-->
    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_dimen_35"
        android:layout_marginTop="42dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/video_close_white_bg"/>

    <RelativeLayout
        android:id="@+id/bottom_panel_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
