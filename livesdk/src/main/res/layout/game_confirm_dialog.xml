<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/view_dimen_200"
        android:text="@string/game_back_to_app_message"
        android:textColor="@color/color_black_trans_70"
        android:textSize="@dimen/text_size_42" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_1"
        android:background="@color/list_item_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_160"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_button_left"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textColor="@color/color_black_trans_70"
            android:textSize="@dimen/text_size_42" />

        <View
            android:layout_width="@dimen/view_dimen_1"
            android:layout_height="match_parent"
            android:background="@color/list_item_line" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_button_right"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/ok"
            android:textColor="@color/color_black_trans_70"
            android:textSize="@dimen/text_size_42" />

    </LinearLayout>

</LinearLayout>