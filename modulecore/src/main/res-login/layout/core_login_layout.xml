<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="LoginActivity"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/comm_titlebar_back_normal"
        titlebar:leftDrawablePadding="0dp"
        titlebar:leftText="返回"
        titlebar:leftType="textView" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar">

        <TextView
            android:id="@+id/mi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/public_view_dimen_10"
            android:text="小米登录"
            android:textSize="@dimen/public_view_dimen_30" />

        <TextView
            android:id="@+id/mi_test_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mi_btn"
            android:layout_margin="@dimen/public_view_dimen_30"
            android:text="测试服务器"
            android:textSize="@dimen/public_view_dimen_30" />


        <TextView
            android:id="@+id/mi_test_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mi_test_server"
            android:layout_margin="@dimen/public_view_dimen_30"
            android:text="测试本地数据库"
            android:textSize="@dimen/public_view_dimen_30" />

        <TextView
            android:id="@+id/mi_test_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mi_test_local"
            android:layout_margin="@dimen/public_view_dimen_30"
            android:text="测试关注"
            android:textSize="@dimen/public_view_dimen_30" />
    </RelativeLayout>


</RelativeLayout>