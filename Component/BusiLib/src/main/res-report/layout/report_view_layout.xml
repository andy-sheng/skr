<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_23_dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.common.view.ex.ExImageView
                android:id="@+id/self_sing_caton_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="2"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="侮辱谩骂"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_22_dp">

            <com.common.view.ex.ExImageView
                android:id="@+id/acc_no_voice_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="6"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="恶意乱唱"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_22_dp">

            <com.common.view.ex.ExImageView
                android:id="@+id/other_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="9"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="违法违规"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_23_dp"
        android:layout_marginRight="@dimen/view_36_dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.common.view.ex.ExImageView
                android:id="@+id/other_sing_caton_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="3"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="色情低俗"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_22_dp">

            <com.common.view.ex.ExImageView
                android:id="@+id/lyric_no_show_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="8"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="政治敏感"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_22_dp">

            <com.common.view.ex.ExImageView
                android:id="@+id/new_fun_iv"
                android:layout_width="@dimen/view_30_dp"
                android:layout_height="@dimen/view_30_dp"
                android:layout_gravity="center_vertical"
                android:tag="10"
                app:bl_selected_drawable="@drawable/feedback_xuanzhong"
                app:bl_unSelected_drawable="@drawable/feedback_weixuanzhong" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_38_dp"
                android:text="其他"
                android:textColor="#ff3b4e79"
                android:textSize="@dimen/textsize_16_dp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/select_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginTop="180dp"
        android:alpha="0.2"
        android:background="#3B4E79" />

    <com.common.view.ex.ExTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_divider"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="图片（选填，提供问题截图）"
        android:textColor="#ff3b4e79"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/pic_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_15_dp"
        android:text="0/4"
        android:textColor="#ff3b4e79"
        android:textSize="@dimen/textsize_14_dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_72_dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginRight="@dimen/view_12_dp" />

    <EditText
        android:id="@+id/feedback_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_125_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_330_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:background="@drawable/common_edit_no_stroke_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left|top"
        android:hint="详细的描述有助于我们更好的核实举报信息 例如：他的相册图片大量都是黄色内容，并在聊天过程中不断进行辱骂"
        android:lineSpacingExtra="@dimen/view_10_dp"
        android:maxLength="200"
        android:paddingLeft="@dimen/view_15_dp"
        android:paddingTop="@dimen/view_15_dp"
        android:paddingRight="@dimen/view_15_dp"
        android:paddingBottom="@dimen/view_30_dp"
        android:textColor="@color/textColorPrimary"
        android:textColorHint="#663B4E79"
        android:textSize="@dimen/view_16_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/content_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/feedback_content"
        android:layout_alignBottom="@id/feedback_content"
        android:layout_marginRight="@dimen/view_12_dp"
        android:layout_marginBottom="@dimen/view_10_dp"
        android:text="0/200"
        android:textColor="#663B4E79"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold" />

    <com.dialog.view.StrokeTextView
        android:id="@+id/submit_tv"
        android:layout_width="@dimen/view_132_dp"
        android:layout_height="@dimen/view_54_dp"
        android:layout_below="@+id/feedback_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_20_dp"
        android:background="@drawable/yellow_button_icon"
        android:gravity="center"
        android:paddingBottom="@dimen/view_6_dp"
        android:text="提交"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold" />

</merge>