<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="@dimen/view_344_dp"
        android:layout_height="@dimen/view_417_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_17_dp"
        android:background="@drawable/img_dialog_bg"
        android:paddingTop="@dimen/view_16_dp"
        android:paddingBottom="@dimen/view_24_dp">

        <com.common.view.ex.ExTextView
            android:id="@+id/submit_tv"
            android:layout_width="@dimen/view_206_dp"
            android:layout_height="@dimen/view_54_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_btn_bg_yellow"
            android:gravity="center"
            android:paddingBottom="@dimen/view_6_dp"
            android:text="提交"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/place_holder_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/submit_tv"
            android:background="@color/transparent" />

        <com.common.view.ex.NoLeakEditText
            android:id="@+id/report_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/place_holder_view"
            android:layout_marginLeft="@dimen/view_28_dp"
            android:layout_marginTop="@dimen/view_15_dp"
            android:layout_marginRight="@dimen/view_28_dp"
            android:layout_marginBottom="@dimen/view_23_dp"
            android:background="@drawable/jubao_bj"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|top"
            android:hint="请输入要举报的详细内容并提交"
            android:lineSpacingExtra="@dimen/view_10_dp"
            android:maxLength="20"
            android:paddingLeft="@dimen/view_17_dp"
            android:paddingTop="@dimen/view_10_dp"
            android:paddingRight="@dimen/view_17_dp"
            android:paddingBottom="@dimen/view_10_dp"
            android:textColor="#0C2275"
            android:textColorHint="#800C2275"
            android:textSize="@dimen/view_16_dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/report_content"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    <View

        android:id="@+id/place_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container"
        android:background="@color/transparent" />

</RelativeLayout>