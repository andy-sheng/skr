<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExImageView
        android:id="@+id/primary_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        android:layout_marginRight="@dimen/view_60_dp"
        app:bl_pressed_drawable="@drawable/age_tag_primary_icon_selected"
        app:bl_selected_drawable="@drawable/age_tag_primary_icon_selected"
        app:bl_unSelected_drawable="@drawable/age_tag_primary_icon_normal"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/senior_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:gravity="center"
        android:text="小学党"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@id/primary_iv"
        app:layout_constraintRight_toRightOf="@id/primary_iv"
        app:layout_constraintTop_toBottomOf="@id/primary_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/senior_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        app:bl_pressed_drawable="@drawable/age_tag_senior_icon_selected"
        app:bl_selected_drawable="@drawable/age_tag_senior_icon_selected"
        app:bl_unSelected_drawable="@drawable/age_tag_senior_icon_normal"
        app:layout_constraintLeft_toRightOf="@id/primary_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/primary_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:gravity="center"
        android:text="中学党"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@id/senior_iv"
        app:layout_constraintRight_toRightOf="@id/senior_iv"
        app:layout_constraintTop_toBottomOf="@id/senior_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/college_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        android:layout_marginTop="@dimen/view_74_dp"
        android:layout_marginRight="@dimen/view_60_dp"
        app:bl_pressed_drawable="@drawable/age_tag_college_icon_selected"
        app:bl_selected_drawable="@drawable/age_tag_college_icon_selected"
        app:bl_unSelected_drawable="@drawable/age_tag_college_icon_normal"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/works_iv"
        app:layout_constraintTop_toBottomOf="@id/primary_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:gravity="center"
        android:text="大学党"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@id/college_iv"
        app:layout_constraintRight_toRightOf="@id/college_iv"
        app:layout_constraintTop_toBottomOf="@id/college_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/works_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        app:bl_pressed_drawable="@drawable/age_tag_works_icon_selected"
        app:bl_selected_drawable="@drawable/age_tag_works_icon_selected"
        app:bl_unSelected_drawable="@drawable/age_tag_works_icon_normal"
        app:layout_constraintLeft_toRightOf="@id/college_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/college_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:gravity="center"
        android:text="工作党"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@id/works_iv"
        app:layout_constraintRight_toRightOf="@id/works_iv"
        app:layout_constraintTop_toBottomOf="@id/works_iv" />

</android.support.constraint.ConstraintLayout>