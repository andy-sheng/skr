<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.common.view.ex.ExImageView
        android:id="@+id/photo_view_bg"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_0_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_5"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/photo_view"
        app:layout_constraintLeft_toLeftOf="@id/photo_view"
        app:layout_constraintRight_toRightOf="@id/photo_view"
        app:layout_constraintTop_toTopOf="@id/photo_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_view"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_116_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/photo_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_8_dp"
        android:paddingRight="@dimen/view_8_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_10_dp"
        app:bl_corners_radius="@dimen/view_4_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_50"
        app:layout_constraintBottom_toBottomOf="@id/photo_view"
        app:layout_constraintRight_toRightOf="@id/photo_view" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:background="@color/black_trans_10"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/photo_view" />

</merge>