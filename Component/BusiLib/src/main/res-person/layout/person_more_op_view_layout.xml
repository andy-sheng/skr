<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_15_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/modify_remark_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/modify_remark_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/person_remark_icon"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="修改备注"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unfollow_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp"
            android:visibility="gone">

            <com.common.view.ex.ExTextView
                android:id="@+id/unfollow_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/person_unfollow_icon"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="取消关注"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/kick_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp"
            android:visibility="gone">

            <com.common.view.ex.ExTextView
                android:id="@+id/kick_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/person_unfollow_icon"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="踢人"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/black_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/black_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/person_black_icon"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="拉黑"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/report_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/report_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/quick_feedback_icon"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

        </RelativeLayout>


    </LinearLayout>
</merge>