<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_200_dp"
    android:background="@drawable/common_gradient_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_48_dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/view_6_dp"
        android:text="个人主页或信息卡片的“更多”去设置\n特别关注，能第一时间知道ta的动态喔～"
        android:textColor="#e68B572A"
        android:textSize="@dimen/textsize_14_dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginTop="@dimen/view_45_dp"
        android:background="@color/black_trans_10" />

    <com.common.view.ex.ExTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_32_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:gravity="center"
        android:text="知道了"
        android:textColor="#e68B572A"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_gradient_endColor="#E9A83B"
        app:bl_gradient_startColor="#FFD99B"
        app:bl_shape="rectangle" />

</LinearLayout>