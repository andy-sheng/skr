<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_main_containner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DA3FA">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_72_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_38_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/textsize_23_dp"
        android:layout_marginTop="@dimen/view_40_dp"
        android:background="@drawable/img_back" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_40_dp"
        android:layout_marginRight="@dimen/textsize_23_dp"
        android:drawableTop="@drawable/ic_report_normal"
        android:text="举报" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_5_dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="@dimen/view_100_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_24_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/userid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:gravity="center"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_15_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sign_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid_tv"
        android:layout_marginTop="@dimen/view_9_dp"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="@dimen/view_100_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />


    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_212_dp"
        android:layout_marginRight="@dimen/view_14_dp"></com.common.flowlayout.TagFlowLayout>

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/medal_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_220_dp"
        android:layout_below="@+id/flowlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:clipChildren="false"
        app:bl_corners_radius="@dimen/view_10_dp"
        app:bl_solid_color="#FFF8DA"
        app:bl_stroke_color="#122074"
        app:bl_stroke_width="@dimen/view_3_dp">

        <RelativeLayout
            android:layout_width="@dimen/view_70_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_30_dp"
            android:layout_marginTop="@dimen/view_60_dp">

            <ImageView
                android:id="@+id/paiwei_img"
                android:layout_width="@dimen/view_70_dp"
                android:layout_height="@dimen/view_61_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gerenzhuye_paiweisai" />

            <com.common.view.ex.ExTextView
                android:id="@+id/rank_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15_dp"
                android:gravity="center"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paiwei_img"
                android:layout_marginTop="@dimen/view_5_dp"
                android:gravity="center"
                android:text="排位赛"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/view_70_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_60_dp"
            android:layout_marginRight="@dimen/view_30_dp">

            <ImageView
                android:id="@+id/singend_img"
                android:layout_width="@dimen/view_70_dp"
                android:layout_height="@dimen/view_61_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gerenzhuye_yicangdaodi" />

            <com.common.view.ex.ExTextView
                android:id="@+id/singend_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15_dp"
                android:gravity="center"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/singend_img"
                android:layout_marginTop="@dimen/view_5_dp"
                android:gravity="center"
                android:text="一唱到底"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.zq.level.view.NormalLevelView2
            android:id="@+id/level_view"
            android:layout_width="@dimen/view_125_dp"
            android:layout_height="@dimen/view_109_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_10_dp"
            levelView2:mainHeight2="@dimen/view_109_dp"
            levelView2:mainWidth2="@dimen/view_125_dp"
            levelView2:subBottom2="@dimen/view_6_dp"
            levelView2:subHeight2="@dimen/view_13_dp"
            levelView2:subWidth2="@dimen/view_24_dp"></com.zq.level.view.NormalLevelView2>

        <com.common.view.ex.ExTextView
            android:id="@+id/level_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_view"
            android:layout_marginTop="@dimen/view_4_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold" />


        <com.common.view.ex.ExTextView
            android:id="@+id/rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_tv"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/view_16_dp"
            android:paddingRight="@dimen/view_16_dp"
            android:layout_marginTop="@dimen/view_14_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            android:background="@drawable/shouye_paiming"/>

    </com.common.view.ex.ExRelativeLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/follow_tv"
                android:layout_width="@dimen/view_151_dp"
                android:layout_height="@dimen/view_54_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_btn_bg_red"
                android:gravity="center"
                android:paddingBottom="@dimen/view_8_dp"
                android:text="关注TA"
                android:textColor="@color/white"
                android:textSize="@dimen/view_20_dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/message_tv"
                android:layout_width="@dimen/view_151_dp"
                android:layout_height="@dimen/view_54_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_btn_bg_yellow"
                android:gravity="center"
                android:paddingBottom="@dimen/view_7_dp"
                android:text="私信"
                android:textColor="#0C2275"
                android:textSize="@dimen/view_20_dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>