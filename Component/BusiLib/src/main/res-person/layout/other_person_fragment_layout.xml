<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_main_containner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFED61">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_72_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_38_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/textsize_23_dp"
        android:layout_marginTop="@dimen/view_40_dp"
        android:background="@drawable/img_back" />

    <com.common.view.ex.ExTextView
        android:id="@+id/share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_40_dp"
        android:layout_marginRight="@dimen/textsize_23_dp"
        android:text="分享"
        android:visibility="gone" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_5_dp"
        android:gravity="center"
        android:minWidth="@dimen/view_100_dp"
        android:text="赤木晴子"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_24_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/userid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:gravity="center"
        android:text="撕歌号: 21433642"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_15_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sign_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid_tv"
        android:layout_marginTop="@dimen/view_9_dp"
        android:gravity="center"
        android:minWidth="@dimen/view_100_dp"
        android:text="哥就是那个KTV里最跑调的孩子"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />


    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_212_dp"
        android:layout_marginRight="@dimen/view_14_dp"></com.common.flowlayout.TagFlowLayout>


    <RelativeLayout
        android:id="@+id/medal_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_288_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_258_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:background="@drawable/gerenzhongxin_zhanji_bg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_130_dp"
            android:layout_marginTop="@dimen/view_13_dp"
            android:background="@drawable/gerenxinxika_huizhangbeijing" />

        <com.zq.level.view.NormalLevelView
            android:id="@+id/level_view"
            android:layout_width="@dimen/view_114_dp"
            android:layout_height="@dimen/view_114_dp"
            android:layout_marginLeft="@dimen/view_18_dp"
            android:layout_marginTop="@dimen/view_21_dp"
            android:paddingBottom="@dimen/view_5_dp">
        </com.zq.level.view.NormalLevelView>

        <com.common.view.ex.ExTextView
            android:id="@+id/rank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_61_dp"
            android:layout_toRightOf="@+id/level_view"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="昌平情歌榜22位"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_22_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_13_dp"
            android:layout_marginLeft="@dimen/view_13_dp"
            android:layout_marginTop="@dimen/view_170_dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_81_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_75_dp"
                    android:layout_height="@dimen/view_81_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_106_dp"
                    android:layout_height="@dimen/view_24_dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_12_dp"
                    android:background="@drawable/gerenzhuye_paiwei"
                    android:gravity="center"
                    android:text="-排位赛-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_14_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/rank_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_20_dp"
                    android:gravity="center"
                    android:text="100场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_22_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_81_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_75_dp"
                    android:layout_height="@dimen/view_81_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_106_dp"
                    android:layout_height="@dimen/view_24_dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_12_dp"
                    android:background="@drawable/gerenzhuye_yule"
                    android:gravity="center"
                    android:text="-娱乐赛-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_14_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/funny_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_20_dp"
                    android:gravity="center"
                    android:text="94场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_22_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_81_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_75_dp"
                    android:layout_height="@dimen/view_81_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_106_dp"
                    android:layout_height="@dimen/view_24_dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_12_dp"
                    android:background="@drawable/gerenzhuye_yichangdaodi"
                    android:gravity="center"
                    android:text="-一唱到底-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_14_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/singend_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_20_dp"
                    android:gravity="center"
                    android:text="82场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_22_dp" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/follow_tv"
                android:layout_width="@dimen/view_151_dp"
                android:layout_height="@dimen/view_54_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_btn_bg_red"
                android:gravity="center"
                android:paddingBottom="@dimen/view_8_dp"
                android:text="关注TA"
                android:textColor="@color/white"
                android:textSize="@dimen/view_20_dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/message_tv"
                android:layout_width="@dimen/view_151_dp"
                android:layout_height="@dimen/view_54_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/img_btn_bg_yellow"
                android:gravity="center"
                android:paddingBottom="@dimen/view_7_dp"
                android:text="私信"
                android:textColor="#0C2275"
                android:textSize="@dimen/view_20_dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>