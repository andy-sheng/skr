<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:background="@drawable/common_dialog_bg"
        android:paddingBottom="@dimen/view_6_dp"
        app:srlFooterTranslationViewId="@+id/photo_view">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind" />

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/photo_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_5_dp"
                android:layout_marginRight="@dimen/view_5_dp"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fadingEdge="none"
                app:elevation="@dimen/view_0_dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/user_info_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/avatar_bg"
                            android:layout_width="@dimen/view_62_dp"
                            android:layout_height="@dimen/view_67_dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="@dimen/view_18_dp"
                            android:background="@drawable/b_touxiang"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/avatar_iv"
                            android:layout_width="@dimen/view_52_dp"
                            android:layout_height="@dimen/view_52_dp"
                            android:layout_marginTop="@dimen/view_5_dp"
                            app:layout_constraintLeft_toLeftOf="@id/avatar_bg"
                            app:layout_constraintRight_toRightOf="@id/avatar_bg"
                            app:layout_constraintTop_toTopOf="@id/avatar_bg" />

                        <com.common.view.ex.ExImageView
                            android:id="@+id/more_btn"
                            android:layout_width="@dimen/view_27_dp"
                            android:layout_height="@dimen/view_31_dp"
                            android:layout_marginTop="@dimen/view_28_dp"
                            android:layout_marginRight="@dimen/view_12_dp"
                            android:layout_marginBottom="43dp"
                            android:background="@drawable/common_more_icon"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.zq.level.view.NormalLevelView2
                            android:id="@+id/level_view"
                            android:layout_width="@dimen/view_28_dp"
                            android:layout_height="@dimen/view_25_dp"
                            android:layout_marginLeft="@dimen/view_4_dp"
                            android:layout_marginTop="@dimen/view_8_dp"
                            app:layout_constraintLeft_toRightOf="@id/avatar_bg"
                            app:layout_constraintTop_toTopOf="@id/avatar_bg"
                            levelView2:mainHeight2="@dimen/view_24_dp"
                            levelView2:mainWidth2="@dimen/view_28_dp"
                            levelView2:subBottom2="@dimen/view_1_dp"
                            levelView2:subHeight2="@dimen/view_3_dp"
                            levelView2:subWidth2="@dimen/view_5_dp"></com.zq.level.view.NormalLevelView2>

                        <com.common.view.ex.ExTextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_25_dp"
                            android:ellipsize="end"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:paddingRight="@dimen/view_20_dp"
                            android:singleLine="true"
                            android:textColor="#3B4E79"
                            android:textSize="@dimen/textsize_18_dp"
                            app:layout_constraintLeft_toRightOf="@id/level_view"
                            app:layout_constraintTop_toTopOf="@id/level_view" />

                        <ImageView
                            android:id="@+id/sex_iv"
                            android:layout_width="@dimen/view_16_dp"
                            android:layout_height="@dimen/view_16_dp"
                            app:layout_constraintBottom_toBottomOf="@id/name_tv"
                            app:layout_constraintRight_toRightOf="@id/name_tv"
                            app:layout_constraintTop_toTopOf="@id/name_tv" />

                        <com.component.busilib.view.MarqueeTextView
                            android:id="@+id/sign_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_marginTop="@dimen/view_4_dp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="left|center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingRight="@dimen/view_50_dp"
                            android:singleLine="true"
                            android:textColor="#3B4E79"
                            android:textSize="@dimen/textsize_14_dp"
                            app:layout_constraintStart_toStartOf="@id/level_view"
                            app:layout_constraintTop_toBottomOf="@id/level_view" />

                        <com.common.flowlayout.TagFlowLayout
                            android:id="@+id/flowlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/view_16_dp"
                            android:layout_marginTop="@dimen/view_10_dp"
                            android:layout_marginRight="@dimen/view_16_dp"
                            android:layout_marginBottom="@dimen/view_16_dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/avatar_bg" />

                        <ImageView
                            android:id="@+id/follow_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/view_10_dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/flowlayout" />

                        <com.common.view.ex.ExTextView
                            android:id="@+id/photo_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_marginLeft="@dimen/view_16_dp"
                            android:layout_marginBottom="@dimen/view_10_dp"
                            android:gravity="center"
                            android:textColor="#3B4E79"
                            android:textSize="@dimen/textsize_14_dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/follow_iv" />

                        <com.common.view.ex.ExTextView
                            android:id="@+id/empty_my_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_96_dp"
                            android:layout_marginLeft="@dimen/view_16_dp"
                            android:layout_marginRight="@dimen/view_16_dp"
                            android:layout_marginBottom="@dimen/view_18_dp"
                            android:gravity="center"
                            android:text="去个人中心添加照片\n展示更靓自己"
                            android:textColor="#803B4E79"
                            android:textSize="@dimen/textsize_14_dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:bl_corners_radius="@dimen/view_16_dp"
                            app:bl_shape="rectangle"
                            app:bl_solid_color="@color/black_trans_10"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/photo_num_tv" />


                    </android.support.constraint.ConstraintLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_70_dp"
                        android:layout_gravity="top"
                        android:background="@drawable/person_info_top_bg"
                        app:contentInsetStart="@dimen/view_0_dp"
                        app:contentInsetStartWithNavigation="@dimen/view_0_dp"
                        app:layout_collapseMode="pin">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/srl_follow_iv"
                                android:layout_width="@dimen/view_114_dp"
                                android:layout_height="@dimen/view_50_dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/view_20_dp" />

                            <RelativeLayout
                                android:id="@+id/srl_avatar_area"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/view_53_dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/view_16_dp">

                                <ImageView
                                    android:id="@+id/srl_avatar_bg"
                                    android:layout_width="@dimen/view_50_dp"
                                    android:layout_height="@dimen/view_53_dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/s_touxiang" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/srl_avatar_iv"
                                    android:layout_width="@dimen/view_40_dp"
                                    android:layout_height="@dimen/view_40_dp"
                                    android:layout_alignLeft="@+id/srl_avatar_bg"
                                    android:layout_alignTop="@+id/srl_avatar_bg"
                                    android:layout_marginLeft="@dimen/view_5_dp"
                                    android:layout_marginTop="@dimen/view_5_dp" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>


            </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.CoordinatorLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <View
        android:id="@+id/out_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/smart_refresh" />

</RelativeLayout>