<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/view_18_dp"
    android:layout_marginRight="@dimen/view_5_dp"
    android:layout_marginBottom="@dimen/view_5_dp"
    android:paddingLeft="@dimen/view_3_dp"
    app:bl_corners_radius="@dimen/view_2_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="#A6BCF2">

    <ImageView
        android:id="@+id/desc_iv"
        android:layout_width="@dimen/view_10_dp"
        android:layout_height="@dimen/view_10_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:layout_toRightOf="@id/desc_iv"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp" />
</com.common.view.ex.ExRelativeLayout>