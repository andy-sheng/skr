<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_10_dp"
    android:layout_marginRight="@dimen/view_10_dp">

    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_full_star" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高手在《周杰伦》歌单战中获得5星评级"
        app:layout_constraintBottom_toBottomOf="@+id/bg_iv"
        app:layout_constraintLeft_toLeftOf="@+id/bg_iv"
        app:layout_constraintRight_toRightOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv" />
</com.common.view.ex.ExConstraintLayout>