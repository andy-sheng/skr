<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="#EBEBEB"
    app:bl_stroke_color="#ACACAC"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_stroke_width="@dimen/view_1_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_46_dp"
        android:layout_height="@dimen/view_46_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_18_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_25_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginLeft="@dimen/view_9_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:text="KTV酒彪子"
        android:textColor="#ffb2b6d6"
        android:textSize="@dimen/textsize_18_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:text="关注了你"
        android:textColor="#ffb2b6d6"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/follow_tv"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_18_dp"
        android:gravity="center"
        android:text="关注Ta"
        android:textColor="#ff202239"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#F5A623"
        app:bl_stroke_color="#202239"
        app:bl_stroke_width="@dimen/view_2_dp" />

</com.common.view.ex.ExRelativeLayout>