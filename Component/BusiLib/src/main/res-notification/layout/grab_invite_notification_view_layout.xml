<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    android:background="@drawable/common_dialog_bg">

    <ImageView
        android:id="@+id/avatar_bg"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_53_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:background="@drawable/s_touxiang" />

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignLeft="@id/avatar_bg"
        android:layout_alignTop="@id/avatar_bg"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        avatarView:borderColor="@color/white"
        avatarView:borderWidth="@dimen/view_2_dp"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_25_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/view_130_dp"
        android:singleLine="true"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_18_dp" />

    <ImageView
        android:id="@+id/sex_iv"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_marginLeft="-126dp"
        android:layout_alignTop="@id/name_tv"
        android:layout_toRightOf="@id/name_tv"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:text="邀请你加入一唱到底"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_12_dp"
        android:src="@drawable/notification_invite_agree" />

</com.common.view.ex.ExRelativeLayout>