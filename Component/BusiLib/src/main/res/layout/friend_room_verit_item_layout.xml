<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_106_dp"
    android:layout_marginTop="@dimen/view_8_dp"
    android:layout_marginBottom="@dimen/view_8_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_15_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/enter_room"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:gravity="center"
        android:text="进入房间"
        android:textColor="#1C1E34"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#F5A623" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_60_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_toLeftOf="@id/enter_room"
        android:layout_toRightOf="@id/avatar_iv">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <com.common.view.ex.ExTextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_25_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="KTV酒彪子"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_18_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/owner_tv"
                android:layout_width="@dimen/view_36_dp"
                android:layout_height="@dimen/view_15_dp"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="@dimen/view_2_dp"
                android:gravity="center"
                android:text="房主"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_10_dp"
                android:visibility="gone"
                app:bl_corners_radius="@dimen/view_8_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="#23A583" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_65_dp"
        android:background="@color/white_trans_10" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_11_dp"
        android:gravity="center_vertical"
        android:text="3/7"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tag_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignTop="@id/room_num_tv"
        android:layout_marginRight="@dimen/view_10_dp"
        android:layout_toLeftOf="@id/room_num_tv"
        android:gravity="center_vertical"
        android:text="中华小曲库"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp" />

</RelativeLayout>