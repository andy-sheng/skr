<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_160_dp"
    android:layout_marginBottom="@dimen/view_10_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_64_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_22_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/level_bg"
        android:layout_width="@dimen/view_107_dp"
        android:layout_height="@dimen/view_73_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_14_dp"
        android:gravity="center"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_10_dp"
        app:layout_constraintBottom_toBottomOf="@id/level_bg"
        app:layout_constraintLeft_toLeftOf="@id/level_bg"
        app:layout_constraintRight_toRightOf="@id/level_bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_6_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintRight_toLeftOf="@id/recommend_tag_sdv"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"
        app:layout_goneMarginRight="@dimen/view_10_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:gravity="center"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toRightOf="@id/name_tv"
        app:layout_constraintRight_toLeftOf="@id/media_tag_sdv"
        app:layout_constraintTop_toTopOf="@id/name_tv"
        app:layout_goneMarginRight="@dimen/view_10_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/media_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toRightOf="@id/recommend_tag_sdv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_tv" />


    <com.common.view.ex.ExConstraintLayout
        android:id="@+id/voice_area"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:minWidth="@dimen/view_84_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/white_trans_30"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_tv">

        <ImageView
            android:id="@+id/play_bg"
            android:layout_width="@dimen/view_16_dp"
            android:layout_height="@dimen/view_16_dp"
            android:layout_marginLeft="@dimen/view_4_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExImageView
            android:id="@+id/play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bl_unSelected_drawable="@drawable/friend_voice_play_icon"
            app:bl_selected_drawable="@drawable/friend_voice_pause_icon"
            app:layout_constraintBottom_toBottomOf="@id/play_bg"
            app:layout_constraintLeft_toLeftOf="@id/play_bg"
            app:layout_constraintRight_toRightOf="@id/play_bg"
            app:layout_constraintTop_toTopOf="@id/play_bg" />

        <TextView
            android:id="@+id/voice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginRight="@dimen/view_10_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12_dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/play_bg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.component.busilib.view.VoiceChartView
            android:id="@+id/voice_chart_view"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="@dimen/view_16_dp"
            android:visibility="gone"
            VoiceChartView:chartBackColor="@color/white"
            VoiceChartView:chartDuration="200"
            VoiceChartView:chartHeight="@dimen/view_16_dp"
            VoiceChartView:chartMarginLeft="@dimen/view_2_dp"
            VoiceChartView:chartWidth="@dimen/view_1_dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/voice_name"
            app:layout_constraintRight_toRightOf="@id/voice_name"
            app:layout_constraintTop_toTopOf="parent" />

    </com.common.view.ex.ExConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        android:background="@color/white_trans_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_player_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_16_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/room_player_num_tv"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</android.support.constraint.ConstraintLayout>