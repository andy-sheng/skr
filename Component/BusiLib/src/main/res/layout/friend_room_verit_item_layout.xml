<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_132_dp"
    android:layout_marginTop="@dimen/view_8_dp"
    android:layout_marginBottom="@dimen/view_8_dp"
    android:background="@drawable/grab_friend_room_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginLeft="@dimen/view_17_dp"
        android:layout_marginTop="@dimen/view_16_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_25_dp"
        android:layout_alignTop="@id/avatar_iv"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_toRightOf="@id/avatar_iv"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_below="@id/name_tv"
        android:layout_alignTop="@+id/name_tv"
        android:layout_marginLeft="@dimen/view_6_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_toRightOf="@+id/name_tv"
        android:gravity="center"
        android:visibility="gone" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_marginTop="@dimen/view_2_dp"
        android:gravity="center_vertical"
        android:text="中华小曲库"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_12_dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/view_71_dp"
        android:alpha="0.2"
        android:background="#3B4E79" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_player_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_18_dp"
        android:layout_marginBottom="@dimen/view_15_dp"
        android:textColor="#ff3b4e79"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_86_dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_2"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp"
            android:layout_marginLeft="@dimen/view_d_3_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_3"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp"
            android:layout_marginLeft="@dimen/view_d_3_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_4"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp"
            android:layout_marginLeft="@dimen/view_d_3_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_5"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp"
            android:layout_marginLeft="@dimen/view_d_3_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_6"
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_26_dp"
            android:layout_marginLeft="@dimen/view_d_3_dp" />
    </LinearLayout>

