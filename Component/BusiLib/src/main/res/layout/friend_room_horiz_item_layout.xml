<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_78_dp"
    android:layout_height="match_parent">

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_52_dp"
        android:layout_height="@dimen/view_52_dp"
        android:layout_marginTop="@dimen/view_40_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        avatarView:borderColor="@color/white"
        avatarView:borderWidth="@dimen/view_2_dp"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_4_dp"
        android:layout_marginBottom="@dimen/view_8_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="KTV酒彪子"
        android:textColor="@color/white_trans_60"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="@id/avatar_iv" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_4_dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/nickname_tv"
        app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="@id/avatar_iv" />


</android.support.constraint.ConstraintLayout>