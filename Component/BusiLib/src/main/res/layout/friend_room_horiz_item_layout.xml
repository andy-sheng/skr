<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_78_dp"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_52_dp"
        android:layout_height="@dimen/view_52_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_48_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_below="@id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_4_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="KTV酒彪子"
        android:textColor="@color/white_trans_60"
        android:textSize="@dimen/textsize_12_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_16_dp"
        android:layout_above="@id/nickname_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-14dp"
        android:gravity="center"
        android:visibility="gone" />


</RelativeLayout>