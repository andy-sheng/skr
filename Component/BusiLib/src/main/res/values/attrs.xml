<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BitmapTextView的属性-->
    <declare-styleable name="BitmapTextView">
        <!--字体的高度-->
        <attr name="scale" format="float" />
        <!--字体的颜色-->
        <attr name="text_color" format="color" />
        <!--字体是否有阴影-->
        <attr name="has_shadow" format="boolean" />
    </declare-styleable>

    <!--SkrProgressView的属性-->
    <declare-styleable name="SkrProgressView">
        <!--进度条图标-->
        <attr name="progressDrawable" format="reference" />
        <!--进度条文字-->
        <attr name="progressText" format="string" />
        <!--进度条是否拦截点击-->
        <attr name="clickCanThrough" format="boolean" />
        <!--进度条有动画-->
        <attr name="hasAnimation" format="boolean" />
    </declare-styleable>

    <!-- AvatarView 的属性(头像都是圆的：丁一)-->
    <declare-styleable name="avatarView">
        <!--头像是否圆形-->
        <attr name="isCircle" format="boolean" />
        <!--头像边框颜色-->
        <attr name="borderColor" format="color" />
        <!--头像边框宽度-->
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="speaking">
        <attr name="animationtype" format="enum">
            <enum name="speak" value="0" />
            <enum name="msg_audio" value="1" />
            <enum name="posts_audio" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="VoiceChartView">
        <attr name="chartFitWidth" format="boolean"/>
        <attr name="chartCount" format="integer" />
        <attr name="chartHeight" format="dimension" />
        <attr name="chartWidth" format="dimension" />
        <attr name="chartDuration" format="integer" />
        <attr name="chartMarginLeft" format="dimension" />
        <attr name="chartBackColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NickNameView">
        <!-- TextView 颜色 -->
        <attr name="textColor" format="color" />
        <!-- TextView 字体大小 -->
        <attr name="textSize" format="dimension" />
        <!-- TextView 字体风格, 对应leftType_TextView-->
        <attr name="textStyle" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="BOLD" value="1" />
            <enum name="ITALIC" value="2" />
            <enum name="BOLD_ITALIC" value="3" />
        </attr>
    </declare-styleable>
</resources>
