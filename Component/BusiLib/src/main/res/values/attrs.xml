<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BitmapTextView的属性-->
    <declare-styleable name="BitmapTextView">
        <!--字体的高度-->
        <attr name="scale" format="float" />
        <!--字体的颜色-->
        <attr name="text_color" format="color"/>
        <!--字体是否有阴影-->
        <attr name="has_shadow" format="boolean"/>
    </declare-styleable>

    <!--SkrProgressView的属性-->
    <declare-styleable name="SkrProgressView">
        <!--进度条图标-->
        <attr name="progressDrawable" format="reference" />
        <!--进度条文字-->
        <attr name="progressText" format="string"/>
        <!--进度条是否拦截点击-->
        <attr name="clickCanThrough" format="boolean"/>
        <!--进度条有动画-->
        <attr name="hasAnimation" format="boolean"/>
    </declare-styleable>

    <!-- AvatarView 的属性(头像都是圆的：丁一)-->
    <declare-styleable name="avatarView">
        <!--头像是否圆形-->
        <attr name="isCircle" format="boolean"/>
        <!--头像边框颜色-->
        <attr name="borderColor" format="color"/>
        <!--头像边框宽度-->
        <attr name="borderWidth" format="dimension"/>
    </declare-styleable>
</resources>
