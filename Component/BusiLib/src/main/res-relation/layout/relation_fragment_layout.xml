<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F1">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="通讯录"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:rightType="imageButton"
        app:rightImageResource="@drawable/tianjia_friend_icon"
        app:showBottomLine="false"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0"></com.common.view.titlebar.CommonTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_2_dp"
        android:layout_below="@+id/titlebar"
        android:background="#0C2275" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_52_dp"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="@dimen/view_2_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friend"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="好友"
            android:textColor="#800C2275"
            android:textSize="@dimen/textsize_15_dp" />

        <TextView
            android:id="@+id/fans"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="粉丝"
            android:textColor="#800C2275"
            android:textSize="@dimen/textsize_15_dp" />

        <TextView
            android:id="@+id/follow"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:singleLine="true"
            android:textColor="#800C2275"
            android:textSize="@dimen/textsize_15_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="@dimen/view_2_dp"
        android:orientation="vertical">

        <com.common.view.viewpager.SlidingTabLayout
            android:id="@+id/relation_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_52_dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <View
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_10_dp"
            android:background="#E8DFDB" />

        <com.common.view.viewpager.NestViewPager
            android:id="@+id/relation_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:requiresFadingEdge="none" />

    </LinearLayout>


</RelativeLayout>