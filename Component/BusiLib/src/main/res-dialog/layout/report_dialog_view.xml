<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_344_dp"
    android:layout_height="@dimen/view_467_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/view_17_dp"
    android:background="@drawable/img_dialog_bg"
    android:paddingTop="@dimen/view_16_dp">

    <CheckBox
        android:id="@+id/checkbox1"
        style="@style/LeftCustomCheckTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:drawablePadding="@dimen/view_18_dp"
        android:text="违规作弊"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <CheckBox
        android:id="@+id/checkbox2"
        style="@style/LeftCustomCheckTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox1"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:drawablePadding="@dimen/view_18_dp"
        android:text="恶意乱唱"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <CheckBox
        android:id="@+id/checkbox3"
        style="@style/LeftCustomCheckTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox2"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:drawablePadding="@dimen/view_18_dp"
        android:text="冒充官方"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <CheckBox
        android:id="@+id/checkbox4"
        style="@style/LeftCustomCheckTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox3"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:drawablePadding="@dimen/view_18_dp"
        android:text="侮辱谩骂"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <CheckBox
        android:id="@+id/checkbox5"
        style="@style/LeftCustomCheckTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox4"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:drawablePadding="@dimen/view_18_dp"
        android:text="色情低俗"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />


    <com.common.view.ex.ExTextView
        android:id="@+id/submit_tv"
        android:layout_width="@dimen/view_206_dp"
        android:layout_height="@dimen/view_54_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:background="@drawable/img_btn_bg_yellow"
        android:paddingBottom="@dimen/view_6_dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold" />

</RelativeLayout>