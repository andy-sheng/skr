<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:StrokeTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    app:bl_corners_radius="@dimen/view_16_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="#7187FF"
    app:bl_stroke_color="#3B4E79"
    app:bl_stroke_width="@dimen/view_1_33_dp">


    <com.dialog.view.StrokeTextView
        android:id="@+id/title_stv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_28_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:textSize="@dimen/textsize_20_dp"
        StrokeTextView:borderColor="#576FE3"
        StrokeTextView:textColor="@color/white" />

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_stv"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#576FE3">

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_18_dp"
            android:paddingTop="@dimen/view_32_dp"
            android:paddingRight="@dimen/view_18_dp"
            android:paddingBottom="@dimen/view_48_dp"
            android:textColor="@color/white_trans_80"
            android:textSize="@dimen/textsize_16_dp" />

    </com.common.view.ex.ExRelativeLayout>


</com.common.view.ex.ExRelativeLayout>