<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar_bg"
        android:layout_width="@dimen/view_62_dp"
        android:layout_height="@dimen/view_67_dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/view_18_dp"
        android:background="@drawable/b_touxiang" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_52_dp"
        android:layout_height="@dimen/view_52_dp"
        android:layout_alignLeft="@id/avatar_bg"
        android:layout_alignTop="@id/avatar_bg"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_5_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:drawableTop="@drawable/ic_report_normal"
        android:drawablePadding="@dimen/view_6_dp"
        android:gravity="center"
        android:text="举报"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_12_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_33_dp"
        android:layout_alignTop="@+id/avatar_bg"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:layout_toLeftOf="@id/report"
        android:layout_toRightOf="@id/avatar_bg"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="KTV酒彪子"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_24_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/level_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_below="@id/name_tv"
        android:layout_alignLeft="@id/name_tv"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_toLeftOf="@id/report"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="铂金唱将II"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginBottom="@dimen/view_14_dp">
    </com.common.flowlayout.TagFlowLayout>




</RelativeLayout>