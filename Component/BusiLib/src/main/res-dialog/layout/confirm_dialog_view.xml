<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_160_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    android:layout_marginBottom="@dimen/view_16_dp"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="#D0EFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_26_dp"
        android:layout_marginRight="@dimen/view_18_dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_44_dp"
            android:layout_height="@dimen/view_44_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_16_dp" />

        <ImageView
            android:id="@+id/kick_mask_iv"
            android:layout_width="@dimen/view_44_dp"
            android:layout_height="@dimen/view_44_dp"
            android:layout_alignLeft="@id/avatar_iv"
            android:layout_alignTop="@id/avatar_iv"
            android:background="@drawable/jb_jingzhi" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar_iv"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:layout_toRightOf="@id/avatar_iv"
            android:text="是否同意将KTV酒彪子移除房间 4s"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/cancle_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_14_dp"
            android:layout_marginRight="@dimen/view_12_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消请求"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            app:bl_corners_radius="@dimen/view_20_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FF8AB6" />

        <com.common.view.ex.ExTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginRight="@dimen/view_14_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认请求"
            android:textColor="#AD6C00"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            app:bl_corners_radius="@dimen/view_20_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FFC15B" />
    </LinearLayout>


</com.common.view.ex.ExRelativeLayout>