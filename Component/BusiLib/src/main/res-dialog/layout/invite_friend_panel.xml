<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_gradient_bg">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="这是你的邀请暗号"
        android:textColor="#b38B572A"
        android:textSize="@dimen/textsize_18_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="@dimen/view_25_dp" />

    <TextView
        android:id="@+id/tv_kouling"
        android:layout_width="@dimen/view_120_dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_8_dp"
        android:textColor="#3B4E79"
        android:textSize="@dimen/view_18_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kouling"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_26_dp"
        android:drawablePadding="@dimen/view_7_dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/textsize_6_dp"
        android:text="暗号已经复制好了\n快去粘贴到对话框发送给好友吧～"
        android:textColor="#8B572A"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_kouling" />

    <TextView
        android:id="@+id/tv_qq_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_24_dp"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:drawableTop="@drawable/share_qq_icon"
        android:drawablePadding="@dimen/view_10_dp"
        android:text="QQ好友"
        android:textColor="#cc8B572A"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_weixin_share"
        app:layout_constraintTop_toBottomOf="@id/tv_text" />

    <TextView
        android:id="@+id/tv_weixin_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_24_dp"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:drawableTop="@drawable/share_weixin_icon"
        android:drawablePadding="@dimen/view_10_dp"
        android:text="微信好友"
        android:textColor="#cc8B572A"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_qq_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text" />


</android.support.constraint.ConstraintLayout>