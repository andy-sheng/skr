<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_344_dp"
    android:layout_height="@dimen/view_281_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/view_17_dp"
    android:background="@drawable/img_bg1">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_58_dp"
        android:layout_height="@dimen/view_58_dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_26_dp"
        android:layout_marginTop="@dimen/view_33_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:text="金嗓子元宝"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold" />

    <com.zq.level.view.HorizonLevelView
        android:id="@+id/horiz_level_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_26_dp"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_marginTop="@dimen/view_1_dp"></com.zq.level.view.HorizonLevelView>

    <com.common.view.ex.ExTextView
        android:id="@+id/report"
        android:layout_width="@dimen/view_58_dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_40_dp"
        android:drawableTop="@drawable/ic_report_normal"
        android:gravity="center"
        android:text="举报"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_below="@+id/avatar_iv"
        android:layout_alignLeft="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_4_dp"
        android:paddingLeft="@dimen/view_7_dp"
        android:text="这个签名是撕哥送的"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_tv"
        android:layout_marginLeft="@dimen/view_26_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_26_dp"></com.common.flowlayout.TagFlowLayout>


    <com.common.view.ex.ExTextView
        android:id="@+id/follow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:background="@drawable/img_btn_bg_red"
        android:gravity="center"
        android:paddingBottom="@dimen/view_7_dp"
        android:text="关注TA"
        android:textColor="@color/white"
        android:textSize="@dimen/view_20_dp"
        android:textStyle="bold" />

</RelativeLayout>