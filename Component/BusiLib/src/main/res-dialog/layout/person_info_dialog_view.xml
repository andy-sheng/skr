<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_344_dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/view_16_dp"
    android:background="@drawable/img_dialog_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_26_dp"
        android:layout_marginTop="@dimen/view_20_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        android:drawableTop="@drawable/ic_report_normal"
        android:gravity="center"
        android:text="举报"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/request_log_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        android:gravity="center"
        android:text="请上传日志"
        android:textColor="#800C2275"
        android:visibility="gone"
        android:textSize="@dimen/textsize_12_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_33_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_toLeftOf="@id/report"
        android:layout_toRightOf="@+id/avatar_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_24_dp"
        android:textStyle="bold" />

    <com.zq.level.view.HorizonLevelView
        android:id="@+id/horiz_level_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_26_dp"
        android:layout_below="@+id/name_tv"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_1_dp"
        android:layout_toRightOf="@+id/avatar_iv"></com.zq.level.view.HorizonLevelView>

    <com.component.busilib.view.MarqueeTextView
        android:id="@+id/sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_below="@+id/avatar_iv"
        android:layout_alignLeft="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_14_dp"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="@dimen/view_7_dp"
        android:paddingRight="@dimen/view_18_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_tv"
        android:layout_marginLeft="@dimen/view_26_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_26_dp"
        android:layout_marginBottom="@dimen/view_14_dp"></com.common.flowlayout.TagFlowLayout>


    <com.common.view.ex.ExTextView
        android:id="@+id/follow_tv"
        android:layout_width="@dimen/view_206_dp"
        android:layout_height="@dimen/view_54_dp"
        android:layout_below="@+id/flowlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:background="@drawable/img_btn_bg_red"
        android:gravity="center"
        android:paddingBottom="@dimen/view_7_dp"
        android:text="关注TA"
        android:textColor="@color/white"
        android:textSize="@dimen/view_20_dp"
        android:textStyle="bold" />

</RelativeLayout>