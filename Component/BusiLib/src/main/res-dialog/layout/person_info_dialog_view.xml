<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_44_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:paddingLeft="@dimen/view_16_dp"
        android:paddingRight="@dimen/view_16_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#ffebebeb"
        app:bl_stroke_color="#ffacacac"
        app:bl_stroke_width="@dimen/view_1_dp">

        <RelativeLayout
            android:id="@+id/name_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_33_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_55_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_33_dp"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="@dimen/view_250_dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_24_dp"
                android:textStyle="bold" />

            <com.common.view.ex.ExRelativeLayout
                android:id="@+id/kick"
                android:layout_width="@dimen/view_58_dp"
                android:layout_height="@dimen/view_22_dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_8_dp"
                android:layout_toRightOf="@+id/name_tv"
                android:visibility="gone"
                app:bl_corners_radius="@dimen/view_11_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="#F5A623">

                <ImageView
                    android:layout_width="@dimen/textsize_14_dp"
                    android:layout_height="@dimen/textsize_14_dp"
                    android:layout_marginLeft="@dimen/view_6_dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/jb_jingzhi"/>

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_20_dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/view_6_dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="踢人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14_dp" />


            </com.common.view.ex.ExRelativeLayout>

        </RelativeLayout>


        <com.zq.level.view.HorizonLevelView
            android:id="@+id/horiz_level_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_26_dp"
            android:layout_below="@+id/name_area"
            android:layout_centerHorizontal="true"></com.zq.level.view.HorizonLevelView>

        <com.component.busilib.view.MarqueeTextView
            android:id="@+id/sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_below="@+id/horiz_level_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_7_dp"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/black_trans_50"
            android:textSize="@dimen/textsize_14_dp" />

        <com.common.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="@dimen/view_4_dp"
            android:layout_marginBottom="@dimen/view_14_dp"></com.common.flowlayout.TagFlowLayout>


        <RelativeLayout
            android:id="@+id/follow_area"
            android:layout_width="@dimen/view_240_dp"
            android:layout_height="@dimen/view_48_dp"
            android:layout_below="@+id/flowlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_15_dp"
            android:background="@drawable/img_follow_orange_bg">

            <com.common.view.ex.ExTextView
                android:id="@+id/follow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="关注TA"
                android:textColor="@color/white"
                android:textSize="@dimen/view_20_dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </com.common.view.ex.ExRelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_88_dp"
        android:layout_height="@dimen/view_88_dp"
        android:layout_alignTop="@+id/content_area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-44dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/content_area"
        android:layout_alignRight="@+id/content_area"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:drawableTop="@drawable/ic_report_normal"
        android:gravity="center"
        android:text="举报"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp"
        android:visibility="gone" />

</RelativeLayout>