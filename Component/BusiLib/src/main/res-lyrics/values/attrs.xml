<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VoiceScaleView">
        <!--左边音阶的颜色-->
        <attr name="leftPaintColor" format="color" />
        <!--右边音阶的颜色-->
        <attr name="rightPaintColor" format="color" />
        <!--中间分割线颜色-->
        <attr name="redLinePaintColor" format="color" />
        <!--左边背景颜色-->
        <attr name="leftBgPaintColor" format="color" />
        <!--右边背景颜色-->
        <attr name="rightBgPaintColor" format="color" />
        <!--红点外圈颜色-->
        <attr name="redOutpaintColor" format="color" />
        <!--红点内圈颜色-->
        <attr name="redInnerpaintColor" format="color" />
        <!--显示上下边框-->
        <attr name="showTopBottomBound" format="boolean" />
    </declare-styleable>
</resources>