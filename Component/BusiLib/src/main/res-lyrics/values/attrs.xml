<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VoiceScaleView">
        <!--左边音阶的颜色-->
        <attr name="leftPaintColor" format="color" />
        <!--右边音阶的颜色-->
        <attr name="rightPaintColor" format="color" />
        <!--中间分割线颜色-->
        <attr name="redLinePaintColor" format="color" />
        <!--左边背景颜色-->
        <attr name="leftBgPaintColor" format="color" />
        <!--右边背景颜色-->
        <attr name="rightBgPaintColor" format="color" />
        <!--红点外圈颜色-->
        <attr name="redOutpaintColor" format="color" />
        <!--红点内圈颜色-->
        <attr name="redInnerpaintColor" format="color" />
        <!--显示上边框-->
        <attr name="showTopBound" format="boolean" />
        <!--显示下边框-->
        <attr name="showBottomBound" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TxtLyricScrollView">
        <!--歌词大小-->
        <attr name="lyricFontSize" format="dimension" />
        <!--歌词颜色-->
        <attr name="lyricColor" format="color" />
        <!--歌词行间距-->
        <attr name="lyricLineSpace" format="dimension" />
        <!--歌词中间高亮的歌词数量-->
        <attr name="lyricHighlightNum" format="integer" />
        <!--歌词渐隐的歌词数量-->
        <attr name="lyricFadeNum" format="integer" />
        <!--歌词是手动拖着滚还是自动滚-->
        <attr name="lyricAuto" format="boolean" />
    </declare-styleable>
</resources>