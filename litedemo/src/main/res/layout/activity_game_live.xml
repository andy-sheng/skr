<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wali.live.sdk.litedemo.topinfo.anchor.TopAnchorView
        android:id="@+id/anchor_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.wali.live.sdk.litedemo.topinfo.viewer.TopViewerView
        android:id="@+id/viewer_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/anchor_view"/>

    <Button
        android:id="@+id/game_live_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="begin game live"/>
</RelativeLayout>