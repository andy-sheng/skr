<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.common.view.viewpager.NestViewPager
        android:id="@+id/images_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="查看大图"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftDrawable="@drawable/ic_arrow_back"
        app:leftType="textView"
        app:rightImageResource="@drawable/menu_more_icon"
        app:rightType="imageButton"
        app:showBottomLine="false"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_2_dp"
        android:layout_below="@+id/titlebar"
        android:background="#0C2275" />


</RelativeLayout>