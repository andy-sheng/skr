        app:leftType="textView"
        app:rightImageResource="@drawable/menu_more_icon"
        app:rightType="imageButton"
        app:showBottomLine="false"
        app:statusBarColor="#ff2c2c2c"
        app:titleBarColor="#ff2c2c2c" />

