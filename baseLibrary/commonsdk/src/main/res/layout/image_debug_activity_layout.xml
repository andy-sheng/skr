<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/img_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_30_dp"
        android:text="这个image加载方式可以优化，view太小，完全没必须加载这么大的bitmap,若不需要提示，可以设置BaseImage.setTipsWhenLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_16_dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_100_dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.common.view.ex.ExTextView
            android:id="@+id/desc_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_10_dp"
            android:text="信息"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_25_dp" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>