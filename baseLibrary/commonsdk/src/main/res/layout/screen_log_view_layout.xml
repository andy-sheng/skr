<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.RelativeLayout">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.common.view.ex.ExTextView
            android:id="@+id/log_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="2000"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:textColor="@color/green" />
    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:orientation="vertical">

        <com.common.view.ex.ExTextView
            android:id="@+id/close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="关闭"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/auto_scroll_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_10_dp"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="暂停"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tag_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_10_dp"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="选择tag"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

    </LinearLayout>

</merge>