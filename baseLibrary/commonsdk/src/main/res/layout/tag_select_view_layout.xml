<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.RelativeLayout">


    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.common.view.ex.ExTextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="确定"
            android:textColor="@color/log_c_t_color"
            android:textSize="@dimen/view_20_dp"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="全部"
            android:textColor="@color/log_c_t_color"
            android:textSize="@dimen/view_20_dp"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/check_tips_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:gravity="center"
            android:padding="@dimen/view_5_dp"
            android:text="推荐"
            android:textColor="@color/log_c_t_color"
            android:textSize="@dimen/view_20_dp"
            app:bl_stroke_color="@color/log_c_t_color"
            app:bl_stroke_width="@dimen/view_2_dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tags_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_panel" />


</merge>