<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_gradient_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_35_dp"
        android:layout_marginRight="@dimen/view_10_dp">

        <com.common.view.ex.ExTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_centerHorizontal="true"
            android:textColor="#8B572A"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.common.view.ex.ExTextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_10_dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/view_4_dp"
            android:textColor="#cc8B572A"
            android:textIsSelectable="true"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_below="@id/content_area"
        android:layout_marginTop="@dimen/view_34_dp"
        android:background="@color/black_trans_10" />

    <com.common.view.ex.ExTextView
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/view_240_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="#e68B572A"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_gradient_endColor="#E9A83B"
        app:bl_gradient_startColor="#FFD99B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_32_dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="@dimen/view_32_dp"
            android:layout_marginLeft="@dimen/view_28_dp"
            android:layout_marginRight="@dimen/view_8_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消请求"
            android:textColor="#e6A74068"
            android:textSize="@dimen/textsize_14_dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_21_dp"
            app:bl_gradient_endColor="#FFBDD6"
            app:bl_gradient_startColor="#FF8AB6" />

        <com.common.view.ex.ExTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="@dimen/view_32_dp"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:layout_marginRight="@dimen/view_28_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认请求"
            android:textColor="#e68B572A"
            android:textSize="@dimen/textsize_14_dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_21_dp"
            app:bl_gradient_endColor="#E9A83B"
            app:bl_gradient_startColor="#FFD99B" />
    </LinearLayout>
</com.common.view.ex.ExRelativeLayout>