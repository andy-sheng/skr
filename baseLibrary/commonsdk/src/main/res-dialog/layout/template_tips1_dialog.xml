<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:StrokeTextView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_180_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    android:layout_marginBottom="@dimen/view_16_dp"
    android:background="@drawable/common_dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:layout_marginBottom="@dimen/view_84_dp">

        <com.common.view.ex.ExTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_centerHorizontal="true"
            android:textColor="#3B4E79"
            android:textSize="@dimen/textsize_18_dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.common.view.ex.ExTextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_40_dp"
            android:layout_below="@+id/title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_10_dp"
            android:gravity="center"
            android:textColor="#3B4E79"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>

    <com.dialog.view.StrokeTextView
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/view_240_dp"
        android:layout_height="@dimen/view_50_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:background="@drawable/yellow_button_icon"
        android:gravity="center"
        android:paddingBottom="@dimen/view_2_dp"
        android:text="确定"
        android:textSize="@dimen/textsize_18_dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:orientation="horizontal">

        <com.dialog.view.StrokeTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_27_dp"
            android:layout_marginRight="@dimen/view_5_dp"
            android:layout_weight="1"
            android:background="@drawable/red_button_icon"
            app:borderColor="#cc5883"
            android:gravity="center"
            android:paddingBottom="@dimen/view_2_dp"
            android:text="取消请求"
            android:textSize="@dimen/textsize_18_dp"
            android:visibility="gone" />

        <com.dialog.view.StrokeTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_5_dp"
            android:layout_marginRight="@dimen/view_27_dp"
            android:layout_weight="1"
            android:background="@drawable/yellow_button_icon"
            android:gravity="center"
            android:paddingBottom="@dimen/view_2_dp"
            android:text="确认请求"
            android:textSize="@dimen/textsize_18_dp"
            android:visibility="gone" />
    </LinearLayout>
</com.common.view.ex.ExRelativeLayout>