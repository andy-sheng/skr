<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_180_dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    android:layout_marginBottom="@dimen/view_16_dp"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="#ffebebeb"
    app:bl_stroke_color="#ffacacac"
    app:bl_stroke_width="@dimen/view_1_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_84_dp">

        <com.common.view.ex.ExTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black_trans_80"
            android:textSize="@dimen/textsize_17_dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.common.view.ex.ExTextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_40_dp"
            android:layout_below="@+id/title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_10_dp"
            android:gravity="center"
            android:textColor="#7F7F7F"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/view_240_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#F5A623" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_48_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_27_dp"
            android:layout_marginRight="@dimen/view_5_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消请求"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_8_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#A6A6A6" />

        <com.common.view.ex.ExTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_5_dp"
            android:layout_marginRight="@dimen/view_27_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认请求"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_8_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#F5A623" />
    </LinearLayout>
</com.common.view.ex.ExRelativeLayout>