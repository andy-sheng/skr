<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.image.fresco.BaseImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_120"
            android:layout_alignTop="@id/iv_cover"
            android:background="@drawable/channel_live_two_wide_top_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_120"
            android:layout_alignBottom="@id/iv_cover"
            android:background="@drawable/channel_live_two_wide_bottom_bg"/>
        <ImageView
            android:id="@+id/appType_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:layout_marginRight="@dimen/view_dimen_20"/>
        <TextView
            android:id="@+id/tv_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/view_dimen_300"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/view_dimen_39"
            android:layout_alignLeft="@+id/iv_cover"
            android:layout_marginLeft="@dimen/view_dimen_22"
            android:layout_alignBottom="@+id/iv_cover"
            android:layout_marginBottom="@dimen/view_dimen_22"/>
        <TextView
            android:id="@+id/tv_viewer_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/view_dimen_4"
            android:maxHeight="@dimen/view_dimen_200"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/view_dimen_39"
            android:layout_alignRight="@+id/iv_cover"
            android:layout_marginRight="@dimen/view_dimen_22"
            android:layout_alignBottom="@+id/iv_cover"
            android:layout_marginBottom="@dimen/view_dimen_22"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/view_dimen_14"
        android:textSize="@dimen/view_dimen_39"
        android:textColor="@color/black_trans_90"/>
</LinearLayout>