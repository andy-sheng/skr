<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_dimen_10"
        android:layout_marginRight="@dimen/view_dimen_10"
        android:layout_marginTop="@dimen/view_dimen_30"
        android:paddingBottom="@dimen/view_dimen_20">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/avatar_iv"
            android:layout_width="match_parent"
            android:layout_height="163.3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar_iv"
            android:background="@drawable/home_new_human_bg"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar_iv"
            android:layout_marginBottom="3.33dp"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:layout_marginRight="@dimen/view_dimen_20"
            android:layout_marginTop="3.33dp"
            android:maxLines="2"
            android:textColor="@color/black_trans_90"
            android:textSize="@dimen/view_dimen_40"/>

        <TextView
            android:id="@+id/display_tv"
            style="@style/channel_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginBottom="3.33dp"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:layout_marginRight="@dimen/view_dimen_20"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/channel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/channel_type_live"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar_iv"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
