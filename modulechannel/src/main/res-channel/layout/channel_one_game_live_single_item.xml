<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_228"
    android:paddingLeft="@dimen/view_dimen_64"
    android:paddingRight="@dimen/view_dimen_64">
    <LinearLayout
        android:id="@+id/cover_container"
        android:layout_width="@dimen/view_dimen_288"
        android:layout_height="@dimen/view_dimen_170"
        android:layout_centerVertical="true">
        <com.common.image.fresco.BaseImageView
            android:id="@+id/live_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/view_dimen_2"
            android:layout_centerInParent="true" />
    </LinearLayout>
    <TextView
        android:id="@+id/live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_dimen_39"
        android:text="直播"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@drawable/channel_watch_game_item_title_color"
        android:layout_toRightOf="@+id/cover_container"
        android:layout_marginTop="@dimen/view_dimen_50"
        android:layout_marginLeft="@dimen/view_dimen_30"/>

    <TextView
        android:id="@+id/live_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_dimen_36"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="主播"
        android:textColor="@color/channel_watch_game_item_text_color"
        android:layout_toRightOf="@+id/cover_container"
        android:layout_toLeftOf="@+id/live_viewer"
        android:layout_below="@+id/live_title"
        android:layout_marginTop="@dimen/view_dimen_20"
        android:layout_marginLeft="@dimen/view_dimen_30"
        android:layout_marginRight="@dimen/view_dimen_20"/>

    <TextView
        android:id="@+id/live_viewer"
        android:layout_width="@dimen/view_dimen_150"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_dimen_36"
        android:text="9999"
        android:textColor="@color/channel_watch_game_item_text_color"
        android:drawableLeft="@drawable/channel_live_video_fullscreen_playlist_icon_fire"
        android:drawablePadding="@dimen/view_dimen_12"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/live_title"
        android:layout_marginTop="@dimen/view_dimen_24"
        android:layout_marginLeft="@dimen/view_dimen_30"/>
    

</RelativeLayout>