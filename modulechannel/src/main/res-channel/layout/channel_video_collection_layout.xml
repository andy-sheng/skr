<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@tools:sample/avatars" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/channel_black_trans_50_8_corner_bg" />


        <ImageView
            android:id="@+id/collection_icon"
            android:layout_width="@dimen/view_dimen_100"
            android:layout_height="@dimen/view_dimen_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_dimen_155"
            android:src="@drawable/milive_live_label" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/collection_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_dimen_40"
            android:textColor="@color/white"
            android:textSize="@dimen/view_dimen_60"
            android:textStyle="bold"
            tools:text="美女视频" />
    </RelativeLayout>

</LinearLayout>