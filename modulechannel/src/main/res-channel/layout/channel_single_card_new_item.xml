<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="175dp"/>

        <TextView
            android:id="@+id/shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/cover_iv"
            android:background="@drawable/channel_shape_gradient_black"/>

        <include
            android:id="@+id/mark_tv"
            layout="@layout/channel_askew_small_view"/>

        <com.common.image.fresco.BaseImageView
            android:id="@+id/anchor_activity_icon"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/left_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:textSize="@dimen/view_dimen_30"
            android:text="label"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/channel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/channel_type_live"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/channel_count_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cover_iv"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#女生宿舍"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/view_dimen_60"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/display_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="8"
            android:textSize="@dimen/view_dimen_34"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_dimen_20"
            android:layout_marginBottom="@dimen/view_dimen_12"
            android:text="北京"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/view_dimen_34"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:layout_marginBottom="@dimen/view_dimen_12"
            android:drawableLeft="@drawable/home_icon_people"
            android:drawablePadding="2dp"
            android:text="小明"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6.67dip"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/channel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="2"
            android:text="阳光女孩"/>
    </RelativeLayout>
</LinearLayout>
