<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/channel_color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_288"
        android:paddingBottom="@dimen/channel_side_margin"
        android:paddingLeft="@dimen/channel_side_margin"
        android:paddingRight="@dimen/channel_side_margin"
        android:paddingTop="@dimen/channel_side_margin">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/single_iv"
            android:layout_width="@dimen/view_dimen_304"
            android:layout_height="@dimen/view_dimen_288"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/single_iv"
            android:layout_alignTop="@id/single_iv"
            android:layout_gravity="right"
            android:layout_marginRight="6.67dp"
            android:layout_marginTop="6.67dp"
            android:background="@drawable/hot_live_icon_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="直播"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/single_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_toRightOf="@id/single_iv"
            android:ellipsize="end"
            android:lines="2"
            android:text="323423323423323423323423323423323423323423323423323423323423"
            android:textColor="@color/black_trans_90"
            android:textSize="@dimen/view_dimen_42"/>

        <!--<TextView-->
        <!--android:id="@+id/count_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/single_tv"-->
        <!--android:layout_marginLeft="6.67dp"-->
        <!--android:layout_marginTop="6.67dp"-->
        <!--android:layout_toRightOf="@id/single_iv"-->
        <!--android:drawablePadding="3.33dp"-->
        <!--android:drawableRight="@drawable/michannel_item_man_normal"-->
        <!--android:text="880"-->
        <!--android:textColor="@color/color_black_trans_30"-->
        <!--android:textSize="@dimen/text_size_28"/>-->

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/view_dimen_10"
            android:text="2342"
            android:textColor="@color/black_trans_50"
            android:textSize="@dimen/view_dimen_36"/>

        <!--<TextView-->
        <!--android:id="@+id/time_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/single_tv"-->
        <!--android:layout_marginLeft="6.67dp"-->
        <!--android:layout_marginTop="6.67dp"-->
        <!--android:layout_toRightOf="@id/count_tv"-->
        <!--android:textColor="@color/color_black_trans_30"-->
        <!--android:textSize="@dimen/text_size_28"/>-->

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/view_dimen_10"
            android:layout_marginLeft="@dimen/view_dimen_30"
            android:layout_toRightOf="@id/single_iv"
            android:orientation="horizontal">

            <com.common.core.commonview.TintableImageView
                android:id="@+id/avatar_iv"
                android:layout_width="@dimen/view_dimen_45"
                android:layout_height="@dimen/view_dimen_45"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_tv"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_dimen_12"
                android:layout_toRightOf="@id/avatar_iv"
                android:text="name"
                android:textColor="@color/black_trans_50"
                android:textSize="@dimen/view_dimen_36"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/list_split_line"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_dimen_30"
        android:layout_marginRight="@dimen/view_dimen_30"
        android:background="@color/black_trans_10"/>
</LinearLayout>



