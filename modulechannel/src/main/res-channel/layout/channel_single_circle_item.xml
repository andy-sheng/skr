<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.common.core.commonview.TintableImageView
        android:id="@+id/single_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/single_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/view_dimen_36"/>

    <ImageView
        android:id="@+id/badge_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/single_iv"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@id/single_iv"
        android:visibility="gone"
        android:scaleType="fitStart"/>
</RelativeLayout>



