<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="242.1dp">

        <include
            android:id="@+id/title_area"
            layout="@layout/channel_head_item"
            android:layout_width="match_parent"
            android:layout_height="43.34dp"
            android:layout_below="@id/split_area"/>

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/title_area"
            android:layout_marginLeft="@dimen/view_dimen_10"
            android:layout_marginRight="@dimen/view_dimen_10"/>

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/cover_iv"
            android:layout_alignRight="@id/cover_iv"/>

        <include
            android:id="@+id/shadow_tv"
            layout="@layout/channel_shadow_small_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignLeft="@id/cover_iv"
            android:layout_alignRight="@id/cover_iv"/>


        <TextView
            android:id="@+id/count_tv"
            style="@style/channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9.33dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="36.67dp"
        android:layout_below="@id/content_area"
        android:layout_marginLeft="3.33dip"
        android:layout_marginRight="3.33dp"
        android:paddingTop="6.67dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6.67dp"
            android:layout_marginRight="6.67dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="阳光女孩"/>

    </RelativeLayout>
</RelativeLayout>
