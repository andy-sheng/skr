<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/channel_color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin">

        <include
            android:id="@+id/single_makeup_1"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="230dp"
            android:layout_height="230dp"/>

        <include
            android:id="@+id/single_makeup_2"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="113.33dp"
            android:layout_height="113.33dp"
            android:layout_marginLeft="@dimen/channel_middle_margin"
            android:layout_toRightOf="@id/single_makeup_1"/>

        <include
            android:id="@+id/single_makeup_3"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="113.33dp"
            android:layout_height="113.33dp"
            android:layout_below="@id/single_makeup_2"
            android:layout_marginLeft="@dimen/channel_middle_margin"
            android:layout_marginTop="@dimen/channel_middle_margin"
            android:layout_toRightOf="@id/single_makeup_1"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin"
        android:layout_marginTop="@dimen/channel_middle_margin"
        android:orientation="horizontal">

        <include
            android:id="@+id/single_makeup_4"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="113.33dp"
            android:layout_height="113.33dp"/>

        <include
            android:id="@+id/single_makeup_5"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="113.33dp"
            android:layout_height="113.33dp"
            android:layout_marginLeft="@dimen/channel_middle_margin"/>

        <include
            android:id="@+id/single_makeup_6"
            layout="@layout/channel_single_makeup_item"
            android:layout_width="113.33dp"
            android:layout_height="113.33dp"
            android:layout_marginLeft="@dimen/channel_middle_margin"/>
    </LinearLayout>
</LinearLayout>