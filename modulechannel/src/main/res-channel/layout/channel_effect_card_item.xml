<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.common.core.commonview.MovableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="163.3dp"/>

        <include
            android:id="@+id/shadow_tv"
            layout="@layout/channel_shadow_all_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignTop="@id/cover_iv"/>

        <include
            android:id="@+id/mark_tv"
            layout="@layout/channel_askew_view"/>

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/view_dimen_30"
            android:layout_marginRight="@dimen/view_dimen_30"
            android:textColor="@color/white_trans_80"
            android:textSize="@dimen/view_dimen_36"/>

        <RelativeLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_105"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_marginBottom="@dimen/view_dimen_22"
            android:layout_toLeftOf="@id/count_tv">

            <FrameLayout
                android:id="@+id/fl_icon"
                android:layout_width="@dimen/view_dimen_90"
                android:layout_height="@dimen/view_dimen_90"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_dimen_30">

                <View
                    android:layout_width="@dimen/view_dimen_90"
                    android:layout_height="@dimen/view_dimen_90"
                    android:layout_gravity="center"
                    android:background="@drawable/channel_circle_white50_border2_bg"/>

                <com.common.core.commonview.TintableImageView
                    android:id="@+id/avatar_iv"
                    android:layout_width="@dimen/view_dimen_86"
                    android:layout_height="@dimen/view_dimen_86"
                    android:layout_gravity="center"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/view_dimen_20"
                android:layout_toRightOf="@id/fl_icon"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/view_dimen_36"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="@dimen/view_dimen_660"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3.33dp"
                android:layout_marginLeft="@dimen/view_dimen_20"
                android:layout_marginRight="6.67dp"
                android:layout_toRightOf="@id/fl_icon"
                android:gravity="bottom"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/view_dimen_44"
                android:textStyle="bold"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/type_tv"
            style="@style/channel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/home_headlines_label_live"
            android:text=""/>
    </RelativeLayout>
</LinearLayout>
