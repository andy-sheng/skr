<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/group_mem_item_icon1"
        android:layout_width="@dimen/view_dimen_88"
        android:layout_height="@dimen/view_dimen_88"
        android:background="@drawable/channel_shape_circle_white"
        android:padding="@dimen/view_dimen_4" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/group_mem_item_icon2"
        android:layout_width="@dimen/view_dimen_88"
        android:layout_height="@dimen/view_dimen_88"
        android:layout_marginLeft="@dimen/view_n_dimen_30"
        android:background="@drawable/channel_shape_circle_white"
        android:padding="@dimen/view_dimen_4" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/group_mem_item_icon3"
        android:layout_width="@dimen/view_dimen_88"
        android:layout_height="@dimen/view_dimen_88"
        android:layout_marginLeft="@dimen/view_n_dimen_30"
        android:background="@drawable/channel_shape_circle_white"
        android:padding="@dimen/view_dimen_4" />

    <TextView
        android:id="@+id/tv_live_group_num"
        android:layout_width="@dimen/view_dimen_80"
        android:layout_height="@dimen/view_dimen_80"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_n_dimen_84"
        android:background="@drawable/channel_shape_circle"
        android:gravity="center"
        android:text="+15"
        android:textColor="@color/white"
        android:textSize="@dimen/view_dimen_34" />
</LinearLayout>