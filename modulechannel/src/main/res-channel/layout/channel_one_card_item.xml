<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <include
            android:id="@+id/shadow_tv"
            layout="@layout/channel_shadow_small_view"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/michannel_icon_game_subscript"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/channel_default_title"
            android:textColor="@color/white_trans_80"
            android:textSize="@dimen/view_dimen_36"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/channel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/channel_type_live"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin"
        android:layout_marginTop="-25dp"
        android:minHeight="81dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <View
            android:layout_width="@dimen/view_dimen_110"
            android:layout_height="@dimen/view_dimen_110"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:background="@drawable/channel_circle_solid_white_bg"/>

        <com.common.core.commonview.TintableImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_dimen_102"
            android:layout_height="@dimen/view_dimen_102"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_dimen_23"
            android:layout_marginTop="@dimen/view_dimen_4" />

        <TextView
            android:id="@+id/display_tv"
            style="@style/channel_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar_iv"
            android:layout_marginBottom="@dimen/channel_view_dimen_neg_8"
            android:layout_marginLeft="@dimen/view_dimen_12"
            android:layout_toRightOf="@id/avatar_iv"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:singleLine="true"
            android:text="阳光女孩"/>

        <TextView
            android:id="@+id/name_tv"
            style="@style/channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar_iv"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:layout_marginTop="@dimen/view_dimen_15"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="北京"/>
    </RelativeLayout>
</LinearLayout>
