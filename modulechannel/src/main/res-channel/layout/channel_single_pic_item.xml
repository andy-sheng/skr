<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.common.core.commonview.TintableImageView
        android:id="@+id/single_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:backgroundImage="@color/color_f5f5f5" />

    <TextView
        android:id="@+id/single_tv"
        style="@style/channel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/single_iv"
        android:layout_alignRight="@id/single_iv"
        android:layout_below="@id/single_iv"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="6.67dp"/>
</RelativeLayout>