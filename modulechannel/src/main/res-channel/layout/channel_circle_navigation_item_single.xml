<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="56.67dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.common.image.fresco.BaseImageView
            android:id="@+id/icon"
            android:layout_width="16.67dp"
            android:layout_height="16.67dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_marginLeft="@dimen/view_dimen_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/view_dimen_42"
            android:textColor="@color/channel_color_black70_pressed_black30"
            android:text="hahaha"/>
    </RelativeLayout>

    <View
        android:id="@+id/inner_divider_line"
        android:layout_width="@dimen/channel_split_line_height"
        android:layout_height="16.67dp"
        android:background="@color/black_trans_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>