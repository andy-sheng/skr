<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="268.67dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.common.core.commonview.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/shadow_tv"
            layout="@layout/channel_shadow_small_view"/>


        <TextView
            android:id="@+id/type_tv"
            style="@style/channel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/channel_type_live"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/channel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="36.67dp"
        android:paddingLeft="6.67dip"
        android:paddingTop="6.67dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/channel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="阳光女孩"/>

    </RelativeLayout>
</LinearLayout>
