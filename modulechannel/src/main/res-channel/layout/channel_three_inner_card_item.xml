<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/channel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/array_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin"
        android:orientation="horizontal">

        <include
            android:id="@+id/single_card_1"
            layout="@layout/channel_single_card_new_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <include
            android:id="@+id/single_card_2"
            layout="@layout/channel_single_card_new_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/channel_middle_margin_three"
            android:layout_weight="1"/>

        <include
            android:id="@+id/single_card_3"
            layout="@layout/channel_single_card_new_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/channel_middle_margin_three"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:id="@+id/margin_area"
        android:layout_width="match_parent"
        android:layout_height="3.33dp"/>
</LinearLayout>