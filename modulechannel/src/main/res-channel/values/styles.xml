<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="channel_title">
        <item name="android:textColor">@color/black_trans_90</item>
        <item name="android:textSize">@dimen/view_dimen_40</item>
    </style>

    <declare-styleable name="ChannelBannerView">
        <attr name="channel_banner_corner_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChannelAskewView">
        <attr name="channel_adjustDistance" format="dimension"/>
    </declare-styleable>

    <style name="channel_dynamic_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/view_dimen_21</item>
        <item name="android:paddingRight">@dimen/view_dimen_21</item>
        <item name="android:paddingTop">@dimen/view_dimen_9</item>
        <item name="android:paddingBottom">@dimen/view_dimen_10</item>
        <item name="android:textSize">30dip</item>
    </style>

    <style name="channel_type_label">
        <item name="android:layout_marginRight">@dimen/view_dimen_30</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_30</item>
        <item name="android:background">@drawable/channel_shape_live_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/view_dimen_30</item>
    </style>

    <style name="channel_count_bottom">
        <item name="android:layout_marginRight">@dimen/view_dimen_24</item>
        <item name="android:layout_marginBottom">@dimen/view_dimen_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/view_dimen_39</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/view_dimen_240</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="channel_count">
        <item name="android:layout_marginRight">@dimen/view_dimen_18</item>
        <item name="android:layout_marginBottom">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/white_trans_80</item>
        <item name="android:textSize">@dimen/view_dimen_34</item>
    </style>

    <style name="channel_count_top">
        <item name="android:layout_marginRight">@dimen/view_dimen_20</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/view_dimen_34</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">@color/black_trans_60</item>
    </style>

    <style name="channel_display">
        <item name="android:textColor">@color/black_trans_50</item>
        <item name="android:textSize">@dimen/view_dimen_36</item>
    </style>

    <style name="channel_type">
        <item name="android:layout_marginRight">@dimen/view_dimen_20</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_20</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/view_dimen_12</item>
        <item name="android:paddingRight">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/black_trans_70</item>
        <item name="android:textSize">@dimen/view_dimen_30</item>
    </style>

    <style name="channel_primary_text">
        <item name="android:textColor">@color/channel_color_channel_primary_text</item>
        <item name="android:textSize">@dimen/channel_size_primary</item>
    </style>

    <style name="channel_second_primary_text">
        <item name="android:textColor">@color/channel_color_channel_second_primary_text</item>
        <item name="android:textSize">@dimen/channel_size_second_primary</item>
    </style>

    <style name="channel_normal_text">
        <item name="android:textColor">@color/channel_color_channel_normal_text</item>
        <item name="android:textSize">@dimen/channel_size_normal</item>
    </style>

</resources>