<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/view_dimen_24"
    android:paddingBottom="@dimen/view_dimen_24">

  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/footer_sample"
      android:textColor="@color/black_trans_35"
      android:textSize="12sp"/>

  <Button
      android:id="@+id/footer_close_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/footer_button_close"
      android:textColor="@color/red"
      android:textSize="16sp" />

  <Button
      android:id="@+id/footer_confirm_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/footer_button_confirm"
      android:textColor="@color/red"
      android:textSize="16sp" />

</LinearLayout>

