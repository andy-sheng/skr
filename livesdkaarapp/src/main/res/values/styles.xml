<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="michannel_type">
        <item name="android:layout_marginRight">@dimen/view_dimen_20</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_20</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/view_dimen_12</item>
        <item name="android:paddingRight">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/color_black_trans_70</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <style name="michannel_title">
        <item name="android:textColor">@color/color_black_trans_90</item>
        <item name="android:textSize">@dimen/text_size_40</item>
    </style>

    <style name="michannel_display">
        <item name="android:textColor">@color/color_black_trans_50</item>
        <item name="android:textSize">@dimen/text_size_36</item>
    </style>

</resources>
