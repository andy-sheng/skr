<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.view.ex.ExTextView
        android:id="@+id/total_num_tv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:gravity="center"
        android:text="25äºº"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_shape="oval"
        app:bl_solid_color="#526AE3"
        app:bl_stroke_color="@color/white"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintBottom_toTopOf="@id/more_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_num_tv" />

</android.support.constraint.ConstraintLayout>