<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_36_dp">

    <ImageView
        android:id="@+id/club_search_iv"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/club_home_search_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/club_rank_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/club_rank_iv"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/club_home_rank_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/club_search_iv"
        app:layout_constraintRight_toLeftOf="@id/club_create_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/club_create_iv"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/club_home_create_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/club_rank_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>