<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp">

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginLeft="@dimen/view_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/agree_tv"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:text="同意"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_bottomRightRadius="@dimen/view_16_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/refuse_tv"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_32_dp"
        android:gravity="center"
        android:text="拒绝"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_bottomLeftRadius="@dimen/view_16_dp"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FF8AB6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/agree_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="丢阿呆发发发好好发挥就欺负回去后就发过去后尽快过去后尽快过去后尽快过去好几个好价钱"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/status_tv"
        app:layout_constraintLeft_toRightOf="@id/avatar_view"
        app:layout_constraintRight_toLeftOf="@id/refuse_tv"
        app:layout_constraintTop_toTopOf="@id/avatar_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="在不在线在不在线在不在线在不在线在不在线在不在线在不在线在不在线在不在线在不在线"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/avatar_view"
        app:layout_constraintLeft_toRightOf="@id/avatar_view"
        app:layout_constraintRight_toLeftOf="@id/refuse_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>