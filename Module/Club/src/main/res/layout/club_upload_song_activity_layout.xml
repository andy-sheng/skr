<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDrawable="@drawable/img_back_black"
        app:leftText="歌曲上传"
        app:leftTextColor="@color/black_trans_80"
        app:leftTextSize="@dimen/textsize_20_dp"
        app:leftType="textView"
        app:rightText="完成"
        app:rightTextColor="@color/white"
        app:rightTextSize="@dimen/textsize_14_dp"
        app:rightType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/white"
        app:titleBarColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="歌曲名"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@+id/titlebar"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_46_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#F5F5F5"
        app:bl_stroke_color="#E9E9E9"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.NoLeakEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_46_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_107_dp"
        android:text="演唱者"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@+id/titlebar"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_133_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#F5F5F5"
        app:bl_stroke_color="#E9E9E9"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />

    <com.common.view.ex.NoLeakEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_133_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        app:layout_constraintTop_toBottomOf="@+id/titlebar" />
</android.support.constraint.ConstraintLayout>