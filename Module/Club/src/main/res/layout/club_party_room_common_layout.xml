<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_info_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_178_dp"
    android:layout_marginLeft="@dimen/view_12_dp"
    android:layout_marginRight="@dimen/view_12_dp"
    android:background="@drawable/common_gradient_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_sdv"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_80_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_24_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="迪丽热巴后援团"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/compere_tv"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/avatar_sdv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_sdv"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/compere_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="主持迪丽东八里"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toTopOf="@id/tag_tv"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/avatar_sdv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_6_dp"
        android:paddingRight="@dimen/view_6_dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_sdv"
        app:layout_constraintLeft_toRightOf="@id/avatar_sdv"
        app:layout_constraintTop_toBottomOf="@id/compere_tv" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/room_player_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_24_dp"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <ImageView
        android:id="@+id/audience_iv"
        android:layout_width="@dimen/view_26_dp"
        android:layout_height="@dimen/view_26_dp"
        android:layout_marginRight="@dimen/view_6_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/room_player_num_tv"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/room_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/audience_iv"
        app:layout_constraintTop_toBottomOf="@id/divider" />
</android.support.constraint.ConstraintLayout>