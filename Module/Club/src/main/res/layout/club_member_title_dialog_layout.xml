<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_gradient_top_corners_bg">

    <com.common.view.ex.ExTextView
        android:id="@+id/function_1"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        android:gravity="center"
        android:textColor="#e68B572A"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#E9A83B"
        app:bl_gradient_startColor="#FFD99B"
        app:bl_shape="rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/function_2"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        android:gravity="center"
        android:textColor="#e68B572A"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#E9A83B"
        app:bl_gradient_startColor="#FFD99B"
        app:bl_shape="rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/function_1" />

    <com.common.view.ex.ExTextView
        android:id="@+id/cancel"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#e6A74068"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#FF8AB6"
        app:bl_gradient_startColor="#FFBDD6"
        app:bl_shape="rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/view_30_dp"
        app:layout_constraintTop_toBottomOf="@id/function_2" />

</android.support.constraint.ConstraintLayout>