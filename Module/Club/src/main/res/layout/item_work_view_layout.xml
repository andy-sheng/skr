<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.component.busilib.view.AvatarView
        android:id="@+id/cover_sdv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />


    <TextView
        android:id="@+id/name_tv"
        android:maxWidth="110dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_22_dp"
        android:layout_toRightOf="@id/cover_sdv"
        android:ellipsize="end"
        android:layout_marginRight="1dp"
        android:lines="1"
        android:textColor="#ff000000"
        android:textSize="16dp"
        tools:text="爱在西元前" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="70dp"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignTop="@id/name_tv"
        android:layout_toRightOf="@id/name_tv"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#33ff0000"
        android:textSize="16dp"
        tools:text="蓝精灵" />


    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_below="@id/name_tv"
        android:layout_alignLeft="@id/name_tv"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginLeft="2dp"
        android:text="鹿锅泥"
        android:textColor="#ff000000"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/record_play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/view_20_dp"
        android:paddingRight="@dimen/view_20_dp"
        android:src="@drawable/play_btn" />

</RelativeLayout>




