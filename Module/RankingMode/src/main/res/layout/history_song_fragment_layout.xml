<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dabeijing">

    <com.common.view.ex.ExImageView
        android:id="@+id/history_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_36_dp"
        android:layout_marginTop="@dimen/view_46_dp"
        android:src="@drawable/img_back" />

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_90_dp"
        android:src="@drawable/img_select_triangle" />

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_24_dp"
        android:src="@drawable/img_mirc" />

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_66_dp"
        android:background="@drawable/img_select_song_bg"
        android:src="@drawable/img_select_song" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:paddingBottom="@dimen/view_20_dp"
        android:paddingTop="@dimen/view_20_dp"
        android:background="@drawable/img_kaishipipei_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/history_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>
