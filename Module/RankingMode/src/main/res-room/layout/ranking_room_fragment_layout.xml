<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.module.rankingmode.room.view.InputContainerView
        android:layout_alignParentBottom="true"
        android:id="@+id/input_container_view"
        android:layout_width="match_parent"
        android:background="#990099"
        android:layout_height="wrap_content"/>

    <!--这里面是软键盘弹出时 需要上移的布局-->
    <com.module.rankingmode.room.view.BottomContainerView
        android:id="@+id/bottom_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_container_view"
        android:layout_marginBottom="@dimen/view_19_dp"
        android:background="@color/red"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <com.module.rankingmode.room.comment.CommentView
        android:id="@+id/comment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_above="@+id/bottom_container_view" />

    <com.module.rankingmode.room.view.TopContainerView
        android:id="@+id/top_container_view"
        android:layout_width="match_parent"
        android:background="#653000"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"/>


</RelativeLayout>