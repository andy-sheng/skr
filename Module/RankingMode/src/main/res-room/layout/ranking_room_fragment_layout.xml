<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.module.rankingmode.room.view.InputContainerView
        android:layout_alignParentBottom="true"
        android:id="@+id/input_container_view"
        android:layout_width="match_parent"
        android:background="#990099"
        android:layout_height="wrap_content"/>

    <com.zq.lyrics.widget.ManyLyricsView
        android:layout_marginTop="@dimen/view_50_dp"
        app:ly_eable_verbatim="true"
        app:ly_eable_scroll="false"
        app:ly_outline_paint_color="@color/black"
        app:ly_high_light_paint_color_from="#FF4848"
        app:ly_high_light_paint_color_to="#FF4848"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_24"
        app:ly_paint_text_size="@dimen/textsize_dimen_18"
        app:ly_paint_color_from="@color/black_trans_35"
        app:ly_paint_color_to="@color/black_trans_35"

        android:layout_alignParentTop="true"
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <!--这里面是软键盘弹出时 需要上移的布局-->
    <com.module.rankingmode.room.view.BottomContainerView
        android:id="@+id/bottom_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_container_view"
        android:layout_marginBottom="@dimen/view_19_dp"
        android:background="@color/red"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <com.module.rankingmode.room.comment.CommentView
        android:id="@+id/comment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_above="@+id/bottom_container_view" />

    <com.module.rankingmode.room.view.TopContainerView
        android:id="@+id/top_container_view"
        android:layout_width="match_parent"
        android:background="#653000"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExTextView
            android:id="@+id/test_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</RelativeLayout>