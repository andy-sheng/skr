<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3041">


    <com.zq.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/view_50_dp"
        android:visibility="gone"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="true"
        app:ly_high_light_paint_color_from="#EF5E85"
        app:ly_high_light_paint_color_to="#EF5E85"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_outline_paint_color="@color/black"
        app:ly_paint_color_from="@color/white"
        app:ly_paint_color_to="@color/white"
        app:ly_paint_text_size="@dimen/textsize_dimen_16" />

    <com.zq.lyrics.widget.FloatLyricsView
        android:id="@+id/float_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_60_dp"
        android:layout_marginTop="@dimen/view_320_dp"
        android:visibility="gone"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="false"
        app:ly_high_light_paint_color_from="@color/white"
        app:ly_high_light_paint_color_to="@color/white"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_outline_paint_color="@color/black"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="@dimen/textsize_dimen_16" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_400_dp"
        android:layout_marginTop="@dimen/view_80_dp">

        <com.common.view.ex.ExTextView
            android:id="@+id/test_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="2000"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:textColor="@color/green" />
    </ScrollView>

    <com.module.rankingmode.room.view.InputContainerView
        android:id="@+id/input_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!--这里面是软键盘弹出时 需要上移的布局-->
    <com.module.rankingmode.room.view.BottomContainerView
        android:id="@+id/bottom_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_container_view"
        android:layout_marginBottom="@dimen/view_22_dp" />

    <com.module.rankingmode.room.comment.CommentView
        android:id="@+id/comment_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_250_dp"
        android:layout_above="@+id/bottom_container_view"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingBottom="@dimen/view_7_dp" />

    <com.module.rankingmode.room.view.TopContainerView
        android:id="@+id/top_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp" />

    <TextView
        android:id="@+id/tv_control"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:background="@color/white_trans_20">

    </TextView>

    <com.module.rankingmode.room.view.TurnChangeCardView
        android:id="@+id/turn_change_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_container_view"
        android:layout_marginTop="@dimen/view_34_dp"
        android:visibility="gone"></com.module.rankingmode.room.view.TurnChangeCardView>
</RelativeLayout>