<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">


    <com.common.view.ex.ExImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_24_dp"
        android:scaleType="centerInside"
        app:src_unPressed_drawable="@drawable/emoji_btn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_height="@dimen/view_60_dp">

        <com.module.rankingmode.room.scorebar.ScorePrograssBar2
            android:id="@+id/score_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <com.common.image.fresco.BaseImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_47_dp"
            android:layout_height="@dimen/view_47_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_7_dp" />
    </RelativeLayout>


</merge>