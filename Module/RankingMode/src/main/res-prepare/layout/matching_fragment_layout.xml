<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:voiceView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_20">


    <com.common.view.ex.ExImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:src="@drawable/avatar_default_b" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="成都"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_33_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name_tv"
        android:layout_centerHorizontal="true"
        android:text="准备竞演"
        android:textColor="@color/white_trans_50" />

    <RelativeLayout
        android:id="@+id/start_match_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_hint_tv"
        android:layout_marginTop="@dimen/view_60_dp">

        <com.common.view.ex.ExImageView
            android:id="@+id/song_image_tv"
            android:layout_width="@dimen/view_100_dp"
            android:layout_height="@dimen/view_100_dp"
            android:layout_centerHorizontal="true" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tone_tuning_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_image_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_50_dp"
            android:text="试唱调音"
            android:textColor="@color/white" />

    </RelativeLayout>


    <!--匹配中-->
    <RelativeLayout
        android:id="@+id/matching_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_hint_tv"
        android:layout_marginTop="@dimen/view_60_dp"
        android:visibility="gone">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/match_sucess_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_hint_tv"
        android:layout_marginTop="@dimen/view_60_dp"
        android:visibility="gone">

        <com.common.view.ex.ExTextView
            android:id="@+id/count_down_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_180_dp"
            android:text="已为您匹配到队伍，请准备\n05s后对局开始"
            android:textColor="@color/red" />

    </RelativeLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/match_status_tv"
        android:layout_width="@dimen/view_120_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_100_dp"
        android:gravity="center"
        android:text="开始匹配"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_20_dp"
        app:bl_corners_radius="@dimen/view_17_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/yellow" />

    <com.module.rankingmode.view.VoiceLineView
        android:id="@+id/voicLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_500_dp"
        android:layout_alignParentBottom="true"
        voiceView:fineness="three"
        voiceView:lineSpeed="200"
        voiceView:maxVolume="200"
        voiceView:middleLine="@color/transparent"
        voiceView:middleLineHeight="1dp"
        voiceView:rectSpace="2dp"
        voiceView:rectWidth="5dp"
        voiceView:sensibility="four"
        voiceView:viewMode="line"
        voiceView:voiceLine="@color/green" />

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerSubText="准备竞演 00:00 / 02:23"
        app:centerSubTextColor="@color/white_trans_50"
        app:centerSubTextSize="@dimen/textsize_12_dp"
        app:centerText="成都"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftImageResource="@drawable/comm_titlebar_back_normal"
        app:leftType="imageButton"
        app:statusBarColor="@color/black_trans_50"
        app:titleBarColor="@color/black_trans_50">

    </com.common.view.titlebar.CommonTitleBar>
</RelativeLayout>
