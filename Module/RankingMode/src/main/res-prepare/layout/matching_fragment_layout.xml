<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:voiceView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:background="@color/black_trans_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerSubText="@string/song_time_info"
        app:centerSubTextColor="@color/white_trans_50"
        app:centerSubTextLeftDrawable="@drawable/matching_prepare_titlebar_center_dot_yellow"
        app:centerSubTextLeftDrawablePadding="5dp"
        app:centerSubTextSize="@dimen/textsize_12_dp"
        app:centerText="成都"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftImageResource="@drawable/comm_titlebar_back_normal"
        app:leftType="imageButton"
        app:statusBarColor="@color/black_trans_50"
        app:titleBarColor="@color/black_trans_50">

    </com.common.view.titlebar.CommonTitleBar>

    <com.module.rankingmode.prepare.sence.controller.MatchSenceContainer
        android:id="@+id/match_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_below="@+id/title_bar"
        android:background="@color/transparent">

    </com.module.rankingmode.prepare.sence.controller.MatchSenceContainer>

    <com.common.view.ex.ExTextView
        android:id="@+id/prepare_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/match_status_tv"
        android:layout_marginBottom="@dimen/view_22_dp"
        android:layout_centerHorizontal="true"
        android:text="请准备05s后对局开始"
        android:textColor="@color/black_trans_50"
        android:visibility="gone"/>



    <com.module.rankingmode.prepare.view.VoiceLineView
        android:id="@+id/voice_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_500_dp"
        android:layout_alignParentBottom="true"
        voiceView:fineness="three"
        voiceView:lineSpeed="200"
        voiceView:maxVolume="200"
        voiceView:middleLine="@color/transparent"
        voiceView:middleLineHeight="1dp"
        voiceView:rectSpace="2dp"
        voiceView:rectWidth="5dp"
        voiceView:sensibility="four"
        voiceView:viewMode="line"
        voiceView:voiceLine="@color/green" />

</RelativeLayout>
