<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_36_dp"
        android:scaleType="center"
        android:src="@drawable/btn_return_xuanzegequ_normal" />

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/view_218_dp"
        android:layout_height="@dimen/view_106_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_29_dp"
        android:background="@drawable/img_top_kaishipipei_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_top"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_d_11_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_15_dp"
        android:background="@drawable/img_kaishipipei_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/song_icon"
            android:layout_width="@dimen/view_97_dp"
            android:layout_height="@dimen/view_97_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_92_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_18_dp"
            android:text="你好"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_name"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:text="02:14"
            android:textColor="#0C2275" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_lyric"
            android:layout_alignLeft="@+id/tv_lyric"
            android:layout_marginBottom="@dimen/view_36_dp" />

        <LinearLayout
            android:layout_marginLeft="@dimen/view_2_dp"
            android:layout_alignLeft="@+id/tv_lyric"
            android:layout_below="@+id/tv_duration"
            android:layout_marginTop="@dimen/view_28_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.common.view.ex.ExTextView
                app:bl_corners_radius="@dimen/view_3_dp"
                app:bl_solid_color="#CA2C60"
                android:layout_width="@dimen/view_6_dp"
                android:layout_height="@dimen/view_6_dp"/>

            <com.common.view.ex.ExTextView
                android:layout_marginLeft="@dimen/view_5_dp"
                app:bl_corners_radius="@dimen/view_3_dp"
                app:bl_solid_color="#CA2C60"
                android:layout_width="@dimen/view_6_dp"
                android:layout_height="@dimen/view_6_dp"/>

            <com.common.view.ex.ExTextView
                android:layout_marginLeft="@dimen/view_5_dp"
                app:bl_corners_radius="@dimen/view_3_dp"
                app:bl_solid_color="#CA2C60"
                android:layout_width="@dimen/view_6_dp"
                android:layout_height="@dimen/view_6_dp"/>
        </LinearLayout>

        <com.common.view.ex.ExTextView
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:id="@+id/tv_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_36_dp"
            android:text=""
            android:textColor="#0C2275"
            android:textStyle="bold" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/song_res_progressbar"
            android:progressDrawable="@drawable/song_res_progress_bg"
            android:layout_marginLeft="@dimen/view_2_67_dp"
            android:layout_alignLeft="@+id/iv_start_match"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_63_dp"
            android:layout_width="@dimen/view_189_dp"
            android:layout_height="@dimen/view_38_33_dp" />

        <com.common.view.ex.ExTextView
            android:paddingBottom="@dimen/view_4_dp"
            android:textStyle="bold"
            android:textColor="#0C2275"
            android:gravity="center"
            android:text="开始匹配"
            android:id="@+id/iv_start_match"
            android:layout_width="@dimen/view_200_dp"
            android:layout_height="@dimen/view_48_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_56_dp"
            android:background="@drawable/button_bg" />

    </RelativeLayout>
</RelativeLayout>