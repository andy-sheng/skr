<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:voiceView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_trans_20">

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="成都"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_33_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name_tv"
        android:layout_centerHorizontal="true"
        android:text="准备竞演"
        android:textColor="@color/white_trans_50" />

</RelativeLayout>
