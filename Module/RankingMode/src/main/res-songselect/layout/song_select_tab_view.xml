<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExTextView
        app:bl_selected_drawable="@color/blue"
        app:bl_selected_textColor="@color/white"
        app:bl_unSelected_drawable="@color/white"
        app:bl_unCheckable_textColor="@color/black"
        android:text="@string/select_song_recommend"
        android:id="@+id/tv_song_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.common.view.ex.ExTextView
        app:bl_selected_drawable="@color/blue"
        app:bl_selected_textColor="@color/white"
        app:bl_unSelected_drawable="@color/white"
        app:bl_unCheckable_textColor="@color/black"
        android:layout_marginLeft="@dimen/view_dimen_30"
        android:text="@string/select_song_history"
        android:id="@+id/tv_song_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>