<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_10_dp"
        app:centerText="设置"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_18_dp"
        app:centerTextStyle="BOLD"
        app:centerType="textView"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/colorPrimary"
        app:titleBarColor="@color/colorPrimary" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:background="@drawable/common_gradient_top_corners_bg" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/view_3_dp"
        android:paddingTop="@dimen/view_3_dp"
        android:paddingRight="@dimen/view_3_dp"
        android:paddingBottom="@dimen/view_5_dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--修改个人信息-->
            <RelativeLayout
                android:id="@+id/edit_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="修改个人信息"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--实名认证-->
            <RelativeLayout
                android:id="@+id/shiming"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/edit_person">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="实名认证"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--我要推广-->
            <RelativeLayout
                android:id="@+id/tuiguang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/shiming"
                android:visibility="gone">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="我要推广"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--音效设置-->
            <RelativeLayout
                android:id="@+id/volume_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/tuiguang">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="音效设置"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--黑名单管理-->
            <RelativeLayout
                android:id="@+id/user_blacklist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/volume_set">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="黑名单管理"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--上传音乐-->
            <RelativeLayout
                android:id="@+id/upload_music_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/user_blacklist"
                android:visibility="gone">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="上传音乐"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--兑换码-->
            <RelativeLayout
                android:id="@+id/Rl_exchange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/upload_music_area">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="兑换码"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--清理缓存-->
            <RelativeLayout
                android:id="@+id/clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/Rl_exchange">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="清理缓存"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/cache_arraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/cache_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_7_dp"
                    android:layout_toLeftOf="@+id/cache_arraw"
                    android:text="2.5M"
                    android:textColor="#993B4E79"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--当前版本-->
            <RelativeLayout
                android:id="@+id/version_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@id/clear_cache">

                <com.common.view.ex.ExTextView
                    android:id="@+id/version_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="当前版本"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/new_version_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_4_dp"
                    android:layout_toRightOf="@id/version_tips"
                    android:src="@drawable/xinbanben_new"
                    android:visibility="gone" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/version_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back"
                    android:visibility="invisible" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_7_dp"
                    android:layout_toLeftOf="@id/version_arrow"
                    android:textColor="#993B4E79"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>


            <!--填写邀请码-->
            <RelativeLayout
                android:id="@+id/invite_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@id/version_area"
                android:visibility="gone">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="填写邀请码"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--意见反馈-->
            <RelativeLayout
                android:id="@+id/user_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/invite_code">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="意见反馈"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--评价撕歌-->
            <RelativeLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@id/user_feedback">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="评价撕歌"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--用户服务协议-->
            <RelativeLayout
                android:id="@+id/service_agreen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/comment">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="用户服务协议"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--自定义引擎配置-->
            <RelativeLayout
                android:id="@+id/engine_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/service_agreen">

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:text="实验性音频功能"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorDividerPrimary" />

            </RelativeLayout>

            <!--客服联系方式-->
            <com.common.view.ex.ExTextView
                android:id="@+id/contact_way"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_18_dp"
                android:layout_below="@+id/service_agreen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_16_dp"
                android:gravity="center"
                android:text="官方客服QQ号: 2790401767"
                android:textColor="#803B4E79"
                android:textSize="@dimen/textsize_12_dp"
                android:textStyle="bold" />

            <!--退出登录-->
            <com.common.view.ex.ExTextView
                android:id="@+id/exit_login"
                android:layout_width="@dimen/view_132_dp"
                android:layout_height="@dimen/view_40_dp"
                android:layout_below="@+id/contact_way"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/view_16_dp"
                android:layout_marginBottom="@dimen/view_20_dp"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_18_dp"
                android:textStyle="bold"
                app:bl_corners_radius="@dimen/view_24_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="#FF8AB6" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
