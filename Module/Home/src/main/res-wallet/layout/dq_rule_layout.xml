<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_8_dp"
    android:layout_marginRight="@dimen/view_8_dp"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/view_18_dp"
    app:bl_solid_color="#7187FF"
    app:bl_stroke_color="#3B4E79"
    app:bl_stroke_width="@dimen/view_1_dp">

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_50_dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="红钻规则说明"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_18_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:layout_marginBottom="@dimen/view_8_dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_16_dp"
        android:paddingTop="@dimen/view_32_dp"
        android:paddingRight="@dimen/view_16_dp"
        android:paddingBottom="@dimen/view_32_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#576FE3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/dq_guize_1" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_5_dp"
                android:text="钻石红钻兑换汇率：1钻石礼物兑换0.9红钻"
                android:textColor="@color/white_trans_80"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_20_dp">

            <ImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/dq_guize_2" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_5_dp"
                android:text="红钻兑换钻石汇率：1红钻兑换1钻石"
                android:textColor="@color/white_trans_80"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_20_dp">

            <ImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/dq_guize_3" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_5_dp"
                android:text="红钻兑换现金汇率：100红钻兑换人民币0.6元"
                android:textColor="@color/white_trans_80"
                android:textSize="16sp" />
        </LinearLayout>
    </com.common.view.ex.ExLinearLayout>
</com.common.view.ex.ExLinearLayout>