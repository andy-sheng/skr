<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:bl_corners_topLeftRadius="@dimen/view_16_dp"
    app:bl_corners_topRightRadius="@dimen/view_16_dp"
    app:bl_solid_color="@color/white">

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_20_dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/jinbiyue_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_56_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/jinbi_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_40_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/view_9_dp"
                android:text="金币"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/zuanshi_bg" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_diamond_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_diamond_icon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            android:text="钻石余额"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_56_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_diamond_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_40_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/view_9_dp"
                android:text="钻"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>

        <com.common.view.ex.ExTextView
            android:id="@+id/recharge_btn"
            android:layout_width="@dimen/view_152_dp"
            android:layout_height="@dimen/view_40_dp"
            android:layout_below="@+id/feedback_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_129_dp"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18_dp"
            app:bl_corners_radius="@dimen/view_20_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="@color/transparent"
            app:bl_stroke_color="@color/white"
            app:bl_stroke_width="@dimen/view_1_dp" />
    </com.common.view.ex.ExRelativeLayout>
</com.common.view.ex.ExLinearLayout>