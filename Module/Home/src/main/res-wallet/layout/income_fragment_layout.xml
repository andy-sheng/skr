<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:bl_corners_topLeftRadius="@dimen/view_16_dp"
    app:bl_corners_topRightRadius="@dimen/view_16_dp"
    app:bl_solid_color="@color/white">

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_8_dp">

        <com.common.view.ex.ExImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/qianbao_bg" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_cash_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            android:text="余额明细"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14_dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_56_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_cash_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_40_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/view_9_dp"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>

        <com.common.view.ex.ExTextView
            android:id="@+id/stv_withdraw"
            android:layout_width="@dimen/view_120_dp"
            android:layout_height="@dimen/view_32_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_129_dp"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14_dp"
            app:bl_corners_radius="@dimen/view_20_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="@color/transparent"
            app:bl_stroke_color="@color/white"
            app:bl_stroke_width="@dimen/view_1_dp" />
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_20_dp">

        <com.common.view.ex.ExImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/hongzuan_bg" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_dq_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            android:text="红钻明细"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14_dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_56_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_dq_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_40_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="@dimen/view_9_dp"
                android:text="钻"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <com.common.view.ex.ExTextView
                android:id="@+id/btn_exchange_diamond"
                android:layout_width="@dimen/view_120_dp"
                android:layout_height="@dimen/view_32_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_129_dp"
                android:background="@drawable/chongzuzuanshi_anniu"
                android:gravity="center"
                android:text="兑换钻石"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp"
                app:bl_corners_radius="@dimen/view_20_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="@color/transparent"
                app:bl_stroke_color="@color/white"
                app:bl_stroke_width="@dimen/view_1_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/btn_exchange_cash"
                android:layout_width="@dimen/view_120_dp"
                android:layout_height="@dimen/view_32_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/view_16_dp"
                android:layout_marginTop="@dimen/view_129_dp"
                android:background="@drawable/chongzuzuanshi_anniu"
                android:gravity="center"
                android:text="兑换现金"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp"
                app:bl_corners_radius="@dimen/view_20_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="@color/transparent"
                app:bl_stroke_color="@color/white"
                app:bl_stroke_width="@dimen/view_1_dp" />
        </LinearLayout>

    </com.common.view.ex.ExRelativeLayout>
</com.common.view.ex.ExLinearLayout>