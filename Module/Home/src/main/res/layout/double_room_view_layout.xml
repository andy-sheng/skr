<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f0e26">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_45_dp"
        android:text="一个人的时间，两个人的空间"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toTopOf="@id/start_match_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <com.common.view.ex.ExTextView
        android:id="@+id/start_match_iv"
        android:layout_width="@dimen/view_154_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_70_dp"
        android:gravity="center"
        android:text="用歌声遇见"
        android:textColor="#FFC15B"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_29_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="#FFC15B"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/remain_times_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:gravity="center"
        android:textSize="@dimen/textsize_12_dp"
        android:textColor="@color/white_trans_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_match_iv" />

</android.support.constraint.ConstraintLayout>