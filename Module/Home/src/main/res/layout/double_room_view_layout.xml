<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/double_room_view_bg">

    <ImageView
        android:layout_width="@dimen/view_248_dp"
        android:layout_height="@dimen/view_115_dp"
        android:layout_marginTop="@dimen/view_90_dp"
        android:background="@drawable/double_game_view_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/start_match_iv"
        android:layout_width="@dimen/view_158_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_82_dp"
        android:gravity="center"
        android:paddingRight="@dimen/view_20_dp"
        android:text="异性匹配"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_30_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#33004EFF"
        app:bl_stroke_color="@color/white_trans_50"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_36_dp"
        android:background="@drawable/double_random_icon"
        app:layout_constraintBottom_toBottomOf="@id/start_match_iv"
        app:layout_constraintRight_toRightOf="@id/start_match_iv"
        app:layout_constraintTop_toTopOf="@id/start_match_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/invite_friend_iv"
        android:layout_width="@dimen/view_158_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:gravity="center"
        android:paddingRight="@dimen/view_20_dp"
        android:text="邀请好友"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_30_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#3329BD57"
        app:bl_stroke_color="@color/white_trans_50"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintBottom_toTopOf="@id/start_match_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_36_dp"
        android:visibility="gone"
        android:background="@drawable/double_invite_icon"
        app:layout_constraintBottom_toBottomOf="@id/invite_friend_iv"
        app:layout_constraintRight_toRightOf="@id/invite_friend_iv"
        app:layout_constraintTop_toTopOf="@id/invite_friend_iv" />

    <TextView
        android:id="@+id/remain_times_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginBottom="@dimen/view_56_dp"
        android:gravity="center"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>