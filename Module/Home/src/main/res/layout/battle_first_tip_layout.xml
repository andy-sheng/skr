<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExImageView
        android:id="@+id/bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:adjustViewBounds="true"
        android:background="@drawable/battle_first_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_30_dp"
        android:layout_marginTop="@dimen/view_188_dp"
        android:layout_marginRight="@dimen/view_30_dp"
        android:lineSpacingExtra="@dimen/view_5_dp"
        android:text="每日开启新歌单，演唱新歌曲，获得新成就，认识新朋友
爆灯得5星评级，全平台小喇叭让你的荣耀更荣耀
还等什么，快来歌单抢唱挑战吧！"
        android:textColor="#FF062074"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@+id/bg_iv"
        app:layout_constraintRight_toRightOf="@+id/bg_iv"
        app:layout_constraintTop_toTopOf="@+id/bg_iv" />
</android.support.constraint.ConstraintLayout>