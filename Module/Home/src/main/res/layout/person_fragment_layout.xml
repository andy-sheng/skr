<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_main_containner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DA3FA">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_88_dp"
        android:layout_height="@dimen/view_88_dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_42_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_44_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:drawableTop="@drawable/gerenzhuye_fenxiangicon"
        android:text="分享"
        android:visibility="visible" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_45_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="@dimen/view_100_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_24_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/userid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_marginTop="@dimen/view_4_dp"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_15_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sign_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid_tv"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_45_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:minWidth="@dimen/view_100_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_16_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/friends"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/friends_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friends_num_tv"
                android:layout_centerHorizontal="true"
                android:text="好友"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fans"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/fans_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fans_num_tv"
                android:layout_centerHorizontal="true"
                android:text="粉丝"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/follows"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/follows_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/follows_num_tv"
                android:layout_centerHorizontal="true"
                android:text="关注"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>

    </LinearLayout>


    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/medal_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_145_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_237_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:clipChildren="false"
        app:bl_corners_radius="@dimen/view_10_dp"
        app:bl_solid_color="#FFF8DA"
        app:bl_stroke_color="#122074"
        app:bl_stroke_width="@dimen/view_3_dp">

        <RelativeLayout
            android:layout_width="@dimen/view_70_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_30_dp"
            android:layout_marginTop="@dimen/view_33_dp">

            <ImageView
                android:id="@+id/paiwei_img"
                android:layout_width="@dimen/view_70_dp"
                android:layout_height="@dimen/view_61_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gerenzhuye_paiweisai" />

            <com.common.view.ex.ExTextView
                android:id="@+id/rank_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15_dp"
                android:gravity="center"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paiwei_img"
                android:layout_marginTop="@dimen/view_5_dp"
                android:gravity="center"
                android:text="排位赛"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/view_70_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_33_dp"
            android:layout_marginRight="@dimen/view_30_dp">

            <ImageView
                android:id="@+id/singend_img"
                android:layout_width="@dimen/view_70_dp"
                android:layout_height="@dimen/view_61_dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gerenzhuye_yicangdaodi" />

            <com.common.view.ex.ExTextView
                android:id="@+id/singend_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15_dp"
                android:gravity="center"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/singend_img"
                android:layout_marginTop="@dimen/view_5_dp"
                android:gravity="center"
                android:text="一唱到底"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.common.view.ex.ExRelativeLayout>


    <com.zq.level.view.NormalLevelView
        android:id="@+id/level_view"
        android:layout_width="@dimen/view_125_dp"
        android:layout_height="@dimen/view_134_dp"
        android:layout_below="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_77_dp"
        levelView:mainHeight="@dimen/view_109_dp"
        levelView:mainWidth="@dimen/view_125_dp"
        levelView:starTotalWidth="@dimen/view_125_dp"
        levelView:subHeight="@dimen/view_13_dp"
        levelView:subWidth="@dimen/view_13_dp"
        levelView:txtColor="#0C2275"></com.zq.level.view.NormalLevelView>

    <com.common.view.ex.ExTextView
        android:id="@+id/rank_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_view"
        android:layout_marginTop="@dimen/view_3_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/medal_layout"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <com.common.view.ex.ExRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/view_3_dp"
            android:paddingRight="@dimen/view_3_dp"
            app:bl_corners_radius="@dimen/view_10_dp"
            app:bl_solid_color="#F9F4F1"
            app:bl_stroke_color="#122074"
            app:bl_stroke_width="@dimen/view_3_dp">

            <!--钱包-->
            <RelativeLayout
                android:id="@+id/wallet_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_17_dp"
                    android:src="@drawable/icon_wallet" />

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_56_dp"
                    android:text="钱包"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_16_dp" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D8D8D8" />

            </RelativeLayout>


            <!--调音间-->
            <RelativeLayout
                android:id="@+id/audition_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/wallet_area">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_17_dp"
                    android:src="@drawable/icon_audition" />

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_56_dp"
                    android:text="调音间"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_16_dp" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D8D8D8" />

            </RelativeLayout>

            <!--音乐测试-->
            <RelativeLayout
                android:id="@+id/music_test_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/audition_area">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_17_dp"
                    android:src="@drawable/icon_music_test" />

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_56_dp"
                    android:text="音乐测试"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_16_dp" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_1_dp"
                    android:layout_alignParentBottom="true"
                    android:background="#D8D8D8" />

            </RelativeLayout>

            <!--设置-->
            <RelativeLayout
                android:id="@+id/setting_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64_dp"
                android:layout_below="@+id/music_test_area">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_17_dp"
                    android:src="@drawable/icon_setting" />

                <com.common.view.ex.ExTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_56_dp"
                    android:text="设置"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_16_dp" />

                <com.common.view.ex.ExImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_17_dp"
                    android:src="@drawable/icon_back" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/setting_red_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_30_dp"
                    android:src="@drawable/reddot" />

            </RelativeLayout>

        </com.common.view.ex.ExRelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>