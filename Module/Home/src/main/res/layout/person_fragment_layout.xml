<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/person_main_containner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gerenzhongxin_bg">


    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_72_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_38_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/share_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/textsize_23_dp"
        android:layout_marginTop="@dimen/view_40_dp"
        android:drawableTop="@drawable/gerenzhuye_fenxiangicon"
        android:text="分享" />

    <com.common.view.ex.ExTextView
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_40_dp"
        android:layout_marginRight="@dimen/textsize_23_dp"
        android:drawableTop="@drawable/gerenzhuye_shezhiicon"
        android:text="设置" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_5_dp"
        android:gravity="center"
        android:minWidth="@dimen/view_100_dp"
        android:text="赤木晴子"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_24_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/userid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:gravity="center"
        android:text="撕歌号: 21433642"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_15_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sign_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid_tv"
        android:layout_marginTop="@dimen/view_9_dp"
        android:gravity="center"
        android:minWidth="@dimen/view_100_dp"
        android:text="哥就是那个KTV里最跑调的孩子"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_tv"
        android:layout_marginTop="@dimen/view_14_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/friends"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/friends_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friends_num_tv"
                android:layout_centerHorizontal="true"
                android:text="好友"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fans"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/fans_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fans_num_tv"
                android:layout_centerHorizontal="true"
                android:text="粉丝"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/follows"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExTextView
                android:id="@+id/follows_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_30_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/follows_num_tv"
                android:layout_centerHorizontal="true"
                android:text="关注"
                android:textColor="#0C2275"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/medal_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_148_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_278_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:background="@drawable/gerenzhongxin_zhanji_bg">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_120_dp"
            android:layout_marginTop="@dimen/view_15_dp"
            android:layout_marginBottom="@dimen/view_13_dp"
            android:background="@drawable/gerenzhuye_huizhangbeijing" />

        <com.zq.level.view.NormalLevelView
            android:id="@+id/level_view"
            android:layout_width="@dimen/view_108_dp"
            android:layout_height="@dimen/view_108_dp"
            android:layout_marginLeft="@dimen/view_16_dp"
            android:layout_marginTop="@dimen/view_22_dp"
            android:layout_marginBottom="@dimen/textsize_18_dp"></com.zq.level.view.NormalLevelView>

        <com.common.view.ex.ExTextView
            android:id="@+id/rank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_41_dp"
            android:layout_toRightOf="@+id/level_view"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="昌平情歌榜22位"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_tv"
            android:layout_marginTop="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_6_dp"
            android:layout_toRightOf="@+id/level_view"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_51_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_47_dp"
                    android:layout_height="@dimen/view_51_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_67_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_8_dp"
                    android:background="@drawable/gerenzhuye_paiwei"
                    android:gravity="center"
                    android:text="排位赛"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_8_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/rank_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8_dp"
                    android:gravity="center"
                    android:text="100场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_14_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_51_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_47_dp"
                    android:layout_height="@dimen/view_51_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_67_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_8_dp"
                    android:background="@drawable/gerenzhuye_yule"
                    android:gravity="center"
                    android:text="娱乐赛"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_8_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/funny_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8_dp"
                    android:gravity="center"
                    android:text="94场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_14_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_51_dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/view_1_dp"
                android:paddingRight="@dimen/view_1_dp">

                <ImageView
                    android:layout_width="@dimen/view_47_dp"
                    android:layout_height="@dimen/view_51_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/game_statistic_bg" />

                <com.common.view.ex.ExTextView
                    android:layout_width="@dimen/view_67_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_8_dp"
                    android:background="@drawable/gerenzhuye_yichangdaodi"
                    android:gravity="center"
                    android:text="一唱到底"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_8_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/singend_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8_dp"
                    android:gravity="center"
                    android:text="82场"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_14_dp" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medal_layout"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_14_dp">

        <com.common.view.ex.ExImageView
            android:id="@+id/audition_room_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_4_dp"
            android:layout_weight="1"
            android:background="@drawable/gerenzhongxin_tiaoyinjian_rukou" />

        <com.common.view.ex.ExImageView
            android:id="@+id/music_test_tv"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_4_dp"
            android:layout_weight="1"
            android:background="@drawable/gerenzhongxin_yinyueceshi_rukou" />

    </LinearLayout>

</RelativeLayout>