    <com.contrarywind.wheelview.view.WheelView
        android:id="@+id/year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.contrarywind.wheelview.view.WheelView

        android:id="@+id/month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1" />

    <com.contrarywind.wheelview.view.WheelView
        android:id="@+id/day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1" />

    <com.contrarywind.wheelview.view.WheelView
        android:id="@+id/hour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1" />

    <com.contrarywind.wheelview.view.WheelView
        android:id="@+id/min"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1" />

    <com.contrarywind.wheelview.view.WheelView
        android:id="@+id/second"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1" />
