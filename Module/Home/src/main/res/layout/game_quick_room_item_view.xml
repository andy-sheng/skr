<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExImageView
        android:id="@+id/create_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_66_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shouye_grab_create_room" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/create_room"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_4_dp"/>

</RelativeLayout>