<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_96_dp">
    <com.common.view.ex.ExImageView
        android:background="@drawable/user_icon"
        android:id="@+id/iv_user_icon"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/view_56_dp"
        android:layout_height="@dimen/view_56_dp" />

    <com.common.view.ex.ExTextView
        android:textStyle="bold"
        android:textColor="#565656"
        android:text="赤-CHVANS"
        android:textSize="@dimen/textsize_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_toRightOf="@+id/iv_user_icon"
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.common.view.ex.ExTextView
        android:textColor="#FF9F00"
        android:text="Lv3"
        android:textSize="@dimen/textsize_14_dp"
        android:layout_marginTop="@dimen/view_38_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_toRightOf="@+id/tv_user_name"
        android:id="@+id/tv_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pb_user_level"
        android:layout_marginBottom="@dimen/view_26_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_toRightOf="@+id/iv_user_icon"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="44"
        android:background="@drawable/user_level_progress"
        android:layout_width="@dimen/view_128_dp"
        android:layout_height="@dimen/view_6_dp" />

    <com.common.view.ex.ExTextView
        android:textColor="#C0C0C0"
        android:text="168/300"
        android:textSize="@dimen/textsize_12_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_toRightOf="@+id/pb_user_level"
        android:id="@+id/tv_num_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="@dimen/view_27_dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_34_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.common.view.ex.ExImageView
            android:background="@drawable/user_range"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/view_21_dp"
            android:layout_height="@dimen/view_18_dp" />

        <com.common.view.ex.ExTextView
            android:layout_marginTop="@dimen/view_4_dp"
            android:textSize="@dimen/view_12_dp"
            android:textColor="#C0C0C0"
            android:text="排行"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</merge>