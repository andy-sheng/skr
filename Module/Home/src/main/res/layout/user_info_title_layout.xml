<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_user_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_89_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/view_91_dp"
        android:layout_height="@dimen/view_91_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_34_dp" />

    <ImageView
        android:id="@+id/level_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_112_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_26_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/user_level_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignBottom="@+id/level_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_2_dp"
        android:gravity="center"
        android:textColor="#55352E"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_14_dp" />
</RelativeLayout>