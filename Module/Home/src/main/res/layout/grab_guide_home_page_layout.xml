<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xinshouyindao">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_320_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/special_1"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_84_dp"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/view_16_dp"
                android:layout_height="@dimen/view_84_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/special_2"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_84_dp"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_12_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/special_3"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_84_dp"
                android:layout_weight="1" />

            <View
                android:layout_width="@dimen/view_16_dp"
                android:layout_height="@dimen/view_84_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/special_4"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_84_dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/skip_iv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_31_dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/xinshou_tiaoguo" />

</RelativeLayout>