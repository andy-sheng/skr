<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_352_dp"
    android:layout_margin="@dimen/view_10_dp"
    app:bl_corners_radius="@dimen/view_16_dp"
    app:bl_solid_color="#FFD0EFFF">

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="我想找"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_18_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/find_male_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        android:layout_marginTop="@dimen/view_62_dp"
        app:bl_selected_drawable="@drawable/select_male"
        app:bl_unSelected_drawable="@drawable/un_select_male"
        app:layout_constraintEnd_toStartOf="@+id/find_female_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"
        android:text="男生"
        android:textColor="#ff79befa"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/find_male_iv"
        app:layout_constraintStart_toStartOf="@+id/find_male_iv"
        app:layout_constraintTop_toBottomOf="@+id/find_male_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/find_female_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        android:layout_marginLeft="@dimen/view_37_dp"
        android:layout_marginTop="60dp"
        app:bl_selected_drawable="@drawable/select_female"
        app:bl_unSelected_drawable="@drawable/un_select_famale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/find_male_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"
        android:text="女生"
        android:textColor="#FFF59EC5"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/find_female_iv"
        app:layout_constraintStart_toStartOf="@+id/find_female_iv"
        app:layout_constraintTop_toBottomOf="@+id/find_female_iv" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginTop="@dimen/view_175_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="我是"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_18_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.common.view.ex.ExTextView
        android:id="@+id/me_male_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_53_dp"
        android:gravity="center"
        android:text="男生"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_selected_drawable="#FF79BEFA"
        app:bl_selected_textColor="@color/white"
        app:bl_stroke_color="#FF79BEFA"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:bl_unSelected_drawable="@color/transparent"
        app:bl_unSelected_textColor="#FF79BEFA"
        app:layout_constraintEnd_toStartOf="@+id/me_female_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.common.view.ex.ExTextView
        android:id="@+id/me_female_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_39_dp"
        android:layout_marginTop="@dimen/view_53_dp"
        android:gravity="center"
        android:text="女生"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_selected_drawable="#FFF59EC5"
        app:bl_selected_textColor="@color/white"
        app:bl_stroke_color="#FFF59EC5"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:bl_unSelected_drawable="@color/transparent"
        app:bl_unSelected_textColor="#FFF59EC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/me_male_iv"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.common.view.ex.ExTextView
        android:id="@+id/start_match_tv"
        android:layout_width="@dimen/view_152_dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:enabled="false"
        android:gravity="center"
        android:text="开始匹配"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_enabled_drawable="#FFFFC15B"
        app:bl_enabled_textColor="#FFAD6C00"
        app:bl_unEnabled_drawable="#99FFC15B"
        app:bl_unEnabled_textColor="#99AD6C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</com.common.view.ex.ExConstraintLayout>