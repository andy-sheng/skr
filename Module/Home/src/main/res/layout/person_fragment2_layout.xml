<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7088FF">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlFooterTranslationViewId="@id/photo_view">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v7.widget.RecyclerView>

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:elevation="@dimen/view_0_dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:id="@+id/user_info_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--只是做一下刘海屏幕的适配-->
                        <com.common.view.titlebar.CommonTitleBar
                            android:id="@+id/titlebar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:showBottomLine="false"
                            app:statusBarColor="@color/transparent"
                            app:titleBarHeight="@dimen/view_0_dp"></com.common.view.titlebar.CommonTitleBar>

                        <ImageView
                            android:id="@+id/avatar_bg"
                            android:layout_width="@dimen/view_62_dp"
                            android:layout_height="@dimen/view_67_dp"
                            android:layout_below="@id/titlebar"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="@dimen/view_18_dp"
                            android:background="@drawable/b_touxiang" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/avatar_iv"
                            android:layout_width="@dimen/view_52_dp"
                            android:layout_height="@dimen/view_52_dp"
                            android:layout_alignLeft="@id/avatar_bg"
                            android:layout_alignTop="@id/avatar_bg"
                            android:layout_marginLeft="@dimen/view_5_dp"
                            android:layout_marginTop="@dimen/view_5_dp" />

                        <!--设置-->
                        <RelativeLayout
                            android:id="@+id/setting_area"
                            android:layout_width="@dimen/view_25_dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/avatar_iv"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/view_6_dp"
                            android:layout_marginRight="@dimen/view_16_dp">

                            <ImageView
                                android:id="@+id/setting_img_iv"
                                android:layout_width="@dimen/view_27_dp"
                                android:layout_height="@dimen/view_31_dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/gerenzhongxin_shezhi" />

                            <com.common.view.ex.ExTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/setting_img_iv"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/view_2_dp"
                                android:text="设置"
                                android:textColor="#0C2275"
                                android:textSize="@dimen/textsize_12_dp"
                                android:visibility="gone" />

                            <com.common.view.ex.ExImageView
                                android:id="@+id/setting_red_dot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/setting_img_iv"
                                android:layout_alignRight="@+id/setting_img_iv"
                                android:src="@drawable/reddot" />

                        </RelativeLayout>

                        <com.common.view.ex.ExTextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_25_dp"
                            android:layout_alignTop="@id/avatar_iv"
                            android:layout_marginLeft="@dimen/view_12_dp"
                            android:layout_marginTop="@dimen/view_3_dp"
                            android:layout_toLeftOf="@id/setting_area"
                            android:layout_toRightOf="@id/avatar_iv"
                            android:ellipsize="end"
                            android:gravity="left|center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="KTV酒彪子"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_18_dp"
                            android:textStyle="bold" />

                        <com.common.view.ex.ExTextView
                            android:id="@+id/userid_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_below="@id/name_tv"
                            android:layout_alignLeft="@id/name_tv"
                            android:layout_marginTop="@dimen/view_4_dp"
                            android:layout_marginRight="@dimen/view_50_dp"
                            android:text="撕歌号：278326163"
                            android:textColor="@color/white_trans_50"
                            android:textSize="@dimen/textsize_14_dp" />

                        <LinearLayout
                            android:id="@+id/relation_num_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/avatar_iv"
                            android:layout_marginTop="@dimen/view_24_dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/friends_area"
                                android:layout_width="@dimen/view_0_dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.common.view.ex.ExTextView
                                    android:id="@+id/friends_num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/view_36_dp"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="0好友"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize_24_dp" />

                                <com.common.view.ex.ExImageView
                                    android:id="@+id/friend_red_dot"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@id/friend_tv"
                                    android:layout_toRightOf="@id/friend_tv"
                                    android:src="@drawable/reddot"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/follows_area"
                                android:layout_width="@dimen/view_0_dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.common.view.ex.ExTextView
                                    android:id="@+id/follows_num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="0关注"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize_24_dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/fans_area"
                                android:layout_width="@dimen/view_0_dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.common.view.ex.ExTextView
                                    android:id="@+id/fans_num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/view_36_dp"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="0粉丝"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize_24_dp" />

                                <com.common.view.ex.ExImageView
                                    android:id="@+id/fans_red_dot"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@id/fans_tv"
                                    android:layout_toRightOf="@id/fans_tv"
                                    android:src="@drawable/reddot"
                                    android:visibility="gone" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/function_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relation_num_area"
                            android:layout_marginLeft="@dimen/view_16_dp"
                            android:layout_marginTop="@dimen/view_20_dp"
                            android:layout_marginRight="@dimen/view_16_dp"
                            android:orientation="horizontal">

                            <com.common.view.ex.ExImageView
                                android:id="@+id/wallet_iv"
                                android:layout_width="@dimen/view_0_dp"
                                android:layout_height="@dimen/view_60_dp"
                                android:layout_marginRight="@dimen/view_6_dp"
                                android:layout_weight="1"
                                android:background="@drawable/person_wallet_icon" />

                            <com.common.view.ex.ExImageView
                                android:id="@+id/music_test_iv"
                                android:layout_width="@dimen/view_0_dp"
                                android:layout_height="@dimen/view_60_dp"
                                android:layout_marginLeft="@dimen/view_6_dp"
                                android:layout_weight="1"
                                android:background="@drawable/person_test_icon" />

                        </LinearLayout>

                        <com.common.view.ex.ExRelativeLayout
                            android:id="@+id/medal_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_130_dp"
                            android:layout_below="@+id/function_area"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/view_16_dp"
                            android:layout_marginTop="@dimen/view_34_dp"
                            android:layout_marginRight="@dimen/view_16_dp"
                            android:background="@drawable/person_medal_bg">

                            <RelativeLayout
                                android:layout_width="@dimen/view_70_dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="@dimen/view_30_dp"
                                android:layout_marginTop="@dimen/view_15_dp">

                                <ImageView
                                    android:id="@+id/paiwei_img"
                                    android:layout_width="@dimen/view_68_dp"
                                    android:layout_height="@dimen/view_66_dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/person_rank_num_bg" />

                                <com.common.view.ex.ExTextView
                                    android:id="@+id/rank_num_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/view_15_dp"
                                    android:gravity="center"
                                    android:textColor="#0C2275"
                                    android:textSize="@dimen/textsize_14_dp" />

                                <com.common.view.ex.ExTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/paiwei_img"
                                    android:layout_marginTop="@dimen/view_5_dp"
                                    android:gravity="center"
                                    android:text="排位赛"
                                    android:textColor="#0C2275"
                                    android:textSize="@dimen/textsize_12_dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="@dimen/view_70_dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/view_15_dp"
                                android:layout_marginRight="@dimen/view_30_dp">

                                <ImageView
                                    android:id="@+id/singend_img"
                                    android:layout_width="@dimen/view_68_dp"
                                    android:layout_height="@dimen/view_66_dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/person_grab_num_bg" />

                                <com.common.view.ex.ExTextView
                                    android:id="@+id/singend_num_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/view_15_dp"
                                    android:gravity="center"
                                    android:textColor="#0C2275"
                                    android:textSize="@dimen/textsize_14_dp" />

                                <com.common.view.ex.ExTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/singend_img"
                                    android:layout_marginTop="@dimen/view_5_dp"
                                    android:gravity="center"
                                    android:text="一唱到底"
                                    android:textColor="#0C2275"
                                    android:textSize="@dimen/textsize_12_dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </com.common.view.ex.ExRelativeLayout>

                        <com.zq.level.view.NormalLevelView2
                            android:id="@+id/level_view"
                            android:layout_width="@dimen/view_125_dp"
                            android:layout_height="@dimen/view_109_dp"
                            android:layout_alignTop="@id/medal_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-30dp"
                            levelView2:mainHeight2="@dimen/view_109_dp"
                            levelView2:mainWidth2="@dimen/view_125_dp"
                            levelView2:subBottom2="@dimen/view_6_dp"
                            levelView2:subHeight2="@dimen/view_13_dp"
                            levelView2:subWidth2="@dimen/view_24_dp"></com.zq.level.view.NormalLevelView2>

                        <com.common.view.ex.ExTextView
                            android:id="@+id/level_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/level_view"
                            android:layout_marginTop="@dimen/view_3_dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="钻石巨星6段"
                            android:textColor="#0C2275"
                            android:textSize="@dimen/textsize_14_dp"
                            android:textStyle="bold" />

                        <com.common.view.ex.ExTextView
                            android:id="@+id/photo_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_27_dp"
                            android:layout_below="@id/medal_layout"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/view_12_dp"
                            android:paddingRight="@dimen/view_12_dp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.CoordinatorLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>