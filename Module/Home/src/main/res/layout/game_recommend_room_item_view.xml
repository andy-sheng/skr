<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/recycler_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_146_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        app:bl_corners_bottomLeftRadius="@dimen/view_16_dp"
        app:bl_corners_bottomRightRadius="@dimen/view_16_dp"
        app:bl_corners_topLeftRadius="@dimen/view_0_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#25000000">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friends_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExImageView
        android:id="@+id/more_friends"
        android:layout_width="@dimen/view_137_dp"
        android:layout_height="@dimen/view_28_dp"
        android:layout_alignTop="@id/recycler_area"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="-14dp"
        android:background="@drawable/grab_more_friend_party" />

</RelativeLayout>