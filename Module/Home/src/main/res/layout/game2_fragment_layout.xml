<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:BitmapTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7088FF">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/classics_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.scwang.smartrefresh.layout.header.ClassicsHeader>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--只是做一下刘海屏幕的适配-->
            <com.common.view.titlebar.CommonTitleBar
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showBottomLine="false"
                app:statusBarColor="@color/transparent"
                app:titleBarHeight="@dimen/view_0_dp"></com.common.view.titlebar.CommonTitleBar>

            <RelativeLayout
                android:id="@+id/top_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_100_dp"
                android:layout_below="@id/titlebar">

                <ImageView
                    android:layout_width="@dimen/view_50_dp"
                    android:layout_height="@dimen/view_53_dp"
                    android:layout_marginLeft="@dimen/view_20_dp"
                    android:layout_marginTop="@dimen/view_36_dp"
                    android:background="@drawable/s_touxiang" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/task_iv"
                    android:layout_width="@dimen/view_132_dp"
                    android:layout_height="@dimen/view_50_dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/view_18_dp"
                    android:layout_marginBottom="@dimen/view_12_dp"
                    android:background="@drawable/shouye_task" />

                <com.common.view.ex.ExImageView
                    android:id="@+id/iv_red_dot"
                    android:layout_width="@dimen/view_12_dp"
                    android:layout_height="@dimen/view_12_dp"
                    android:layout_alignTop="@+id/task_iv"
                    android:layout_alignRight="@+id/task_iv"
                    android:visibility="gone"
                    BitmapTextView:bl_corners_radius="@dimen/view_8_dp"
                    BitmapTextView:bl_solid_color="#FF8AB6"
                    BitmapTextView:bl_stroke_color="#CB5883"
                    BitmapTextView:bl_stroke_width="@dimen/view_2_dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/avatar_iv"
                    android:layout_width="@dimen/view_40_dp"
                    android:layout_height="@dimen/view_40_dp"
                    android:layout_marginLeft="@dimen/view_25_dp"
                    android:layout_marginTop="@dimen/view_41_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_22_dp"
                    android:layout_marginLeft="@dimen/view_15_dp"
                    android:layout_marginTop="@dimen/view_40_dp"
                    android:layout_marginRight="@dimen/view_5_dp"
                    android:layout_toLeftOf="@id/task_iv"
                    android:layout_toRightOf="@+id/avatar_iv"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="KTV酒彪子"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16_dp" />

                <com.common.view.ex.ExRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/textsize_18_dp"
                    android:layout_below="@id/name_tv"
                    android:layout_alignLeft="@id/name_tv"
                    android:layout_marginTop="@dimen/view_4_dp"
                    app:bl_corners_radius="@dimen/view_9_dp"
                    app:bl_shape="rectangle"
                    app:bl_solid_color="@color/black_trans_20">

                    <ImageView
                        android:id="@+id/coin_iv"
                        android:layout_width="@dimen/view_16_dp"
                        android:layout_height="@dimen/view_18_dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/grab_coin_icon" />

                    <com.component.busilib.view.BitmapTextView
                        android:id="@+id/coin_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_5_dp"
                        android:layout_marginRight="@dimen/view_8_dp"
                        android:layout_toRightOf="@id/coin_iv"
                        BitmapTextView:scale="0.4" />

                </com.common.view.ex.ExRelativeLayout>

            </RelativeLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/recycler_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_area">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <com.common.image.fresco.BaseImageView
                android:id="@+id/iv_red_pkg"
                android:layout_width="@dimen/view_48_dp"
                android:layout_height="@dimen/view_53_dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/view_4_dp"
                android:layout_marginBottom="@dimen/view_4_dp"
                android:visibility="gone" />
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>