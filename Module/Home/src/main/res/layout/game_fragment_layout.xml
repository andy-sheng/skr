<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smart_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0F9F4F1"
    app:srlEnablePreviewInEditMode="true">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:id="@+id/classics_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.scwang.smartrefresh.layout.header.ClassicsHeader>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--只是做一下刘海屏幕的适配-->
            <com.common.view.titlebar.CommonTitleBar
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:showBottomLine="false"
                app:statusBarColor="@color/transparent"
                app:titleBarHeight="@dimen/view_0_dp"></com.common.view.titlebar.CommonTitleBar>

            <RelativeLayout
                android:id="@+id/top_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlebar">

                <com.module.home.widget.UserInfoTitleView
                    android:id="@+id/user_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"></com.module.home.widget.UserInfoTitleView>

                <com.common.image.fresco.BaseImageView
                    android:id="@+id/iv_op_first"
                    android:layout_width="@dimen/view_48_dp"
                    android:layout_height="@dimen/view_53_dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/view_104_dp"
                    android:layout_marginRight="@dimen/view_24_dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rank_area"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_24_dp"
                    android:layout_below="@id/user_info_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_5_dp"
                    android:background="@drawable/shouye_paiming"
                    android:paddingLeft="@dimen/view_42_dp"
                    android:paddingRight="@dimen/view_12_dp">

                    <com.common.view.ex.ExTextView
                        android:id="@+id/rank_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_20_dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_6_dp"
                        android:gravity="center_vertical"
                        android:textColor="#0C2275"
                        android:textSize="@dimen/textsize_14_dp" />

                    <com.common.view.ex.ExImageView
                        android:id="@+id/rank_diff_iv"
                        android:layout_width="@dimen/view_8_dp"
                        android:layout_height="@dimen/view_10_dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/view_3_dp"
                        android:layout_toRightOf="@id/rank_text" />

                    <com.common.view.ex.ExImageView
                        android:layout_width="@dimen/view_7_dp"
                        android:layout_height="@dimen/view_8_dp"
                        android:layout_marginLeft="@dimen/view_9_dp"
                        android:layout_marginTop="@dimen/view_16_dp"
                        android:layout_marginRight="@dimen/view_24_dp"
                        android:layout_toRightOf="@id/rank_diff_iv"
                        android:background="@drawable/gengduo_btn"
                        android:visibility="gone" />

                </RelativeLayout>

                <com.common.view.ex.ExImageView
                    android:id="@+id/medal_iv"
                    android:layout_width="@dimen/view_30_dp"
                    android:layout_height="@dimen/view_30_dp"
                    android:layout_alignLeft="@+id/rank_area"
                    android:layout_alignTop="@+id/rank_area"
                    android:layout_marginLeft="@dimen/view_12_dp"
                    android:layout_marginTop="-1dp" />

            </RelativeLayout>

            <com.youth.banner.Banner
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_140_dp"
                android:layout_below="@+id/top_area"
                android:layout_marginLeft="@dimen/view_13_dp"
                android:layout_marginTop="@dimen/view_20_dp"
                android:layout_marginRight="@dimen/view_13_dp"
                android:visibility="visible"
                app:banner_layout="@layout/game_banner_layout"
                app:banner_space="16dp"
                app:image_scale_type="fit_xy"
                app:indicator_drawable_selected="@drawable/indicator_selected"
                app:indicator_drawable_unselected="@drawable/indicator_unselected"
                app:indicator_height="@dimen/view_6_dp"
                app:indicator_margin="@dimen/view_4_dp"
                app:indicator_width="@dimen/view_6_dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_view"
                android:layout_marginLeft="@dimen/view_16_dp"
                android:layout_marginTop="@dimen/view_14_dp"
                android:layout_marginRight="@dimen/view_16_dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/view_10_dp"
                    android:layout_weight="1">

                    <com.common.view.ex.ExImageView
                        android:id="@+id/iv_grab_game"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/shouye_yichangdaodi" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/text_grab_game"
                        android:layout_width="@dimen/view_118_dp"
                        android:layout_height="@dimen/view_32_dp"
                        android:layout_alignBottom="@+id/iv_grab_game"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/view_12_dp"
                        android:background="@drawable/shouye_gaiyaobj"
                        android:gravity="center"
                        android:text="清唱 挑战30s"
                        android:textColor="#0C2275"
                        android:textSize="@dimen/textsize_13_dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_10_dp"
                    android:layout_weight="1">

                    <com.common.view.ex.ExImageView
                        android:id="@+id/iv_athletics_pk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/shouye_paiweisai" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/text_athletics_pk"
                        android:layout_width="@dimen/view_118_dp"
                        android:layout_height="@dimen/view_32_dp"
                        android:layout_alignBottom="@+id/iv_athletics_pk"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/view_12_dp"
                        android:background="@drawable/shouye_gaiyaobj"
                        android:gravity="center"
                        android:text="K歌 3人赛"
                        android:textColor="#0C2275"
                        android:textSize="@dimen/textsize_13_dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>