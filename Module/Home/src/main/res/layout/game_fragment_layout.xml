<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.module.home.widget.UserInfoTitleView
        android:id="@+id/user_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_title_view">

        <LinearLayout
            android:layout_marginLeft="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_13_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.common.view.ex.ExImageView
                android:src="@drawable/btn_paiweisai_shouye_top_normal"
                android:adjustViewBounds="true"
                android:id="@+id/iv_athletics_pk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/view_12_dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <com.common.view.ex.ExImageView
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv_normal_pk"
                    android:src="@drawable/btn_yule_shouye_down_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="3dp"/>

                <com.common.view.ex.ExImageView
                    android:id="@+id/iv_yule_pk"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_yule_shouye2_down_normal"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>