<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_64_dp"
    android:layout_marginLeft="@dimen/view_12_dp"
    android:layout_marginRight="@dimen/view_12_dp">

    <android.support.constraint.Guideline
        android:id="@+id/guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <com.common.view.ex.ExImageView
        android:id="@+id/task_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/game_task_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/task_red_iv"
        android:layout_width="@dimen/view_8_dp"
        android:layout_height="@dimen/view_8_dp"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#FF8AB6"
        app:layout_constraintRight_toRightOf="@id/task_iv"
        app:layout_constraintTop_toTopOf="@id/task_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/practice_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/game_practice_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide_1"
        app:layout_constraintRight_toRightOf="@id/guide_2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/rank_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/game_rank_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide_2"
        app:layout_constraintRight_toRightOf="@id/guide_3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/mall_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_36_dp"
        android:background="@drawable/game_mall_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>