<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#404A9A" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/bg_svga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:antiAlias="true"
        app:autoPlay="false" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_72_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_box"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_110_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/light_svga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:antiAlias="true"
        app:autoPlay="false" />
</merge>