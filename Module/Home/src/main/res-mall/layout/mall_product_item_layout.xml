<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_178_dp"
    android:paddingLeft="@dimen/view_4_dp"
    android:paddingTop="@dimen/view_2_dp"
    android:paddingRight="@dimen/view_4_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_130_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#526AE3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/effect_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_130_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_30_dp"
        android:gravity="center"
        android:text="黄金铠甲"
        android:textColor="#ffffffff"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_bottomLeftRadius="@dimen/view_8_dp"
        app:bl_corners_bottomRightRadius="@dimen/view_8_dp"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintBottom_toBottomOf="@+id/effect_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/stroke_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_130_dp"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_7_dp"
        app:bl_stroke_color="#FFC15B"
        app:bl_stroke_width="@dimen/view_3_dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:background="@drawable/mall_unselected"
        android:drawableLeft="@drawable/mall_diamond"
        android:drawablePadding="@dimen/view_3_dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingBottom="@dimen/view_3_dp"
        android:text="X66"
        android:textColor="#7C4A20"
        android:textSize="@dimen/textsize_12_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/has_buy_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:background="@drawable/mall_selected"
        android:gravity="center"
        android:paddingBottom="@dimen/view_3_dp"
        android:text="已购"
        android:textColor="#7C4A20"
        android:textSize="@dimen/textsize_12_dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg" />
</android.support.constraint.ConstraintLayout>