<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:StrokeTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_16_dp"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_solid_color="#7187FF"
    app:bl_stroke_color="#3B4E79"
    app:bl_stroke_width="@dimen/view_2_dp">

    <com.dialog.view.StrokeTextView
        android:id="@+id/title_stv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_28_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:text="打赏榜规则说明"
        android:textSize="@dimen/textsize_20_dp"
        StrokeTextView:borderColor="#576FE3"
        StrokeTextView:textColor="@color/white" />

    <com.common.view.ex.ExLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:layout_marginBottom="@dimen/view_8_dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/view_30_dp"
        android:paddingBottom="@dimen/view_30_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="#576FE3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_title"
            android:layout_marginLeft="@dimen/view_13_dp"
            android:layout_marginRight="@dimen/view_12_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/grab_guize_1" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_8_dp"
                android:text="打赏点数：每送出1钻石价值礼物增加1打赏点数"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_13_dp"
            android:layout_marginTop="@dimen/view_12_dp"
            android:layout_marginRight="@dimen/view_13_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/grab_guize_2" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_8_dp"
                android:text="周榜：本周新赚取打赏点数最高的500名用户上榜，榜单数据实时更新，下周一00:00点榜单会被重置"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_13_dp"
            android:layout_marginTop="@dimen/view_12_dp"
            android:layout_marginRight="@dimen/view_13_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExImageView
                android:layout_width="@dimen/view_23_dp"
                android:layout_height="@dimen/view_25_dp"
                android:background="@drawable/grab_guize_3" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_8_dp"
                android:text="总榜：累计赚取打赏点数最高的500名用户上榜，榜单数据实时更新"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>

    </com.common.view.ex.ExLinearLayout>

</com.common.view.ex.ExLinearLayout>