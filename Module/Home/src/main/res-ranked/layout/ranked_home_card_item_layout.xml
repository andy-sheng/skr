<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_212_dp"
    android:layout_marginLeft="@dimen/view_12_dp"
    android:layout_marginTop="@dimen/view_16_dp"
    android:layout_marginRight="@dimen/view_12_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_marginLeft="@dimen/view_27_dp"
        android:layout_marginBottom="@dimen/view_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_7_dp"
        android:ellipsize="end"
        android:ems="7"
        android:gravity="left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#CC333B7B"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="@id/avatar_iv" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginRight="@dimen/view_30_dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#CC333B7B"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_iv" />

</android.support.constraint.ConstraintLayout>