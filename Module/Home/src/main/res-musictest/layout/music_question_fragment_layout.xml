<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F1">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="小测验"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:rightText="1/2"
        app:rightTextColor="@color/white"
        app:rightTextSize="@dimen/textsize_16_dp"
        app:rightType="textView"
        app:showBottomLine="true"
        app:bottomLineColor="#0C2275"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0"/>


    <RelativeLayout
        android:id="@+id/question_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"/>

</RelativeLayout>
