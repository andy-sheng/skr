<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C56AA">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:rightText="1/2"
        app:rightTextColor="@color/white_trans_80"
        app:rightTextSize="@dimen/textsize_16_dp"
        app:rightTextStyle="BOLD"
        app:rightType="textView"
        app:showBottomLine="false"
        app:statusBarColor="#4C56AA"
        app:titleBarColor="#4C56AA" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_74_dp"
        android:layout_height="@dimen/view_74_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar" />

    <com.common.view.ex.NoLeakEditText
        android:id="@+id/nickname_et"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_52_dp"
        android:layout_marginTop="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_52_dp"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="昵称"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:minWidth="@dimen/view_20_dp"
        android:paddingLeft="@dimen/view_16_dp"
        android:paddingRight="@dimen/view_16_dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white_trans_50"
        android:textSize="@dimen/view_18_dp"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/white_trans_10"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/nickname_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_5_dp"
        android:gravity="center"
        android:text="昵称的提示哦"
        android:textColor="#FFB1CE"
        android:textSize="@dimen/textsize_14_dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/nickname_et"
        app:layout_constraintRight_toRightOf="@id/nickname_et"
        app:layout_constraintTop_toBottomOf="@id/nickname_et" />

    <TextView
        android:id="@+id/set_hint"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:gravity="center"
        android:text="选择性别"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="@id/nickname_et"
        app:layout_constraintRight_toRightOf="@id/nickname_et"
        app:layout_constraintTop_toBottomOf="@id/nickname_et" />

    <View
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:background="@color/white_trans_20"
        app:layout_constraintBottom_toBottomOf="@id/set_hint"
        app:layout_constraintLeft_toLeftOf="@id/nickname_et"
        app:layout_constraintRight_toLeftOf="@id/set_hint"
        app:layout_constraintTop_toTopOf="@id/set_hint" />

    <View
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:background="@color/white_trans_20"
        app:layout_constraintBottom_toBottomOf="@id/set_hint"
        app:layout_constraintLeft_toRightOf="@id/set_hint"
        app:layout_constraintRight_toRightOf="@id/nickname_et"
        app:layout_constraintTop_toTopOf="@id/set_hint" />

    <com.common.view.ex.ExImageView
        android:id="@+id/secret_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_64_dp"
        android:layout_marginTop="@dimen/view_24_dp"
        app:bl_selected_drawable="@drawable/select_secret"
        app:bl_unSelected_drawable="@drawable/un_select_secret"
        app:layout_constraintLeft_toLeftOf="@id/nickname_et"
        app:layout_constraintTop_toBottomOf="@id/set_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:text="保密"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toLeftOf="@id/secret_iv"
        app:layout_constraintRight_toRightOf="@id/secret_iv"
        app:layout_constraintTop_toBottomOf="@id/secret_iv" />


    <com.common.view.ex.ExImageView
        android:id="@+id/male_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_64_dp"
        android:layout_marginTop="@dimen/view_24_dp"
        app:bl_selected_drawable="@drawable/select_male"
        app:bl_unSelected_drawable="@drawable/un_select_male"
        app:layout_constraintLeft_toRightOf="@id/secret_iv"
        app:layout_constraintRight_toLeftOf="@id/female_iv"
        app:layout_constraintTop_toBottomOf="@id/set_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:text="男生"
        android:textSize="@dimen/textsize_12_dp"
        android:textColor="#79BEFA"
        android:layout_marginTop="@dimen/view_8_dp"
        app:layout_constraintLeft_toLeftOf="@id/male_iv"
        app:layout_constraintRight_toRightOf="@id/male_iv"
        app:layout_constraintTop_toBottomOf="@id/male_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/female_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_64_dp"
        android:layout_marginTop="@dimen/view_24_dp"
        app:bl_selected_drawable="@drawable/select_female"
        app:bl_unSelected_drawable="@drawable/un_select_famale"
        app:layout_constraintRight_toRightOf="@id/nickname_et"
        app:layout_constraintTop_toBottomOf="@id/set_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:text="女生"
        android:textColor="#F59EC5"
        android:textSize="@dimen/textsize_12_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        app:layout_constraintLeft_toLeftOf="@id/female_iv"
        app:layout_constraintRight_toRightOf="@id/female_iv"
        app:layout_constraintTop_toBottomOf="@id/female_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/next_iv"
        android:layout_width="@dimen/view_134_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_80_dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#AD6C00"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

