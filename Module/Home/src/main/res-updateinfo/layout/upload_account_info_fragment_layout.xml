<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7187FF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.common.view.titlebar.CommonTitleBar
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerText="完善个人资料"
                app:centerTextColor="@color/white"
                app:centerTextSize="@dimen/textsize_20_dp"
                app:centerType="textView"
                app:leftDrawable="@drawable/img_back"
                app:leftType="textView"
                app:rightText="1/2"
                app:rightTextColor="@color/white"
                app:rightTextSize="@dimen/textsize_16_dp"
                app:rightType="textView"
                app:showBottomLine="false"
                app:statusBarColor="#7187FF"
                app:titleBarColor="#7187FF"></com.common.view.titlebar.CommonTitleBar>


            <com.common.view.ex.NoLeakEditText
                android:id="@+id/nickname_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_54_dp"
                android:layout_marginLeft="@dimen/view_40_dp"
                android:layout_below="@id/titlebar"
                android:layout_marginTop="@dimen/view_60_dp"
                android:layout_marginRight="@dimen/view_40_dp"
                android:background="@drawable/common_input_edit_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="昵称"
                android:inputType="text"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_25_dp"
                android:paddingRight="@dimen/view_25_dp"
                android:singleLine="true"
                android:textColor="#091E77"
                android:textColorHint="#4c0C2275"
                android:textSize="@dimen/view_18_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/nickname_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nickname_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_18_dp"
                android:text="昵称的提示哦"
                android:textColor="#EF5E85"
                android:textSize="@dimen/textsize_14_dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="@dimen/view_234_dp"
                android:layout_height="@dimen/view_106_dp"
                android:layout_below="@+id/nickname_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_40_dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.common.view.ex.ExImageView
                        android:id="@+id/male"
                        android:layout_width="@dimen/view_76_dp"
                        android:layout_height="@dimen/view_76_dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/head_man_weixuanzhong"
                        android:scaleType="center" />

                    <TextView
                        android:id="@+id/male_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_22_dp"
                        android:layout_below="@+id/male"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_8_dp"
                        android:text="男"
                        android:textColor="@color/white_trans_50"
                        android:textSize="@dimen/textsize_16_dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.common.view.ex.ExImageView
                        android:id="@+id/female"
                        android:layout_width="@dimen/view_76_dp"
                        android:layout_height="@dimen/view_76_dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/head_woman_weixuanzhong"
                        android:scaleType="center" />

                    <TextView
                        android:id="@+id/female_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_22_dp"
                        android:layout_below="@+id/female"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_8_dp"
                        android:text="女"
                        android:textColor="@color/white_trans_50"
                        android:textSize="@dimen/textsize_16_dp" />

                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/next_iv"
                android:layout_width="@dimen/view_172_dp"
                android:layout_height="@dimen/view_72_dp"
                android:layout_below="@+id/nickname_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_180_dp"
                android:background="@drawable/next_unclick_icon" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

