<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F1">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="修改个人信息"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:showBottomLine="false"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0"></com.common.view.titlebar.CommonTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_3_dp"
        android:layout_below="@+id/titlebar"
        android:background="#0C2275" />

    <!--修改头像-->
    <RelativeLayout
        android:id="@+id/edit_avatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="@dimen/view_3_dp">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="头像"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_38_dp"
            android:layout_height="@dimen/view_38_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_55_dp" />

        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_17_dp"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>


    <!--修改昵称-->
    <RelativeLayout
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@+id/edit_avatar">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="昵称"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_55_dp"
            android:text="赤-CHVANS"
            android:textColor="#80091E77"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_17_dp"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>

    <!--修改签名-->
    <RelativeLayout
        android:id="@+id/edit_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@+id/edit_name">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="签名"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_55_dp"
            android:layout_marginRight="@dimen/view_55_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="这个签名是撕哥送的"
            android:textColor="#80091E77"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_17_dp"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>

    <!--修改年龄段-->
    <RelativeLayout
        android:id="@+id/edit_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@+id/edit_sign">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="年龄"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_55_dp"
            android:text="18-22岁"
            android:textColor="#80091E77"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_17_dp"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>


    <!--性别-->
    <RelativeLayout
        android:id="@+id/edit_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@id/edit_age">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="性别"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_55_dp"
            android:text="男"
            android:textColor="#80091E77"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_17_dp"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>

    <!--地区定位-->
    <RelativeLayout
        android:id="@+id/edit_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64_dp"
        android:layout_below="@id/edit_sex">

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:text="城市"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_55_dp"
            android:text="获取当前位置"
            android:textColor="#80091E77"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExImageView
            android:id="@+id/location_refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/view_17_dp"
            android:src="@drawable/refresh_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

    </RelativeLayout>

</RelativeLayout>

