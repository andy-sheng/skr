<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_10_dp"
        app:centerText="选择性别"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_18_dp"
        app:centerTextStyle="BOLD"
        app:centerType="textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:rightText="完成"
        app:rightTextColor="@color/white_trans_70"
        app:rightTextSize="@dimen/textsize_16_dp"
        app:rightTextStyle="BOLD"
        app:rightType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/colorPrimary"
        app:titleBarColor="@color/colorPrimary" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:background="@drawable/common_gradient_top_corners_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_16_dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:text="性别仅限修改一次哦" />

    <com.common.view.ex.ExImageView
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_156_dp"
        android:background="@drawable/sex_male_icon"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/female"
        app:layout_constraintTop_toBottomOf="@id/titlebar" />

    <ImageView
        android:id="@+id/male_select"
        android:layout_width="@dimen/view_18_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:background="@drawable/sex_select_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/male"
        app:layout_constraintRight_toRightOf="@id/male" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_below="@+id/male"
        android:layout_marginTop="@dimen/view_8_dp"
        android:text="男生"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/male"
        app:layout_constraintRight_toRightOf="@id/male"
        app:layout_constraintTop_toBottomOf="@id/male" />

    <com.common.view.ex.ExImageView
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sex_female_icon"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf="@+id/male"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/male" />

    <ImageView
        android:id="@+id/female_select"
        android:layout_width="@dimen/view_18_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:background="@drawable/sex_select_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/female"
        app:layout_constraintRight_toRightOf="@id/female" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_below="@+id/female"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_8_dp"
        android:text="女生"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/female"
        app:layout_constraintRight_toRightOf="@id/female"
        app:layout_constraintTop_toBottomOf="@id/female" />


</android.support.constraint.ConstraintLayout>
