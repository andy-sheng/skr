<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="选择性别"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_18_dp"
        app:centerTextStyle="BOLD"
        app:centerType="textView"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:rightText="完成"
        app:rightTextColor="@color/white_trans_70"
        app:rightTextSize="@dimen/textsize_16_dp"
        app:rightTextStyle="BOLD"
        app:rightType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/colorPrimary"
        app:titleBarColor="@color/colorPrimary"></com.common.view.titlebar.CommonTitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:background="@drawable/common_dialog_bg"
        android:paddingLeft="@dimen/view_3_dp"
        android:paddingTop="@dimen/view_3_dp"
        android:paddingRight="@dimen/view_3_dp"
        android:paddingBottom="@dimen/view_5_dp">

        <LinearLayout
            android:layout_width="@dimen/view_234_dp"
            android:layout_height="@dimen/view_106_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_156_dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.common.view.ex.ExImageView
                    android:id="@+id/male"
                    android:layout_width="@dimen/view_76_dp"
                    android:layout_height="@dimen/view_76_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/head_man_weixuanzhong"
                    android:scaleType="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_22_dp"
                    android:layout_below="@+id/male"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_8_dp"
                    android:text="男"
                    android:textColor="#0F2076"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.common.view.ex.ExImageView
                    android:id="@+id/female"
                    android:layout_width="@dimen/view_76_dp"
                    android:layout_height="@dimen/view_76_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/head_woman_weixuanzhong"
                    android:scaleType="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_22_dp"
                    android:layout_below="@+id/female"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_8_dp"
                    android:text="女"
                    android:textColor="#0F2076"
                    android:textSize="@dimen/textsize_16_dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_410_dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/view_10_dp"
            android:text="性别很重要，只能修改一次喔\n敢不敢谨慎一些"
            android:textColor="#803B4E79"
            android:textSize="@dimen/textsize_14_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/next_tv"
            android:layout_width="@dimen/view_206_dp"
            android:layout_height="@dimen/view_54_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_426_dp"
            android:background="@drawable/img_btn_bg_yellow"
            android:gravity="center"
            android:paddingRight="@dimen/view_6_dp"
            android:paddingBottom="@dimen/view_6_dp"
            android:text="下一步"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
