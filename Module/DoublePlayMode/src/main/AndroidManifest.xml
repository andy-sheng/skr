<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.module.doubleplaymode">

    <application>
        <!-- 在组件集成宿主时, 由于宿主已经声明了 CommonSDK 的公有 ConfigModule, 所以在这里只需要声明业务组件自己的 ConfigModule -->
        <meta-data
            android:name="com.module.doubleplaymode.DoublePlaysConfiguration"
            android:value="ConfigModule" />

        <activity
            android:name="com.module.doubleplaymode.DoublePlayActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>

    </application>
</manifest>
