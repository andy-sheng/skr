<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebedf2">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="发布"
        app:centerTextColor="@color/black_trans_80"
        app:centerTextSize="@dimen/view_16_dp"
        app:centerType="textView"
        app:layout_constraintTop_toTopOf="parent"

        app:leftImageResource="@drawable/ic_arrow_back"
        app:leftType="imageButton"
        app:rightText="保存发布"
        app:rightType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/transparent"
        app:titleBarColor="@color/transparent" />

    <EditText
        android:id="@+id/say_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_75_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:background="@drawable/feeds_make_publish_editor_bg"
        android:gravity="left|top"
        android:hint="说点什么"
        android:maxLength="300"
        android:padding="@dimen/view_10_dp"
        android:textColorHint="@color/black_trans_30"
        android:textSize="@dimen/view_14_dp"
        app:layout_constraintTop_toBottomOf="@+id/title_bar" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_119_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        app:layout_constraintTop_toBottomOf="@+id/say_edit" />

    <com.component.feeds.view.FeedsRecordAnimationView
        android:id="@+id/radio_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_10_dp"
        app:layout_constraintRight_toRightOf="@+id/avatar_bg"
        app:layout_constraintTop_toTopOf="@+id/avatar_bg"
        app:panelDrawable="@drawable/record_film_icon"
        app:panelMarginTop="@dimen/view_30_dp"
        app:rockerDrawable="@drawable/record_pointer_icon"
        app:avatarWidth="@dimen/view_40_dp"
        app:rockerXP="0.5"
        app:rockerYP="0.1"
         />

    <!--正在唱的人的歌词-->
    <com.component.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_bg"
        app:layout_constraintRight_toRightOf="@+id/avatar_bg"
        app:layout_constraintTop_toBottomOf="@+id/radio_view"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="false"
        app:ly_high_light_paint_color_from="@color/black_trans_30"
        app:ly_high_light_paint_color_to="@color/black_trans_30"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_high_light_sub_paint_color="@color/white"
        app:ly_outline_paint_color="@color/white"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="@dimen/textsize_dimen_16"
        app:ly_show_author="true" />

    <TextView
        android:id="@+id/rank_classify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="选择打榜分类"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/view_14_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_bg" />

    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/rank_classify_tf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/rank_classify_tv"
        app:layout_constraintTop_toBottomOf="@id/rank_classify_tv" />

    <TextView
        android:id="@+id/tag_classify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:text="选择翻唱版本"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/view_14_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank_classify_tf" />

    <com.common.flowlayout.TagFlowLayout
        android:id="@+id/tag_classify_tf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tag_classify_tv"
        app:layout_constraintTop_toBottomOf="@id/tag_classify_tv" />

    <ProgressBar
        android:id="@+id/compose_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>