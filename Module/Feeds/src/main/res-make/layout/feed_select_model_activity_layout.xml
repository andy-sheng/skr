<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_trans_90">

    <com.common.view.ex.ExImageView
        android:id="@+id/upload_iv"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_marginBottom="@dimen/view_90_dp"
        android:background="@drawable/upload_local"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dabang_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_11_dp"
        android:text="本地上传"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/upload_iv"
        app:layout_constraintStart_toStartOf="@+id/upload_iv"
        app:layout_constraintTop_toBottomOf="@+id/upload_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/dabang_iv"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_marginBottom="@dimen/view_90_dp"
        android:background="@drawable/dabang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/upload_iv" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_11_dp"
        android:text="打榜"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/dabang_iv"
        app:layout_constraintStart_toStartOf="@+id/dabang_iv"
        app:layout_constraintTop_toBottomOf="@+id/dabang_iv" />
</android.support.constraint.ConstraintLayout>