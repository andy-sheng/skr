<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.common.view.ex.ExFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#4C56AA"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/va_reset_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_21_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:text="重置"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/info_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:text="人声提前0毫秒"
        android:textColor="@color/white_trans_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.common.view.ex.ExImageView
        android:id="@+id/left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_21_dp"
        android:layout_marginTop="@dimen/view_54_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:src_unPressed_drawable="@drawable/gequ_left" />

    <com.common.view.ex.ExImageView
        android:id="@+id/right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_54_dp"
        android:layout_marginRight="@dimen/view_21_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:src_unPressed_drawable="@drawable/gequ_right" />

    <SeekBar
        android:id="@+id/va_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_7_dp"
        android:layout_marginRight="@dimen/view_7_dp"
        android:max="100"
        android:maxHeight="@dimen/view_5_dp"
        android:min="0"
        android:minHeight="@dimen/view_5_dp"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:progress="50"
        android:progressDrawable="@drawable/feeds_make_va_seekbar_bg"
        app:layout_constraintBottom_toBottomOf="@+id/left_iv"
        app:layout_constraintLeft_toRightOf="@+id/left_iv"
        app:layout_constraintRight_toLeftOf="@+id/right_iv"
        app:layout_constraintTop_toTopOf="@+id/left_iv" />

    <View
        android:layout_width="@dimen/view_1_dp"
        android:layout_height="@dimen/view_9_dp"
        android:background="#616CC4"
        app:layout_constraintBottom_toBottomOf="@+id/va_seek_bar"
        app:layout_constraintLeft_toLeftOf="@+id/va_seek_bar"
        app:layout_constraintRight_toRightOf="@+id/va_seek_bar"
        app:layout_constraintTop_toTopOf="@+id/va_seek_bar" />
</merge>