<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feeds_make_bg">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerSubText="00:00"
        app:centerSubTextColor="@color/white_trans_30"
        app:centerSubTextSize="@dimen/view_10_dp"
        app:centerText="歌曲标题"
        app:centerTextColor="@color/white_trans_80"
        app:centerTextSize="@dimen/view_16_dp"
        app:centerType="textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftImageResource="@drawable/back_close"
        app:leftType="imageButton"
        app:showBottomLine="false"
        app:statusBarColor="@color/transparent"
        app:titleBarColor="@color/transparent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_21_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:src_selected_drawable="@drawable/gequ_bofang"
        app:src_unSelected_drawable="@drawable/gequ_zanting" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_18_dp"
        android:max="100"
        android:maxHeight="@dimen/view_4_dp"
        android:min="0"
        android:minHeight="@dimen/view_4_dp"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:thumb="@drawable/shenqu_jindu"
        android:progressDrawable="@drawable/feeds_detail_seekbar_bg"
        app:layout_constraintBottom_toBottomOf="@+id/play_btn"
        app:layout_constraintLeft_toRightOf="@+id/play_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/play_btn" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_bg"
        android:layout_width="@dimen/view_320_dp"
        android:layout_height="@dimen/view_400_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.feeds.watch.view.FeedsRecordAnimationView
        android:id="@+id/radio_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_10_dp"
        app:avatarWidth="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_bg"
        app:layout_constraintRight_toRightOf="@+id/avatar_bg"
        app:layout_constraintTop_toTopOf="@+id/avatar_bg"
        app:panelDrawable="@drawable/radio_panel"
        app:panelMarginTop="@dimen/view_30_dp"
        app:rockerDrawable="@drawable/gequxiangqing_caokonggan"
        app:rockerXP="0.5"
        app:rockerYP="0.1" />

    <!--正在唱的人的歌词-->
    <com.component.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_bg"
        app:layout_constraintRight_toRightOf="@+id/avatar_bg"
        app:layout_constraintTop_toBottomOf="@+id/radio_view"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="false"
        app:ly_high_light_paint_color_from="@color/black_trans_30"
        app:ly_high_light_paint_color_to="@color/black_trans_30"
        app:ly_high_light_paint_text_size="20.0"
        app:ly_high_light_sub_paint_color="@color/white"
        app:ly_outline_paint_color="@color/white"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="16.0"
        app:ly_show_author="true" />

    <ViewStub
        android:id="@+id/auto_scroll_lyric_view_layout_viewstub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_150_dp"
        android:layout="@layout/auto_scroll_lyric_view_layout"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_bg"
        app:layout_constraintRight_toRightOf="@+id/avatar_bg"
        app:layout_constraintTop_toBottomOf="@+id/radio_view" />

    <View
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.module.feeds.make.view.FeedsEditorVoiceControlPanelView
        android:id="@+id/voice_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/menu_bg" />

    <com.module.feeds.make.view.VocalAlignControlPannelView
        android:id="@+id/va_control_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_105_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/menu_bg" />
    <!-- 下面是菜单栏 -->
    <View
        android:id="@+id/menu_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_72_dp"
        android:background="#404A9A"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/rensheng_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_27_dp"
        android:padding="@dimen/view_5_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/effect_iv"
        app:src_selected_drawable="@drawable/editor_rensheng_selected"
        app:src_unSelected_drawable="@drawable/editor_rensheng" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="人声对齐"
        android:textColor="@color/white_trans_50"
        app:layout_constraintLeft_toLeftOf="@+id/rensheng_iv"
        app:layout_constraintRight_toRightOf="@+id/rensheng_iv"
        app:layout_constraintTop_toBottomOf="@+id/rensheng_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/effect_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_5_dp"
        app:layout_constraintBottom_toBottomOf="@+id/rensheng_iv"
        app:layout_constraintLeft_toRightOf="@+id/rensheng_iv"
        app:layout_constraintRight_toLeftOf="@id/reset_iv"
        app:src_selected_drawable="@drawable/editor_effect_selected"
        app:src_unSelected_drawable="@drawable/editor_effect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="调音"
        android:textColor="@color/white_trans_50"
        app:layout_constraintLeft_toLeftOf="@+id/effect_iv"
        app:layout_constraintRight_toRightOf="@+id/effect_iv"
        app:layout_constraintTop_toBottomOf="@+id/effect_iv" />


    <com.common.view.ex.ExImageView
        android:id="@+id/reset_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_5_dp"
        app:layout_constraintBottom_toBottomOf="@+id/rensheng_iv"
        app:layout_constraintLeft_toRightOf="@+id/effect_iv"
        app:layout_constraintRight_toLeftOf="@id/publish_iv"
        app:src_selected_drawable="@drawable/editor_reset_selected"
        app:src_unSelected_drawable="@drawable/editor_reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="重唱"
        android:textColor="@color/white_trans_50"
        app:layout_constraintLeft_toLeftOf="@+id/reset_iv"
        app:layout_constraintRight_toRightOf="@+id/reset_iv"
        app:layout_constraintTop_toBottomOf="@+id/reset_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/publish_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_5_dp"
        app:layout_constraintBottom_toBottomOf="@+id/rensheng_iv"
        app:layout_constraintLeft_toRightOf="@+id/reset_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:src_selected_drawable="@drawable/editor_publish_selected"
        app:src_unSelected_drawable="@drawable/editor_publish" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/white_trans_50"
        app:layout_constraintLeft_toLeftOf="@+id/publish_iv"
        app:layout_constraintRight_toRightOf="@+id/publish_iv"
        app:layout_constraintTop_toBottomOf="@+id/publish_iv" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/compose_progressbar_vg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans_30"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/compose_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/progress_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_10_dp"
            android:text="合成进度 0%"
            android:textColor="@color/white_trans_80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compose_progressbar" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>