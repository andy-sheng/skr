<com.component.lyrics.widget.ManyLyricsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/many_lyrics_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:ly_enable_scroll="false"
    app:custom_gravity="left"
    app:ly_enable_verbatim="true"
    app:ly_high_light_paint_color_from="@color/white"
    app:ly_high_light_paint_color_to="@color/white"
    app:ly_high_light_paint_text_size="14.0"
    app:ly_high_light_sub_paint_color="@color/white"
    app:ly_outline_paint_color="@color/white"
    app:ly_paint_color_from="@color/white_trans_60"
    app:ly_paint_color_to="@color/white_trans_60"
    app:ly_paint_text_size="14.0"
    app:ly_show_song_name="true"
    app:ly_show_author="true"
    app:ly_top_line_num="3" />