<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_45_dp"
    android:layout_marginBottom="@dimen/view_8_dp"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_shape="rectangle"
    app:bl_solid_color="@color/transparent"
    app:bl_stroke_color="#E5E5E5"
    app:bl_stroke_width="@dimen/view_1_dp">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_25_dp"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/select_iv"
        android:layout_width="@dimen/view_23_dp"
        android:layout_height="@dimen/view_23_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/view_25_dp"
        app:bl_selected_drawable="@drawable/feedback_xuanzhong"
        app:bl_unSelected_drawable="@drawable/feedback_empty_weixuanzhong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</com.common.view.ex.ExConstraintLayout>