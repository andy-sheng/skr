<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_62_dp">

    <android.support.constraint.Guideline
        android:id="@+id/rank_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/view_45_dp" />

    <TextView
        android:id="@+id/rank_seq_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@id/song_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rank_guide"
        app:layout_constraintTop_toTopOf="@id/song_name_tv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/collect_icon"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_50_dp"
        android:layout_marginRight="@dimen/view_4_dp"
        android:padding="@dimen/view_16_dp"
        android:src="@drawable/feed_not_collection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/song_desc_tv"
        app:layout_constraintLeft_toLeftOf="@id/rank_guide"
        app:layout_constraintRight_toLeftOf="@id/collect_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/song_desc_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_1_dp"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/rank_guide"
        app:layout_constraintRight_toLeftOf="@id/collect_icon"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

    <View
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:background="#4c979797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/rank_guide"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>