<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_90_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cover_iv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_72_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hit_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/feed_rank_hit_icon_s"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toTopOf="@id/occupy_tv"
        app:layout_constraintLeft_toRightOf="@id/cover_iv"
        app:layout_constraintRight_toLeftOf="@id/hit_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/occupy_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toTopOf="@id/join_tv"
        app:layout_constraintLeft_toRightOf="@id/cover_iv"
        app:layout_constraintRight_toLeftOf="@id/hit_iv"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />


    <TextView
        android:id="@+id/join_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_3_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cover_iv"
        app:layout_constraintRight_toLeftOf="@id/hit_iv"
        app:layout_constraintTop_toBottomOf="@id/occupy_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>