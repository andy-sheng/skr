<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/img_iv"
        android:layout_width="@dimen/view_105_dp"
        android:layout_height="@dimen/view_105_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/del_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fabu_shanchu"
        app:layout_constraintBottom_toTopOf="@+id/img_iv"
        app:layout_constraintLeft_toRightOf="@+id/img_iv"
        app:layout_constraintRight_toRightOf="@+id/img_iv"
        app:layout_constraintTop_toTopOf="@id/img_iv" />
</android.support.constraint.ConstraintLayout>