<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_5_dp">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/img_iv"
        android:layout_width="@dimen/view_105_dp"
        android:layout_height="@dimen/view_105_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
       />

    <ImageView
        android:id="@+id/del_iv"
        android:layout_width="@dimen/view_21_dp"
        android:layout_height="@dimen/view_21_dp"
        android:src="@drawable/fabu_shanchu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>