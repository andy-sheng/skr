<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_3_dp">

    <com.module.posts.view.PostsSquareConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <com.common.view.ex.ExImageView
            android:id="@+id/add_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/fabu_tianjiatupian"
            app:bl_corners_radius="@dimen/view_8_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#e6e6e6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.module.posts.view.PostsSquareConstraintLayout>

</RelativeLayout>