<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_45_dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="#19979797"
        app:layout_constraintTop_toTopOf="parent" />

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_30_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_marginLeft="@dimen/view_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:gravity="center"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_60"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintRight_toLeftOf="@id/money_tv"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>