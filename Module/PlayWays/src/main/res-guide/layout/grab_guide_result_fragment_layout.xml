<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353B6D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/bg_iv"
            android:layout_width="@dimen/view_308_dp"
            android:layout_height="@dimen/view_482_dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xinshou_biye" />

        <ImageView
            android:id="@+id/avatar_bg"
            android:layout_width="@dimen/view_62_dp"
            android:layout_height="@dimen/view_67_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_60_dp"
            android:background="@drawable/b_touxiang" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_52_dp"
            android:layout_height="@dimen/view_52_dp"
            android:layout_alignLeft="@id/avatar_bg"
            android:layout_alignTop="@id/avatar_bg"
            android:layout_marginLeft="@dimen/view_5_dp"
            android:layout_marginTop="@dimen/view_5_dp" />


        <com.common.view.ex.ExTextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/view_120_dp"
            android:layout_height="@dimen/view_20_dp"
            android:layout_below="@id/avatar_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_50_dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14_dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bg_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_30_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_back"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/view_15_dp"
                android:layout_weight="1"
                android:background="@drawable/ycdd_zhanji_fanhui" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_again"
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_15_dp"
                android:layout_weight="1"
                android:background="@drawable/ycdd_zhanji_zailaiyiju" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>