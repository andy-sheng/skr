                android:centerX="0.25"
                android:type="linear" />
            <corners
                android:topLeftRadius="@dimen/view_16_dp"
                android:topRightRadius="@dimen/view_16_dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="225"
                android:centerColor="#0fffffff"
