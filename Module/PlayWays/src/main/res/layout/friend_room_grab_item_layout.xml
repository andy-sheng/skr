<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_160_dp"
    android:layout_marginLeft="@dimen/view_12_dp"
    android:layout_marginRight="@dimen/view_12_dp"
    android:layout_marginBottom="@dimen/view_10_dp"
    android:background="@drawable/common_gradient_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_64_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_22_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/level_bg"
        android:layout_width="@dimen/view_107_dp"
        android:layout_height="@dimen/view_73_dp"
        app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
        app:layout_constraintRight_toRightOf="@id/avatar_iv"
        app:layout_constraintTop_toTopOf="@id/avatar_iv"
        app:layout_constraintBottom_toBottomOf="@id/avatar_iv"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/avatar_iv"
        app:layout_constraintRight_toLeftOf="@id/recommend_tag_sdv"
        app:layout_constraintTop_toTopOf="@id/level_bg"
        app:layout_goneMarginRight="@dimen/view_10_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:gravity="center"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toRightOf="@id/name_tv"
        app:layout_constraintRight_toLeftOf="@id/media_tag_sdv"
        app:layout_constraintTop_toTopOf="@id/name_tv"
        app:layout_goneMarginRight="@dimen/view_10_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/media_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toRightOf="@id/recommend_tag_sdv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_tv" />

    <com.component.person.view.CommonAudioView
        android:id="@+id/audio_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toLeftOf="@id/name_tv"/>

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/room_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/room_player_num_tv"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/room_player_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_12_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/room_info_tv"
        app:layout_constraintRight_toLeftOf="@id/enter_room_tv"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <com.common.view.ex.ExTextView
        android:id="@+id/enter_room_tv"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_18_dp"
        android:gravity="center"
        android:text="去抢唱"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</android.support.constraint.ConstraintLayout>