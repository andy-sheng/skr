<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/result_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/xkf_yanchangpingjia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_100_dp"
        android:text="《歌曲名字》"
        android:textColor="@color/white"
        android:textSize="@dimen/view_12_dp"
        app:layout_constraintLeft_toLeftOf="@+id/result_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/result_bg_iv"
        app:layout_constraintTop_toTopOf="@+id/result_bg_iv" />

    <TextView
        android:id="@+id/singer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"
        android:text="演唱者:演唱者"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/view_12_dp"
        app:layout_constraintLeft_toLeftOf="@+id/result_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/result_bg_iv"
        app:layout_constraintTop_toBottomOf="@+id/song_name_tv" />

    <ImageView
        android:id="@+id/score_desc_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_23_dp"
        android:src="@drawable/xkf_pingjia_wanmei"
        app:layout_constraintLeft_toLeftOf="@+id/result_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/result_bg_iv"
        app:layout_constraintTop_toBottomOf="@+id/singer_name_tv" />

    <TextView
        android:id="@+id/rank_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_13_dp"
        android:text="你的歌声周排行全国第？"
        android:textColor="#FFDC93"
        android:textSize="@dimen/view_16_dp"
        app:layout_constraintLeft_toLeftOf="@+id/result_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/result_bg_iv"
        app:layout_constraintTop_toBottomOf="@+id/score_desc_iv" />

</android.support.constraint.ConstraintLayout>