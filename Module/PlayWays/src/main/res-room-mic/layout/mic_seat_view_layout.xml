<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.view.ex.ExImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_304_dp"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_solid_color="#7668FF"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:text="麦席"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_24_dp"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <com.common.view.ex.ExImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_view"
        app:layout_constraintRight_toRightOf="@+id/recycler_view"
        app:layout_constraintTop_toTopOf="@+id/recycler_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_250_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_44_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        app:layout_constraintTop_toTopOf="@+id/bg" />

</android.support.constraint.ConstraintLayout>