<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_134_dp">

    <ImageView
        android:id="@+id/level_iv"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_65_dp"
        android:layout_marginTop="@dimen/view_32_dp"
        android:background="@drawable/race_tx_zuanshi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_56_dp"
        android:layout_height="@dimen/view_56_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv"
        app:layout_constraintTop_toTopOf="@id/level_iv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/play_bg"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_24_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_gradient_endColor="#95DD95"
        app:bl_gradient_startColor="#8FD3EF"
        app:bl_shape="rectangle"
        app:layout_constraintBottom_toBottomOf="@id/level_iv"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv"
        app:layout_constraintTop_toBottomOf="@id/level_iv" />

    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mic_voice_play_icon"
        app:layout_constraintBottom_toBottomOf="@id/play_bg"
        app:layout_constraintLeft_toLeftOf="@id/play_bg"
        app:layout_constraintRight_toRightOf="@id/play_bg"
        app:layout_constraintTop_toTopOf="@id/play_bg" />

    <com.component.busilib.view.VoiceChartView
        android:id="@+id/voice_chart_view"
        android:layout_width="@dimen/view_14_dp"
        android:layout_height="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_5_dp"
        android:visibility="gone"
        VoiceChartView:chartBackColor="@color/white"
        VoiceChartView:chartCount="4"
        VoiceChartView:chartDuration="200"
        VoiceChartView:chartFitWidth="false"
        VoiceChartView:chartHeight="@dimen/view_14_dp"
        VoiceChartView:chartMarginLeft="@dimen/view_2_dp"
        VoiceChartView:chartWidth="@dimen/view_2_dp"
        VoiceChartView:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/play_bg"
        app:layout_constraintLeft_toLeftOf="@id/play_bg"
        app:layout_constraintRight_toRightOf="@id/play_bg" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv" />

</android.support.constraint.ConstraintLayout>