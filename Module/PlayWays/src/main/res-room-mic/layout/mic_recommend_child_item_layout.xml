<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_56_dp"
        android:layout_height="@dimen/view_56_dp"
        app:layout_constraintBottom_toBottomOf="@id/level_iv"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv"
        app:layout_constraintTop_toTopOf="@id/level_iv" />

    <ImageView
        android:id="@+id/level_iv"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_65_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:background="@drawable/race_tx_zuanshi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/view_11_dp"
        android:paddingRight="@dimen/view_11_dp"
        android:singleLine="true"
        android:textColor="#804F0093"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_11_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#33CF98FF"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv"
        app:layout_constraintTop_toBottomOf="@id/level_iv" />

    <com.component.person.view.CommonAudioView
        android:id="@+id/audio_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        app:layout_constraintLeft_toLeftOf="@id/level_iv"
        app:layout_constraintRight_toRightOf="@id/level_iv"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />


</android.support.constraint.ConstraintLayout>