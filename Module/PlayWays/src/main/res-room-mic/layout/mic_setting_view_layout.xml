<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_180_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/exImageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/view_10_dp"
        android:visibility="visible"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#EFFAFF"
        app:layout_constraintStart_toEndOf="@+id/sb_acc"
        tools:layout_editor_absoluteY="-38dp" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/sb_acc"
        android:layout_width="91dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:visibility="visible"
        app:kswBackDrawable="@drawable/mic_switch_custom_track_selector"
        app:kswThumbDrawable="@drawable/mic_switch_custom_thumb_selector"
        app:kswThumbMargin="@dimen/view_2_dp"
        app:layout_constraintBottom_toBottomOf="@+id/tips_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tips_tv"
        app:layout_constraintTop_toTopOf="@+id/tips_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="不允许用户匹配加入"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintEnd_toStartOf="@+id/sb_acc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>