<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_12_dp"
    android:layout_marginRight="@dimen/view_12_dp"
    android:layout_marginBottom="@dimen/view_16_dp"
    android:background="@drawable/common_gradient_bg">

    <ImageView
        android:id="@+id/level_iv"
        android:layout_width="@dimen/view_37_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_6_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginBottom="@dimen/view_4_dp"
        android:textColor="@color/black_trans_60"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="@id/level_iv"
        app:layout_constraintLeft_toRightOf="@id/level_iv" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/level_iv" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_marginTop="@dimen/view_27_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintTop_toBottomOf="@id/recycler_view" />

    <com.common.view.ex.ExTextView
        android:id="@+id/enter_room_tv"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_36_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_10_dp"
        android:gravity="center"
        android:text="进房"
        android:textColor="#e68B572A"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/room_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:textColor="#2E55C5"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@id/enter_room_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/enter_room_tv" />


</android.support.constraint.ConstraintLayout>