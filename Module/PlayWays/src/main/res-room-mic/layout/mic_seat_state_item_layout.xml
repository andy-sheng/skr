<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_58_dp">

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_34_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        avatarView:borderColor="@color/white"
        avatarView:borderWidth="@dimen/view_2_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/waiting_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/textsize_14_dp"
        android:layout_marginTop="@dimen/view_27_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_4_dp"
        android:paddingRight="@dimen/view_4_dp"
        android:text="下一首"
        android:textColor="@color/white_trans_90"
        android:textSize="@dimen/textsize_8_dp"
        app:bl_corners_radius="@dimen/view_7_dp"
        app:bl_solid_color="#6F57EC"
        app:bl_stroke_color="@color/white"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_iv"
        app:layout_constraintRight_toRightOf="@+id/avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/avatar_iv" />

    <com.component.busilib.view.VoiceChartView
        android:id="@+id/voice_chart_view"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginRight="@dimen/view_5_dp"
        VoiceChartView:chartBackColor="@color/white"
        VoiceChartView:chartDuration="200"
        VoiceChartView:chartFitWidth="true"
        VoiceChartView:chartHeight="@dimen/view_16_dp"
        VoiceChartView:chartMarginLeft="@dimen/view_2_dp"
        VoiceChartView:chartWidth="@dimen/view_2_dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_iv"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_iv"
        app:layout_constraintRight_toRightOf="@+id/avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/avatar_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toRightOf="@+id/avatar_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_90_dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="@dimen/textsize_10_dp"
        app:layout_constraintLeft_toLeftOf="@+id/user_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <com.common.view.ex.ExTextView
        android:id="@+id/state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_20_dp"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/white_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>