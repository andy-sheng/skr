<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.alibaba.android.arouter.utils.TextUtils" />

        <variable
            name="holder"
            type="com.module.playways.mic.room.adapter.MicSeatRecyclerAdapter.MicSeatHolder" />

        <variable
            name="model"
            type="com.module.playways.mic.room.model.MicSeatModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_58_dp">

        <com.common.image.fresco.BaseImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_34_dp"
            android:layout_height="@dimen/view_34_dp"
            android:layout_marginLeft="@dimen/view_10_dp"
            app:MicSeatHolderImageUrl="@{model.user.avatar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginTop="@dimen/view_10_dp"
            android:text="@{holder.getRemarkName()}"
            android:textColor="@color/white_trans_80"
            android:textSize="@dimen/textsize_14_dp"
            app:layout_constraintLeft_toRightOf="@+id/avatar_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_90_dp"
            android:ellipsize="end"
            android:gravity="left"
            android:text="@{holder.getSongNameList()}"
            android:textSize="@dimen/textsize_10_dp"
            app:layout_constraintLeft_toLeftOf="@+id/user_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_20_dp"
            android:textSize="@dimen/textsize_14_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:background="@color/white_trans_10"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>