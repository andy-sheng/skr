<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VoiceChartView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/view_52_dp"
    android:layout_height="47dp"
    android:background="@color/black">

    <com.common.view.ex.ExImageView
        android:id="@+id/circle_bg_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginTop="@dimen/view_1_dp"
        app:bl_corners_radius="@dimen/view_42_dp"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="@color/white_trans_50"
        app:bl_stroke_width="@dimen/view_2_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_32_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_6_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        avatarView:borderColor="@color/white"
        avatarView:borderWidth="@dimen/view_2_dp" />

    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="@dimen/view_32_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:background="@drawable/xkf_guanzhong"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/waiting_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/textsize_14_dp"
        android:layout_marginTop="@dimen/view_26_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_4_dp"
        android:paddingRight="@dimen/view_4_dp"
        android:text="下一首"
        android:textColor="@color/white_trans_90"
        android:textSize="@dimen/textsize_8_dp"
        app:bl_corners_radius="@dimen/view_7_dp"
        app:bl_solid_color="#6F57EC"
        app:bl_stroke_color="@color/white"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_iv"
        app:layout_constraintRight_toRightOf="@+id/avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/avatar_iv" />

    <com.component.busilib.view.VoiceChartView
        android:id="@+id/voice_chart_view"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_1_dp"
        VoiceChartView:chartBackColor="@color/white"
        VoiceChartView:chartDuration="200"
        VoiceChartView:chartFitWidth="true"
        VoiceChartView:chartHeight="@dimen/view_16_dp"
        VoiceChartView:chartMarginLeft="@dimen/view_2_dp"
        VoiceChartView:chartWidth="@dimen/view_2_dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_iv"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_iv"
        app:layout_constraintRight_toRightOf="@+id/avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/avatar_iv" />

    <ImageView
        android:id="@+id/homeowner_iv"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_16_dp"
        android:background="@drawable/ycdi_fangzhubiaoqian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/avatar_iv"
        app:layout_constraintRight_toRightOf="@+id/avatar_iv" />
</android.support.constraint.ConstraintLayout>
