<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tv_song_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_tag_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/song_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_8_dp"
        android:paddingRight="@dimen/view_8_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_10_dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_song_name"
        app:layout_constraintLeft_toRightOf="@id/tv_song_name"
        app:layout_constraintRight_toLeftOf="@id/tv_manage"
        app:layout_constraintTop_toTopOf="@id/tv_song_name"
        app:layout_goneMarginRight="@dimen/view_10_dp" />

    <TextView
        android:id="@+id/tv_song_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_song_name"
        app:layout_constraintRight_toLeftOf="@id/tv_manage"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_manage"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>