<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/view_30_dp"
    android:paddingRight="@dimen/view_30_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_140_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="与 你 相 遇    恰 逢 其 时"
        android:textColor="@color/white_trans_20"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@id/image_bg"
        app:layout_constraintLeft_toLeftOf="@id/image_bg"
        app:layout_constraintRight_toRightOf="@id/image_bg"
        app:layout_constraintTop_toTopOf="@id/image_bg" />

</android.support.constraint.ConstraintLayout>