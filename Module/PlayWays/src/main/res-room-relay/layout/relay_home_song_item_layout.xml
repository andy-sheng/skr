<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/song_select_tv"
        android:layout_width="@dimen/view_72_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/common_yellow_button_icon"
        android:gravity="center"
        android:paddingBottom="@dimen/view_6_dp"
        android:text="演唱"
        android:textColor="#8B572A"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/song_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/song_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/song_name_tv"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>