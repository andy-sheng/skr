<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="@dimen/view_355_dp"
        android:layout_height="@dimen/view_425_dp"
        android:background="@drawable/relay_red_packet_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_op_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_40_dp"
        android:background="@drawable/relay_red_packet_open_icon"
        app:layout_constraintBottom_toBottomOf="@id/image_bg"
        app:layout_constraintLeft_toLeftOf="@id/image_bg"
        app:layout_constraintRight_toRightOf="@id/image_bg" />

</android.support.constraint.ConstraintLayout>