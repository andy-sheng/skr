<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:NickNameView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:avatarLevel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_gradient_bg"
        android:visibility="gone" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        NickNameView:bl_corners_radius="@dimen/view_16_dp"
        NickNameView:bl_gradient_angle="90"
        NickNameView:bl_gradient_endColor="#FFFFFF"
        NickNameView:bl_gradient_startColor="#AFE1FF"
        NickNameView:bl_shape="rectangle" />

    <com.component.busilib.view.AvatarLevelView
        android:id="@+id/avatar_level"
        android:layout_width="@dimen/view_105_dp"
        android:layout_height="@dimen/view_112_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        avatarLevel:avatarSize="@dimen/view_58_dp" />

    <com.component.busilib.view.NickNameView
        android:id="@+id/nickname_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        NickNameView:textColor="@color/black_trans_50"
        NickNameView:textSize="@dimen/textsize_14_dp"
        NickNameView:textStyle="BOLD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_level" />


    <com.common.view.ex.ExTextView
        android:id="@+id/level_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_4_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#F1BA5E"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/age_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_view" />

    <com.common.view.ex.ExTextView
        android:id="@+id/age_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_4_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#94CB57"
        app:layout_constraintLeft_toRightOf="@id/level_tv"
        app:layout_constraintRight_toLeftOf="@id/sex_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_view" />

    <com.common.view.ex.ExTextView
        android:id="@+id/sex_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toRightOf="@id/age_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_view" />

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_20_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_tv" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_tag_sdv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/join_tv"
        android:layout_width="@dimen/view_160_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:background="@drawable/common_yellow_button_icon"
        android:gravity="center"
        android:paddingBottom="@dimen/view_5_dp"
        android:text="立即和Ta合唱"
        android:textColor="#e68B572A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>