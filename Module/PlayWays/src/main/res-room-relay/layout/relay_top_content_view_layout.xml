    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_44_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:padding="@dimen/view_10_dp"
        android:scaleType="fitXY"
        android:src="@drawable/race_expand_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/content_ll" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/left_avatar_sdv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        app:layout_constraintEnd_toStartOf="@+id/right_avatar_sdv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/left_mute_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/relay_top_mute"
        app:layout_constraintBottom_toBottomOf="@id/left_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/left_avatar_sdv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_avatar_bg"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:gravity="center"
        android:text="邀请"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_solid_color="@color/black_trans_10"
        app:bl_stroke_color="@color/white_trans_15"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintBottom_toBottomOf="@+id/right_avatar_sdv"
        app:layout_constraintLeft_toLeftOf="@+id/right_avatar_sdv"
        app:layout_constraintRight_toRightOf="@+id/right_avatar_sdv"
        app:layout_constraintTop_toTopOf="@+id/right_avatar_sdv" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/right_avatar_sdv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginLeft="@dimen/view_76_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_avatar_sdv" />

    <ImageView
        android:id="@+id/right_mute_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/relay_top_mute"
        app:layout_constraintBottom_toBottomOf="@id/right_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/right_avatar_sdv" />

    <TextView
        android:id="@+id/count_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:00"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="@+id/left_avatar_sdv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/left_avatar_sdv" />

    <ImageView
        android:id="@+id/unlimit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_5_dp"
        android:src="@drawable/relay_unlimit"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/left_avatar_sdv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/left_avatar_sdv"
        app:layout_goneMarginBottom="@dimen/view_15_dp" />

</merge>