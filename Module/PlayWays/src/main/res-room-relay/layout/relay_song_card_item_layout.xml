<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_gradient_bg" />

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_60_dp"
        android:text="《爱在西元前》"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/song_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_5_dp"
        android:text="周杰伦"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />


    <TextView
        android:id="@+id/sing_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【你唱】"
        android:textColor="#4DA5DB"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toTopOf="@id/sing_self_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_author_tv"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/sing_self_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/view_8_dp"
        android:maxLines="3"
        android:text="古巴比伦王颁布了汉谟拉比法典\n刻在黑色的玄武岩\n距今已经三千七百多年\n凝视碑文的字眼\n你在橱窗前\n凝视碑文的字眼"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toTopOf="@id/sing_other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sing_self" />

    <TextView
        android:id="@+id/sing_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_12_dp"
        android:text="【Ta唱】"
        android:textColor="#DB4D84"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toTopOf="@id/sing_other_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sing_self_content" />

    <TextView
        android:id="@+id/sing_other_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/view_8_dp"
        android:maxLines="3"
        android:text="古巴比伦王颁布了汉谟拉比法典\n刻在黑色的玄武岩\n距今已经三千七百多年\n凝视碑文的字眼\n你在橱窗前\n凝视碑文的字眼"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toTopOf="@id/start_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sing_other" />

    <TextView
        android:id="@+id/start_tv"
        android:layout_width="@dimen/view_160_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:background="@drawable/common_yellow_button_icon"
        android:gravity="center"
        android:paddingBottom="@dimen/view_5_dp"
        android:text="发起"
        android:textColor="#e68B572A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>