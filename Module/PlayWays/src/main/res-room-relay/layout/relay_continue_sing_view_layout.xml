<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/view_123_dp"
    android:layout_height="@dimen/view_38_dp"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.view.ex.ExImageView
        android:id="@+id/continue_iv"
        android:layout_width="@dimen/view_123_dp"
        android:layout_height="@dimen/view_38_dp"
        android:background="@drawable/relay_continue_sing" />

    <com.common.view.ex.ExTextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/continue_iv"
        android:layout_alignRight="@+id/continue_iv"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:text="8s"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp" />
</merge>