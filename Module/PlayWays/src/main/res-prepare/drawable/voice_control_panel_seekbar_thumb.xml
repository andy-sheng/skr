<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态-->
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid android:color="#C7C7C7" />
            <size android:width="@dimen/view_24_dp" android:height="@dimen/view_24_dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="oval">
            <solid android:color="#C7C700" />
            <size android:width="@dimen/view_24_dp" android:height="@dimen/view_24_dp" />
        </shape>
    </item>
    <!-- 普通状态 -->
    <item >
        <shape android:shape="oval">
            <solid android:color="#C7C7C7" />
            <size android:width="@dimen/view_12_dp" android:height="@dimen/view_12_dp" />
        </shape>
    </item>

</selector>