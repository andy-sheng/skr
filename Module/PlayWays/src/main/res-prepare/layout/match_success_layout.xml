<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.common.image.fresco.BaseImageView
        android:id="@+id/iv_a_area"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/view_106_dp"
        android:layout_height="@dimen/view_106_dp" />

    <LinearLayout
        android:layout_marginTop="@dimen/view_25_dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/iv_a_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.common.image.fresco.BaseImageView
            android:id="@+id/iv_b_area"
            android:layout_below="@+id/iv_a_area"
            android:layout_width="@dimen/view_106_dp"
            android:layout_height="@dimen/view_106_dp" />

        <com.common.image.fresco.BaseImageView
            android:layout_marginLeft="@dimen/view_44_dp"
            android:layout_height="@dimen/view_106_dp"
            android:id="@+id/iv_c_area"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/view_106_dp"/>
    </LinearLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/match_status_tv"
        android:layout_width="@dimen/view_192_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_105_dp"
        android:gravity="center"
        android:text="准备"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_16_dp"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#F8D91C" />

</RelativeLayout>