<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.view.ex.ExRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_14_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#80ACC2"
        app:bl_stroke_color="#3B4E79"
        app:bl_stroke_width="@dimen/view_2_dp">

        <LinearLayout
            android:id="@+id/ll_switch_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_40_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="伴奏"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_16_dp"
                android:textStyle="bold" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_acc"
                android:layout_width="@dimen/view_143_dp"
                android:layout_height="@dimen/view_38_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/view_12_dp"
                android:visibility="visible"
                app:kswBackDrawable="@drawable/ty_cao_da"
                app:kswThumbDrawable="@drawable/ty_anniu_da" />

            <com.common.view.ex.ExTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/view_12_dp"
                android:text="清唱"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_16_dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_switch_container"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginTop="@dimen/view_38_dp"
            android:layout_marginRight="@dimen/view_6_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/people_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_5_dp"
                android:text="人声"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_16_dp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/people_voice_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:max="200"
                android:maxHeight="@dimen/view_17_dp"
                android:min="0"
                android:minHeight="@dimen/view_3_dp"
                android:paddingLeft="@dimen/view_10_dp"
                android:paddingRight="@dimen/view_10_dp"
                android:progressDrawable="@drawable/grab_voice_control_panel_seekbar_bg"
                android:thumb="@drawable/ty_anniu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_voice"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginTop="@dimen/view_30_dp"
            android:layout_marginRight="@dimen/view_6_dp"
            android:orientation="horizontal">

            <com.common.view.ex.ExTextView
                android:id="@+id/acc_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_5_dp"
                android:text="伴奏"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_16_dp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/music_voice_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:max="100"
                android:maxHeight="@dimen/view_17_dp"
                android:min="0"
                android:minHeight="@dimen/view_3_dp"
                android:paddingLeft="@dimen/view_10_dp"
                android:paddingRight="@dimen/view_10_dp"
                android:progressDrawable="@drawable/grab_voice_control_panel_seekbar_bg"
                android:thumb="@drawable/ty_anniu" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/scenes_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_52_dp"
            android:layout_below="@+id/ll_acc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_24_dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/default_sbtn"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="@dimen/view_49_dp"
                android:layout_gravity="center"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/voice_control_btn_yuansheng_bg"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatRadioButton

                android:id="@+id/ktv_sbtn"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="@dimen/view_49_dp"
                android:layout_gravity="center"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/voice_control_btn_ktv_bg"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rock_sbtn"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="@dimen/view_49_dp"
                android:layout_gravity="center"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/voice_control_btn_liuxing_bg"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/dianyin_sbtn"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="@dimen/view_49_dp"
                android:layout_gravity="center"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/voice_control_btn_yaogun_bg"
                android:gravity="center" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/kongling_sbtn"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="@dimen/view_49_dp"
                android:layout_gravity="center"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/voice_control_btn_kongling_bg"
                android:gravity="center" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_below="@+id/scenes_btn_group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_10_dp"
            android:layout_marginBottom="@dimen/view_10_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_yuansheng"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="原声"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_ktv"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="KTV"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_liuxing"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="流行"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_yaogun"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="摇滚"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_kongling"
                android:layout_width="@dimen/view_44_dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="空灵"
                android:textColor="#3B4E79"
                android:textSize="@dimen/textsize_14_dp" />
        </LinearLayout>
    </com.common.view.ex.ExRelativeLayout>
</FrameLayout>