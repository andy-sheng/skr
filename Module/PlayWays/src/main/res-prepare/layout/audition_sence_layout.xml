<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--正在唱的人的歌词-->
    <com.zq.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/view_50_dp"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="true"
        app:ly_high_light_paint_color_from="#EF5E85"
        app:ly_high_light_paint_color_to="#EF5E85"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_high_light_sub_paint_color="@color/white"
        app:ly_outline_paint_color="@color/black"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="@dimen/textsize_dimen_16" />

    <com.module.playways.rank.prepare.view.VoiceControlPanelView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>