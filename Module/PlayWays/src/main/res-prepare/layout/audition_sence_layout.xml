<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/top_container_vg"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_height="@dimen/view_62_dp">

        <com.module.playways.rank.room.score.bar.ScorePrograssBar2
            android:id="@+id/score_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <com.common.image.fresco.BaseImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_47_dp"
            android:layout_height="@dimen/view_47_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_8_dp" />

        <com.common.view.ex.ExImageView
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_12_dp"
            android:paddingRight="@dimen/view_12_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_12_dp"
            android:scaleType="centerInside"
            app:src_unPressed_drawable="@drawable/shiyinfang_tuichu" />
    </RelativeLayout>

    <!--正在唱的人的歌词-->
    <com.zq.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/view_120_dp"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="true"
        app:ly_high_light_paint_color_from="#EF5E85"
        app:ly_high_light_paint_color_to="#EF5E85"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_high_light_sub_paint_color="@color/white"
        app:ly_outline_paint_color="@color/black"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="@dimen/textsize_dimen_16" />

    <com.module.playways.rank.prepare.view.VoiceControlPanelView
        android:layout_marginBottom="@dimen/view_10_dp"
        android:id="@+id/voice_control_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_up"
        android:textSize="@dimen/textsize_20_dp"
        android:textColor="#FFED61"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableBottom="@drawable/ic_arrow_back"
        android:text="调音"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>