<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3041"
    android:orientation="vertical">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_back"
        android:layout_marginLeft="@dimen/view_22_dp"
        android:layout_marginTop="@dimen/view_34_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_5_dp"
        android:src="@drawable/img_back" />

    <com.common.view.ex.ExTextView
        android:gravity="center"
        android:maxWidth="@dimen/view_260_dp"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/tv_song_name"
        android:textSize="@dimen/textsize_20_dp"
        android:layout_marginTop="@dimen/view_36_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/white" />

    <!--正在唱的人的歌词-->
    <com.zq.lyrics.widget.ManyLyricsView
        android:id="@+id/many_lyrics_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/view_80_dp"
        app:ly_eable_scroll="false"
        app:ly_eable_verbatim="true"
        app:ly_high_light_paint_color_from="#EF5E85"
        app:ly_high_light_paint_color_to="#EF5E85"
        app:ly_high_light_paint_text_size="@dimen/textsize_dimen_20"
        app:ly_high_light_sub_paint_color="#EF5E85"
        app:ly_outline_paint_color="@color/black"
        app:ly_paint_color_from="@color/white_trans_50"
        app:ly_paint_color_to="@color/white_trans_50"
        app:ly_paint_text_size="@dimen/textsize_dimen_16" />

    <FrameLayout
        android:id="@+id/fl_progress_root"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_100_dp"
        android:layout_below="@+id/many_lyrics_view"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/fl_progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <com.module.playways.rank.prepare.view.SendGiftCircleCountDownView
                android:id="@+id/prgress_bar"
                android:layout_width="@dimen/view_82_dp"
                android:layout_height="@dimen/view_82_dp" />

            <com.common.view.ex.ExTextView
                android:layout_width="@dimen/view_62_dp"
                android:layout_height="@dimen/view_62_dp"
                android:layout_gravity="center"
                app:bl_corners_radius="@dimen/view_31_dp"
                app:bl_solid_color="#0C2275" />

            <com.common.view.ex.ExTextView
                android:layout_width="@dimen/view_54_dp"
                android:layout_height="@dimen/view_54_dp"
                android:layout_gravity="center"
                app:bl_corners_radius="@dimen/view_27_dp"
                app:bl_solid_color="#CA2C60" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_record_stop"
                android:layout_width="@dimen/view_15_dp"
                android:layout_height="@dimen/view_15_dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:bl_corners_radius="@dimen/view_2_dp"
                app:bl_solid_color="#FFFFFF" />

            <com.common.view.ex.ExImageView
                android:id="@+id/iv_record_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shiyinfang_kaishiyanchang_huatong" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_record_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="点击开始试音演唱"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14_dp" />
    </FrameLayout>


    <com.module.playways.rank.prepare.view.VoiceControlPanelView
        android:id="@+id/voice_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_10_dp"
        android:visibility="visible" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:drawableBottom="@drawable/dakaishiyinmianban"
        android:text="调音"
        android:textColor="#FFED61"
        android:textSize="@dimen/textsize_20_dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_control_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:layout_marginBottom="@dimen/view_44_dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_resing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.common.view.ex.ExImageView
                android:id="@+id/iv_resing"
                android:layout_width="@dimen/view_50_dp"
                android:layout_height="@dimen/view_50_dp"
                android:scaleType="center"
                android:src="@drawable/yanchangwanbi_chongchang"
                app:bl_corners_radius="@dimen/view_25_dp"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="#0C2275"
                app:bl_stroke_width="@dimen/view_3_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_7_dp"
                android:drawablePadding="@dimen/view_7_dp"
                android:text="重唱"
                android:textColor="@color/white_trans_50" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.common.view.ex.ExImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/view_50_dp"
                android:layout_height="@dimen/view_50_dp"
                android:scaleType="center"
                app:bl_corners_radius="@dimen/view_25_dp"
                app:bl_enabled_drawable="@color/white"
                app:bl_stroke_color="#0C2275"
                app:bl_stroke_width="@dimen/view_3_dp"
                app:bl_unEnabled_drawable="#8C8D97"
                app:src_enabled_drawable="@drawable/yanchangwanbi_bofang"
                app:src_unEnabled_drawable="@drawable/yanchangwanbi_bofang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_7_dp"
                android:drawablePadding="@dimen/view_7_dp"
                android:text="播放"
                android:textColor="@color/white_trans_50" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <com.common.view.ex.ExImageView
                android:id="@+id/iv_save"
                android:layout_width="@dimen/view_50_dp"
                android:layout_height="@dimen/view_50_dp"
                android:scaleType="center"
                android:src="@drawable/yanchangwanbi_baocun"
                app:bl_corners_radius="@dimen/view_25_dp"
                app:bl_solid_color="#FFED61"
                app:bl_stroke_color="#0C2275"
                app:bl_stroke_width="@dimen/view_3_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_7_dp"
                android:text="保存"
                android:textColor="@color/white_trans_50" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>