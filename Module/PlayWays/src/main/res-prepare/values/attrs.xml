<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--VoiceLineView的属性-->
    <declare-styleable name="voiceView">
        <!--中间线的颜色，就是波形的时候，大家可以看到，中间有一条直线，就是那个-->
        <attr name="middleLine" format="color|reference" />
        <!--中间线的高度，因为宽度是充满的-->
        <attr name="middleLineHeight" format="dimension" />
        <!--波动的线的颜色，如果是矩形样式的话，刚是矩形的颜色-->
        <attr name="voiceLine" format="color|reference" />
        <!--波动线的横向移动速度，线的速度的反比，即这个值越小，线横向移动越快，越大线移动越慢，默认90-->
        <attr name="lineSpeed" format="integer" />
        <!--矩形的宽度-->
        <attr name="rectWidth" format="dimension" />
        <!--矩形之间的间隔-->
        <attr name="rectSpace" format="dimension" />
        <!--矩形的初始高度，就是没有声音的时候，矩形的高度-->
        <attr name="rectInitHeight" format="dimension" />
        <!--所输入音量的最大值-->
        <attr name="maxVolume" format="float" />
        <!--控件的样式，一共有两种，波形或者矩形-->
        <attr name="viewMode">
            <enum name="line" value="0" />
            <enum name="rect" value="1" />
        </attr>
        <!--灵敏度，默认值是4-->
        <attr name="sensibility">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>
        <!--精细度，绘制曲线的时候，每几个像素绘制一次，默认是1，一般，这个值越小，曲线越顺滑，
            但在一些旧手机上，会出现帧率过低的情况，可以把这个值调大一点，在图片的顺滑度与帧率之间做一个取舍-->
        <attr name="fineness">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ScenesSelectBtn">
        <attr name="strokeColor" format="color" />
        <attr name="fillColor" format="color" />
        <attr name="strokeColor_checked" format="color" />
        <attr name="fillColor_checked" format="color" />
        <attr name="textColor_normal" format="color" />
        <attr name="textColor_checked" format="color" />
    </declare-styleable>


    <!--RingCircle环形旋转头像的属性-->
    <declare-styleable name="MatchingLayerView">
        <!--环中间线的颜色-->
        <attr name="midLine_Color" format="color|reference" />
        <!--环的大小-->
        <attr name="midLine_width" format="dimension" />
        <!--环的大小-->
        <attr name="user_icon_width" format="dimension" />
        <!--转一圈的时间-->
        <attr name="one_circle_time" format="integer" />
        <!--转圈的方向 true为顺时针-->
        <attr name="around_orientation" format="boolean" />
        <!--每个view偏移的角度-->
        <attr name="rotation_degree" format="integer" />
        <!--随机角度的大小-->
        <attr name="random_interval" format="integer" />

        <attr name="icon_count" format="integer" />

    </declare-styleable>

    <!--VoiceControlPanelView的显示-->
    <declare-styleable name="VoiceControlPanelView">
        <!--是否显示伴奏-->
        <attr name="isShowACC" format="boolean" />
    </declare-styleable>
</resources>
