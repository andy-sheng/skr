<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_10"
    android:paddingTop="@dimen/view_150_dp">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_5_dp"
        android:src="@drawable/back_close_white"
        app:layout_constraintLeft_toRightOf="@id/container"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/container"
        android:layout_width="@dimen/view_283_dp"
        android:layout_height="@dimen/view_228_dp"
        android:layout_marginTop="@dimen/view_14_dp"
        android:background="@drawable/laohuji"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.playways.party.room.view.PartyPunishItemListView
        android:id="@+id/race_match_item_view"
        android:layout_width="@dimen/view_195_dp"
        android:layout_height="@dimen/view_85_dp"
        android:layout_marginTop="@dimen/view_79_dp"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

    <com.common.view.ex.ExTextView
        android:id="@+id/punish_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_91_dp"
        android:text="真心话"
        android:textColor="#BF98E3"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

    <com.common.view.ex.ExTextView
        android:id="@+id/punish_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_10_dp"
        android:text="按下滑杆，选择惩罚题目"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintTop_toBottomOf="@+id/punish_type_tv" />

    <android.support.constraint.Group
        android:id="@+id/cover_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="punish_type_tv, punish_content" />

    <ImageView
        android:id="@+id/deng_view"
        android:layout_width="@dimen/view_283_dp"
        android:layout_height="@dimen/view_220_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:background="@drawable/race_match_view_deng1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/zxh_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_60_dp"
        android:layout_marginTop="@dimen/view_28_dp"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingTop="@dimen/view_2_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:paddingBottom="@dimen/view_2_dp"
        android:text="真心话"
        android:textSize="15sp"
        app:bl_corners_radius="@dimen/view_70_dp"
        app:bl_selected_drawable="#2C2053"
        app:bl_selected_textColor="@color/white"
        app:bl_unSelected_drawable="@color/transparent"
        app:bl_unSelected_textColor="#A697D5"
        app:layout_constraintLeft_toLeftOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

    <com.common.view.ex.ExTextView
        android:id="@+id/dmx_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_28_dp"
        android:layout_marginRight="@dimen/view_60_dp"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingTop="@dimen/view_2_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:paddingBottom="@dimen/view_2_dp"
        android:text="大冒险"
        android:textSize="15sp"
        app:bl_corners_radius="@dimen/view_70_dp"
        app:bl_selected_drawable="#2C2053"
        app:bl_selected_textColor="@color/white"
        app:bl_unSelected_drawable="@color/transparent"
        app:bl_unSelected_textColor="#A697D5"
        app:layout_constraintRight_toRightOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

    <com.common.view.ex.ExImageView
        android:id="@+id/next_punish_iv"
        android:layout_width="@dimen/view_51_dp"
        android:layout_height="@dimen/view_82_dp"
        android:layout_marginLeft="@dimen/view_270_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        app:bl_pressed_drawable="@drawable/shoubing02"
        app:bl_unPressed_drawable="@drawable/shoubing01"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintLeft_toLeftOf="@id/container" />

</android.support.constraint.ConstraintLayout>