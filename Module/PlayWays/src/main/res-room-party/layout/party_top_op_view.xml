<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_34_dp"
    android:background="@color/black_trans_80"
    android:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.view.ex.ExTextView
        android:id="@+id/change_room_btn"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:gravity="center"
        android:text="换房间"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_1_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report_room"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/change_room_btn"
        android:text="举报"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_1_dp" />

    <ImageView
        android:id="@+id/game_setting"
        android:layout_width="@dimen/view_41_dp"
        android:layout_height="@dimen/view_26_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_toRightOf="@id/report_room"
        android:background="@drawable/xkf_shezhi" />

    <ImageView
        android:id="@+id/game_rule_iv"
        android:layout_width="@dimen/view_41_dp"
        android:layout_height="@dimen/view_26_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_toRightOf="@+id/iv_voice_setting"
        android:background="@drawable/race_rule_icon" />

    <ImageView
        android:id="@+id/feed_back_iv"
        android:layout_width="@dimen/view_41_dp"
        android:layout_height="@dimen/view_26_dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/game_rule_iv"
        android:background="@drawable/race_feed_back_icon" />

    <ImageView
        android:id="@+id/iv_voice_setting"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_26_dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/game_setting"
        android:background="@drawable/xkf_yinyue" />


    <com.common.view.ex.ExTextView
        android:id="@+id/exit_tv"
        android:layout_width="@dimen/view_70_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:text="退出房间"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_1_dp" />

</merge>