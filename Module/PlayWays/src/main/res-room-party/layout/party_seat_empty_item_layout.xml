<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_100_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/empty_bg"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        app:bl_shape="oval"
        app:bl_solid_color="@color/white_trans_10"
        app:bl_stroke_color="@color/white_trans_50"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_24_dp"
        app:layout_constraintBottom_toBottomOf="@id/empty_bg"
        app:layout_constraintLeft_toLeftOf="@id/empty_bg"
        app:layout_constraintRight_toRightOf="@id/empty_bg"
        app:layout_constraintTop_toTopOf="@id/empty_bg" />


</android.support.constraint.ConstraintLayout>