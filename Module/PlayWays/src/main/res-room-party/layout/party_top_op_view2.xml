<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_34_dp"
    android:background="@color/transparent"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.common.view.ex.ExTextView
        android:id="@+id/party_invite_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_11_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:text="邀请"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_20"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/change_room_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:text="换房间"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        android:visibility="visible"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_20"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/party_invite_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/report_room_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:text="举报"
        android:textColor="#E5738D"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_20"
        app:bl_stroke_color="@color/white_trans_20"
        app:bl_stroke_width="@dimen/view_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/change_room_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/feed_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:src="@drawable/party_top_fankui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/report_room_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voice_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:src="@drawable/party_top_voice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/feed_back_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_10_dp"
        android:src="@drawable/party_top_quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>