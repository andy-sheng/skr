<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginLeft="@dimen/view_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_11_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="晴天"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/avatar_iv"
        app:layout_constraintRight_toLeftOf="@+id/op_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/op_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_26_dp"
        android:paddingRight="@dimen/view_26_dp"
        android:text="转让"
        android:textColor="#8B572A"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#E9A83B"
        app:bl_gradient_startColor="#FFD99B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>