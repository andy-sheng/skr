<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.common.view.ex.ExImageView
        android:id="@+id/diamond_icon"
        android:layout_width="@dimen/view_58_dp"
        android:layout_height="@dimen/view_46_dp"
        android:src="@drawable/party_diamond_box_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.common.view.ex.ExTextView
        android:id="@+id/diamond_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diamond_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="歇斯底里的最好年华"
        android:textColor="#FFFFFFFF"
        />

    <com.common.view.ex.ExTextView
        android:id="@+id/diamond_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diamond_sender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2:24"
        android:textColor="#FFFFFFFF"
        />


</android.support.constraint.ConstraintLayout>