<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C79AFF">


    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:showBottomLine="false"
        app:showMainView="false"
        app:statusBarColor="@color/transparent" />

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_20_dp"
        android:src="@drawable/img_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:layout_width="@dimen/view_164_dp"
        android:layout_height="@dimen/view_51_dp"
        android:background="@drawable/party_room_icon"
        app:layout_constraintBottom_toBottomOf="@id/back_iv"
        app:layout_constraintLeft_toRightOf="@id/back_iv"
        app:layout_constraintTop_toTopOf="@id/back_iv" />

    <ImageView
        android:id="@+id/create_room"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:background="@drawable/party_home_create_icon"
        app:layout_constraintBottom_toBottomOf="@id/back_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/back_iv" />

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_iv" />

</android.support.constraint.ConstraintLayout>