<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.support.constraint.ConstraintLayout"
    >

    <com.common.view.ex.ExTextView
        android:id="@+id/title_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/title_name_tv"
        android:text="取消"
        android:textSize="16sp"
        android:textColor="#CC000000"
        android:layout_marginStart="@dimen/view_19_dp"
        />

    <com.common.view.ex.ExTextView
        android:id="@+id/title_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="发宝箱"
        android:textSize="20sp"
        android:textColor="#CC000000"
        android:layout_marginTop="@dimen/view_22_dp"
        />

    <com.common.view.ex.ExImageView
        android:id="@+id/diamond_box_icon_bg"
        android:layout_width="@dimen/view_335_dp"
        android:layout_height="@dimen/view_200_dp"
        app:layout_constraintTop_toBottomOf="@id/title_cancel_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/party_diamond_box_container_bg"
        android:layout_marginTop="@dimen/view_13_dp"
        />

    <com.common.view.ex.ExImageView
        android:id="@+id/diamond_box_icon"
        android:layout_width="@dimen/view_124_dp"
        android:layout_height="@dimen/view_103_dp"
        app:layout_constraintStart_toStartOf="@id/diamond_box_icon_bg"
        app:layout_constraintEnd_toEndOf="@id/diamond_box_icon_bg"
        app:layout_constraintTop_toTopOf="@id/diamond_box_icon_bg"
        app:layout_constraintBottom_toTopOf="@id/diamond_box_sender_nick_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/party_diamond_box_icon"
        />

    <com.common.view.ex.ExTextView
        android:id="@+id/diamond_box_sender_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/diamond_box_icon_bg"
        app:layout_constraintEnd_toEndOf="@id/diamond_box_icon_bg"
        app:layout_constraintTop_toBottomOf="@id/diamond_box_icon"
        app:layout_constraintBottom_toBottomOf="@id/diamond_box_icon_bg"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="鹿锅泥的宝箱"
        android:textSize="16sp"
        android:textColor="#80000000"
        android:layout_marginTop="@dimen/view_14_dp"
        />

    <com.common.view.ex.ExTextView
        android:id="@+id/diamond_box_sender_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/party_diamond_icon"
        android:drawablePadding="@dimen/view_4_dp"
        app:layout_constraintTop_toBottomOf="@id/diamond_box_icon_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/view_30_dp"
        android:text="2000"
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <com.common.view.ex.ExImageView
        android:id="@+id/diamond_box_sender_img"
        android:layout_width="@dimen/view_128_dp"
        android:layout_height="@dimen/view_32_dp"
        android:src="@drawable/party_diamond_box_send_btn"
        app:layout_constraintTop_toBottomOf="@id/diamond_box_sender_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/view_20_dp"
        />

    <com.common.view.ex.ExTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diamond_box_sender_notice1"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="宝箱发送后，将向全站发送飘屏吸引观众"
        app:layout_constraintBottom_toTopOf="@+id/diamond_box_sender_notice2"
        android:textColor="#80000000"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/view_4_dp"
        />

    <com.common.view.ex.ExTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diamond_box_sender_notice2"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="每个宝箱发送后三分钟自动开箱，根据房间人数分配奖励"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#80000000"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/view_50_dp"
        />


</merge>