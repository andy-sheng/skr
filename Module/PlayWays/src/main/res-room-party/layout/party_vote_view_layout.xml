<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_350_dp"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/view_70_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/left_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_200_dp"
        android:layout_marginTop="@dimen/view_70_dp"
        android:layout_marginRight="@dimen/view_dimen_1"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#FFF1FA"
        app:bl_gradient_startColor="#FF9FD7"
        app:layout_constraintEnd_toStartOf="@+id/right_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/right_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_200_dp"
        android:layout_marginLeft="@dimen/view_dimen_1"
        android:layout_marginTop="@dimen/view_70_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_gradient_endColor="#EBECFF"
        app:bl_gradient_startColor="#8B90FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/left_avatar_iv"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_80_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_bg"
        app:layout_constraintRight_toRightOf="@+id/left_bg"
        app:layout_constraintTop_toTopOf="@+id/left_bg" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/left_svga_iv"
        android:layout_width="@dimen/view_150_dp"
        android:layout_height="@dimen/view_150_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_bg"
        app:layout_constraintRight_toRightOf="@+id/left_bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/left_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:text="林三幕"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintLeft_toLeftOf="@+id/left_bg"
        app:layout_constraintRight_toRightOf="@+id/left_bg"
        app:layout_constraintTop_toBottomOf="@+id/left_avatar_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/left_ticket_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_2_dp"
        android:text="0"
        android:textColor="#AF4970"
        android:textSize="@dimen/textsize_24_dp"
        app:layout_constraintEnd_toStartOf="@+id/left_ticket_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/left_bg"
        app:layout_constraintTop_toBottomOf="@+id/left_name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/left_ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:text="票"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_10_dp"
        app:layout_constraintEnd_toEndOf="@+id/left_bg"
        app:layout_constraintStart_toEndOf="@+id/left_ticket_tv"
        app:layout_constraintTop_toBottomOf="@+id/left_name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/left_buttom"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_184_dp"
        android:gravity="center"
        android:text="投票"
        android:textColor="#A74068"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_gradient_endColor="#FF8AB6"
        app:bl_gradient_startColor="#FFBDD6"
        app:layout_constraintLeft_toLeftOf="@+id/left_bg"
        app:layout_constraintRight_toRightOf="@+id/left_bg"
        app:layout_constraintTop_toTopOf="@+id/left_bg" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/right_svga_iv"
        android:layout_width="@dimen/view_150_dp"
        android:layout_height="@dimen/view_150_dp"
        app:layout_constraintLeft_toLeftOf="@+id/right_bg"
        app:layout_constraintRight_toRightOf="@+id/right_bg" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/right_avatar_iv"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_80_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        app:layout_constraintLeft_toLeftOf="@+id/right_bg"
        app:layout_constraintRight_toRightOf="@+id/right_bg"
        app:layout_constraintTop_toTopOf="@+id/right_bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6_dp"
        android:text="林三幕"
        android:textColor="@color/black_trans_80"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintLeft_toLeftOf="@+id/right_bg"
        app:layout_constraintRight_toRightOf="@+id/right_bg"
        app:layout_constraintTop_toBottomOf="@+id/right_avatar_iv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_ticket_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_2_dp"
        android:text="0"
        android:textColor="#4A5FAF"
        android:textSize="@dimen/textsize_24_dp"
        app:layout_constraintEnd_toStartOf="@+id/right_ticket_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/right_bg"
        app:layout_constraintTop_toBottomOf="@+id/right_name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:text="票"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_10_dp"
        app:layout_constraintEnd_toEndOf="@+id/right_bg"
        app:layout_constraintStart_toEndOf="@+id/right_ticket_tv"
        app:layout_constraintTop_toBottomOf="@+id/right_name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_buttom"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_184_dp"
        android:gravity="center"
        android:text="投票"
        android:textColor="#4052A7"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_21_dp"
        app:bl_gradient_endColor="#A1C6FF"
        app:bl_gradient_startColor="#C5EAFF"
        app:layout_constraintLeft_toLeftOf="@+id/right_bg"
        app:layout_constraintRight_toRightOf="@+id/right_bg"
        app:layout_constraintTop_toTopOf="@+id/right_bg" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_28_dp"
        android:text="倒计时结束前完成投票"
        android:textColor="@color/black_trans_30"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/party_count_down_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/view_10_dp"
        android:text="0"
        android:textColor="#495EAF"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/left_buttom" />
</merge>