<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <!--申请列表(主持人)-->
    <com.common.view.ex.ExTextView
        android:id="@+id/apply_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_32_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_10_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="10sp"
        android:background="@drawable/party_mic_apply_bg"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="麦序管理\n10人申请"
        android:paddingStart="@dimen/view_64_dp"
        />

    <!--申请上麦 取消申请 下麦-->
    <com.common.view.ex.ExTextView
        android:id="@+id/op_mic_tv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:gravity="center"
        android:textColor="@color/white_trans_80"
        android:textSize="8sp"
        android:background="@drawable/party_mic_apply_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apply_list" />

</merge>