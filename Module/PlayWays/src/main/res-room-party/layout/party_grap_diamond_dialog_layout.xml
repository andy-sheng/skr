<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_240_dp"
    android:layout_height="@dimen/view_280_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.common.view.ex.ExImageView
        android:id="@+id/grab_diamond_img"
        android:layout_width="@dimen/view_164_dp"
        android:layout_height="@dimen/view_175_dp"
        android:src="@drawable/party_grab_diamond_begin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/grab_diamond_btn_img"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <com.common.view.ex.ExImageView
        android:id="@+id/grab_diamond_btn_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grab_diamond_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/party_grab_diamond_collect"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>