<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_centerInParent="true" />

    <com.common.view.ex.ExImageView
        android:id="@+id/mute_mic_iv"
        android:layout_width="@dimen/view_20_dp"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignBottom="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:src="@drawable/jingyin_anxia" />

    <com.common.view.ex.ExTextView
        android:id="@+id/test_tips_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:textColor="@color/white" />
</merge>