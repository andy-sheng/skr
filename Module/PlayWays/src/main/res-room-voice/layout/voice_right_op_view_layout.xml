<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <!--这里面是软键盘弹出时 需要上移的布局-->

    <com.common.view.ex.ExImageView
        android:id="@+id/mic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_16_dp"
        android:paddingTop="@dimen/view_5_dp"
        android:paddingRight="@dimen/view_16_dp"
        android:paddingBottom="@dimen/view_5_dp"
        android:scaleType="center"
        android:src="@drawable/jingyin_changtai" />

    <com.common.view.ex.ExImageView
        android:id="@+id/speaker_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mic_iv"
        android:paddingLeft="@dimen/view_16_dp"
        android:paddingTop="@dimen/view_5_dp"
        android:paddingRight="@dimen/view_16_dp"
        android:paddingBottom="@dimen/view_5_dp"
        android:scaleType="center"
        android:src="@drawable/guanbishengyin" />


</merge>