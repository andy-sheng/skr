<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:background="@drawable/race_select_song_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/progress_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_10_dp"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:layout_marginBottom="@dimen/view_13_dp"
        app:bl_corners_radius="@dimen/view_5_dp"
        app:bl_solid_color="#FFEBE7FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_2_dp"
        android:layout_marginBottom="@dimen/view_2_dp"
        android:progress="30"
        android:progressDrawable="@drawable/select_song_progress_bg"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bg"
        app:layout_constraintLeft_toLeftOf="@+id/progress_bg"
        app:layout_constraintRight_toRightOf="@+id/progress_bg"
        app:layout_constraintTop_toTopOf="@+id/progress_bg" />

    <com.module.playways.race.room.view.RaceSelectSongItemView
        android:id="@+id/forth_song_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_87_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.module.playways.race.room.view.RaceSelectSongItemView
        android:id="@+id/first_song_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_87_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.playways.race.room.view.RaceSelectSongItemView
        android:id="@+id/second_song_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_13_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_song_item" />

    <com.module.playways.race.room.view.RaceSelectSongItemView
        android:id="@+id/third_song_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_87_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:layout_marginBottom="@dimen/view_13_dp"
        app:layout_constraintBottom_toTopOf="@+id/forth_song_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/blur_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:background="@drawable/select_song_blur"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/view_80_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</merge>