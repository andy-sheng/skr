<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pager_root_view"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">

    <View
        android:id="@+id/hide_click_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_323_dp"
        android:background="#FF3C2E8C"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/close_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:padding="7dp"
        android:src="@drawable/baoming_guanbi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <com.component.busilib.view.recyclercardview.SpeedRecyclerView
        android:id="@+id/speed_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_273_dp"
        android:layout_marginBottom="@dimen/view_22_dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>