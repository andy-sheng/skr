<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pager_root_view"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">

    <View
        android:id="@+id/hide_click_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bl_shape="rectangle"
        app:bl_gradient_startColor="#001E095D"
        app:bl_gradient_centerColor="#1C0859"
        app:bl_gradient_endColor="#1C0859"/>

    <com.component.busilib.view.recyclercardview.SpeedRecyclerView
        android:id="@+id/speed_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_465_dp"
        android:layout_marginBottom="@dimen/view_48_dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>