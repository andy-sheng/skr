<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.module.playways.race.room.view.matchview.RaceMatchItemView
        android:id="@+id/left_view"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_100_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_view"
        app:layout_constraintTop_toTopOf="parent" />


    <com.module.playways.race.room.view.matchview.RaceMatchItemView
        android:id="@+id/right_view"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_100_dp"
        app:layout_constraintLeft_toRightOf="@id/left_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>