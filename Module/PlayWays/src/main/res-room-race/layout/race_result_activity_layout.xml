<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/race_result_bg">

    <TextView
        android:id="@+id/change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_152_dp"
        android:textColor="#FFD693"
        android:textSize="@dimen/textsize_24_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.component.level.view.NormalLevelView2
        android:id="@+id/level_view"
        android:layout_width="@dimen/view_125_dp"
        android:layout_height="@dimen/view_109_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_tv"
        levelView2:mainHeight2="@dimen/view_109_dp"
        levelView2:mainWidth2="@dimen/view_125_dp"
        levelView2:subBottom2="@dimen/view_6_dp"
        levelView2:subHeight2="@dimen/view_13_dp"
        levelView2:subWidth2="@dimen/view_24_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/level_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:text="钻石巨星5段"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_view" />

    <com.component.level.view.LevelStarProgressBar
        android:id="@+id/level_progress"
        android:layout_width="@dimen/view_140_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_desc_tv" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离下次升段还需25积分"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_progress" />

    <TextView
        android:id="@+id/count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_15_dp"
        android:text="3秒后自动进入下一场挑战"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toTopOf="@id/play_again_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/play_again_tv"
        android:layout_width="@dimen/view_140_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        android:gravity="center"
        android:text="再来一局"
        android:textColor="#AD6C00"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:padding="@dimen/view_16_dp"
        android:src="@drawable/img_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>