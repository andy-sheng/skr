        <meta-data
            android:name="com.module.playways.PlayWaysConfiguration"
            android:value="ConfigModule" />

        <activity
            android:name="com.module.playways.audioroom.AudioRoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.module.playways.PlayWaysActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.module.playways.rank.room.activity.RankRoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">

        </activity>

        <activity
            android:name="com.module.playways.grab.room.activity.GrabCreateRoomActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
