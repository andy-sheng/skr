<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_95_dp"
    android:orientation="vertical">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_selected_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_86_dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_4_dp"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_solid_color="#343E8A" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/iv_gift_icon"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_9_dp" />

    <com.component.busilib.view.CircleCountDownView
        android:id="@+id/circle_count_down_view"
        android:layout_width="@dimen/view_46_dp"
        android:layout_height="@dimen/view_46_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_5_dp"
        app:bg_color="@color/transparent"
        app:inner_color="#FFC15B"
        app:inner_stroke_raduis="@dimen/view_23_dp"
        app:inner_stroke_width="@dimen/view_3_dp"
        app:stroke_bg_color="#353E89"
        app:stroke_bg_width="@dimen/view_4_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/iv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gift_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_3_dp"
        android:text="大便"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_12_dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gift_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_2_dp">

        <ImageView
            android:id="@+id/iv_currency"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:background="@drawable/ycdd_daojishi_jinbi"
            android:visibility="gone" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/view_2_dp"
            android:gravity="center"
            android:text="3金币"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_12_dp" />
    </LinearLayout>
</RelativeLayout>