<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404A9A">

    <TextView
        android:id="@+id/report_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_34_dp"
        android:text="举报"
        android:textColor="#FF8AB6"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/exit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_35_dp"
        android:layout_marginRight="@dimen/view_18_dp"
        android:background="@drawable/srf_guanbi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/left_avatar_sdv"
        android:layout_width="@dimen/view_67_dp"
        android:layout_height="@dimen/view_67_dp"
        android:layout_marginTop="@dimen/view_82_dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_avatar_sdv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.playways.view.ZanView
        android:id="@+id/left_zanView"
        android:layout_width="@dimen/view_67_dp"
        android:layout_height="@dimen/view_90_dp"
        app:layout_constraintEnd_toEndOf="@+id/left_avatar_sdv"
        app:layout_constraintStart_toStartOf="@+id/left_avatar_sdv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_lock_icon"
        android:layout_width="@dimen/view_19_dp"
        android:layout_height="@dimen/view_19_dp"
        android:background="@drawable/srf_suoding"
        app:layout_constraintBottom_toBottomOf="@id/left_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/left_avatar_sdv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:00"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toTopOf="@+id/left_avatar_sdv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_avatar_sdv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/no_limit_icon"
        android:layout_width="@dimen/view_30_dp"
        android:layout_height="@dimen/view_15_dp"
        android:background="@drawable/srf_lianjie"
        app:layout_constraintBottom_toBottomOf="@+id/left_avatar_sdv"
        app:layout_constraintLeft_toRightOf="@+id/left_avatar_sdv"
        app:layout_constraintRight_toLeftOf="@+id/right_avatar_sdv"
        app:layout_constraintTop_toTopOf="@+id/left_avatar_sdv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/left_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingRight="@dimen/view_18_dp"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintLeft_toLeftOf="@id/left_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/left_avatar_sdv"
        app:layout_constraintTop_toBottomOf="@id/left_avatar_sdv" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/right_avatar_sdv"
        android:layout_width="@dimen/view_67_dp"
        android:layout_height="@dimen/view_67_dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/left_avatar_sdv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/left_avatar_sdv" />

    <com.module.playways.view.ZanView
        android:id="@+id/right_zanView"
        android:layout_width="@dimen/view_67_dp"
        android:layout_height="@dimen/view_90_dp"
        app:layout_constraintEnd_toEndOf="@+id/right_avatar_sdv"
        app:layout_constraintStart_toStartOf="@+id/right_avatar_sdv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_lock_icon"
        android:layout_width="@dimen/view_19_dp"
        android:layout_height="@dimen/view_19_dp"
        android:background="@drawable/srf_suoding"
        app:layout_constraintBottom_toBottomOf="@id/right_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/right_avatar_sdv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/right_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingRight="@dimen/view_18_dp"
        android:text=""
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintLeft_toLeftOf="@id/right_avatar_sdv"
        app:layout_constraintRight_toRightOf="@id/right_avatar_sdv"
        app:layout_constraintTop_toBottomOf="@id/right_avatar_sdv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/unlock_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_162_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingRight="@dimen/view_18_dp"
        android:text="无限畅聊"
        android:textColor="#404A9A"
        android:textSize="@dimen/textsize_12_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/word_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_40_dp"
        android:layout_marginTop="@dimen/view_243_dp"
        android:layout_marginRight="@dimen/view_40_dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/view_8_dp"
        android:paddingTop="@dimen/view_30_dp"
        android:paddingBottom="@dimen/view_59_dp"
        android:text="茫茫人海中遇见你\n如同阳光照进心底\n这最美的时光有你相依\n我心情无法言喻"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/view_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="@color/black_trans_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/word_auther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_78_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:text="——因为遇见你"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="@+id/word_tv"
        app:layout_constraintRight_toRightOf="@+id/word_tv" />

    <android.support.constraint.Group
        android:id="@+id/word_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="word_tv,word_auther" />

    <ViewStub
        android:id="@+id/double_sing_card_view_layout_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/double_sing_card_view_layout" />

    <!--视频模式下自己演唱时歌词面板 合唱小游戏歌词 以及 清唱 伴奏歌词-->
    <com.module.playways.doubleplay.view.DoubleSingCardView
        android:id="@+id/show_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_315_dp"
        android:layout_marginTop="@dimen/view_210_dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/mic_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginBottom="@dimen/view_54_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pick_iv"
        app:src_selected_drawable="@drawable/srf_kaimai"
        app:src_unSelected_drawable="@drawable/srf_bimai" />

    <ImageView
        android:id="@+id/pick_iv"
        android:layout_width="@dimen/view_56_dp"
        android:layout_height="@dimen/view_56_dp"
        android:layout_marginBottom="@dimen/view_48_dp"
        android:background="@drawable/srf_pick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mic_iv"
        app:layout_constraintRight_toLeftOf="@id/select_iv" />

    <ImageView
        android:id="@+id/select_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        android:layout_marginBottom="@dimen/view_54_dp"
        android:background="@drawable/srf_diange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pick_iv"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:text="开麦"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/mic_iv"
        app:layout_constraintRight_toRightOf="@id/mic_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:text="点歌"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/select_iv"
        app:layout_constraintRight_toRightOf="@id/select_iv" />


</android.support.constraint.ConstraintLayout>