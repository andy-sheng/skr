    <com.common.view.ex.ExTextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_3_dp"
        android:text="你与KTV酒彪子唱聊了45分钟"
        android:textColor="@color/black_trans_60"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintEnd_toEndOf="@+id/end_tv"
        app:layout_constraintStart_toStartOf="@+id/end_tv"
        app:layout_constraintTop_toBottomOf="@+id/end_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/end_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="你们的相互陪伴\n让岁月多了一份温暖"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintEnd_toEndOf="@+id/end_tv"
        app:layout_constraintStart_toStartOf="@+id/end_tv"
        app:layout_constraintTop_toBottomOf="@+id/end_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/follow_tv"
        android:layout_width="@dimen/view_93_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginTop="@dimen/view_158_dp"
        android:gravity="center"
        android:text="关注他"
        android:textColor="#AD6C00"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintEnd_toEndOf="@+id/end_tv"
        app:layout_constraintStart_toStartOf="@+id/end_tv"
        app:layout_constraintTop_toBottomOf="@+id/end_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/match_again"
        android:layout_width="@dimen/view_154_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="再匹配一次"
        android:textColor="#FFC15B"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_solid_color="@color/transparent"
        app:bl_stroke_color="#FFC15B"
        app:bl_stroke_width="@dimen/view_1_dp"
        app:layout_constraintEnd_toEndOf="@+id/white_bg"
        app:layout_constraintStart_toStartOf="@+id/white_bg"
        app:layout_constraintTop_toBottomOf="@+id/white_bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/last_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_113_dp"
        android:text="今日剩余 次"
        android:textColor="@color/white_trans_30"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/white_bg"
        app:layout_constraintStart_toStartOf="@+id/white_bg"
        app:layout_constraintTop_toBottomOf="@+id/white_bg" />
</android.support.constraint.ConstraintLayout>