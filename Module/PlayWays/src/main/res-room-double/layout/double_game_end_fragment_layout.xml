<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404A9A">

    <com.common.view.ex.ExTextView
        android:id="@+id/report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_36_dp"
        android:text="举报"
        android:textColor="#ffff8ab6"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/dk_close_icon"
        app:layout_constraintBottom_toBottomOf="@+id/report_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_tv" />

    <com.common.view.ex.ExImageView
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_325_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginTop="@dimen/view_120_dp"
        android:layout_marginRight="@dimen/view_32_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_68_dp"
        android:layout_height="@dimen/view_68_dp"
        android:layout_marginTop="@dimen/view_84_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<com.common.view.ex.ExTextView-->
        <!--android:id="@+id/end_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/view_30_dp"-->
        <!--android:text="唱聊结束了"-->
        <!--android:textColor="#ff000000"-->
        <!--android:textSize="@dimen/view_24_dp"-->
