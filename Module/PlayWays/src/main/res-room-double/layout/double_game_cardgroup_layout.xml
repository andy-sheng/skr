<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_trans_20"
    android:paddingLeft="@dimen/view_16_dp"
    android:paddingTop="@dimen/view_21_dp"
    android:paddingRight="@dimen/view_16_dp"
    android:paddingBottom="@dimen/view_19_dp"
    tools:parentTag="com.common.view.ex.ExConstraintLayout">

    <com.module.playways.doubleplay.view.DoubleGameSelectCardView
        android:id="@+id/card_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_117_dp"
        app:layout_constraintEnd_toStartOf="@+id/card_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.playways.doubleplay.view.DoubleGameSelectCardView
        android:id="@+id/card_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_117_dp"
        android:layout_marginLeft="@dimen/view_13_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/card_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.module.playways.doubleplay.view.DoubleGameSelectCardView
        android:id="@+id/card_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_117_dp"
        android:layout_marginTop="@dimen/view_13_dp"
        app:layout_constraintEnd_toStartOf="@+id/card_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_1" />

    <com.module.playways.doubleplay.view.DoubleGameSelectCardView
        android:id="@+id/card_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_117_dp"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_13_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/card_3"
        app:layout_constraintTop_toBottomOf="@id/card_1" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_13_dp"
        android:text="选中相同题卡，开始游戏"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_3" />
</merge>