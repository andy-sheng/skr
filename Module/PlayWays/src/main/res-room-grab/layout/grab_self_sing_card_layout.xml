<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <com.opensource.svgaplayer.SVGAImageView
        android:layout_marginTop="@dimen/view_20_dp"
        android:id="@+id/sing_bg_svga"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_240_dp"
        app:antiAlias="true"
        app:autoPlay="false"
        app:loopCount="0" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_empty"
        android:background="@drawable/guanzhong_baiban"
        android:layout_below="@+id/rl_count_down_container"
        android:layout_marginTop="@dimen/view_54_dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/view_162_dp"
        android:layout_height="@dimen/view_54_dp"
        />

    <RelativeLayout
        android:id="@+id/rl_count_down_container"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_50_dp"
        >
        <ImageView
            android:id="@+id/iv_blue_bg"
            android:layout_marginRight="@dimen/view_15_dp"
            android:background="@drawable/daojishi_bj"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/view_110_dp"
            android:layout_height="@dimen/view_32_dp" />

        <LinearLayout
            android:layout_alignRight="@+id/iv_blue_bg"
            android:layout_alignLeft="@+id/iv_blue_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/view_10_dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_h_stub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_t_stub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_o_stub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_s"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_lyric"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_150_dp"
        android:layout_marginTop="@dimen/view_55_dp"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_50_dp"
        android:layout_marginRight="@dimen/view_50_dp">

        <TextView
            android:layout_marginRight="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_40_dp"
            android:id="@+id/tv_lyric"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:text=""
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_18_dp"
            android:textStyle="bold" />
    </ScrollView>
</merge>