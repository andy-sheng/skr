<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/sing_bg_svga"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_240_dp"
        app:antiAlias="true"
        app:autoPlay="false"
        app:loopCount="0" />

    <ScrollView
        android:id="@+id/sv_lyric"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_40_dp"
        android:layout_marginLeft="@dimen/view_50_dp"
        android:layout_marginRight="@dimen/view_50_dp">

        <TextView
            android:layout_marginRight="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_40_dp"
            android:id="@+id/tv_lyric"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text=""
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_18_dp"
            android:textStyle="bold" />
    </ScrollView>
</merge>