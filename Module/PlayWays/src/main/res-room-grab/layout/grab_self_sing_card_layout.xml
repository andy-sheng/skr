<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:id="@+id/sdv_icon"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_44_dp"
        />

    <ScrollView
        android:layout_marginLeft="@dimen/view_50_dp"
        android:layout_marginRight="@dimen/view_50_dp"
        android:id="@+id/sv_lyric"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_lyric"
            android:lineSpacingExtra="10dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_18_dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
</merge>