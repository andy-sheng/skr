<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        android:orientation="horizontal"/>

    <com.common.view.ex.ExImageView
        android:id="@+id/erji_iv"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yanchang_erji" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/miedeng_iv"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_100_dp"
        app:antiAlias="true"
        app:autoPlay="false" />
</merge>