<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:layout_width="@dimen/view_324_dp"
        android:layout_height="@dimen/view_136_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grab_daochang_yinying" />

    <ImageView
        android:layout_width="@dimen/view_328_dp"
        android:layout_height="@dimen/view_140_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/grab_daochang_kuang" />

    <RelativeLayout
        android:layout_width="@dimen/view_328_dp"
        android:layout_height="@dimen/view_136_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        android:background="@drawable/grab_daochang_bj">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/song_cover_iv"
            android:layout_width="@dimen/view_42_dp"
            android:layout_height="@dimen/view_42_dp"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginTop="@dimen/view_8_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_22_dp"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginTop="@dimen/view_8_dp"
            android:layout_marginRight="@dimen/view_90_dp"
            android:layout_toRightOf="@+id/song_cover_iv"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_trans_70"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_singer_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_16_dp"
            android:layout_below="@+id/song_name_tv"
            android:layout_alignLeft="@+id/song_name_tv"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginRight="@dimen/view_90_dp"
            android:layout_toRightOf="@+id/song_cover_iv"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_trans_30"
            android:textSize="@dimen/textsize_12_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_seq_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_16_dp"
            android:layout_marginRight="@dimen/view_20_dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/black_trans_80"
            android:textSize="@dimen/textsize_16_dp" />

        <View
            android:layout_width="@dimen/view_328_dp"
            android:layout_height="@dimen/view_2_dp"
            android:layout_marginTop="@dimen/view_55_dp"
            android:background="@color/black_trans_20" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_lyrics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp"
            android:layout_alignLeft="@+id/song_cover_iv"
            android:layout_marginTop="@dimen/view_70_dp"
            android:layout_marginRight="@dimen/view_72_dp"
            android:lineSpacingExtra="@dimen/view_6_dp"
            android:maxLines="2"
            android:textColor="@color/black_trans_70"
            android:textSize="@dimen/view_16_dp" />

        <ImageView
            android:id="@+id/grab_cd"
            android:layout_width="@dimen/view_92_dp"
            android:layout_height="@dimen/view_92_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-22dp"
            android:layout_marginBottom="-24dp"
            android:background="@drawable/grab_cd" />

    </RelativeLayout>


</merge>