<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:layout_width="@dimen/view_328_dp"
        android:layout_height="@dimen/view_154_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_2_dp"
        android:layout_marginTop="@dimen/view_2_dp"
        >
        <View
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ldnc_bj_qian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_144_dp"/>

        <com.common.view.ex.ExImageView
            app:bl_solid_color="#CC7F00"
            app:bl_corners_radius="@dimen/view_7_dp"
            android:layout_marginLeft="@dimen/view_16_33_dp"
            android:layout_marginTop="@dimen/view_9_dp"
            android:layout_width="@dimen/view_45_dp"
            android:layout_height="@dimen/view_48_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/song_cover_iv"
            android:layout_width="@dimen/view_38_dp"
            android:layout_height="@dimen/view_38_dp"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginTop="@dimen/view_12_dp" />

        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:id="@+id/song_name_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_22_dp"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginTop="@dimen/view_12_dp"
            android:layout_marginRight="@dimen/view_90_dp"
            android:layout_toRightOf="@+id/song_cover_iv"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_trans_70"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/view_3_dp"
            android:id="@+id/song_singer_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_16_dp"
            android:layout_below="@+id/song_name_tv"
            android:layout_alignLeft="@+id/song_name_tv"
            android:layout_marginRight="@dimen/view_90_dp"
            android:layout_toRightOf="@+id/song_cover_iv"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_trans_30"
            android:textSize="@dimen/textsize_12_dp" />

        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:id="@+id/song_seq_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/view_12_dp"
            android:layout_marginRight="@dimen/view_20_dp"
            android:gravity="center_vertical|right"
            android:textColor="@color/black_trans_25"
            android:textSize="@dimen/textsize_18_dp" />

        <View
            android:layout_width="@dimen/view_328_dp"
            android:layout_height="@dimen/view_1_dp"
            android:layout_marginTop="@dimen/view_68_dp"
            android:background="#CC7F00" />

        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:id="@+id/song_lyrics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp"
            android:layout_alignLeft="@+id/song_cover_iv"
            android:layout_marginTop="@dimen/view_82_dp"
            android:layout_marginRight="@dimen/view_72_dp"
            android:lineSpacingExtra="@dimen/view_6_dp"
            android:maxLines="2"
            android:textColor="@color/black_trans_60"
            android:textSize="@dimen/view_16_dp" />

        <ImageView
            android:id="@+id/grab_cd"
            android:layout_width="@dimen/view_92_dp"
            android:layout_height="@dimen/view_92_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-22dp"
            android:layout_marginBottom="-18dp"
            android:background="@drawable/ldnc_cd" />

        <ImageView
            android:background="@drawable/ldnc_bj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</merge>