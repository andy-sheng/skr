<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/song_cover"
        android:layout_width="@dimen/view_224_dp"
        android:layout_height="@dimen/view_225_dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:antiAlias="true"
        app:autoPlay="false" />

    <RelativeLayout
        android:id="@+id/song_info_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_cover">

        <com.common.view.ex.ExTextView
            android:id="@+id/song_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="《还有什么可以送给你》"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp"
            android:visibility="gone" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_owner_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_name_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="陈奕迅"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12_dp"
            android:visibility="gone" />

        <com.common.view.ex.ExImageView
            android:id="@+id/baiban_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ziji_baibanzi"
            android:visibility="gone" />

    </RelativeLayout>


</merge>