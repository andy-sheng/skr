<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_15_dp"
    android:layout_marginRight="@dimen/view_15_dp"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_solid_color="#3C3F57"
    app:bl_stroke_color="#202239"
    app:bl_stroke_width="@dimen/view_2_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_24_dp"
        android:background="@drawable/bisaiguize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_21_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize1" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="系统下发导唱歌曲"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize2" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="点击【想唱】按钮抢机会"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize3" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="抢到机会，完成演唱"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize4" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="演唱中超过半数用户灭灯即挑战失败"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize5" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="演唱中任一观众使用爆灯即可一唱到底"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:layout_marginBottom="@dimen/view_30_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_26_dp"
            android:layout_height="@dimen/view_20_dp"
            android:background="@drawable/guize6" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8_dp"
            android:text="一唱到底加金币，给别人爆灯减金币"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_14_dp" />
    </LinearLayout>
</com.common.view.ex.ExLinearLayout>