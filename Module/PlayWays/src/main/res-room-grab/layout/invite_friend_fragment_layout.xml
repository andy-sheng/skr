<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_30"
    android:orientation="vertical">
    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_60_dp"/>

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_60_dp"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_solid_color="@color/white">

        <com.common.view.ex.ExTextView
            android:layout_marginBottom="@dimen/view_15_dp"
            android:layout_marginTop="@dimen/view_16_dp"
            android:id="@+id/tv_share"
            android:layout_width="@dimen/view_233_dp"
            android:layout_height="@dimen/view_40_dp"
            android:layout_marginLeft="@dimen/view_18_dp"
            android:gravity="center"
            android:text="邀请微信，QQ好友一起玩"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            app:bl_corners_radius="@dimen/view_25_dp"
            app:bl_solid_color="#F8E71C"
            app:bl_stroke_color="#606480"
            app:bl_stroke_width="@dimen/view_2_dp" />

        <ImageView
            android:layout_marginTop="@dimen/view_16_dp"
            android:id="@+id/iv_close"
            android:layout_width="@dimen/view_41_dp"
            android:layout_height="@dimen/view_41_dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_16_dp"
            android:background="@drawable/yaoqinghaoyou_guanbi" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_share"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </com.common.view.ex.ExRelativeLayout>


</RelativeLayout>