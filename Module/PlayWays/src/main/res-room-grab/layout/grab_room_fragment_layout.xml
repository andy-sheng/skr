<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ranking_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3041">

    <!--这里面是软键盘弹出时 需要上移的布局-->
    <com.module.playways.rank.room.view.BottomContainerView
        android:id="@+id/bottom_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_container_view"
        android:layout_marginBottom="@dimen/view_22_dp" />

    <com.module.playways.rank.room.comment.CommentView
        android:id="@+id/comment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_128_dp"
        android:layout_marginBottom="@dimen/view_66_dp"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingBottom="@dimen/view_7_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/cover_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comment_view"
        android:src="@drawable/zhengzaiyanchang_duihua_zhezhao" />

    <com.module.playways.grab.room.top.GrabTopContainerView
        android:id="@+id/top_container_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_200_dp"
        android:layout_marginTop="@dimen/view_5_dp" />

    <!-- 转场的一些卡片-->
    <com.module.playways.grab.room.view.TurnInfoCardView
        android:id="@+id/turn_info_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.module.playways.grab.room.view.SongInfoCardView
        android:id="@+id/turn_change_song_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_107_dp"
        android:visibility="gone" />

    <com.module.playways.grab.room.view.SingBeginTipsCardView
        android:id="@+id/turn_change_sing_beign_tips_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_175_dp"
        android:visibility="gone" />

    <com.module.playways.grab.room.view.RoundOverCardView
        android:id="@+id/turn_change_round_over_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <!--转场卡片结束-->

    <!--演唱时两个主场景view-->
    <com.module.playways.grab.room.view.OthersSingCardView
        android:id="@+id/other_sing_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_135_dp"
        android:visibility="gone" />

    <com.module.playways.grab.room.view.SelfSingCardView
        android:id="@+id/self_sing_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_144_dp"
        android:visibility="gone" />

    <com.module.playways.grab.room.view.GrabGameOverView
        android:id="@+id/grab_game_over_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_148_dp"
        android:visibility="gone" />

    <!--抢按钮以及倒计时按钮-->
    <com.module.playways.grab.room.view.GrabOpView
        android:id="@+id/grab_op_btn"
        android:layout_width="@dimen/view_141_dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_181_dp" />

    <com.module.playways.rank.room.gift.GiftContinueViewGroup
        android:id="@+id/gift_continue_vg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_75_dp"
        android:layout_above="@+id/comment_view"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:layout_marginBottom="@dimen/view_10_dp" />

    <com.module.playways.rank.room.gift.GiftBigAnimationViewGroup
        android:id="@+id/gift_big_animation_vg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.module.playways.rank.room.view.InputContainerView
        android:id="@+id/input_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>