<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ranking_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3041">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/ready_go_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_350_dp"
        android:layout_marginTop="@dimen/view_40_dp"
        android:scaleType="fitCenter"
        app:antiAlias="true"
        app:autoPlay="false" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/stage_people_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:scaleType="fitCenter"
        app:antiAlias="true"
        app:autoPlay="false"
        app:clearsAfterStop="false" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/stage_ufo_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_300_dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:scaleType="fitCenter"
        app:antiAlias="true"
        app:autoPlay="false"
        app:clearsAfterStop="false" />

    <ImageView
        android:id="@+id/end_round_hint"
        android:layout_width="@dimen/view_78_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_300_dp"
        android:src="@drawable/guanzhongjiemian_yanchangjieshu"
        android:visibility="gone" />

    <!--这里面是软键盘弹出时 需要上移的布局-->
    <com.module.playways.rank.room.view.BottomContainerView
        android:id="@+id/bottom_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_container_view"
        android:layout_marginBottom="@dimen/view_22_dp" />

    <com.module.playways.rank.room.comment.CommentView
        android:id="@+id/comment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/float_lyrics_view"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_128_dp"
        android:layout_marginBottom="@dimen/view_66_dp"
        android:paddingLeft="@dimen/view_18_dp"
        android:paddingBottom="@dimen/view_7_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/cover_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comment_view"
        android:src="@drawable/zhengzaiyanchang_duihua_zhezhao" />

    <com.module.playways.rank.room.view.InputContainerView
        android:id="@+id/input_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <com.module.playways.grab.room.top.GrabTopContainerView
        android:id="@+id/top_container_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_100_dp"
        android:layout_marginTop="@dimen/view_5_dp" />

    <com.module.playways.rank.room.gift.GiftContinueViewGroup
        android:id="@+id/gift_continue_vg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_75_dp"
        android:layout_above="@+id/comment_view"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:layout_marginBottom="@dimen/view_10_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/turn_change_song_seq_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/btn_dialog_cancle"
        android:visibility="gone" />

    <com.module.playways.rank.room.view.TurnChangeCardView
        android:id="@+id/turn_change_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_130_dp"
        android:visibility="gone" />

    <com.module.playways.rank.room.gift.GiftBigAnimationViewGroup
        android:id="@+id/gift_big_animation_vg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/end_game_iv"
        android:layout_width="@dimen/view_324_dp"
        android:layout_height="@dimen/view_160_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_178_dp"
        android:src="@drawable/img_top_duizhanjieshu_bg"
        android:visibility="gone" />
</RelativeLayout>