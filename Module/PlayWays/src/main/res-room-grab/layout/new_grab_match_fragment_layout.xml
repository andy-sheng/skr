<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7088FF"
    android:orientation="vertical">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_match_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/view_125_dp"
        app:antiAlias="true"
        app:autoPlay="false"
        app:loopCount="-1" />

    <ImageView
        android:id="@+id/iv_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_125_dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pp_bj" />

    <com.common.view.ex.ExTextView
        android:id="@+id/iv_cancel_match"
        android:layout_width="@dimen/view_168_dp"
        android:layout_height="@dimen/view_68_dp"
        android:layout_alignTop="@+id/iv_bottom_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_d_30_dp"
        android:background="@drawable/pp_quxiaopipei"
        android:gravity="center"
        android:paddingBottom="@dimen/view_5_dp"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cancel_match"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_14_dp"
        android:gravity="center"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_16_dp"
        android:visibility="visible" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_matched_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_top"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_32_dp"

        android:text="已经匹配20s"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>