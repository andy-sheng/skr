<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3041">

    <com.common.view.ex.ExImageView
        android:id="@+id/game_create"
        android:layout_width="@dimen/view_145_dp"
        android:layout_height="@dimen/view_52_dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_32_dp"
        android:layout_marginBottom="@dimen/view_20_dp"
        android:background="@drawable/grab_create_room_icon" />

    <com.common.view.ex.ExImageView
        android:id="@+id/select_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:padding="@dimen/view_16_dp"
        android:src="@drawable/img_back" />

    <RelativeLayout
        android:id="@+id/friends_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_156_dp"
        android:layout_below="@id/game_create">

        <com.common.view.ex.ExTextView
            android:id="@+id/friends_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginRight="@dimen/view_20_dp"
            android:gravity="center"
            android:text="好友在玩"
            android:textColor="@color/white_trans_40"
            android:textSize="@dimen/textsize_14_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/more_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_alignTop="@+id/friends_tv"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/view_12_dp"
            android:paddingRight="@dimen/view_16_dp"
            android:text="更多"
            android:textColor="@color/white_trans_40"
            android:textSize="@dimen/textsize_14_dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignTop="@id/friends_tv"
            android:layout_marginTop="@dimen/view_10_dp"
            android:layout_toLeftOf="@id/friends_tv"
            android:background="@color/white_trans_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignTop="@id/friends_tv"
            android:layout_marginTop="@dimen/view_10_dp"
            android:layout_toLeftOf="@id/more_tv"
            android:layout_toRightOf="@+id/friends_tv"
            android:background="@color/white_trans_10" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friends_recycle"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/view_20_dp"
            android:layout_height="@dimen/view_136_dp"
            android:layout_below="@id/friends_tv"></android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="@dimen/view_100_dp"
            android:layout_height="@dimen/view_126_dp"
            android:layout_alignBottom="@id/friends_recycle"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/view_5_dp"
            android:background="@drawable/grab_friend_room_zhedang" />

    </RelativeLayout>


    <com.common.view.ex.ExTextView
        android:id="@+id/fast_begin_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_below="@+id/friends_area"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_marginBottom="@dimen/view_10_dp"
        android:gravity="center"
        android:text="快速开始"
        android:textColor="@color/white_trans_40"
        android:textSize="@dimen/textsize_14_dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignTop="@id/fast_begin_tv"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_toLeftOf="@id/fast_begin_tv"
        android:background="@color/white_trans_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignTop="@id/fast_begin_tv"
        android:layout_marginTop="@dimen/view_10_dp"
        android:layout_toRightOf="@+id/fast_begin_tv"
        android:background="@color/white_trans_10" />

    <com.module.playways.grab.createroom.view.SpecialSelectView
        android:id="@+id/special_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fast_begin_tv"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"></com.module.playways.grab.createroom.view.SpecialSelectView>

</RelativeLayout>