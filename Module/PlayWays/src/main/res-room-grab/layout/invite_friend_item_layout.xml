<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp"
    android:orientation="vertical">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/iv_friend_icon"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_44_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_invite"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_10_dp"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:bl_stroke_color="#3B4E79"
        app:bl_stroke_width="@dimen/view_1_67_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/iv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/iv_friend_icon"
        app:layout_constraintRight_toLeftOf="@id/iv_sex"
        app:layout_constraintTop_toTopOf="@id/iv_friend_icon" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_name"
        app:layout_constraintLeft_toRightOf="@id/iv_friend_name"
        app:layout_constraintRight_toLeftOf="@id/tv_invite"
        app:layout_constraintTop_toTopOf="@id/iv_friend_name" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_circle_state"
        android:layout_width="@dimen/view_10_dp"
        android:layout_height="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_8_dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_friend_name"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_name" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toRightOf="@id/tv_circle_state"
        app:layout_constraintTop_toBottomOf="@id/iv_friend_name" />

    <View
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:background="@color/black_trans_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>