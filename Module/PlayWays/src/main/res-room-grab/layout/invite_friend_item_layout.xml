<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp"
    android:orientation="vertical">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/iv_friend_icon"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_33_dp" />


    <com.common.view.ex.ExTextView
        android:id="@+id/tv_invite"
        android:layout_width="@dimen/view_65_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_37_dp"
        android:gravity="center"
        android:textSize="@dimen/textsize_14_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/iv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_8_dp"
        android:layout_marginTop="@dimen/view_15_dp"
        android:layout_marginRight="@dimen/view_8_dp"
        android:layout_toLeftOf="@id/tv_invite"
        android:layout_toRightOf="@+id/iv_friend_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_friend_name"
        android:layout_alignLeft="@+id/iv_friend_name"
        android:layout_marginTop="@dimen/view_2_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_circle_state"
            android:layout_width="@dimen/view_8_dp"
            android:layout_height="@dimen/view_8_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_5_dp"
            android:textColor="#7f0C2275"
            android:textSize="@dimen/textsize_12_dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="#D8D8D8" />
</RelativeLayout>