<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_28_dp"
        android:layout_height="@dimen/view_28_dp"
        android:layout_marginLeft="@dimen/view_8_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/lyric_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:gravity="left"
        android:text="沙漠骆驼好听"
        android:textColor="#364E7C"
        android:textSize="@dimen/textsize_18_dp" />

</RelativeLayout>