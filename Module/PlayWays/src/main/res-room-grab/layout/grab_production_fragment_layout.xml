<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sing_end_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353B6D">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/result_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_416_dp"
            android:layout_marginLeft="@dimen/view_16_dp"
            android:layout_marginTop="@dimen/view_110_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            app:bl_corners_radius="@dimen/view_16_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#465BC1">

            <com.common.view.ex.ExRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_434_dp"
                app:bl_corners_radius="@dimen/view_16_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="#566CD9">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_34_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_8_dp">

                    <com.zq.level.view.LevelStarProgressBar
                        android:id="@+id/level_progress"
                        android:layout_width="@dimen/view_140_dp"
                        android:layout_height="@dimen/view_34_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/level_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_20_dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/level_progress"
                        android:gravity="center"
                        android:text="钻石巨星5段"
                        android:textColor="@color/white_trans_60"
                        android:textSize="@dimen/textsize_14_dp" />

                </RelativeLayout>

                <com.common.view.ex.ExLinearLayout
                    android:id="@+id/result_total_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_82_dp"
                    android:layout_marginLeft="@dimen/view_16_dp"
                    android:layout_marginTop="@dimen/view_38_dp"
                    android:layout_marginRight="@dimen/view_16_dp"
                    android:orientation="horizontal"
                    app:bl_corners_radius="@dimen/view_8_dp"
                    app:bl_shape="rectangle"
                    app:bl_solid_color="@color/black_trans_20">

                    <RelativeLayout
                        android:layout_width="@dimen/view_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/view_10_dp"
                        android:paddingBottom="@dimen/view_6_dp">

                        <com.component.busilib.view.BitmapTextView
                            android:id="@+id/song_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:text_color="@color/white" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_marginTop="@dimen/view_16_dp"
                            android:layout_toRightOf="@id/song_num"
                            android:gravity="center"
                            android:text="首"
                            android:textColor="@color/white_trans_60"
                            android:textSize="@dimen/textsize_14_dp" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_18_dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="一唱到底"
                            android:textColor="@color/white_trans_60" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="@dimen/view_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/view_10_dp"
                        android:paddingBottom="@dimen/view_6_dp">

                        <com.component.busilib.view.BitmapTextView
                            android:id="@+id/song_end_per"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:text_color="@color/white" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_marginTop="@dimen/view_16_dp"
                            android:layout_toRightOf="@id/song_end_per"
                            android:gravity="center"
                            android:text="%"
                            android:textColor="@color/white_trans_60"
                            android:textSize="@dimen/textsize_14_dp" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_18_dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="成功率"
                            android:textColor="@color/white_trans_60" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/view_0_dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/view_10_dp"
                        android:paddingBottom="@dimen/view_6_dp">

                        <com.component.busilib.view.BitmapTextView
                            android:id="@+id/baodeng_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:text_color="@color/white" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_20_dp"
                            android:layout_marginTop="@dimen/view_16_dp"
                            android:layout_toRightOf="@id/baodeng_num"
                            android:gravity="center"
                            android:text="次"
                            android:textColor="@color/white_trans_60"
                            android:textSize="@dimen/textsize_14_dp" />

                        <com.common.view.ex.ExTextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/view_18_dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="获得爆灯"
                            android:textColor="@color/white_trans_60" />

                    </RelativeLayout>

                </com.common.view.ex.ExLinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/production_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/result_total_area"
                    android:layout_marginLeft="@dimen/view_16_dp"
                    android:layout_marginTop="@dimen/view_5_dp"
                    android:layout_marginRight="@dimen/view_16_dp"
                    android:layout_marginBottom="@dimen/view_25_dp"></android.support.v7.widget.RecyclerView>

            </com.common.view.ex.ExRelativeLayout>

        </com.common.view.ex.ExRelativeLayout>

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_308_dp"
            android:layout_height="@dimen/view_134_dp"
            android:layout_alignTop="@id/result_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-109dp"
            android:background="@drawable/ycdd_zhanji" />

        <com.zq.level.view.NormalLevelView2
            android:id="@+id/level_view"
            android:layout_width="@dimen/view_98_dp"
            android:layout_height="@dimen/view_85_dp"
            android:layout_alignTop="@id/result_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-120dp"
            levelView2:mainHeight2="@dimen/view_85_dp"
            levelView2:mainWidth2="@dimen/view_98_dp"
            levelView2:subBottom2="@dimen/view_4_dp"
            levelView2:subHeight2="@dimen/view_12_dp"
            levelView2:subWidth2="@dimen/view_22_dp" />

        <LinearLayout
            android:id="@+id/ll_bottom_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_45_dp"
            android:layout_below="@id/result_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_16_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.dialog.view.StrokeTextView
                    android:id="@+id/tv_back"
                    android:layout_width="@dimen/view_128_dp"
                    android:layout_height="@dimen/view_45_dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/red_button_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_6_dp"
                    android:text="返回"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_18_dp"
                    android:textStyle="bold"
                    app:borderColor="#cc5883" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.dialog.view.StrokeTextView
                    android:id="@+id/tv_again"
                    android:layout_width="@dimen/view_128_dp"
                    android:layout_height="@dimen/view_45_dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/yellow_button_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_6_dp"
                    android:text="再来一局"
                    android:textColor="#0C2275"
                    android:textSize="@dimen/textsize_18_dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>