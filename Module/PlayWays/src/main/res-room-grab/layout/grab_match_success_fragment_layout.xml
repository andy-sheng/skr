<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_ready_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_prepare"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_16_dp"
            android:background="@drawable/miedeng_daojishi_beijingban"
            android:gravity="center"
            android:text="10s"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_24_dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_prepare"
            android:layout_width="@dimen/view_206_dp"
            android:layout_height="@dimen/view_54_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_70_dp"
            android:background="@drawable/btn_pipeichenggong_normal" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/view_341_dp"
        android:layout_height="@dimen/view_331_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_155_dp"
        android:clipChildren="false">
        <ImageView
            android:layout_marginTop="@dimen/view_28_dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_pipeichenggong_bj2"
            android:layout_width="@dimen/view_280_dp"
            android:layout_height="wrap_content" />

        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/rl_icon1_root"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_96_dp"
            android:layout_centerHorizontal="true"
            app:bl_corners_radius="@dimen/view_45_dp"
            app:bl_solid_color="#F7D6DB"
            app:bl_stroke_color="#EF5E85"
            app:bl_stroke_width="@dimen/view_3_dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/view_3_dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sdv_icon1"
                android:layout_width="@dimen/view_84_dp"
                android:layout_height="@dimen/view_84_dp" />
        </com.common.view.ex.ExRelativeLayout>


        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/rl_icon2_root"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_96_dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_90_dp"
            app:bl_corners_radius="@dimen/view_45_dp"
            app:bl_solid_color="#F7D6DB"
            app:bl_stroke_color="#EF5E85"
            app:bl_stroke_width="@dimen/view_3_dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/view_3_dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sdv_icon2"
                android:layout_width="@dimen/view_84_dp"
                android:layout_height="@dimen/view_84_dp" />
        </com.common.view.ex.ExRelativeLayout>

        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/rl_icon3_root"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_96_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_90_dp"
            android:layout_marginRight="@dimen/view_49_dp"
            android:layout_marginBottom="@dimen/view_20_dp"
            app:bl_corners_radius="@dimen/view_45_dp"
            app:bl_solid_color="#F7D6DB"
            app:bl_stroke_color="#EF5E85"
            app:bl_stroke_width="@dimen/view_3_dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/view_3_dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sdv_icon3"
                android:layout_width="@dimen/view_84_dp"
                android:layout_height="@dimen/view_84_dp" />
        </com.common.view.ex.ExRelativeLayout>


        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/rl_icon4_root"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_96_dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/view_49_dp"
            android:layout_marginBottom="@dimen/view_20_dp"
            app:bl_corners_radius="@dimen/view_45_dp"
            app:bl_solid_color="#F7D6DB"
            app:bl_stroke_color="#EF5E85"
            app:bl_stroke_width="@dimen/view_3_dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/view_3_dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sdv_icon4"
                android:layout_width="@dimen/view_84_dp"
                android:layout_height="@dimen/view_84_dp" />
        </com.common.view.ex.ExRelativeLayout>

        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/rl_icon5_root"
            android:layout_marginTop="@dimen/view_90_dp"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_96_dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/view_49_dp"
            app:bl_corners_radius="@dimen/view_45_dp"
            app:bl_solid_color="#F7D6DB"
            app:bl_stroke_color="#EF5E85"
            app:bl_stroke_width="@dimen/view_3_dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/view_3_dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sdv_icon5"
                android:layout_width="@dimen/view_84_dp"
                android:layout_height="@dimen/view_84_dp"
                 />
        </com.common.view.ex.ExRelativeLayout>
    </RelativeLayout>


    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/vs_svga"
        android:layout_width="@dimen/view_180_dp"
        android:layout_height="@dimen/view_180_dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:antiAlias="true"
        app:clearsAfterStop="false"
        app:loopCount="1"
        app:source="vs.svga" />

    <com.opensource.svgaplayer.SVGAImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_250_dp"
        android:layout_marginTop="-102dp"
        android:scaleType="fitCenter"
        app:antiAlias="true"
        app:clearsAfterStop="false"
        app:loopCount="1"
        app:source="pipei_sucess.svga" />


</RelativeLayout>