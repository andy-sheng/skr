<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7088FF">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:padding="@dimen/view_16_dp"
        android:src="@drawable/grab_back" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_25_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_48_dp"
        android:gravity="center"
        android:text="创建房间"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_18_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/friends_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_164_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_80_dp"
        android:layout_marginRight="@dimen/view_16_dp">

        <com.common.view.ex.ExImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_138_dp"
            android:background="@drawable/haoyoufang" />

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_95_dp"
            android:layout_height="@dimen/view_50_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/view_24_dp"
            android:background="@drawable/create_room_type" />

    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/secret_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_148_dp"
        android:layout_below="@+id/friends_room"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp">

        <com.common.view.ex.ExImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_124_dp"
            android:background="@drawable/simifang" />

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_95_dp"
            android:layout_height="@dimen/view_50_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/view_24_dp"
            android:background="@drawable/create_room_type" />


    </com.common.view.ex.ExRelativeLayout>


    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/public_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_150_dp"
        android:layout_below="@id/secret_room"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp">

        <com.common.view.ex.ExImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_124_dp"
            android:background="@drawable/haohuafang" />

        <com.common.view.ex.ExImageView
            android:layout_width="@dimen/view_95_dp"
            android:layout_height="@dimen/view_50_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/view_24_dp"
            android:background="@drawable/create_room_type" />

    </com.common.view.ex.ExRelativeLayout>

</com.common.view.ex.ExRelativeLayout>