<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <com.module.playways.grab.room.top.GrabTopView
        android:id="@+id/grab_top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_38_dp" />

    <com.module.playways.grab.room.top.GrabPlayerRv2
        android:id="@+id/top_content_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/grab_top_view" />

    <com.module.playways.grab.room.top.GrabAudienceView
        android:id="@+id/grab_audience_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_102_dp"
        android:layout_marginRight="@dimen/view_24_dp" />

    <ImageView
        android:id="@+id/skip_guide_iv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_31_dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_24_dp"
        android:visibility="gone"
        android:background="@drawable/xinshou_tiaoguo"/>
</merge>