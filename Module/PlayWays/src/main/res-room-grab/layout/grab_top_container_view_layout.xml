<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">


    <RelativeLayout
        android:id="@+id/relativeLayout_icon_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_70_dp"
        android:layout_marginLeft="@dimen/view_16_dp">

        <com.module.playways.grab.room.top.GrabTopRv
            android:id="@+id/top_content_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            android:layout_toLeftOf="@+id/more_btn"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <com.common.view.ex.ExImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_12_dp"
            android:paddingLeft="@dimen/view_12_dp"
            android:paddingRight="@dimen/view_12_dp"
            android:scaleType="centerInside"
            app:src_unPressed_drawable="@drawable/more" />
    </RelativeLayout>


    <com.common.view.ex.ExTextView
        android:id="@+id/song_index_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_icon_container"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/view_30_dp"
        android:layout_marginTop="@dimen/view_6_dp"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp" />
</merge>