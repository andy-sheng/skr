<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <com.module.playways.grab.room.top.GrabTopView
        android:id="@+id/grab_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.module.playways.grab.room.top.GrabPlayerRv2
        android:layout_below="@+id/grab_top_view"
        android:id="@+id/top_content_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.module.playways.grab.room.top.GrabAudienceView
        android:layout_marginTop="@dimen/view_127_dp"
        android:layout_marginRight="@dimen/view_24_dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.common.view.ex.ExImageView
        android:layout_marginTop="@dimen/view_2_dp"
        android:layout_marginRight="@dimen/view_24_dp"
        android:visibility="visible"
        android:id="@+id/more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        app:src_unPressed_drawable="@drawable/yanchang_gengduo" />

    <com.common.view.ex.ExTextView
        android:visibility="gone"
        android:id="@+id/song_index_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_12_dp"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp" />
</merge>