<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_65_dp"
        android:background="@drawable/img_kaishipipei_bg">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/svga_match_bg"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:antiAlias="true"
                app:autoPlay="false"
                app:loopCount="-1" />

            <!--<com.module.playways.grab.room.view.WaveView-->
            <!--android:id="@+id/wave_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

            <com.common.view.ex.ExRelativeLayout
                android:id="@+id/rl_icon1_root"
                android:layout_width="@dimen/view_90_dp"
                android:layout_height="@dimen/view_96_dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:bl_corners_radius="@dimen/view_45_dp"
                app:bl_stroke_width="@dimen/view_3_dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_own_icon"
                    android:layout_width="@dimen/view_84_dp"
                    android:layout_height="@dimen/view_84_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_3_dp"
                    android:tag="icon_1" />
            </com.common.view.ex.ExRelativeLayout>
        </FrameLayout>

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_40_dp"
            android:gravity="center"
            android:text=""
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <!--<com.common.view.ex.ExTextView-->
        <!--android:layout_marginRight="@dimen/view_77_dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginBottom="@dimen/view_96_dp"-->
        <!--android:alpha="0.5"-->
        <!--android:layout_above="@+id/iv_cancel_match"-->
        <!--android:textSize="@dimen/textsize_12_dp"-->
        <!--android:textColor="#0C2275"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="——撕歌语录"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    </RelativeLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/iv_cancel_match"
        android:layout_width="@dimen/view_206_dp"
        android:layout_height="@dimen/view_54_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_39_dp"
        android:background="@drawable/img_btn_bg_yellow"
        android:gravity="center"
        android:paddingBottom="@dimen/view_5_dp"
        android:text="取消匹配"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_20_dp"
        android:textStyle="bold" />


    <com.common.view.ex.ExImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/view_318_dp"
        android:layout_height="@dimen/view_128_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_36_dp"
        android:background="@drawable/zhengzaipipei_head" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_matched_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_28_dp"
        android:layout_marginBottom="@dimen/view_32_dp"
        android:text="已经匹配20s"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:padding="@dimen/view_16_dp"
        android:src="@drawable/img_back" />
</RelativeLayout>