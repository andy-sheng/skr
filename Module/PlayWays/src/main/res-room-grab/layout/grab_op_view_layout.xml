<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/view_141_dp"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:id="@+id/grab_container"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_46_dp"
        android:layout_alignParentRight="true">

        <com.module.playways.grab.room.view.RoundRectangleView
            android:id="@+id/rrl_progress"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_46_dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <com.common.view.ex.ExImageView
            android:id="@+id/grab_iv"
            android:layout_width="@dimen/view_84_dp"
            android:layout_height="@dimen/view_40_dp"
            android:layout_marginLeft="@dimen/view_2_dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ycdd_qiangchang_bj"
            android:scaleType="centerInside"
            android:src="@drawable/xiangchang_1"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grab2_container"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_46_dp"
        android:layout_below="@+id/grab_container"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_20_dp"
        android:visibility="visible">

        <com.module.playways.grab.room.view.RoundRectangleView
            android:id="@+id/rrl2_progress"
            android:layout_width="@dimen/view_90_dp"
            android:layout_height="@dimen/view_46_dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />

        <com.common.view.ex.ExImageView
            android:id="@+id/grab2_iv"
            android:layout_width="@dimen/view_84_dp"
            android:layout_height="@dimen/view_40_dp"
            android:layout_marginLeft="@dimen/view_2_dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ycdd_tiaozha_bj"
            android:scaleType="centerInside"
            android:src="@drawable/xiangchang_1"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp" />
    </RelativeLayout>

    <!--爆灯-->
    <com.common.view.ex.ExImageView
        android:id="@+id/iv_burst"
        android:layout_width="@dimen/view_84_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentRight="true"
        android:text="2"
        app:bl_pressed_drawable="@drawable/ycdd_baodeng_anxia"
        app:bl_unPressed_drawable="@drawable/ycdd_baodeng" />

    <!--灭灯-->
    <com.common.view.ex.ExTextView
        android:id="@+id/iv_light_off"
        android:layout_width="@dimen/view_84_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_below="@+id/iv_burst"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_20_dp"
        android:paddingLeft="@dimen/view_32_dp"
        android:paddingRight="@dimen/view_12_dp"
        android:paddingBottom="@dimen/view_25_dp"
        android:textColor="#683030"
        android:textSize="@dimen/textsize_32_dp"
        android:textStyle="bold"
        android:visibility="visible" />

</merge>