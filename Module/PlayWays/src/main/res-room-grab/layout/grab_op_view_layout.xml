<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:layout_marginTop="@dimen/view_12_dp"
        android:id="@+id/rl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.module.playways.grab.room.view.RoundRectangleView
            android:id="@+id/rrl_progress"
            android:layout_height="@dimen/view_67_dp"
            android:layout_width="@dimen/view_128_dp"
            />

        <com.common.view.ex.ExTextView
            android:layout_marginTop="@dimen/view_5_dp"
            android:layout_marginLeft="@dimen/view_6_dp"
            android:background="@drawable/xiangchang_icon"

            android:layout_width="@dimen/view_141_dp"
            android:layout_height="@dimen/view_62_dp"
            android:paddingTop="@dimen/view_12_dp"
            android:paddingLeft="@dimen/view_28_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp" />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_30_dp"
        android:layout_alignRight="@+id/rl_container"
        android:layout_alignLeft="@+id/rl_container"
        android:src="@drawable/xiangchang_huatong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:id="@+id/iv_text"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_30_dp"
        android:layout_alignRight="@+id/rl_container"
        android:layout_alignLeft="@+id/rl_container"
        android:layout_alignTop="@id/rl_container"
        android:layout_alignBottom="@id/rl_container"
        />

</merge>