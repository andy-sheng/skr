<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/view_141_dp"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/grab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.module.playways.grab.room.view.RoundRectangleView
            android:id="@+id/rrl_progress"
            android:layout_width="@dimen/view_97_dp"
            android:layout_height="@dimen/view_60_dp"
            android:visibility="visible" />

        <com.common.view.ex.ExImageView
            android:src="@drawable/xiangchang_1"
            android:paddingRight="@dimen/view_13_dp"
            android:paddingBottom="@dimen/view_20_dp"
            android:scaleType="centerInside"
            android:id="@+id/iv_text"
            android:layout_width="@dimen/view_97_dp"
            android:layout_height="@dimen/view_60_dp"
            android:background="@drawable/xiangchang_bj"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp" />
    </RelativeLayout>

    <com.common.view.ex.ExImageView
        android:text="2"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_burst"
        android:layout_width="@dimen/view_102_dp"
        android:layout_height="@dimen/view_74_dp"
        />

    <com.common.view.ex.ExTextView
        android:textStyle="bold"
        android:textColor="#683030"
        android:paddingRight="@dimen/view_12_dp"
        android:textSize="@dimen/textsize_32_dp"
        android:paddingLeft="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_light_off"
        android:layout_width="@dimen/view_97_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_below="@+id/iv_burst"
        android:paddingBottom="@dimen/view_25_dp"
        android:background="@drawable/miedeng_bj"
        android:visibility="visible" />

</merge>