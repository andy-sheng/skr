<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.image.fresco.BaseImageView
        android:id="@+id/first_icon"
        android:layout_width="@dimen/view_24_dp"
        android:layout_height="@dimen/view_24_dp" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/second_icon"
        android:layout_width="@dimen/view_24_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_18_dp" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/third_icon"
        android:layout_width="@dimen/view_24_dp"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginLeft="@dimen/view_36_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_count"
        android:layout_width="@dimen/view_22_dp"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignLeft="@+id/third_icon"
        android:layout_alignTop="@+id/third_icon"
        android:layout_marginLeft="@dimen/view_1_dp"
        android:layout_marginTop="@dimen/view_1_dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        app:bl_corners_radius="@dimen/view_13_dp"
        app:bl_solid_color="@color/black_trans_30"
        android:textSize="@dimen/textsize_12_dp" />
</merge>