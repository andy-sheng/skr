<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/view_10_dp"
    android:background="#2E3041"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_92_dp">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_80_dp">
        <ImageView
            android:paddingBottom="@dimen/view_8_dp"
            android:id="@+id/iv_light"
            android:layout_marginLeft="@dimen/view_4_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/liangdeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_cur_light"
            android:layout_marginLeft="@dimen/view_2_dp"
            android:layout_toRightOf="@+id/iv_light"
            android:layout_centerVertical="true"
            android:text="3"
            android:textSize="@dimen/view_20_dp"
            android:textColor="#F5A623"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_total_light"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_cur_light"
            android:textSize="@dimen/view_20_dp"
            android:textColor="#B2B6D6"
            android:text="/6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_count_down"
            android:text="00:26"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#FFAA01"
            android:textSize="@dimen/textsize_24_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/view_24_dp"
            android:layout_centerVertical="true"
            android:background="@drawable/yanchang_gengduo"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>