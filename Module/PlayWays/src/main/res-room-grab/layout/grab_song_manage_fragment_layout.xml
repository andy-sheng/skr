<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_30"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_63_dp"
        android:background="#3F4153"
        android:orientation="vertical">

        <com.common.view.ex.ExImageView
            android:id="@+id/search_song_iv"
            android:layout_width="@dimen/view_22_dp"
            android:layout_height="@dimen/view_22_dp"
            android:layout_alignLeft="@+id/fl_song_list_container"
            android:layout_marginTop="@dimen/view_49_dp"
            android:background="@drawable/fangzhu_sousuotianjiagequ" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_selected_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fl_song_list_container"
            android:layout_marginTop="@dimen/view_50_dp"
            android:text="已点100首"
            android:textColor="#3cB2B6D6"
            android:textSize="@dimen/textsize_14_dp" />

        <com.common.view.ex.ExFrameLayout
            android:id="@+id/fl_song_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_20_dp"
            android:layout_marginTop="@dimen/view_81_dp"
            android:layout_marginRight="@dimen/view_20_dp"
            android:layout_marginBottom="@dimen/view_148_dp"
            app:bl_corners_radius="@dimen/view_8_dp"
            app:bl_solid_color="#3F4153"
            app:bl_stroke_color="#202239"
            app:bl_stroke_width="@dimen/view_2_dp">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </com.common.view.ex.ExFrameLayout>

        <com.common.view.ex.ExTextView
            android:paddingRight="@dimen/view_15_dp"
            android:drawableRight="@drawable/zhuanchang_shouqi"
            android:id="@+id/selected_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_42_dp"
            android:layout_alignLeft="@+id/fl_song_list_container"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/view_20_dp"
            android:layout_marginBottom="@dimen/view_79_dp"
            android:layout_toLeftOf="@+id/tv_finish"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_16_dp"
            android:text="经典回忆杀"
            android:textColor="@color/black_trans_70"
            android:textSize="@dimen/textsize_16_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="@dimen/view_60_dp"
            android:layout_height="@dimen/view_60_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/view_18_dp"
            android:layout_marginBottom="@dimen/view_71_dp"
            android:background="@drawable/fangzhu_shezhi_shouqi" />
    </RelativeLayout>
</FrameLayout>