<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.common.view.ex.ExTextView
        android:layout_gravity="center"
        app:bl_corners_radius="@dimen/view_40_dp"
        app:bl_stroke_color="@color/white"
        app:bl_stroke_width="@dimen/view_80_dp"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_10_dp" />

    <com.common.view.ex.ExTextView
        android:layout_gravity="center"
        app:bl_corners_radius="@dimen/view_30_dp"
        app:bl_stroke_color="@color/white"
        app:bl_stroke_width="@dimen/view_60_dp"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_10_dp" />

    <com.common.view.ex.ExTextView
        android:layout_gravity="center"
        app:bl_corners_radius="@dimen/view_30_dp"
        app:bl_solid_color="@color/white"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="@dimen/view_10_dp" />

    <com.module.playways.grab.room.view.RedCircleProgressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>