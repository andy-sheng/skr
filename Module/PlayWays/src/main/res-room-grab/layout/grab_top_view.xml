<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:BitmapTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_32_dp"
    android:layout_marginTop="@dimen/view_34_dp"
    android:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_change_room"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_31_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:background="@drawable/qiehuanmoshi_bj"
        android:gravity="center"
        android:paddingBottom="@dimen/view_4_dp"
        android:text="换房间"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExFrameLayout
        android:id="@+id/coin_area"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_32_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_toRightOf="@+id/tv_change_room"
        android:paddingLeft="@dimen/view_6_dp"
        android:paddingRight="@dimen/view_6_dp"
        BitmapTextView:bl_corners_radius="@dimen/view_16_dp"
        BitmapTextView:bl_solid_color="@color/black_trans_20">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_money_coin"
            android:layout_width="@dimen/view_14_dp"
            android:layout_height="@dimen/view_16_dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ycdd_daojishi_jinbi" />

        <com.component.busilib.view.BitmapTextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_18_dp"
            BitmapTextView:scale="0.5" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_coin_change"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:gravity="center"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_16_dp"
            android:visibility="gone" />

    </com.common.view.ex.ExFrameLayout>

    <com.common.view.ex.ExFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_32_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_toRightOf="@+id/coin_area"
        android:paddingLeft="@dimen/view_6_dp"
        android:paddingRight="@dimen/view_6_dp"
        BitmapTextView:bl_corners_radius="@dimen/view_16_dp"
        BitmapTextView:bl_solid_color="@color/black_trans_20">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_hz_icon"
            android:layout_width="@dimen/view_14_dp"
            android:layout_height="@dimen/view_16_dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/top_xiaohongzuan" />

        <com.component.busilib.view.BitmapTextView
            android:id="@+id/tv_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_18_dp"
            android:layout_toRightOf="@+id/tv_coin"
            BitmapTextView:scale="0.5" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_hz_change"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_22_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:gravity="center"
            android:textColor="#B2B6D6"
            android:textSize="@dimen/textsize_16_dp"
            android:visibility="gone" />
    </com.common.view.ex.ExFrameLayout>

    <!--<ImageView-->
    <!--android:id="@+id/iv_acc_disable"-->
    <!--android:layout_width="@dimen/view_12_dp"-->
    <!--android:layout_height="@dimen/view_12_dp"-->
    <!--android:layout_alignLeft="@+id/tv_acc"-->
    <!--android:layout_alignBottom="@+id/tv_acc"-->
    <!--android:background="@drawable/wubanzou" />-->

    <ImageView
        android:id="@+id/iv_voice_setting"
        android:layout_width="@dimen/view_27_dp"
        android:layout_height="@dimen/view_31_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_66_dp"
        android:background="@drawable/grab_acc_setting_icon" />
</merge>