<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_32_dp"
    android:layout_marginTop="@dimen/view_34_dp"
    android:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_change_room"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:gravity="center"
        android:text="换房间"
        android:textColor="#B2B6D6"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#3C3F57"
        app:bl_stroke_color="#202239"
        app:bl_stroke_width="@dimen/view_2_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_30_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_toRightOf="@+id/tv_change_room"
        android:drawablePadding="@dimen/view_10_dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/view_30_dp"
        android:paddingRight="@dimen/view_12_dp"
        android:textColor="#B2B6D6"
        android:textSize="@dimen/textsize_16_dp"
        app:bl_corners_radius="@dimen/view_15_dp"
        app:bl_solid_color="#202239" />

    <com.common.view.ex.ExImageView
        android:id="@+id/conin_change_iv"
        android:layout_width="@dimen/view_38_dp"
        android:layout_height="@dimen/view_38_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_7_dp"
        android:layout_toRightOf="@+id/tv_change_room"
        android:background="@drawable/jb_guangmang"
        android:visibility="gone" />

    <com.common.view.ex.ExImageView
        android:layout_width="@dimen/view_20_dp"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignLeft="@id/tv_coin"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:src="@drawable/money" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_acc_switch"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_58_dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="清唱模式"
        android:textColor="#B2B6D6"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#3C3F57"
        app:bl_stroke_color="#202239"
        app:bl_stroke_width="@dimen/view_2_dp" />

    <!--<ImageView-->
    <!--android:id="@+id/iv_acc_disable"-->
    <!--android:layout_width="@dimen/view_12_dp"-->
    <!--android:layout_height="@dimen/view_12_dp"-->
    <!--android:layout_alignLeft="@+id/tv_acc"-->
    <!--android:layout_alignBottom="@+id/tv_acc"-->
    <!--android:background="@drawable/wubanzou" />-->

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_coin_change"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_toRightOf="@id/tv_coin"
        android:gravity="center"
        android:textColor="#B2B6D6"
        android:textSize="@dimen/textsize_16_dp"
        android:visibility="gone" />
</merge>