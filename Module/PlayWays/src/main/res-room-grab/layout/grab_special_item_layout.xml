<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_120_dp"
    android:layout_marginBottom="@dimen/view_10_dp">

    <TextView
        android:id="@+id/special_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_20_dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_32_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/mask_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40_dp"
        app:bl_corners_bottomLeftRadius="@dimen/view_8_dp"
        app:bl_corners_bottomRightRadius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/white_trans_80"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/champain_iv"
        android:layout_width="@dimen/view_25_dp"
        android:layout_height="@dimen/view_25_dp"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:background="@drawable/gedan_paihangbang"
        app:layout_constraintBottom_toBottomOf="@id/mask_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/mask_iv" />

    <TextView
        android:id="@+id/rank_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:textColor="@color/black_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="@id/mask_iv"
        app:layout_constraintLeft_toRightOf="@id/champain_iv"
        app:layout_constraintTop_toTopOf="@id/mask_iv" />

    <com.module.playways.battle.songlist.view.BattleStarView
        android:id="@+id/star_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        app:layout_constraintBottom_toBottomOf="@id/mask_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mask_iv"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/lock_iv"
        android:layout_width="@dimen/view_22_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:background="@drawable/gedan_weijiesuo"
        app:layout_constraintBottom_toBottomOf="@id/mask_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mask_iv"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>