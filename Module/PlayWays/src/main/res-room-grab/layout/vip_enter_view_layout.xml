<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/view_34_dp"
    android:paddingRight="@dimen/view_38_dp">

    <com.common.view.ex.ExImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/fangjian_gaoduanwei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:layout_marginRight="@dimen/view_12_dp"
        app:layout_constraintRight_toLeftOf="@+id/name_tv"
        android:id="@+id/vip_level_iv"
        android:layout_width="@dimen/view_49_dp"
        android:layout_height="@dimen/view_42_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_22_dp"
        android:ellipsize="end"
        android:maxWidth="@dimen/view_80_dp"
        android:maxLines="1"
        android:text="芝麻是只猫"
        android:textColor="#FFFFC15B"
        android:textSize="@dimen/view_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/bg"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_5_dp"
        android:text="进入了房间"
        android:textColor="@color/white"
        android:textSize="@dimen/view_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/name_tv"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>