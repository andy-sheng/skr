<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/share_icon_iv"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_below="@id/share_icon_iv"
        android:layout_marginTop="@dimen/view_8_dp"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintLeft_toLeftOf="@id/share_icon_iv"
        app:layout_constraintRight_toRightOf="@id/share_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/share_icon_iv" />

</android.support.constraint.ConstraintLayout>