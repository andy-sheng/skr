<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/share_icon_iv"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_47_dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_below="@id/share_icon_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_8_dp"
        android:textColor="@color/white_trans_60"
        android:textStyle="bold" />

</RelativeLayout>