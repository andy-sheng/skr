<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF72AB">

    <ImageView
        android:layout_width="@dimen/view_115_dp"
        android:layout_height="@dimen/view_58_dp"
        android:layout_marginLeft="@dimen/view_32_dp"
        android:layout_marginBottom="@dimen/view_12_dp"
        android:background="@drawable/grab_icon"
        app:layout_constraintBottom_toTopOf="@id/recycler_bg"
        app:layout_constraintLeft_toLeftOf="@id/recycler_bg" />

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDrawable="@drawable/img_back"
        app:leftType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/transparent"
        app:titleBarColor="@color/transparent" />

    <com.common.view.ex.ExImageView
        android:id="@+id/recycler_bg"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_0_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_30_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        app:bl_corners_topLeftRadius="@dimen/view_16_dp"
        app:bl_corners_topRightRadius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/white"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar" />

    <ImageView
        android:id="@+id/create_room"
        android:layout_width="@dimen/view_110_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_marginBottom="@dimen/view_16_dp"
        android:background="@drawable/grab_create_room_icon"
        app:layout_constraintBottom_toTopOf="@id/recycler_bg"
        app:layout_constraintRight_toRightOf="@id/recycler_bg" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_0_dp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/recycler_bg"
        app:layout_constraintLeft_toLeftOf="@id/recycler_bg"
        app:layout_constraintRight_toRightOf="@id/recycler_bg"
        app:layout_constraintTop_toTopOf="@id/recycler_bg">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/classics_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srlAccentColor="@color/black_trans_80" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_20_dp"
            android:overScrollMode="never" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:srlAccentColor="@color/black_trans_80" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</android.support.constraint.ConstraintLayout>