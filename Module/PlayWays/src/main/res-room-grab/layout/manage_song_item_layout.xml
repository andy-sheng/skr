<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#2E3041"
    android:layout_height="@dimen/view_69_dp"
    android:orientation="vertical">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_20_dp"
        android:layout_toLeftOf="@+id/tv_manage"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white_trans_70"
        android:textSize="@dimen/textsize_18_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_auther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_song_name"
        android:layout_alignLeft="@+id/tv_song_name"
        android:layout_alignRight="@+id/tv_song_name"
        android:layout_marginTop="@dimen/view_2_dp"
        android:alpha="0.6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#B2B6D6"
        android:textSize="@dimen/textsize_12_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_manage"
        android:layout_width="@dimen/view_65_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:gravity="center"
        android:textSize="@dimen/textsize_16_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_enabled_drawable="#D36060"
        app:bl_enabled_textColor="@color/white"
        app:bl_stroke_color="#202239"
        app:bl_stroke_width="@dimen/view_2_dp"
        app:bl_unEnabled_drawable="#484B63"
        app:bl_unEnabled_textColor="#B2B6D6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@color/white_trans_10" />
</RelativeLayout>