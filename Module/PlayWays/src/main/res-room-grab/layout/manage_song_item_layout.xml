<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_69_dp"
    android:orientation="vertical">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp" />

    <TextView
        android:id="@+id/song_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignBottom="@id/tv_song_name"
        android:layout_toRightOf="@id/tv_song_name"
        android:gravity="center"
        android:paddingLeft="@dimen/view_6_dp"
        android:paddingRight="@dimen/view_6_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_14_dp"
        android:visibility="gone" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_manage"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#3B4E79" />
</RelativeLayout>