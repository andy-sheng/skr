<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:BitmapTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_200_dp"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_125_dp"
        android:layout_marginRight="@dimen/view_18_dp"
        android:background="@drawable/self_lyric_bg" />

    <com.module.playways.grab.room.view.CharmsView
        android:id="@+id/charms_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_bg"
        android:layout_alignRight="@id/iv_bg"
        android:layout_marginTop="@dimen/view_7_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/sv_lyric"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_180_dp"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_125_dp"
        android:layout_marginRight="@dimen/view_18_dp"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:paddingTop="@dimen/view_45_dp"
        android:paddingBottom="@dimen/view_10_dp"
        android:scrollbarThumbVertical="@drawable/chorus_self_sing_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/view_40_dp"
            android:paddingRight="@dimen/view_40_dp">

            <RelativeLayout
                android:id="@+id/first_tips_area"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_30_dp"
                android:layout_centerHorizontal="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/avatar_iv"
                    android:layout_width="@dimen/view_30_dp"
                    android:layout_height="@dimen/view_30_dp" />

                <TextView
                    android:id="@+id/first_tips_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/avatar_iv"
                    android:gravity="center"
                    android:textColor="#364E7C"
                    android:textSize="@dimen/view_18_dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_lyric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/first_tips_area"
                android:gravity="center"
                android:lineSpacingExtra="7dp"
                android:textColor="#364E7C"
                android:textSize="@dimen/textsize_18_dp" />

        </RelativeLayout>


    </ScrollView>

    <com.module.playways.grab.room.view.normal.view.SingCountDownView
        android:id="@+id/sing_count_down_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="@dimen/view_98_dp" />

</merge>