<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sing_end_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pipeichenggong_bj">

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/result_area"
        android:layout_width="@dimen/view_320_dp"
        android:layout_height="@dimen/view_356_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_133_dp"
        app:bl_corners_radius="@dimen/view_10_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#31335C"
        app:bl_stroke_color="#454776"
        app:bl_stroke_width="@dimen/view_4_dp">

        <com.common.view.ex.ExRelativeLayout
            android:id="@+id/grab_result_area"
            android:layout_width="@dimen/view_294_dp"
            android:layout_height="@dimen/view_234_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_92_dp"
            app:bl_corners_radius="@dimen/view_10_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="@color/black_trans_50"
            app:bl_stroke_color="@color/black_trans_70"
            app:bl_stroke_width="@dimen/view_2_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/level_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_66_dp"
                android:gravity="center"
                android:text="钻石巨星5段"
                android:textColor="@color/white_trans_50"
                android:textSize="@dimen/textsize_14_dp" />

            <com.zq.level.view.LevelStarProgressBar
                android:id="@+id/level_progress"
                android:layout_width="@dimen/view_140_dp"
                android:layout_height="@dimen/view_34_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_84_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_66_dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/view_24_dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.component.busilib.view.BitmapTextView
                        android:id="@+id/song_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_20_dp"
                        android:layout_marginTop="@dimen/view_16_dp"
                        android:layout_toRightOf="@id/song_num"
                        android:gravity="center"
                        android:text="首"
                        android:textColor="#F6B64B"
                        android:textSize="@dimen/textsize_14_dp" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_18_dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="一唱到底"
                        android:textColor="@color/white_trans_30" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/view_2_dp"
                    android:layout_height="@dimen/view_30_dp"
                    android:layout_marginTop="@dimen/view_4_dp"
                    android:background="@color/white_trans_10" />

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.component.busilib.view.BitmapTextView
                        android:id="@+id/song_end_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_20_dp"
                        android:layout_marginTop="@dimen/view_16_dp"
                        android:layout_toRightOf="@id/song_end_per"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="#F6B64B"
                        android:textSize="@dimen/textsize_14_dp" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_18_dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="成功率"
                        android:textColor="@color/white_trans_30" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/view_2_dp"
                    android:layout_height="@dimen/view_30_dp"
                    android:layout_marginTop="@dimen/view_4_dp"
                    android:background="@color/white_trans_10" />

                <RelativeLayout
                    android:layout_width="@dimen/view_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.component.busilib.view.BitmapTextView
                        android:id="@+id/baodeng_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_20_dp"
                        android:layout_marginTop="@dimen/view_16_dp"
                        android:layout_toRightOf="@id/baodeng_num"
                        android:gravity="center"
                        android:text="次"
                        android:textColor="#F6B64B"
                        android:textSize="@dimen/textsize_14_dp" />

                    <com.common.view.ex.ExTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_18_dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="获得爆灯"
                        android:textColor="@color/white_trans_30" />

                </RelativeLayout>

            </LinearLayout>

        </com.common.view.ex.ExRelativeLayout>


        <com.zq.level.view.NormalLevelView2
            android:id="@+id/level_view"
            android:layout_width="@dimen/view_98_dp"
            android:layout_height="@dimen/view_85_dp"
            android:layout_below="@+id/avatar_iv"
            android:layout_alignTop="@id/grab_result_area"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-28dp"
            levelView2:mainHeight2="@dimen/view_85_dp"
            levelView2:mainWidth2="@dimen/view_98_dp"
            levelView2:subBottom2="@dimen/view_4_dp"
            levelView2:subHeight2="@dimen/view_12_dp"
            levelView2:subWidth2="@dimen/view_22_dp"></com.zq.level.view.NormalLevelView2>


    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExImageView
        android:layout_width="@dimen/view_375_dp"
        android:layout_height="@dimen/view_192_dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ycdd_zhanji" />

    <LinearLayout
        android:id="@+id/ll_bottom_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/result_area"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_cancle"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:text="返回大厅"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_again"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_confirm"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:text="再来一局"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_share"
            android:layout_width="@dimen/view_91_dp"
            android:layout_height="@dimen/view_54_dp"
            android:layout_marginLeft="@dimen/view_7_dp"
            android:background="@drawable/zhanjijieguo_fenxiang"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>