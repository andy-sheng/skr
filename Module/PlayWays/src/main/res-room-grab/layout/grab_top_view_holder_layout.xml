<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <com.module.playways.grab.room.top.CircleAnimationView
        android:id="@+id/circle_animation_view"
        android:layout_marginTop="@dimen/view_d_9_dp"
        android:layout_marginRight="@dimen/view_d_9_dp"
        android:layout_marginLeft="@dimen/view_d_9_dp"
        android:layout_marginBottom="@dimen/view_d_9_dp"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_alignBottom="@+id/avatar_iv"
        android:layout_alignLeft="@+id/avatar_iv"
        android:layout_alignRight="@+id/avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_36_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_11_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/flag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/xiangchang_flag" />

    <com.common.view.ex.ExTextView
        android:visibility="gone"
        app:bl_corners_radius="@dimen/view_9_dp"
        app:bl_solid_color="#747474"
        android:textColor="@color/white_trans_70"
        android:gravity="center"
        android:textSize="@dimen/textsize_9_dp"
        android:text="离线"
        android:id="@+id/leave_iv"
        android:layout_width="@dimen/view_35_dp"
        android:layout_height="@dimen/view_18_dp"
        android:layout_below="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-4dp"
         />
</merge>