<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:speaking="http://schemas.android.com/apk/res-auto"
    xmlns:avatarView="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.RelativeLayout">

    <com.module.playways.grab.room.top.CircleAnimationView
        android:id="@+id/circle_animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/avatar_iv"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_alignRight="@+id/avatar_iv"
        android:layout_alignBottom="@+id/avatar_iv"
        android:layout_marginLeft="@dimen/view_d_5_dp"
        android:layout_marginTop="@dimen/view_d_5_dp"
        android:layout_marginRight="@dimen/view_d_5_dp"
        android:layout_marginBottom="@dimen/view_d_5_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_icon_bg"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_36_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_5_dp"
        app:bl_corners_radius="@dimen/view_20_dp"
        app:bl_solid_color="#5C67C1"
        app:bl_stroke_color="#7E8AE6"
        app:bl_stroke_width="@dimen/view_2_dp" />

    <com.component.busilib.view.AvatarView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_36_dp"
        android:layout_height="@dimen/view_36_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_5_dp"
        avatarView:borderColor="@color/white"
        avatarView:borderWidth="@dimen/view_2_dp"/>

    <com.common.view.ex.ExImageView
        android:id="@+id/owner_icon_iv"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_alignBottom="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_d_8_dp"
        android:background="@drawable/ycdi_fangzhubiaoqian"
        android:visibility="gone" />

    <com.module.playways.grab.room.top.SpeakingTipsAnimationView
        android:id="@+id/speaker_animation_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/avatar_iv"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="-7dp"
        speaking:animationtype="speak"/>

    <com.common.view.ex.ExImageView
        android:id="@+id/flag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_d_8_dp"
        android:src="@drawable/ycdd_biaoqian_qiangchang"
        android:visibility="visible" />
</merge>