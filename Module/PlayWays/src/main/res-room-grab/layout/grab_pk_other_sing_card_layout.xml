<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:BitmapTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/pk_other_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_194_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_125_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/grab_pk_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/left_iv"
                android:layout_width="@dimen/view_90_dp"
                android:layout_height="@dimen/view_90_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_32_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/left_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_24_dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/left_iv"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_10_dp"
                android:paddingRight="@dimen/view_10_dp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/view_24_dp"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_14_dp"
                app:bl_corners_radius="@dimen/view_12_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="@color/black_trans_20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/right_iv"
                android:layout_width="@dimen/view_90_dp"
                android:layout_height="@dimen/view_90_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_32_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/right_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_24_dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/right_iv"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_10_dp"
                android:paddingRight="@dimen/view_10_dp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/view_24_dp"
                android:textColor="@color/white_trans_80"
                android:textSize="@dimen/textsize_14_dp"
                app:bl_corners_radius="@dimen/view_12_dp"
                app:bl_shape="rectangle"
                app:bl_solid_color="@color/black_trans_20" />

        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="@dimen/view_144_dp"
        android:layout_height="@dimen/view_67_dp"
        android:layout_alignTop="@id/chorus_other_area"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginTop="-34dp"
        android:background="@drawable/ycdd_daojishi_pk" />

    <com.common.view.countdown.CircleCountDownView
        android:id="@+id/circle_count_down_view"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_60_dp"
        android:layout_alignLeft="@+id/iv_tag"
        android:layout_alignTop="@+id/iv_tag"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:layout_marginTop="@dimen/view_3_dp"
        app:inner_color="#FFC15B"
        app:inner_stroke_raduis="@dimen/view_24_dp"
        app:inner_stroke_width="@dimen/view_4_dp" />

    <FrameLayout
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignLeft="@+id/iv_tag"
        android:layout_alignTop="@+id/iv_tag"
        android:layout_marginLeft="@dimen/view_6_dp"
        android:layout_marginTop="@dimen/view_12_dp">

        <com.component.busilib.view.BitmapTextView
            android:id="@+id/count_down_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            BitmapTextView:has_shadow="true" />
    </FrameLayout>

</merge>