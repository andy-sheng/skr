<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_88_dp"
    android:layout_marginTop="@dimen/view_8_dp"
    android:layout_marginBottom="@dimen/view_8_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/special_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginLeft="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_10_dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_24_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/introduction_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_alignLeft="@id/special_tv"
        android:layout_below="@id/special_tv"
        android:gravity="left|center_vertical"
        android:textColor="#b3E8E8E8"
        android:textSize="@dimen/textsize_14_dp" />
    
    <com.common.view.ex.ExImageView
        android:id="@+id/special_iv"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_marginRight="@dimen/view_12_dp" />
    

</RelativeLayout>