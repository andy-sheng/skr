<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:BitmapTextView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_194_dp"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_125_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/grab_chorus_bg" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/left_sing_svga"
        android:layout_width="@dimen/view_360_dp"
        android:layout_height="@dimen/view_360_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_22_dp"
        android:visibility="gone"
        app:antiAlias="true"
        app:autoPlay="false"
        app:loopCount="0" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/right_sing_svga"
        android:layout_width="@dimen/view_360_dp"
        android:layout_height="@dimen/view_360_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_22_dp"
