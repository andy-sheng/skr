<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/challenge_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grab_challenge_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challenging_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_22_dp"
        android:text="星际挑战中"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/view_12_dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/challenge_bg_iv"
        app:layout_constraintTop_toTopOf="@+id/challenge_bg_iv" />


    <TextView
        android:id="@+id/challeng_star_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_18_dp"
        android:drawableRight="@drawable/grab_challenge_star"
        android:drawablePadding="@dimen/view_10_dp"
        android:text="评价:3"
        android:textColor="@color/white"
        android:textSize="@dimen/view_12_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/challenge_bg_iv"
        app:layout_constraintRight_toRightOf="@+id/challenge_bg_iv"
        app:layout_constraintTop_toTopOf="@+id/challenge_bg_iv" />

</android.support.constraint.ConstraintLayout>