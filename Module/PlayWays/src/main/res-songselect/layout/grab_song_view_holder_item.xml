<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/song_select_tv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:gravity="center"
        android:text="添加"
        android:textColor="#3B4E79"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFC15B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="有多少爱可以重来"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/song_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_8_dp"
        android:paddingRight="@dimen/view_8_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_10_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/song_name_tv"
        app:layout_constraintLeft_toRightOf="@id/song_name_tv"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toTopOf="@id/song_name_tv" />

    <TextView
        android:id="@+id/song_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/song_name_tv"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:background="@color/white_trans_10"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>