<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/place_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_248_dp"
        android:layout_above="@id/place_bottom_view"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginRight="@dimen/view_12_dp"
        android:background="@drawable/common_dialog_bg">

        <com.common.view.ex.NoLeakEditText
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_48_dp"
            android:layout_marginLeft="@dimen/view_25_dp"
            android:layout_marginTop="@dimen/view_35_dp"
            android:layout_marginRight="@dimen/view_25_dp"
            android:background="@drawable/edit_info_single_input_bg"
            android:gravity="center_vertical"
            android:hint="歌曲名"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="@dimen/view_15_dp"
            android:paddingRight="@dimen/view_40_dp"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="#4c3B4E79"
            android:textCursorDrawable="@drawable/login_edit_cursor_color"
            android:textSize="@dimen/view_18_dp" />

        <com.common.view.ex.NoLeakEditText
            android:id="@+id/song_singer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_48_dp"
            android:layout_below="@id/song_name"
            android:layout_marginLeft="@dimen/view_25_dp"
            android:layout_marginTop="@dimen/view_25_dp"
            android:layout_marginRight="@dimen/view_25_dp"
            android:background="@drawable/edit_info_single_input_bg"
            android:gravity="center_vertical"
            android:hint="歌手名"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="@dimen/view_15_dp"
            android:paddingRight="@dimen/view_40_dp"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="#4c3B4E79"
            android:textCursorDrawable="@drawable/login_edit_cursor_color"
            android:textSize="@dimen/view_18_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/view_24_dp"
            android:layout_marginRight="@dimen/view_24_dp"
            android:layout_marginBottom="@dimen/view_25_dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_45_dp"
                android:layout_weight="1">

                <com.dialog.view.StrokeTextView
                    android:id="@+id/cancel_tv"
                    android:layout_width="@dimen/view_138_dp"
                    android:layout_height="@dimen/view_45_dp"
                    android:background="@drawable/red_button_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_6_dp"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_18_dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/view_24_dp"
                android:layout_height="@dimen/view_45_dp" />

            <RelativeLayout
                android:layout_width="@dimen/view_0_dp"
                android:layout_height="@dimen/view_45_dp"
                android:layout_weight="1">


                <com.dialog.view.StrokeTextView
                    android:id="@+id/confirm_tv"
                    android:layout_width="@dimen/view_138_dp"
                    android:layout_height="@dimen/view_45_dp"
                    android:background="@drawable/yellow_button_icon"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_6_dp"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_18_dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/place_top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container"
        android:background="@color/transparent" />

</RelativeLayout>