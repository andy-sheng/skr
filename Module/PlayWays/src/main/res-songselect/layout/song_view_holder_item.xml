<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_72_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/song_select_tv"
        android:layout_width="@dimen/view_58_dp"
        android:layout_height="@dimen/view_33_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:gravity="center"
        android:text="演唱"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFF7BB"
        app:bl_stroke_color="#0C2275"
        app:bl_stroke_width="@dimen/view_2_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="有多少爱可以重来"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/song_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/song_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/song_name_tv"
        app:layout_constraintRight_toLeftOf="@id/song_select_tv"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />


</android.support.constraint.ConstraintLayout>