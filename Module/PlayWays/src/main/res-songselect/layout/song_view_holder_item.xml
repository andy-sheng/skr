<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_76_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/song_cover_iv"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_22_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_select_tv"
        android:layout_width="@dimen/view_58_dp"
        android:layout_height="@dimen/view_33_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginBottom="@dimen/view_7_dp"
        android:gravity="center"
        android:text="演唱"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_8_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFF7BB"
        app:bl_stroke_color="#0C2275"
        app:bl_stroke_width="@dimen/view_2_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignTop="@+id/song_cover_iv"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_toLeftOf="@+id/song_select_tv"
        android:layout_toRightOf="@+id/song_cover_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="有多少爱可以重来"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_owner_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_17_dp"
        android:layout_below="@+id/song_name_tv"
        android:layout_alignLeft="@+id/song_name_tv"
        android:layout_alignRight="@+id/song_name_tv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="迪克牛仔"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp" />


</RelativeLayout>