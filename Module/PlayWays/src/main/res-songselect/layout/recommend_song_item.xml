<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp"
    android:orientation="vertical">

    <com.common.view.ex.ExTextView
        android:id="@+id/select_tv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_14_dp"
        android:gravity="center"
        android:text="点歌"
        android:textColor="#ff3b4e79"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#FFC15B"
        app:bl_stroke_color="#3B4E79"
        app:bl_stroke_width="@dimen/view_2_dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/select_tv">

        <com.common.view.ex.ExTextView
            android:id="@+id/song_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_10_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="@dimen/textsize_16_dp" />

        <com.common.view.ex.ExTextView
            android:id="@+id/song_tag"
            android:layout_width="@dimen/view_34_dp"
            android:layout_height="@dimen/view_16_dp"
            android:layout_alignTop="@+id/song_name_tv"
            android:layout_marginLeft="@dimen/view_3_dp"
            android:layout_marginTop="@dimen/view_3_dp"
            android:layout_toRightOf="@+id/song_name_tv"
            android:gravity="center"
            android:textColor="@color/white_trans_80"
            android:textSize="@dimen/textsize_10_dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_trans_20" />
</RelativeLayout>