<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp"
    android:orientation="vertical">

    <com.common.view.ex.ExTextView
        android:id="@+id/select_tv"
        android:layout_width="@dimen/view_60_dp"
        android:layout_height="@dimen/view_32_dp"
        android:layout_marginRight="@dimen/view_14_dp"
        android:background="@drawable/recommend_select_bg"
        android:gravity="center"
        android:text="点歌"
        android:textColor="#ff3b4e79"
        android:textSize="@dimen/textsize_14_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/textsize_16_dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/song_desc"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.common.view.ex.ExTextView
        android:id="@+id/song_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_16_dp"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/view_8_dp"
        android:paddingRight="@dimen/view_8_dp"
        android:textColor="@color/white_trans_80"
        android:textSize="@dimen/textsize_10_dp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/song_name_tv"
        app:layout_constraintLeft_toRightOf="@id/song_name_tv"
        app:layout_constraintRight_toLeftOf="@id/select_tv"
        app:layout_constraintTop_toTopOf="@id/song_name_tv" />

    <TextView
        android:id="@+id/song_desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_18_dp"
        android:layout_marginLeft="@dimen/view_4_dp"
        android:layout_marginTop="@dimen/view_4_dp"
        android:gravity="center"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/song_name_tv"
        app:layout_constraintTop_toBottomOf="@id/song_name_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_trans_20"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>