<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_188_dp"
    android:layout_marginLeft="@dimen/view_8_dp"
    android:layout_marginRight="@dimen/view_8_dp"
    android:layout_marginTop="@dimen/view_12_dp"
    android:layout_marginBottom="@dimen/view_12_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/record_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/lock_iv"
        android:layout_width="@dimen/view_22_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_marginTop="@dimen/view_60_dp"
        android:background="@drawable/gedan_weijiesuo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.common.view.ex.ExImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_62_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:bl_shape="rectangle"
        app:bl_solid_color="#99121212"
        app:bl_corners_bottomLeftRadius="@dimen/view_8_dp"
        app:bl_corners_bottomRightRadius="@dimen/view_8_dp"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="@dimen/view_0_dp"
        android:layout_height="@dimen/view_16_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/view_32_dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="只爱五月天"
        android:gravity="center"
        android:layout_marginTop="@dimen/view_8_dp"
        android:textSize="@dimen/textsize_14_dp"
        android:textColor="@color/white"/>

    <com.module.playways.battle.songlist.view.BattleStarView
        android:id="@+id/star_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_marginTop="@dimen/view_6_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/view_10_dp"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>