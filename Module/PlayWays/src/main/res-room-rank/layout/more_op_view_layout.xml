<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_15_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/voice_audition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/voice_audition_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/tiaojieyinliang"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="音量调节"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_1_dp"
                android:layout_alignParentBottom="true"
                android:background="#2E3041" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice_control_btn_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/voice_control_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/soundoff"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="关闭声音"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_1_dp"
                android:layout_alignParentBottom="true"
                android:background="#2E3041" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game_guide_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/game_guide_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/grab_game_role"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="比赛规则"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_1_dp"
                android:layout_alignParentBottom="true"
                android:background="#2E3041" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quit_btn_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_50_dp">

            <com.common.view.ex.ExTextView
                android:id="@+id/quit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/view_10_dp"
                android:layout_marginRight="@dimen/view_10_dp"
                android:drawableLeft="@drawable/quitroom"
                android:drawablePadding="@dimen/view_5_dp"
                android:gravity="center"
                android:text="退出游戏"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16_dp" />


        </RelativeLayout>


    </LinearLayout>
</merge>