<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <!--这里面是软键盘弹出时 需要上移的布局-->

    <RelativeLayout
        android:id="@+id/emoji_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right">

        <com.common.view.ex.ExImageView
            android:id="@+id/emoji1_btn"
            android:layout_width="@dimen/view_39_dp"
            android:layout_height="@dimen/view_35_dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_10_dp"
            android:scaleType="centerInside"
            app:src_unPressed_drawable="@drawable/biaoqing" />

        <com.common.view.ex.ExImageView
            android:id="@+id/emoji2_btn"
            android:layout_width="@dimen/view_36_dp"
            android:layout_height="@dimen/view_35_dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_10_dp"
            android:layout_toRightOf="@id/emoji1_btn"
            android:scaleType="fitXY"
            app:src_unPressed_drawable="@drawable/yichangdaodi_liwu" />

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_room_manage"
            android:layout_width="@dimen/view_40_dp"
            android:layout_height="@dimen/view_40_dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_10_dp"
            android:layout_toRightOf="@id/emoji2_btn"
            android:scaleType="center"
            android:src="@drawable/ycdd_fangzhu"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_20_dp"
            app:bl_shape="oval"
            app:bl_solid_color="#FFC15B" />

    </RelativeLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/show_input_container_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_32_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_10_dp"
        android:layout_marginRight="@dimen/view_23_dp"
        android:layout_toLeftOf="@+id/emoji_area"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/view_75_dp"
        android:paddingRight="@dimen/view_5_dp"
        android:singleLine="true"
        android:text="夸赞是一种美德"
        android:textColor="@color/white_trans_30"
        android:textSize="@dimen/textsize_16_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_solid_color="#5B72E8" />

    <com.module.playways.grab.room.bottom.SpeakingDotAnimationView
        android:id="@+id/speaking_dot_animation_view"
        android:layout_width="@dimen/view_90_dp"
        android:layout_height="@dimen/view_38_dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/quick_btn"
        android:visibility="gone" />

    <com.common.view.ex.ExTextView
        android:id="@+id/quick_btn"
        android:layout_width="@dimen/view_68_dp"
        android:layout_height="@dimen/view_28_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:drawableRight="@drawable/kuaijiehuifu_fang"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="@dimen/view_12_dp"
        android:text="快捷"
        android:textColor="#333B7B"
        android:textSize="@dimen/textsize_14_dp"
        app:bl_corners_radius="@dimen/view_15_dp"
        app:bl_solid_color="#68CCFF" />


</merge>