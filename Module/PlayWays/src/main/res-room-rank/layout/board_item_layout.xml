<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:levelView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_80_dp"
    android:background="#F9F4F1"
    android:orientation="vertical">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_rank"
        android:layout_width="@dimen/view_40_dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_18_dp"
        android:gravity="center"
        android:textColor="#b30C2275"
        android:textSize="@dimen/textsize_16_dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_icon"
        android:layout_width="@dimen/view_48_dp"
        android:layout_height="@dimen/view_48_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_70_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_19_dp"
        android:layout_marginTop="@dimen/view_17_dp"
        android:layout_toRightOf="@+id/sdv_icon"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_segment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_19_dp"
        android:layout_marginBottom="@dimen/view_18_dp"
        android:layout_toRightOf="@+id/sdv_icon"
        android:textColor="#800C2275"
        android:textSize="@dimen/textsize_12_dp" />

    <com.zq.level.view.NormalLevelView
        android:id="@+id/level_view"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_50_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_28_dp"
        levelView:largeStar="@dimen/view_8_dp"
        levelView:mainHeight="@dimen/view_38_dp"
        levelView:mainWidth="@dimen/view_44_dp"
        levelView:normalStar="@dimen/view_7_dp"
        levelView:starDiffH="@dimen/view_3_dp"
        levelView:starTotalWidth="@dimen/view_44_dp"
        levelView:subHeight="@dimen/view_9_dp"
        levelView:subWidth="@dimen/view_9_dp"
        levelView:textColor="#0C2275"></com.zq.level.view.NormalLevelView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignParentBottom="true"
        android:background="#E6E2DF" />
</RelativeLayout>