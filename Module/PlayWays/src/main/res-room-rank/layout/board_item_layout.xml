<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/view_80_dp">

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_rank"
        android:text="3"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_20_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_icon"
        android:layout_marginLeft="@dimen/view_42_dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/view_42_dp"
        android:layout_height="@dimen/view_42_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/sdv_icon"
        android:layout_marginTop="@dimen/view_25_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_segment"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/sdv_icon"
        android:layout_marginBottom="@dimen/view_15_dp"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_star"
        android:layout_centerVertical="true"
        android:text="X12"
        android:layout_marginRight="@dimen/view_25_dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.common.view.ex.ExImageView
        android:background="@drawable/paihangbang_xingxing"
        android:layout_marginRight="@dimen/view_5_dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>