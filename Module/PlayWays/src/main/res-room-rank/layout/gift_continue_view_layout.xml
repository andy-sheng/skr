<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/info_container"
        android:layout_width="@dimen/view_191_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_marginTop="@dimen/view_5_dp"
        app:bl_corners_radius="@dimen/view_16_dp"
        app:bl_shape="rectangle"
        app:bl_solid_color="#FFED61">

        <com.common.image.fresco.BaseImageView
            android:id="@+id/send_avatar_iv"
            android:layout_width="@dimen/view_28_dp"
            android:layout_height="@dimen/view_28_dp"
            android:layout_centerVertical="true" />

        <com.common.view.ex.ExTextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_2_dp"
            android:layout_toRightOf="@+id/send_avatar_iv"
            android:ellipsize="middle"
            android:gravity="left"
            android:maxWidth="@dimen/view_98_dp"
            android:text="金三字元宝送出"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_14_dp" />

    </com.common.view.ex.ExRelativeLayout>

    <com.common.image.fresco.BaseImageView
        android:id="@+id/gift_img_iv"
        android:layout_width="@dimen/view_35_dp"
        android:layout_height="@dimen/view_35_dp"
        android:layout_marginLeft="@dimen/view_145_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/gift_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_3_dp"
        android:layout_marginTop="@dimen/view_3_dp"
        android:layout_marginRight="@dimen/view_10_dp"
        android:layout_toRightOf="@+id/info_container"
        android:text="X3"
        android:textColor="#FFE36E"
        android:textSize="@dimen/textsize_16_dp" />
</merge>