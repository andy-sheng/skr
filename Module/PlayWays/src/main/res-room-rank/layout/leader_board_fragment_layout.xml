<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:background="#FF256D"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_292_dp">
        
        <com.common.view.ex.ExTextView
            app:bl_stroke_color="#0C2275"
            app:bl_stroke_width="@dimen/view_6_dp"
            app:bl_corners_topRightRadius="@dimen/view_9_dp"
            app:bl_corners_topLeftRadius="@dimen/view_9_dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/view_138_dp"
            android:layout_height="207.3dp" />

        <com.common.view.ex.ExRelativeLayout

            app:bl_stroke_color="#0C2275"
            app:bl_stroke_width="@dimen/view_3_dp"
            app:bl_corners_topRightRadius="@dimen/view_9_dp"
            app:bl_corners_topLeftRadius="@dimen/view_9_dp"
            android:layout_marginLeft="@dimen/view_16_dp"
            android:layout_marginRight="@dimen/view_16_dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_192_dp">

            <com.common.view.ex.ExFrameLayout
                android:layout_marginTop="1.5dp"
                android:layout_marginLeft="1.3dp"
                app:bl_stroke_width="@dimen/view_2_dp"
                app:bl_solid_color="#FF8F10"
                app:bl_corners_topRightRadius="@dimen/view_9_dp"
                app:bl_corners_topLeftRadius="@dimen/view_9_dp"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/view_109_dp"
                android:layout_height="@dimen/view_192_dp">

                <com.common.view.ex.ExRelativeLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/sdv_right_champain_icon"
                        android:layout_marginTop="@dimen/view_28_dp"
                        android:layout_width="@dimen/view_58_dp"
                        android:layout_height="@dimen/view_58_dp" />

                    <ImageView
                        android:background="@drawable/ic_medal3_normal"
                        android:id="@+id/iv_rank_left"
                        android:layout_marginTop="@dimen/view_12_dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/view_26_dp"
                        android:layout_height="@dimen/view_26_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/tv_right_chanpain_name"
                        android:layout_marginTop="@dimen/view_11_dp"
                        android:layout_below="@+id/sdv_right_champain_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/ll_right_champain"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/view_7_dp"
                        android:layout_below="@+id/tv_right_chanpain_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/view_20_dp"
                            android:layout_height="@dimen/view_20_dp" />

                        <TextView
                            android:id="@+id/tv_right_chanpian_start"
                            android:textSize="@dimen/textsize_14_dp"
                            android:textColor="#0C2275"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_right_segment_name"
                        android:alpha="0.4"
                        android:textColor="#0C2275"
                        android:layout_marginTop="@dimen/view_2_dp"
                        android:layout_below="@+id/ll_right_champain"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.common.view.ex.ExRelativeLayout>
            </com.common.view.ex.ExFrameLayout>

            <com.common.view.ex.ExFrameLayout
                app:bl_solid_color="#CEDCE4"
                app:bl_stroke_width="@dimen/view_3_dp"
                app:bl_corners_topRightRadius="@dimen/view_9_dp"
                app:bl_corners_topLeftRadius="@dimen/view_9_dp"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/view_109_dp"
                android:layout_height="@dimen/view_192_dp">

                <com.common.view.ex.ExRelativeLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/sdv_left_champain_icon"
                        android:layout_marginTop="@dimen/view_28_dp"
                        android:layout_width="@dimen/view_58_dp"
                        android:layout_height="@dimen/view_58_dp" />

                    <ImageView
                        android:background="@drawable/ic_medal2_normal"
                        android:id="@+id/iv_rank_right"
                        android:layout_marginTop="@dimen/view_12_dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/view_26_dp"
                        android:layout_height="@dimen/view_26_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/tv_left_chanpain_name"
                        android:layout_marginTop="@dimen/view_11_dp"
                        android:layout_below="@+id/sdv_left_champain_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/ll_left_champain"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/view_7_dp"
                        android:layout_below="@+id/tv_left_chanpain_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/ic_dialog_normal"
                            android:layout_width="@dimen/view_20_dp"
                            android:layout_height="@dimen/view_20_dp" />

                        <TextView
                            android:id="@+id/tv_left_chanpian_start"
                            android:textSize="@dimen/textsize_14_dp"
                            android:textColor="#0C2275"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_left_segment_name"
                        android:alpha="0.4"
                        android:textColor="#0C2275"
                        android:layout_marginTop="@dimen/view_2_dp"
                        android:layout_below="@+id/ll_left_champain"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.common.view.ex.ExRelativeLayout>
            </com.common.view.ex.ExFrameLayout>

        </com.common.view.ex.ExRelativeLayout>


            <com.common.view.ex.ExRelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:bl_stroke_color="@color/transparent"
                app:bl_stroke_width="@dimen/view_3_dp"
                app:bl_corners_topRightRadius="@dimen/view_9_dp"
                app:bl_corners_topLeftRadius="@dimen/view_9_dp"
                app:bl_solid_color="#FFED61"
                android:layout_width="@dimen/view_135_dp"
                android:layout_height="@dimen/view_206_dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/sdv_champain_icon"
                    android:layout_marginTop="@dimen/view_34_dp"
                    android:layout_width="@dimen/view_77_dp"
                    android:layout_height="@dimen/view_77_dp" />

                <ImageView
                    android:background="@drawable/ic_medal1_normal"
                    android:id="@+id/iv_rank"
                    android:layout_marginTop="@dimen/view_12_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/view_32_dp"
                    android:layout_height="@dimen/view_32_dp" />

                <com.common.view.ex.ExTextView
                    android:id="@+id/tv_chanpain_name"
                    android:layout_marginTop="@dimen/view_11_dp"
                    android:layout_below="@+id/sdv_champain_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_champain"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/view_7_dp"
                    android:layout_below="@+id/tv_chanpain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ic_dialog_normal"
                        android:layout_width="@dimen/view_20_dp"
                        android:layout_height="@dimen/view_20_dp" />

                    <TextView
                        android:id="@+id/tv_chanpian_start"
                        android:textSize="@dimen/textsize_14_dp"
                        android:textColor="#0C2275"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_segment_name"
                    android:alpha="0.4"
                    android:textColor="#0C2275"
                    android:layout_marginTop="@dimen/view_2_dp"
                    android:layout_below="@+id/ll_champain"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.common.view.ex.ExRelativeLayout>

    </RelativeLayout>

    <include
        android:layout_height="@dimen/view_80_dp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_d_3_dp"
        android:id="@+id/own_info_item"
        layout="@layout/board_item_layout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>