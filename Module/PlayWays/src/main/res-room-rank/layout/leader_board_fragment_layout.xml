<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:levelView2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_292_dp"
        android:background="@drawable/paihangbang_beijing"
        android:clipChildren="false">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:layout_marginTop="@dimen/view_15_dp"
            android:padding="@dimen/view_16_dp"
            android:src="@drawable/img_back" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_area"
            android:layout_width="@dimen/view_126_dp"
            android:layout_height="@dimen/view_32_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_25_dp"
            android:ellipsize="marquee"
            android:maxWidth="@dimen/view_180_dp"
            android:paddingLeft="@dimen/view_10_dp"
            android:paddingRight="@dimen/view_10_dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="全国榜"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp"
            app:bl_corners_radius="@dimen/view_6_dp"
            app:bl_solid_color="@color/black_trans_30" />

        <TextView
            android:id="@+id/refresh_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_32_dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_18_dp"
            android:text="刷新位置"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_alignTop="@id/tv_area"/>

        <com.common.view.ex.ExRelativeLayout
            android:layout_width="@dimen/view_112_dp"
            android:layout_height="@dimen/view_184_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1.3dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginRight="-12dp"
            android:layout_toLeftOf="@+id/rl_center_container"
            android:background="@drawable/dierming_beijing"
            android:clipChildren="false">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_right_champain_icon"
                android:layout_width="@dimen/view_58_dp"
                android:layout_height="@dimen/view_58_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_7_dp" />

            <ImageView
                android:id="@+id/iv_rank_left"
                android:layout_width="@dimen/view_26_dp"
                android:layout_height="@dimen/view_26_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_d_10_dp"
                android:background="@drawable/dierming_huizhang" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_right_chanpain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sdv_right_champain_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_11_dp"
                android:alpha="0.8"
                android:ellipsize="end"
                android:maxWidth="@dimen/view_90_dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#0C2275"
                android:textStyle="bold" />

            <com.component.level.view.NormalLevelView2
                android:id="@+id/right_chanpain_level_view"
                android:layout_width="@dimen/view_60_dp"
                android:layout_height="@dimen/view_53_dp"
                android:layout_below="@id/tv_right_chanpain_name"
                android:layout_centerHorizontal="true"
                levelView2:mainHeight2="@dimen/view_53_dp"
                levelView2:mainWidth2="@dimen/view_60_dp"
                levelView2:subBottom2="@dimen/view_3_dp"
                levelView2:subHeight2="@dimen/view_6_dp"
                levelView2:subWidth2="@dimen/view_11_dp"></com.component.level.view.NormalLevelView2>


            <com.common.view.ex.ExTextView
                android:id="@+id/right_chanpain_level_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/right_chanpain_level_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_6_dp"
                android:gravity="center"
                android:textColor="@color/black_trans_50"
                android:textSize="@dimen/textsize_14_dp" />

        </com.common.view.ex.ExRelativeLayout>


        <com.common.view.ex.ExRelativeLayout
            android:layout_width="@dimen/view_112_dp"
            android:layout_height="@dimen/view_184_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/view_d_10_dp"
            android:layout_toRightOf="@+id/rl_center_container"
            android:background="@drawable/disanming_beijing"
            android:clipChildren="false">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_left_champain_icon"
                android:layout_width="@dimen/view_58_dp"
                android:layout_height="@dimen/view_58_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_7_dp" />

            <ImageView
                android:id="@+id/iv_rank_right"
                android:layout_width="@dimen/view_26_dp"
                android:layout_height="@dimen/view_26_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_d_10_dp"
                android:background="@drawable/disanming_huizhang" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_left_chanpain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sdv_left_champain_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_11_dp"
                android:alpha="0.8"
                android:ellipsize="end"
                android:maxWidth="@dimen/view_90_dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#0C2275"
                android:textStyle="bold" />

            <com.component.level.view.NormalLevelView2
                android:id="@+id/left_chanpain_level_view"
                android:layout_width="@dimen/view_60_dp"
                android:layout_height="@dimen/view_53_dp"
                android:layout_below="@id/tv_left_chanpain_name"
                android:layout_centerHorizontal="true"
                levelView2:mainHeight2="@dimen/view_53_dp"
                levelView2:mainWidth2="@dimen/view_60_dp"
                levelView2:subBottom2="@dimen/view_3_dp"
                levelView2:subHeight2="@dimen/view_6_dp"
                levelView2:subWidth2="@dimen/view_11_dp"></com.component.level.view.NormalLevelView2>

            <com.common.view.ex.ExTextView
                android:id="@+id/left_chanpain_level_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/left_chanpain_level_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_6_dp"
                android:gravity="center"
                android:textColor="@color/black_trans_50"
                android:textSize="@dimen/textsize_14_dp" />

        </com.common.view.ex.ExRelativeLayout>

        <com.common.view.ex.ExRelativeLayout

            android:id="@+id/rl_center_container"
            android:layout_width="@dimen/view_135_dp"
            android:layout_height="@dimen/view_206_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/paihangbang_diyimingbeijing">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_champain_icon"
                android:layout_width="@dimen/view_77_dp"
                android:layout_height="@dimen/view_77_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_13_dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_100_dp"
                android:layout_marginLeft="@dimen/view_12_dp"
                android:layout_marginRight="@dimen/view_12_dp"
                android:background="@drawable/guanjun_xingxing" />

            <ImageView
                android:id="@+id/iv_rank"
                android:layout_width="@dimen/view_38_dp"
                android:layout_height="@dimen/view_34_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_d_15_dp"
                android:background="@drawable/diyiming_huangguan" />

            <com.common.view.ex.ExTextView
                android:id="@+id/tv_chanpain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sdv_champain_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_11_dp"
                android:alpha="0.8"
                android:ellipsize="end"
                android:maxWidth="@dimen/view_90_dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#0C2275"
                android:textStyle="bold" />

            <com.component.level.view.NormalLevelView2
                android:id="@+id/chanpain_level_view"
                android:layout_width="@dimen/view_60_dp"
                android:layout_height="@dimen/view_53_dp"
                android:layout_below="@id/tv_chanpain_name"
                android:layout_centerHorizontal="true"
                levelView2:mainHeight2="@dimen/view_53_dp"
                levelView2:mainWidth2="@dimen/view_60_dp"
                levelView2:subBottom2="@dimen/view_3_dp"
                levelView2:subHeight2="@dimen/view_6_dp"
                levelView2:subWidth2="@dimen/view_11_dp"></com.component.level.view.NormalLevelView2>

            <com.common.view.ex.ExTextView
                android:id="@+id/chanpain_level_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/chanpain_level_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_6_dp"
                android:gravity="center"
                android:textColor="@color/black_trans_50"
                android:textSize="@dimen/textsize_14_dp" />

        </com.common.view.ex.ExRelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#26264A" />

    <include
        android:id="@+id/own_info_item"
        layout="@layout/board_item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_80_dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_5_dp"
        android:layout_marginTop="@dimen/view_d_1_dp"
        android:background="#E6E2DF" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>