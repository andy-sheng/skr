<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_80">

    <ImageView
        android:id="@+id/background_iv"
        android:layout_width="@dimen/view_375_dp"
        android:layout_height="@dimen/view_375_dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/win_guangmang"
        android:visibility="gone" />

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/result_svga"
        android:layout_width="@dimen/view_375_dp"
        android:layout_height="@dimen/view_600_dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:antiAlias="true"
        app:autoPlay="false" />

    <com.common.view.ex.ExTextView
        android:id="@+id/level_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_20_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_377_dp"
        android:gravity="center"
        android:text="钻石巨星5段"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_14_dp"
        android:visibility="gone" />

    <com.zq.level.view.LevelStarProgressBar
        android:id="@+id/level_progress"
        android:layout_width="@dimen/view_140_dp"
        android:layout_height="@dimen/view_34_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_9_dp"
        android:layout_marginTop="@dimen/view_395_dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/result_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_440_dp"
        android:visibility="gone">

        <com.common.view.ex.ExTextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:gravity="center_vertical"
            android:text="胜利:"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_14_dp" />

        <ImageView
            android:layout_width="@dimen/view_12_dp"
            android:layout_height="@dimen/view_11_dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/result_text"
            android:src="@drawable/level_xingxing" />

        <com.common.view.ex.ExTextView
            android:id="@+id/result_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:layout_toRightOf="@+id/result_text"
            android:gravity="center_vertical"
            android:text="-100"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/exper_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_464_dp"
        android:visibility="gone">

        <com.common.view.ex.ExTextView
            android:id="@+id/exper_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:gravity="center_vertical"
            android:text="经验:"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_14_dp" />

        <ImageView
            android:layout_width="@dimen/view_12_dp"
            android:layout_height="@dimen/view_11_dp"
            android:layout_toRightOf="@+id/exper_text_tv"
            android:layout_centerVertical="true"
            android:src="@drawable/level_xingxing" />

        <com.common.view.ex.ExTextView
            android:id="@+id/exper_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_15_dp"
            android:layout_toRightOf="@+id/exper_text_tv"
            android:gravity="center_vertical"
            android:text="+50"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_14_dp" />

    </RelativeLayout>


</RelativeLayout>