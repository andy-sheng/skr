<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:orientation="vertical"
    android:layout_width="@dimen/view_146_dp"
    android:layout_height="@dimen/view_237_dp">
    <com.common.view.ex.ExImageView
        android:layout_marginTop="@dimen/view_52_dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/img_btn_bg_yellow"
        android:id="@+id/iv_burst"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_53_dp"
        />

    <com.common.view.ex.ExImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_16_dp"
        android:layout_marginTop="@dimen/view_23_dp"
        android:layout_below="@+id/iv_burst"
        android:background="@drawable/img_btn_bg_yellow"
        android:id="@+id/iv_turn_off"
        android:layout_width="@dimen/view_50_dp"
        android:layout_height="@dimen/view_53_dp"
        />
    <com.common.view.ex.ExTextView
        android:id="@+id/tv_count_down"
        android:textSize="@dimen/textsize_24_dp"
        android:paddingBottom="@dimen/view_6_dp"
        android:textColor="#680000"
        android:gravity="center"
        android:text="1"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:shadowDx="10"
        android:shadowDy="10"
        android:layout_alignLeft="@+id/iv_turn_off"
        android:layout_alignRight="@+id/iv_turn_off"
        android:layout_alignTop="@+id/iv_turn_off"
        android:layout_alignBottom="@+id/iv_turn_off"
        />
</merge>