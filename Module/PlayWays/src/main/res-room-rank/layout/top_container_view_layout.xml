<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout">


    <RelativeLayout
        android:id="@+id/relativeLayout_icon_container"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/view_16_dp"
        android:layout_height="@dimen/view_60_dp">

        <com.module.playways.rank.room.scorebar.ScorePrograssBar2
            android:id="@+id/score_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <com.common.image.fresco.BaseImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/view_47_dp"
            android:layout_height="@dimen/view_47_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_7_dp" />

        <com.common.view.ex.ExImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_12_dp"
            android:paddingRight="@dimen/view_12_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_12_dp"
            android:scaleType="centerInside"
            app:src_unPressed_drawable="@drawable/more" />
    </RelativeLayout>


    <com.common.view.ex.ExTextView
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        android:id="@+id/tv_passed_time"
        android:layout_marginTop="@dimen/view_6_dp"
        android:layout_below="@+id/relativeLayout_icon_container"
        android:layout_marginLeft="@dimen/view_30_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>