<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F1">

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_24_dp"
        android:src="@drawable/img_top_miedeng_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_124_dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_15_dp"
        android:paddingRight="@dimen/view_15_dp"
        android:paddingBottom="@dimen/view_14_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.common.view.ex.ExRelativeLayout
                android:id="@+id/rl_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bl_corners_bottomLeftRadius="@dimen/view_20_dp"
                app:bl_corners_topLeftRadius="@dimen/view_15_dp"
                app:bl_solid_color="#CA2C60"
                app:bl_stroke_color="#0C2275"
                app:bl_stroke_width="@dimen/view_3_dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/vote_left_iv"
                        android:layout_width="@dimen/view_116_dp"
                        android:layout_height="@dimen/view_116_dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/view_29_dp"
                        android:layout_marginTop="@dimen/view_97_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/vote_left_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vote_left_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_13_dp"
                        android:text="赤-CHVANS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_20_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/vote_left_song_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vote_left_name_tv"
                        android:layout_centerHorizontal="true"
                        android:text="将爱情进行到底"
                        android:textColor="@color/white_trans_50"
                        android:textSize="@dimen/textsize_16_dp" />

                    <com.common.view.ex.ExImageView
                        app:bl_corners_bottomLeftRadius="@dimen/view_20_dp"
                        app:bl_corners_topLeftRadius="@dimen/view_15_dp"
                        android:id="@+id/vote_left_shadow_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:bl_selected_drawable="@color/black_trans_35"
                        app:bl_unSelected_drawable="@color/black_trans_35"
                        android:visibility="gone" />
                </RelativeLayout>
            </com.common.view.ex.ExRelativeLayout>

            <com.common.view.ex.ExRelativeLayout
                android:id="@+id/rl_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-3dp"
                android:layout_weight="1"
                app:bl_corners_bottomRightRadius="@dimen/view_20_dp"
                app:bl_corners_topRightRadius="@dimen/view_15_dp"
                app:bl_solid_color="#0288D0"
                app:bl_stroke_color="#0C2275"
                app:bl_stroke_width="@dimen/view_3_dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/vote_right_iv"
                        android:layout_width="@dimen/view_116_dp"
                        android:layout_height="@dimen/view_116_dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_97_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/vote_rignt_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vote_right_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_13_dp"
                        android:text="ktv酒彪子"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_20_dp" />

                    <com.common.view.ex.ExTextView
                        android:id="@+id/vote_right_song_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vote_rignt_name_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/view_7_dp"
                        android:text="印第安老斑鸠"
                        android:textColor="@color/white_trans_50"
                        android:textSize="@dimen/textsize_16_dp" />

                    <com.common.view.ex.ExImageView
                        app:bl_corners_bottomRightRadius="@dimen/view_20_dp"
                        app:bl_corners_topRightRadius="@dimen/view_15_dp"
                        app:bl_selected_drawable="@color/black_trans_35"
                        app:bl_unSelected_drawable="@color/black_trans_35"
                        android:id="@+id/vote_right_shadow_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:visibility="gone" />
                </RelativeLayout>
            </com.common.view.ex.ExRelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_230_dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pipeichenggongbeijing" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_count_down_container"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_notify_pipeishijian_bg" />

        <com.common.view.ex.ExTextView
            android:id="@+id/vote_down_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_28_dp"
            android:text="灭灯倒计时 12s"
            android:textColor="#0C2275"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.common.view.ex.ExImageView
        android:id="@+id/vote_vs_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_240_dp"
        android:src="@drawable/img_pipeichenggong_enabled" />


    <com.common.view.ex.ExImageView
        android:layout_marginBottom="@dimen/view_62_dp"
        android:layout_marginLeft="@dimen/view_42_dp"
        android:id="@+id/vote_left_mie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:bl_selected_drawable="@drawable/vote_btn_circle_pressed"
        app:bl_unSelected_drawable="@drawable/vote_btn_circle_normal" />


    <com.common.view.ex.ExImageView
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/view_62_dp"
        android:layout_marginRight="@dimen/view_42_dp"
        android:id="@+id/vote_right_mie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        app:bl_selected_drawable="@drawable/vote_btn_circle_pressed"
        app:bl_unSelected_drawable="@drawable/vote_btn_circle_normal" />


</RelativeLayout>