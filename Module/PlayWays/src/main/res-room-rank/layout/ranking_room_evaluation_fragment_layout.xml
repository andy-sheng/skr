<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4F1">

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_24_dp"
        android:src="@drawable/img_top_miedeng_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_14_dp"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:background="@drawable/vote_miedeng_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/vote_left_iv"
                android:layout_width="@dimen/view_116_dp"
                android:layout_height="@dimen/view_116_dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/view_29_dp"
                android:layout_marginTop="@dimen/view_97_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/vote_left_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vote_left_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_13_dp"
                android:text="赤-CHVANS"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/vote_left_song_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vote_left_name_tv"
                android:layout_centerHorizontal="true"
                android:text="将爱情进行到底"
                android:textColor="@color/white_trans_50"
                android:textSize="@dimen/textsize_16_dp" />

            <com.common.view.ex.ExImageView
                android:id="@+id/vote_left_shadow_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vote_left_shadow"
                android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/view_dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/vote_right_iv"
                android:layout_width="@dimen/view_116_dp"
                android:layout_height="@dimen/view_116_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_97_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/vote_rignt_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vote_right_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_13_dp"
                android:text="ktv酒彪子"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/vote_right_song_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vote_rignt_name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_7_dp"
                android:text="印第安老斑鸠"
                android:textColor="@color/white_trans_50"
                android:textSize="@dimen/textsize_16_dp" />

            <com.common.view.ex.ExImageView
                android:id="@+id/vote_right_shadow_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vote_right_shadow"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <com.common.view.ex.ExImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_124_dp"
        android:background="@drawable/img_notify_pipeishijian_bg" />

    <com.common.view.ex.ExTextView
        android:id="@+id/vote_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_149_dp"
        android:text="灭灯倒计时 12s"
        android:textColor="#0C2275"
        android:textStyle="bold" />

    <com.common.view.ex.ExImageView
        android:id="@+id/vote_vs_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_240_dp"
        android:src="@drawable/img_pipeichenggong_enabled" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_472_dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/view_dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExImageView
                android:id="@+id/vote_left_mie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:bl_selected_drawable="@drawable/vote_btn_circle_pressed"
                app:bl_unSelected_drawable="@drawable/vote_btn_circle_normal" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/view_dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.common.view.ex.ExImageView
                android:id="@+id/vote_right_mie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                app:bl_selected_drawable="@drawable/vote_btn_circle_pressed"
                app:bl_unSelected_drawable="@drawable/vote_btn_circle_normal" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>