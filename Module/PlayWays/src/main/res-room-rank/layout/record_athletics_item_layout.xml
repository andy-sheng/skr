<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_86_dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_singer_icon"
        android:layout_width="@dimen/view_49_dp"
        android:layout_height="@dimen/view_49_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_21_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_ranking"
        android:layout_width="@dimen/view_28_dp"
        android:layout_height="@dimen/view_28_dp"
        android:layout_marginLeft="@dimen/view_60_dp"
        android:layout_marginTop="@dimen/view_13_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_hint_flag"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_17_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_24_dp"
        android:layout_marginBottom="@dimen/view_6_dp"
        android:background="@drawable/zhanji_jingshi"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12_dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_star_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_16_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_light_one"
            android:layout_width="@dimen/view_22_dp"
            android:layout_height="@dimen/view_20_dp"
            app:bl_selected_drawable="@drawable/record_light_enable"
            app:bl_unSelected_drawable="@drawable/record_light_disable" />

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_light_two"
            android:layout_width="@dimen/view_22_dp"
            android:layout_height="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            app:bl_selected_drawable="@drawable/record_light_enable"
            app:bl_unSelected_drawable="@drawable/record_light_disable" />

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_light_three"
            android:layout_width="@dimen/view_22_dp"
            android:layout_height="@dimen/view_20_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            app:bl_selected_drawable="@drawable/record_light_enable"
            app:bl_unSelected_drawable="@drawable/record_light_disable" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/view_14_dp"
        android:layout_marginBottom="@dimen/view_18_dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_light_one_icon"
            android:layout_width="@dimen/view_25_33_dp"
            android:layout_height="@dimen/view_25_33_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_light_one_two"
            android:layout_width="@dimen/view_25_33_dp"
            android:layout_height="@dimen/view_25_33_dp"
            android:layout_marginLeft="@dimen/view_9_dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_light_one_three"
            android:layout_width="@dimen/view_25_33_dp"
            android:layout_height="@dimen/view_25_33_dp"
            android:layout_marginLeft="@dimen/view_10_dp" />
    </LinearLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_singer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_28_dp"
        android:layout_marginTop="@dimen/view_22_dp"
        android:layout_toLeftOf="@+id/ll_star_container"
        android:layout_toRightOf="@+id/sdv_singer_icon"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="酒彪子"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_singer_name"
        android:layout_alignLeft="@+id/tv_singer_name"
        android:layout_marginTop="@dimen/view_1_dp"
        android:layout_marginBottom="@dimen/view_50_dp"
        android:layout_toLeftOf="@+id/ll_avatar_container"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="天空"
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_12_dp"
        android:textStyle="bold" />
</RelativeLayout>