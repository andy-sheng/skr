<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_181_dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_own_icon"
        android:layout_width="@dimen/view_65_dp"
        android:layout_height="@dimen/view_65_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_13_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdv_own_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_6_dp"
        android:text="CHSNN"
        android:textColor="@color/white"
        android:textSize="@dimen/view_20_dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/view_40_dp"
        android:layout_marginTop="@dimen/view_42_dp"
        android:orientation="vertical">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_own_record"
            android:layout_width="@dimen/view_46_dp"
            android:layout_height="@dimen/view_46_dp"
            android:layout_gravity="center_horizontal" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_own_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_7_dp"
            android:text="亚军"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_16_dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_48_dp"
        android:layout_marginRight="@dimen/view_40_dp"
        android:orientation="vertical">

        <com.common.view.ex.ExImageView
            android:id="@+id/iv_light_count"
            android:layout_width="@dimen/view_28_dp"
            android:layout_height="@dimen/view_28_dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/record_light_enable" />

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_light_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_11_dp"
            android:text="亮灯"
            android:textColor="@color/white_trans_50"
            android:textSize="@dimen/textsize_16_dp" />
    </LinearLayout>

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_143_dp"
        android:text=""
        android:textColor="@color/white_trans_50"
        android:textSize="@dimen/textsize_16_dp" />

    <com.common.view.ex.ExImageView
        android:id="@+id/tv_song_score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_24_dp"
        android:layout_marginTop="@dimen/view_142_dp"
        android:layout_toRightOf="@+id/tv_song_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/white_trans_10" />
</merge>