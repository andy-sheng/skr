<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ranking_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pipeichenggong_bj">

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/rl_loading_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom_area"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_26_dp"
        android:background="@drawable/img_kaishipipei_bg"
        android:gravity="center"
        android:padding="@dimen/view_3_dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <include
            android:id="@+id/ll_load_failed"
            layout="@layout/record_data_fetch_failed_layout" />
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/rl_record_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom_area"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        android:layout_marginBottom="@dimen/view_26_dp"
        android:background="@drawable/img_kaishipipei_bg"
        android:padding="@dimen/view_3_dp"
        android:visibility="visible">

        <com.module.playways.rank.room.view.RecordTitleView
            android:id="@+id/record_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_180_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#0C2275" />

                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#0C2275" />

                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#0C2275" />

                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_top_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_111_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_28_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:background="@drawable/img_top_zhanjijieguo_bg" />

    <LinearLayout
        android:id="@+id/ll_bottom_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/view_151_dp"
            android:layout_height="@dimen/view_54_dp"
            android:background="@drawable/img_btn_bg_yellow"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:text="返回"
            android:textColor="#0C2275"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />

        <com.common.view.ex.ExTextView
            android:layout_marginLeft="@dimen/view_10_dp"
            android:id="@+id/tv_share"
            android:layout_width="@dimen/view_151_dp"
            android:layout_height="@dimen/view_54_dp"
            android:background="@drawable/img_btn_bg_red"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20_dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>