<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dabeijing">

    <com.common.view.ex.ExRelativeLayout
        android:padding="@dimen/view_3_dp"
        android:layout_marginBottom="@dimen/view_26_dp"
        android:layout_above="@+id/ll_bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_15_dp"
        android:layout_marginTop="@dimen/view_124_dp"
        android:layout_marginRight="@dimen/view_15_dp"
        app:bl_corners_radius="@dimen/view_12_dp"
        app:bl_solid_color="#2E3041"
        app:bl_stroke_color="#0C2275"
        app:bl_stroke_width="@dimen/view_3_dp">

        <com.module.playways.rank.room.view.RecordTitleView
            android:id="@+id/record_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_below="@+id/record_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/white_trans_10"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/white_trans_10"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

                <com.module.playways.rank.room.view.RecordItemView
                    android:id="@+id/record_item_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExImageView
        android:id="@+id/iv_top_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_111_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_35_dp"
        android:layout_marginTop="@dimen/view_28_dp"
        android:layout_marginRight="@dimen/view_35_dp"
        android:background="@drawable/img_top_zhanjijieguo_bg" />

    <LinearLayout
        android:id="@+id/ll_bottom_area"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/view_24_dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:text="返回大厅"
            android:textSize="@dimen/textsize_20_dp"
            android:textColor="#0C2275"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:background="@drawable/btn_dialog_cancle"
            android:id="@+id/tv_back"
            android:layout_width="@dimen/view_140_dp"
            android:layout_height="@dimen/view_54_dp" />

        <com.common.view.ex.ExTextView
            android:textStyle="bold"
            android:text="再开一局"
            android:textSize="@dimen/textsize_20_dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="@dimen/view_7_dp"
            android:background="@drawable/btn_dialog_confirm"
            android:id="@+id/tv_again"
            android:layout_width="@dimen/view_140_dp"
            android:layout_height="@dimen/view_54_dp" />
    </LinearLayout>
</RelativeLayout>