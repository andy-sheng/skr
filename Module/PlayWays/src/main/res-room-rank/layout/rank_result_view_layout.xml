<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404559">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignParentTop="true"
        android:background="@color/white_trans_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_1_dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/avatar_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_iv"
                android:layout_width="@dimen/view_48_dp"
                android:layout_height="@dimen/view_48_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_18_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/avatar_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_5_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="KTV酒彪子"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/song_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_17_dp"
                android:layout_below="@id/name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_1_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="《天空》"
                android:textColor="@color/white_trans_50"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/result_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_iv_first"
                android:layout_width="@dimen/view_20_dp"
                android:layout_height="@dimen/view_20_dp"
                android:layout_marginTop="@dimen/view_24_dp" />

            <ImageView
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginTop="@dimen/view_17_dp"
                android:layout_toRightOf="@id/avatar_iv_first"
                android:background="@drawable/zhanji_baodeng" />

            <com.common.view.ex.ExTextView
                android:id="@+id/first_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_marginLeft="@dimen/view_40_dp"
                android:layout_marginTop="@dimen/view_21_dp"
                android:layout_toRightOf="@id/avatar_iv_first"
                android:gravity="center_vertical"
                android:text="x1"
                android:textColor="#FFBF00"
                android:textSize="@dimen/textsize_14_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_iv_second"
                android:layout_width="@dimen/view_20_dp"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/avatar_iv_first"
                android:layout_marginTop="@dimen/view_12_dp" />

            <ImageView
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginTop="@dimen/view_48_dp"
                android:layout_toRightOf="@id/avatar_iv_second"
                android:background="@drawable/zhanji_mie" />

            <com.common.view.ex.ExTextView
                android:id="@+id/second_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_40_dp"
                android:layout_marginTop="@dimen/view_52_dp"
                android:layout_toRightOf="@id/avatar_iv_second"
                android:gravity="center_vertical"
                android:text="0%"
                android:textColor="#9697A0"
                android:textSize="@dimen/textsize_14_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_iv_three"
                android:layout_width="@dimen/view_20_dp"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/avatar_iv_second"
                android:layout_marginTop="@dimen/view_12_dp" />

            <ImageView
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginTop="@dimen/view_79_dp"
                android:layout_toRightOf="@id/avatar_iv_three"
                android:background="@drawable/zhanji_xiaolian" />

            <com.common.view.ex.ExTextView
                android:id="@+id/third_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_40_dp"
                android:layout_marginTop="@dimen/view_83_dp"
                android:layout_toRightOf="@id/avatar_iv_three"
                android:gravity="center_vertical"
                android:text="100%"
                android:textColor="#9697A0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/score_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.component.busilib.view.BitmapTextView
                android:id="@+id/pk_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>