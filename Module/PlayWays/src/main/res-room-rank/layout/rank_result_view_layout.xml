<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignParentTop="true"
        android:background="@color/white_trans_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_1_dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/avatar_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_iv"
                android:layout_width="@dimen/view_48_dp"
                android:layout_height="@dimen/view_48_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_18_dp" />

            <com.common.view.ex.ExImageView
                android:id="@+id/result_iv"
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_alignTop="@id/avatar_iv"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@id/avatar_iv" />

            <com.common.view.ex.ExTextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_below="@id/avatar_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_5_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="KTV酒彪子"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14_dp" />

            <com.common.view.ex.ExTextView
                android:id="@+id/song_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_17_dp"
                android:layout_below="@id/name_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_1_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="《天空》"
                android:textColor="@color/white_trans_50"
                android:textSize="@dimen/textsize_12_dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/result_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/first_avatar_iv"
                android:layout_width="@dimen/view_22_dp"
                android:layout_height="@dimen/view_22_dp"
                android:layout_marginTop="@dimen/view_20_dp" />

            <ImageView
                android:id="@+id/first_img_iv"
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginLeft="@dimen/view_6_dp"
                android:layout_marginTop="@dimen/view_17_dp"
                android:layout_toRightOf="@id/first_avatar_iv"
                android:background="@drawable/zhanji_baodeng" />

            <com.common.view.ex.ExTextView
                android:id="@+id/first_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_marginLeft="@dimen/view_4_dp"
                android:layout_marginTop="@dimen/view_21_dp"
                android:layout_toRightOf="@id/first_img_iv"
                android:gravity="center_vertical"
                android:text="x1"
                android:textColor="#FFBF00"
                android:textSize="@dimen/textsize_14_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/second_avatar_iv"
                android:layout_width="@dimen/view_22_dp"
                android:layout_height="@dimen/view_22_dp"
                android:layout_marginTop="@dimen/view_50_dp" />

            <ImageView
                android:id="@+id/second_img_iv"
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginLeft="@dimen/view_6_dp"
                android:layout_marginTop="@dimen/view_47_dp"
                android:layout_toRightOf="@id/second_avatar_iv"
                android:background="@drawable/zhanji_mie" />

            <com.common.view.ex.ExTextView
                android:id="@+id/second_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_marginLeft="@dimen/view_4_dp"
                android:layout_marginTop="@dimen/view_51_dp"
                android:layout_toRightOf="@id/second_img_iv"
                android:gravity="center_vertical"
                android:text="0%"
                android:textColor="#9697A0"
                android:textSize="@dimen/textsize_14_dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/third_avatar_iv"
                android:layout_width="@dimen/view_22_dp"
                android:layout_height="@dimen/view_22_dp"
                android:layout_marginTop="@dimen/view_80_dp" />

            <ImageView
                android:id="@+id/third_img_iv"
                android:layout_width="@dimen/view_28_dp"
                android:layout_height="@dimen/view_28_dp"
                android:layout_marginLeft="@dimen/view_6_dp"
                android:layout_marginTop="@dimen/view_77_dp"
                android:layout_toRightOf="@id/third_avatar_iv"
                android:background="@drawable/zhanji_xiaolian" />

            <com.common.view.ex.ExTextView
                android:id="@+id/third_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_20_dp"
                android:layout_marginLeft="@dimen/view_4_dp"
                android:layout_marginTop="@dimen/view_81_dp"
                android:layout_toRightOf="@id/third_img_iv"
                android:gravity="center_vertical"
                android:textColor="#9697A0"
                android:textSize="@dimen/textsize_14_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/score_area"
            android:layout_width="@dimen/view_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.component.busilib.view.BitmapTextView
                android:id="@+id/pk_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_48_dp" />

        </RelativeLayout>

    </LinearLayout>


    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/is_escape_norml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_1_dp"
        app:bl_solid_color="@color/black_trans_40"
        app:bl_shape="rectangle"
        android:visibility="gone">
        
        <ImageView
            android:layout_width="@dimen/view_77_dp"
            android:layout_height="@dimen/view_77_dp"
            android:background="@drawable/taopao"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_67_dp"
            android:layout_marginTop="@dimen/view_12_dp"/>
        
    </com.common.view.ex.ExRelativeLayout>

    <com.common.view.ex.ExRelativeLayout
        android:id="@+id/is_escape_last"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_1_dp"
        app:bl_gradient_type="linear"
        app:bl_gradient_angle="90"
        app:bl_gradient_useLevel="true"
        app:bl_gradient_startColor="@color/transparent"
        app:bl_gradient_endColor="@color/black_trans_45"
        app:bl_shape="rectangle"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/view_77_dp"
            android:layout_height="@dimen/view_77_dp"
            android:background="@drawable/taopao"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_67_dp"
            android:layout_marginTop="@dimen/view_12_dp"/>

    </com.common.view.ex.ExRelativeLayout>

</RelativeLayout>