<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/view_59_dp"
        android:layout_height="@dimen/view_59_dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/zhanji_wuwangicon" />

    <com.common.view.ex.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_18_dp"
        android:text="你的网络情况让撕歌嫌弃了，刷新一下吧"
        android:textColor="#800C2275" />

    <com.common.view.ex.ExTextView
        android:id="@+id/tv_reload"
        android:layout_width="@dimen/view_146_dp"
        android:layout_height="@dimen/view_52_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_52_dp"
        android:background="@drawable/img_btn_bg_red"
        android:gravity="center"
        android:paddingBottom="@dimen/view_4_dp"
        android:text="点击刷新"
        android:textColor="@color/white"
        android:textSize="@dimen/view_16_dp" />
</LinearLayout>