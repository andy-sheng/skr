<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:bl_corners_radius="@dimen/view_8_dp"
    app:bl_stroke_width="@dimen/view_2_dp"
    app:bl_solid_color="#3C3F57"
    app:bl_stroke_color="#202239"
    android:layout_marginLeft="@dimen/view_15_dp"
    android:layout_marginRight="@dimen/view_15_dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.common.view.ex.ExImageView
        android:id="@+id/iv_title"
        android:background="@drawable/bisaiguize"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/view_80_dp"
        android:layout_height="@dimen/view_20_dp" />

    <LinearLayout
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_27_dp"
        android:layout_below="@+id/iv_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExImageView
            android:background="@drawable/bisaiguize_1"
            android:layout_width="@dimen/view_23_dp"
            android:layout_height="@dimen/view_20_dp" />

        <com.common.view.ex.ExTextView
            android:layout_marginLeft="@dimen/view_8_dp"
            android:textSize="@dimen/textsize_14_dp"
            android:textColor="#B2B6D6"
            android:text="给你最喜欢的声音爆灯，每局只有1次机会哦～"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_below="@+id/iv_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExImageView
            android:background="@drawable/bisaiguize_2"
            android:layout_width="@dimen/view_23_dp"
            android:layout_height="@dimen/view_20_dp" />

        <com.common.view.ex.ExTextView
            android:layout_marginLeft="@dimen/view_8_dp"
            android:textSize="@dimen/textsize_14_dp"
            android:textColor="#B2B6D6"
            android:text="给你不喜欢的声音灭灯，针对每个演唱者 你都有1次灭灯机会。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/view_35_dp"
        android:layout_marginLeft="@dimen/view_13_dp"
        android:layout_marginRight="@dimen/view_13_dp"
        android:layout_marginTop="@dimen/view_14_dp"
        android:layout_below="@+id/iv_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.common.view.ex.ExImageView
            android:background="@drawable/bisaiguize_3"
            android:layout_width="@dimen/view_23_dp"
            android:layout_height="@dimen/view_20_dp" />

        <com.common.view.ex.ExTextView
            android:layout_marginLeft="@dimen/view_8_dp"
            android:textSize="@dimen/textsize_14_dp"
            android:textColor="#B2B6D6"
            android:text="根据观众爆灭灯行为决定本局比赛排名。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.common.view.ex.ExLinearLayout>