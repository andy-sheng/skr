<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_70_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_44_dp"
        android:layout_height="@dimen/view_44_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_12_dp"
        android:layout_marginTop="@dimen/view_3_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_22_dp"
        android:layout_alignTop="@+id/avatar_iv"
        android:layout_marginLeft="@dimen/view_9_dp"
        android:layout_toRightOf="@+id/avatar_iv"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingRight="@dimen/view_120_dp"
        android:singleLine="true"
        android:textColor="#0C2275"
        android:textSize="@dimen/textsize_16_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/status_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_17_dp"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:gravity="center"
        android:textColor="#990C2275"
        android:textSize="@dimen/textsize_12_dp" />

    <ImageView
        android:id="@+id/sex_iv"
        android:layout_width="@dimen/view_16_dp"
        android:layout_height="@dimen/view_16_dp"
        android:layout_alignTop="@id/name_tv"
        android:layout_marginLeft="-116dp"
        android:layout_marginTop="@dimen/view_3_dp"
        android:layout_toRightOf="@id/name_tv" />

    <com.common.view.ex.ExTextView
        android:id="@+id/follow_tv"
        android:layout_width="@dimen/view_64_dp"
        android:layout_height="@dimen/view_30_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_12_dp"
        android:gravity="center"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/textsize_14_dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1_dp"
        android:layout_alignParentBottom="true"
        android:background="#333E5181" />

</RelativeLayout>