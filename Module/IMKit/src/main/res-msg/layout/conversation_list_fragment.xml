<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0F9F4F1">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="聊天"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:rightImageResource="@drawable/friend_book_icon"
        app:rightType="imageButton"
        app:showBottomLine="false"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0">
    </com.common.view.titlebar.CommonTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_2_dp"
        android:layout_below="@+id/titlebar"
        android:background="#0C2275" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="@dimen/view_2_dp"></RelativeLayout>

</RelativeLayout>
