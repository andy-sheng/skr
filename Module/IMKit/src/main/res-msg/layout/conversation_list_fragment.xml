<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFEC">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="聊天"
        app:centerTextColor="@color/white"
        app:centerTextSize="@dimen/textsize_20_dp"
        app:centerType="textView"
        app:rightImageResource="@drawable/friend_book_icon"
        app:rightType="imageButton"
        app:showBottomLine="true"
        app:bottomLineColor="#0C2275"
        app:statusBarColor="#0288D0"
        app:titleBarColor="#0288D0">
    </com.common.view.titlebar.CommonTitleBar>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">

        <com.common.view.viewpager.SlidingTabLayout
            android:id="@+id/message_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_52_dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <View
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_10_dp"
            android:background="#E8DFDB" />

        <com.common.view.viewpager.NestViewPager
            android:id="@+id/message_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:requiresFadingEdge="none" />

    </LinearLayout>

</RelativeLayout>
