<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="消息"
        app:centerType="textView"
        app:rightType="textView"
        app:rightText="好友"
        app:leftType="textView"
        app:leftText="搜索"/>

    <LinearLayout
        android:id="@+id/test_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/titlebar">
        <com.common.view.ex.ExButton
            android:id="@+id/test_connect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接用户1001"/>

        <com.common.view.ex.ExButton
            android:id="@+id/test_connect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接用户1002"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/test_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_1"
        android:orientation="horizontal">

        <com.common.view.ex.ExButton
            android:id="@+id/test_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向用户1发消息"/>

        <com.common.view.ex.ExButton
            android:id="@+id/test_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向用户2发消息"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@+id/test_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

</RelativeLayout>
