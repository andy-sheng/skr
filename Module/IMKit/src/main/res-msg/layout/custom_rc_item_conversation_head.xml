<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/special_follow_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_70_dp">

        <ImageView
            android:id="@+id/special_follow_iv"
            android:layout_width="@dimen/view_42_dp"
            android:layout_height="@dimen/view_42_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:background="@drawable/msg_special_follow_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExImageView
            android:id="@+id/special_red_iv"
            android:layout_width="@dimen/view_10_dp"
            android:layout_height="@dimen/view_10_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_5_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FF5959"
            app:layout_constraintRight_toRightOf="@id/special_follow_iv"
            app:layout_constraintTop_toTopOf="@id/special_follow_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginTop="@dimen/view_14_dp"
            android:text="特别关注"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/special_follow_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/special_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginBottom="@dimen/view_14_dp"
            android:text="暂无特别关注消息"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize_12_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/special_follow_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#193E5181"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/last_follow_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_70_dp">

        <ImageView
            android:id="@+id/last_follow_iv"
            android:layout_width="@dimen/view_42_dp"
            android:layout_height="@dimen/view_42_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:background="@drawable/msg_last_follow_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExImageView
            android:id="@+id/last_red_iv"
            android:layout_width="@dimen/view_10_dp"
            android:layout_height="@dimen/view_10_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_5_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FF5959"
            app:layout_constraintRight_toRightOf="@id/last_follow_iv"
            app:layout_constraintTop_toTopOf="@id/last_follow_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginTop="@dimen/view_14_dp"
            android:text="最新关注"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/last_follow_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginBottom="@dimen/view_14_dp"
            android:text="暂无关注消息"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize_12_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/last_follow_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#193E5181"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/comment_like_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_70_dp">

        <ImageView
            android:id="@+id/comment_like_iv"
            android:layout_width="@dimen/view_42_dp"
            android:layout_height="@dimen/view_42_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:background="@drawable/msg_comment_like_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExImageView
            android:id="@+id/comment_like_red_iv"
            android:layout_width="@dimen/view_10_dp"
            android:layout_height="@dimen/view_10_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_5_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FF5959"
            app:layout_constraintRight_toRightOf="@id/comment_like_iv"
            app:layout_constraintTop_toTopOf="@id/comment_like_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginTop="@dimen/view_14_dp"
            android:text="评论和赞"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/comment_like_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comment_like_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginBottom="@dimen/view_14_dp"
            android:text="暂无广场互动消息"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize_12_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/comment_like_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#193E5181"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/gift_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_70_dp">

        <ImageView
            android:id="@+id/gift_iv"
            android:layout_width="@dimen/view_42_dp"
            android:layout_height="@dimen/view_42_dp"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:background="@drawable/msg_gift_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.common.view.ex.ExImageView
            android:id="@+id/gift_red_iv"
            android:layout_width="@dimen/view_10_dp"
            android:layout_height="@dimen/view_10_dp"
            android:visibility="gone"
            app:bl_corners_radius="@dimen/view_5_dp"
            app:bl_shape="rectangle"
            app:bl_solid_color="#FF5959"
            app:layout_constraintRight_toRightOf="@id/gift_iv"
            app:layout_constraintTop_toTopOf="@id/gift_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginTop="@dimen/view_14_dp"
            android:text="礼物"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/gift_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gift_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_12_dp"
            android:layout_marginBottom="@dimen/view_14_dp"
            android:text="暂无礼物消息"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/textsize_12_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gift_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_1_dp"
            android:layout_alignParentBottom="true"
            android:background="#193E5181"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>