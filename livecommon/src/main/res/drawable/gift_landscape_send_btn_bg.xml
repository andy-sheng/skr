<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按钮不可用状态时显示这个状态 -->
    <item android:drawable="@drawable/live_cross_screen_btn_disable" android:state_enabled="false" />

    <item android:drawable="@drawable/live_cross_screen_btn_pressed" android:state_pressed="true" />

    <!-- 按钮可用，并且处于正常状态时显示这个状态 -->
    <item android:drawable="@drawable/live__cross_screen_btn_normal" />
</selector>
