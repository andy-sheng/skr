<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/never_expired"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_type_icon_1"
            android:layout_width="@dimen/view_dimen_42"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/amount_1"
            android:layout_alignTop="@+id/amount_1"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/amount_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_toRightOf="@id/item_type_icon_1"
            android:gravity="center"
            android:text="@string/gem"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_44"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/will_expired"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/recharge_view_margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_type_icon_2"
            android:layout_width="@dimen/view_dimen_42"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/amount_2"
            android:layout_alignTop="@+id/amount_2"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/amount_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_toRightOf="@id/item_type_icon_2"
            android:gravity="center"
            android:text="@string/silver_diamond"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_44"/>


        <TextView
            android:id="@+id/expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/amount_2"
            android:layout_below="@id/amount_2"
            android:layout_marginTop="@dimen/margin_10"
            android:text="9月10日到期"
            android:textColor="@color/text_color_black_trans_50"
            android:textSize="@dimen/text_size_36"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/recharge_view_margin"
        android:text="28"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_44"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_trans_10"/>
</RelativeLayout>