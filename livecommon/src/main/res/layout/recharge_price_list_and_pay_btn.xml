<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="@dimen/margin_40"
        android:columnWidth="@dimen/view_dimen_320"
        android:gravity="center"
        android:horizontalSpacing="@dimen/view_dimen_30"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/margin_40"/>

    <TextView
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_110"
        android:layout_marginBottom="@dimen/view_dimen_50"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="@dimen/view_dimen_80"
        android:background="@drawable/withdraw_diamond_button"
        android:gravity="center"
        android:text="立即付款"
        android:textColor="@color/color_white_trans_70"
        android:textSize="@dimen/text_size_45"/>

    <TextView
        android:id="@+id/big_amount_tip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_60"
        android:layout_marginBottom="@dimen/margin_104"
        android:gravity="center"
        android:text="@string/recharge_big_amount_tip"
        android:textColor="@color/recharge_exchange_btn_color"
        android:textSize="@dimen/text_size_45"
        android:visibility="gone"/>

</LinearLayout>