<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gift_bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_393"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_trans_80">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gift_display_recycleview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_270"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/gift_display_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/diamond_max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="6.66dp"
                android:drawableRight="@drawable/live_icon_golden_diamond_big"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/color_white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/diamond_siliver_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.33dp"
                android:layout_toRightOf="@id/diamond_max_tv"
                android:drawablePadding="6.66dp"
                android:drawableRight="@drawable/live_icon_argentum_diamond_big"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recharge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-1.33dp"
                android:layout_toRightOf="@id/diamond_siliver_tv"
                android:drawablePadding="6.66dp"
                android:drawableRight="@drawable/live_icon_more_big_normal"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/recharge"
                android:textColor="#FED533"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/send_gift"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/gift_send_btn_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/send_gift"
                android:textColor="@color/gift_send_btn_bg_color"
                android:textSize="13.33dp" />
        </RelativeLayout>

        <com.wali.live.common.gift.view.ContinueSendBtn
            android:id="@+id/continue_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <ViewStub
            android:id="@+id/gift_mall_guide_page_viewstub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/gift_mall_guide_page"
            android:layout="@layout/gift_mall_guide_page_land_view" />

    </RelativeLayout>

    <View
        android:id="@+id/top_transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/gift_bottom_panel" />

</RelativeLayout>
