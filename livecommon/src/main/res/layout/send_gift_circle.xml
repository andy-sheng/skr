<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/send_gift_root"
    android:background="@drawable/send_gift_circle_shape"
    android:layout_width="@dimen/view_dimen_520"
    android:layout_height="@dimen/view_dimen_520"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/circle_root"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/view_dimen_210"
        android:layout_height="@dimen/view_dimen_210"
        android:clipChildren="false">
        <View
            android:id="@+id/view_center"
            android:layout_centerInParent="true"
            android:background="@drawable/live_gift_continuity_give_button_big"
            android:layout_width="@dimen/view_dimen_198"
            android:layout_height="@dimen/view_dimen_198" />

        <com.wali.live.common.gift.view.SendGiftCircleCountDownView
            android:id="@+id/count_down_view"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/view_dimen_198"
            android:layout_height="@dimen/view_dimen_198" />
        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="@dimen/view_dimen_198"
            android:layout_height="@dimen/view_dimen_198">
            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/continue_normal_send_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:id="@+id/tv_times"
                android:textColor="@color/white"
                android:text="5s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>