<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/income_exchange_list_item_height"
                android:paddingLeft="@dimen/income_exchange_margin"
                android:paddingRight="@dimen/income_exchange_margin">

    <TextView
        android:id="@+id/diamond_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/pay_conversion_mi_coin"
        android:drawablePadding="@dimen/margin_30"
        android:textColor="@color/text_color_black_trans_90"
        android:textSize="@dimen/text_size_44"/>

    <TextView
        android:id="@+id/diamond_extra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@id/diamond_tv"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_38"/>

    <TextView
        android:id="@+id/ticket_tv"
        android:layout_width="@dimen/view_dimen_280"
        android:layout_height="@dimen/view_dimen_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/exchange_mibi_btn"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:textColor="@drawable/exchange_btn_text_bg"
        android:textSize="@dimen/text_size_36"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line_e5e5e5"/>

</RelativeLayout>