<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#efeff4"
              android:orientation="vertical">
    <!--1和2是互斥显示的-->
    <!--1-->
    <RelativeLayout
        android:id="@+id/choose_pay_way_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_80">

        <View
            android:id="@+id/margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_18"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/margin_bottom"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="@dimen/margin_30"
            android:text="@string/recharge_select_pay_way_tip"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_36"/>

    </RelativeLayout>

    <!--2-->
    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_30"/>

</LinearLayout>