<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height">

    <TextView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_image_btn"
        android:drawableLeft="@drawable/topbar_icon_all_back_bg"
        android:drawablePadding="3dp"
        android:gravity="center|left"
        android:paddingLeft="3dp"
        android:singleLine="true"
        android:textColor="@color/color_black50_pressed_black90"
        android:textSize="@dimen/text_size_46" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/back_iv"
        android:ellipsize="marquee"
        android:gravity="center_vertical|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="22"
        android:maxWidth="150dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/color_black_trans_90"
        android:textSize="@dimen/text_size_46"
        android:visibility="gone" />

    <TextView
        android:id="@+id/center_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:maxLength="22"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:textColor="@color/color_black_trans_90"
        android:textSize="@dimen/text_size_46"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dip"
        android:padding="5dp"
        android:scaleType="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_40"
        android:textColor="@color/color_black70_pressed_black30"
        android:textSize="@dimen/text_size_42"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_split_line" />
</RelativeLayout>