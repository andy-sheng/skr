<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/place_holder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_953"
        android:background="@drawable/shape_change_name_fragment_bg"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_split">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_130"
            android:background="@drawable/shape_vfans_fragment_bg">

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_dimen_40"
                android:background="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/change_signature_text"
                android:textColor="@color/color_black_trans_80"
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_dimen_40"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/color_black_trans_80"
                android:layout_centerVertical="true"
                android:text="@string/ok"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 输入框 -->
            <EditText
                android:id="@+id/sign_et"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="13.33dp"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:hint="@string/signature_input_text"
                android:paddingLeft="13.33dp"
                android:paddingTop="20dp"
                android:textCursorDrawable="@drawable/text_cursor_color"
                android:textColor="@color/color_black_trans_90"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/left_character_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/sign_et"
                android:layout_alignRight="@id/sign_et"
                android:layout_marginBottom="13.33dp"
                android:layout_marginRight="13.33dp"
                android:textColor="@color/color_black_trans_60"
                android:textSize="16dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_0"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>