<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:paddingLeft="@dimen/view_dimen_40"
    android:background="@drawable/list_cell_bg">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/user_list_avatar"
        android:layout_width="@dimen/search_item_avatar_size"
        android:layout_height="@dimen/search_item_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:roundAsCircle="true" />

    <ImageView
        android:id="@+id/img_badge"
        android:layout_width="@dimen/lvl_small_icon_size_width"
        android:layout_height="@dimen/lvl_small_icon_size_height"
        android:layout_below="@id/user_list_avatar"
        android:layout_marginLeft="@dimen/lvl_small_icon_margin"
        android:layout_marginTop="@dimen/lvl_small_icon_margin_top"
        android:layout_toRightOf="@id/user_list_avatar"
        android:scaleType="fitStart"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/img_badge_vip"
        android:layout_width="@dimen/lvl_small_icon_size_width"
        android:layout_height="@dimen/vip_icon_size_height"
        android:layout_below="@id/user_list_avatar"
        android:layout_marginLeft="@dimen/lvl_small_icon_margin"
        android:layout_marginTop="@dimen/lvl_small_icon_margin_top"
        android:layout_toRightOf="@id/user_list_avatar"
        android:scaleType="fitStart"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_toLeftOf="@+id/btn_area"
        android:layout_toRightOf="@id/user_list_avatar"
        android:gravity="left|center_vertical">

        <LinearLayout
            android:id="@+id/name_gender_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:maxWidth="@dimen/view_dimen_360"
                android:singleLine="true"
                android:text="哈哈哈哈"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/text_size_42" />

            <ImageView
                android:id="@+id/img_gender"
                android:layout_width="@dimen/lvl_tv_height"
                android:layout_height="@dimen/lvl_tv_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="1.33dp"
                android:background="@drawable/all_man" />

            <TextView
                android:id="@+id/level_tv"
                android:layout_width="@dimen/lvl_tv_width"
                android:layout_height="@dimen/lvl_tv_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1.33dp"
                android:drawablePadding="@dimen/lvl_drawable_padding"
                android:gravity="center"
                android:paddingLeft="@dimen/lvl_left_padding"
                android:paddingRight="@dimen/lvl_right_padding"
                android:text="10"
                android:textColor="@color/lvl_txt_color"
                android:textSize="@dimen/lvl_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_gender_level"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:paddingRight="13.33dp"
            android:singleLine="true"
            android:text="哈哈哈哈"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_32" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_area"
        android:layout_width="@dimen/view_dimen_220"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_dimen_40">

        <ImageView
            android:id="@+id/img_follow_state"
            android:layout_width="@dimen/view_dimen_80"
            android:layout_height="@dimen/view_dimen_80"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_follow_state"
            android:layout_width="@dimen/view_dimen_250"
            android:layout_height="@dimen/view_dimen_75"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/follow_btn_bg"
            android:duplicateParentState="true"
            android:gravity="center"
            android:textColor="@color/color_follow_btn"
            android:textSize="@dimen/text_size_36"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_40"
        android:background="@color/color_line_e0dfde" />

</RelativeLayout>