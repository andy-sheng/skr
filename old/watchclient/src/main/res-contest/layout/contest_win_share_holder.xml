<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/youle_milive_succesful_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_dimen_925"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/share_win_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/view_dimen_40"/>

        <TextView
            android:id="@+id/my_bonus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:drawableLeft="@drawable/youle_milive_succesful_icon_money_rmb"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="25.5"
            android:textColor="@color/color_fee58a"
            android:textSize="@dimen/view_dimen_66"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/des_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_70"
        android:layout_marginTop="@dimen/view_dimen_2"
        android:gravity="center"
        android:text="@string/share_dest"
        android:textColor="@color/color_white"
        android:textSize="@dimen/view_dimen_40"/>

    <TextView
        android:id="@+id/invite_code_tv"
        android:layout_width="@dimen/view_dimen_790"
        android:layout_height="@dimen/view_dimen_260"
        android:layout_marginTop="@dimen/view_dimen_24"
        android:background="@drawable/corners_bg_a60235"
        android:gravity="center"
        android:text="QWRRRR"
        android:textColor="@color/color_white"
        android:textSize="@dimen/view_dimen_120"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/barcode_iv"
        android:layout_width="@dimen/view_dimen_240"
        android:layout_height="@dimen/view_dimen_240"
        android:layout_marginTop="@dimen/view_dimen_174"
        android:src="@drawable/recommend_btn_bg"/>

    <TextView
        android:id="@+id/download_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_dimen_94"
        android:layout_marginLeft="55.167dp"
        android:layout_marginRight="55.167dp"
        android:layout_marginTop="@dimen/view_dimen_35"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/share_download_tips"
        android:textColor="@color/color_white_trans_80"
        android:textSize="@dimen/text_size_36"/>
</LinearLayout>
