<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/touch_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black_trans_50"/>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_600">

        <RelativeLayout
            android:id="@+id/host_info_container"
            android:layout_width="@dimen/view_dimen_860"
            android:layout_height="@dimen/view_dimen_140"
            android:background="@drawable/shape_big_turn_table_host_info_bg"
            android:layout_centerHorizontal="true">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/host_iv"
                android:layout_width="@dimen/view_dimen_90"
                android:layout_height="@dimen/view_dimen_90"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@drawable/ic_launcher"
                app:roundingBorderColor="@color/color_4f6ba5"
                app:roundingBorderWidth="0dp" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="@dimen/view_dimen_500"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/text_size_36"
                android:text="likeke"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/host_iv"
                android:singleLine="false"
                android:lines="2"
                android:maxWidth="@dimen/view_dimen_500"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/view_dimen_25"/>

            <TextView
                android:id="@+id/rule_tv"
                android:layout_width="@dimen/view_dimen_48"
                android:layout_height="@dimen/view_dimen_48"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_dimen_30"
                android:layout_centerVertical="true"
                android:background="@drawable/rule_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/turn_table_rl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_770"
            android:layout_below="@id/host_info_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_dimen_60">

            <View
                android:layout_width="@dimen/view_dimen_940"
                android:layout_height="@dimen/view_dimen_642"
                android:background="@drawable/big_turn_bg"/>

            <com.wali.live.watchsdk.bigturntable.view.BigTurnTableView
                android:id="@+id/turn_table_container"
                android:layout_width="@dimen/view_dimen_770"
                android:layout_height="@dimen/view_dimen_770"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/point_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/big_turn_table_point_s"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/p_opt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/turn_table_rl"
            android:layout_marginTop="@dimen/view_dimen_50">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="@dimen/view_dimen_400"
                android:layout_height="@dimen/view_dimen_120"
                android:background="@drawable/cancel_start_turn_table_bg"
                android:gravity="center"
                android:text="@string/cancel"/>

            <TextView
                android:id="@+id/start_btn"
                android:layout_width="@dimen/view_dimen_400"
                android:layout_height="@dimen/view_dimen_120"
                android:layout_centerHorizontal="true"
                android:background="@drawable/start_turn_table_bg"
                android:gravity="center"
                android:layout_toRightOf="@id/cancel_tv"
                android:layout_marginLeft="@dimen/view_dimen_80"
                android:textColor="@color/white"
                android:text="@string/start_big_turn_table_txt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l_opt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/turn_table_rl"
            android:layout_marginLeft="@dimen/view_dimen_100"
            android:layout_alignTop="@id/turn_table_rl"
            android:layout_marginTop="@dimen/view_dimen_400"
            android:visibility="gone">

            <TextView
                android:id="@+id/l_cancel_tv"
                android:layout_width="@dimen/view_dimen_400"
                android:layout_height="@dimen/view_dimen_120"
                android:background="@drawable/cancel_start_turn_table_bg"
                android:gravity="center"
                android:text="@string/cancel"/>

            <TextView
                android:id="@+id/l_start_btn"
                android:layout_width="@dimen/view_dimen_400"
                android:layout_height="@dimen/view_dimen_120"
                android:layout_centerHorizontal="true"
                android:background="@drawable/start_turn_table_bg"
                android:gravity="center"
                android:layout_below="@id/l_cancel_tv"
                android:layout_marginTop="@dimen/view_dimen_60"
                android:textColor="@color/white"
                android:text="@string/start_big_turn_table_txt" />

        </RelativeLayout>

    </RelativeLayout>

</merge>