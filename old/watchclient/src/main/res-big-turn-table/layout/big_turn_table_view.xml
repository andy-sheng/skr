<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/type_container"
        android:layout_width="@dimen/view_dimen_1000"
        android:layout_height="@dimen/view_dimen_130"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_40">

        <TextView
            android:id="@+id/type_small_tv"
            android:layout_width="@dimen/view_dimen_495"
            android:layout_height="wrap_content"
            android:text="@string/big_turn_table_type_s_txt"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_45"
            android:textStyle="bold"
            android:background="@drawable/big_turn_table_type_s_bg" />

        <TextView
            android:id="@+id/type_big_tv"
            android:layout_width="@dimen/view_dimen_495"
            android:layout_height="wrap_content"
            android:text="@string/big_turn_table_type_b_txt"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_45"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:background="@drawable/big_turn_table_type_b_bg"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/view_dimen_1000"
        android:layout_height="@dimen/view_dimen_1190"
        android:layout_below="@id/type_container"
        android:background="@drawable/big_turn_table_container_bg"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/turn_table_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/type_container"
        android:layout_marginTop="@dimen/view_dimen_80">

        <com.wali.live.watchsdk.bigturntable.view.BigTurnTableView
            android:id="@+id/turn_table_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/big_turn_table_point_s"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/custom_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_table_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_60"
        android:textSize="@dimen/text_size_40"
        android:textColor="@color/color_f8e71c"
        android:text="@string/hosts_custom_tips" />

    <RelativeLayout
        android:id="@+id/custom_comtainer"
        android:layout_width="@dimen/view_dimen_900"
        android:layout_height="@dimen/view_dimen_100"
        android:layout_below="@id/custom_tips_tv"
        android:layout_marginTop="@dimen/view_dimen_35"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_big_turn_host_bg">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="@dimen/view_dimen_180"
            android:layout_height="@dimen/view_dimen_100"
            android:text="@string/send_gift_to_you"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_36"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shape_big_turn_host_tip_bg"/>

        <com.wali.live.watchsdk.income.view.NoLeakEditText
            android:id="@+id/edit_et"
            android:layout_width="@dimen/view_dimen_400"
            android:layout_height="@dimen/view_dimen_100"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:inputType="text"
            android:hint="@string/big_turn_host_hint_tips"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textColor="@color/color_black_trans_90"
            android:textColorHint="@color/color_black_trans_50"
            android:layout_toRightOf="@id/name_tv"
            android:layout_centerVertical="true"
            android:maxLength="5"
            android:textSize="@dimen/text_size_44" />


        <TextView
            android:id="@+id/ticket_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_913ffc"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_dimen_20"
            android:textSize="@dimen/text_size_36"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/open_container"
        android:layout_width="@dimen/view_dimen_690"
        android:layout_height="@dimen/view_dimen_180"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/view_dimen_90"
        android:layout_centerHorizontal="true"
        android:background="@drawable/big_turn_lottery">

        <TextView
            android:id="@+id/open_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启128钻大转盘"
            android:textColor="@color/color_da3c04"
            android:textSize="@dimen/text_size_46"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/view_dimen_46"/>

    </RelativeLayout>

</merge>