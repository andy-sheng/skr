<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_dimen_15"
    android:paddingRight="@dimen/view_dimen_15">
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_dimen_36"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/view_dimen_36"
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="@dimen/view_dimen_10"
        android:layout_centerVertical="true"/>

</RelativeLayout>
