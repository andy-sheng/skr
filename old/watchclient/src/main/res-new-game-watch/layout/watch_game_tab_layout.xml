<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.base.view.SlidingTabLayout
            android:id="@+id/watch_game_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_120"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <View
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_2"
            android:background="#47d8d8d8" />

        <android.support.v4.view.ViewPager
            android:id="@+id/watch_game_tab_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:requiresFadingEdge="none" />

    </LinearLayout>
</merge>













