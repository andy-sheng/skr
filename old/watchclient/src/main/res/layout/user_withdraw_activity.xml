<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_depart"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_profile_mode="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.33dip"
        android:layout_marginTop="16.67dip"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_40"
        android:paddingLeft="@dimen/margin_40"
        android:paddingRight="@dimen/margin_40"
        android:paddingTop="@dimen/margin_40">

        <com.base.image.fresco.BaseImageView
            android:id="@+id/bind_account_avatar"
            android:layout_width="@dimen/bind_account_avatar"
            android:layout_height="@dimen/bind_account_avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_30" />

        <TextView
            android:id="@+id/bind_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/bind_account_avatar"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_48" />

        <TextView
            android:id="@+id/bind_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bind_account_name"
            android:layout_marginTop="4dip"
            android:layout_toRightOf="@+id/bind_account_avatar"
            android:background="@drawable/image_yiyanzheng"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_30" />

        <TextView
            android:id="@+id/bind_account_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dip"
            android:text="@string/wx_withdraw_has_bind_tip"
            android:textColor="@color/color_black_trans_50"
            android:textSize="@dimen/text_size_30" />

    </RelativeLayout>

    <EditText
        android:id="@+id/account_input_money"
        android:layout_width="match_parent"
        android:layout_height="46.67dp"
        android:layout_marginTop="11.33dip"
        android:background="@color/color_white"
        android:gravity="center_vertical|left"
        android:inputType="numberDecimal"
        android:paddingLeft="@dimen/margin_40"
        android:singleLine="true"
        android:textColor="@color/color_black_trans_90"
        android:textColorHint="@color/color_black_trans_80"
        android:textSize="@dimen/text_size_38" />

    <TextView
        android:id="@+id/input_money_more_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:paddingLeft="@dimen/margin_40"
        android:textSize="@dimen/text_size_42" />

    <TextView
        android:id="@+id/withdraw_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginTop="31.33dip"
        android:background="@drawable/withdraw_withdraw_button"
        android:gravity="center"
        android:text="@string/account_withdraw"
        android:textColor="@color/color_white_pressed_white50"
        android:textSize="@dimen/text_size_52"
        android:enabled="false"/>

    <TextView
        android:id="@+id/faq_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/account_withdraw_ali_noti"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_38"
        android:visibility="gone"/>

</LinearLayout>