<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/view_dimen_230"
             android:layout_height="@dimen/view_dimen_230"
             android:layout_centerInParent="true">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/waiting_iv"
        android:layout_width="@dimen/margin_123"
        android:layout_height="@dimen/margin_123"
        android:layout_gravity="center"/>

    <com.wali.live.watchsdk.component.view.TimerCircleView
        android:id="@+id/timer_circle_view"
        android:layout_width="@dimen/margin_140"
        android:layout_height="@dimen/margin_140"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/timer_tv"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_120"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_36"
        android:textStyle="bold"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/anim_iv"
        android:layout_width="@dimen/view_dimen_125"
        android:layout_height="@dimen/view_dimen_125"
        android:layout_gravity="center"
        android:src="@drawable/count_down_anim"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/anim_iv2"
        android:layout_width="@dimen/view_dimen_125"
        android:layout_height="@dimen/view_dimen_125"
        android:layout_gravity="center"
        android:src="@drawable/count_down_anim"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/anim_iv3"
        android:layout_width="@dimen/view_dimen_125"
        android:layout_height="@dimen/view_dimen_125"
        android:layout_gravity="center"
        android:src="@drawable/count_down_anim"
        android:visibility="gone"/>
</FrameLayout>