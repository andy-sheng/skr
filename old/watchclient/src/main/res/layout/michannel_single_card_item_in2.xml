<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.base.image.fresco.view.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_535"/>

        <TextView
            android:id="@+id/shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_marginRight="@dimen/view_dimen_4"
            android:background="@drawable/shape_gradient_black"/>

        <include
            android:id="@+id/mark_tv"
            layout="@layout/michannel_askew_small_view"/>

        <com.base.image.fresco.BaseImageView
            android:id="@+id/anchor_activity_icon"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/left_label"
            style="@style/michannel_dynamic_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_70"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="label"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_36"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/michannel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/michannel_type_live"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/live_status_iv"
            android:layout_width="@dimen/view_dimen_70"
            android:layout_height="@dimen/view_dimen_70"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignRight="@id/cover_iv"
            android:layout_marginBottom="@dimen/view_dimen_18"
            android:layout_marginRight="@dimen/margin_24"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/michannel_count_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/milive_homepage_icon_people"
            android:drawablePadding="2.67dp"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_dimen_22"
            android:text="12345人"/>

        <TextView
            android:id="@+id/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="#女生宿舍"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_60"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/display_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_18"
            android:layout_marginRight="@dimen/margin_20"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_39"
            android:visibility="gone"/>

    </RelativeLayout>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/michannel_vertical_margin"/>-->

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="7dip"
        android:paddingTop="6.67dp">

        <TextView
            android:id="@+id/user_name_tv"
            android:textSize="@dimen/view_dimen_39"
            android:textColor="@color/color_black_trans_80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="阳光女孩"/>
    </RelativeLayout>
</LinearLayout>
