<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="308dp"
    android:layout_height="173.33dp">

    <TextureView
        android:id="@+id/video_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <com.base.image.fresco.BaseImageView
        android:id="@+id/player_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/volume_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/video_player_view"
        android:layout_alignLeft="@+id/video_player_view"
        android:padding="6dp"
        android:src="@drawable/voice_volume_bg"/>
</merge>