<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rankingRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/current_rank_rlytSecondRoot"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_dimen_450"
            android:layout_weight="1">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/current_rank_avatar_imgSecond"
                android:layout_width="@dimen/view_dimen_168"
                android:layout_height="@dimen/view_dimen_168"
                android:padding="2dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/view_dimen_86"
                android:background="@drawable/anchor_rank_round_bg_top2"/>

            <TextView
                android:id="@+id/current_rank_nameSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/current_rank_avatar_imgSecond"
                android:layout_marginTop="@dimen/view_dimen_20"
                android:maxLines="1"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/view_dimen_45" />

            <!-- 显示等级-->
            <com.wali.live.common.view.LevelIconsLayout
                android:id="@+id/level_tvSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/view_dimen_6"
                android:layout_below="@+id/current_rank_nameSecond"
                android:layout_marginLeft="@dimen/view_dimen_8" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/current_rank_rlytFirstRoot"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_dimen_450"
            android:layout_weight="1">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/current_rank_avatar_imgFirst"
                android:layout_width="@dimen/view_dimen_214"
                android:layout_height="@dimen/view_dimen_214"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:layout_marginTop="@dimen/view_dimen_40"
                android:background="@drawable/anchor_rank_round_bg_top1"/>

            <TextView
                android:id="@+id/current_rank_nameFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/current_rank_avatar_imgFirst"
                android:maxLines="1"
                android:layout_marginTop="@dimen/view_dimen_20"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/view_dimen_45" />

            <!-- 显示等级-->
            <com.wali.live.common.view.LevelIconsLayout
                android:id="@+id/level_tvFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/view_dimen_6"
                android:layout_below="@+id/current_rank_nameFirst"
                android:layout_marginLeft="@dimen/view_dimen_8" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/current_rank_rlytThirdRoot"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_dimen_450"
            android:layout_weight="1">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/current_rank_avatar_imgThird"
                android:layout_width="@dimen/view_dimen_168"
                android:layout_height="@dimen/view_dimen_168"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:layout_marginTop="@dimen/view_dimen_86"
                android:background="@drawable/anchor_rank_round_bg_top3"/>

            <TextView
                android:id="@+id/current_rank_nameThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/current_rank_avatar_imgThird"
                android:layout_marginTop="@dimen/view_dimen_20"
                android:maxLines="1"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/view_dimen_45" />

            <!-- 显示等级-->
            <com.wali.live.common.view.LevelIconsLayout
                android:id="@+id/level_tvThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/view_dimen_6"
                android:layout_below="@+id/current_rank_nameThird"
                android:layout_marginLeft="@dimen/view_dimen_8" />
        </RelativeLayout>
    </LinearLayout>

    <!--分隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_1"
        android:background="@color/color_black_trans_10"/>

</LinearLayout>