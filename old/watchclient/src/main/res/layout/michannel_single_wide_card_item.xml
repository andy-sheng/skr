<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.base.image.fresco.view.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="163.3dp"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/michannel_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1.67dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="3.33dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_34"/>

        <include
            android:id="@+id/shadow_tv"
            layout="@layout/michannel_shadow_small_view"
            android:layout_alignEnd="@+id/count_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/count_tv"/>

        <include
            android:id="@+id/mark_tv"
            layout="@layout/michannel_askew_small_view"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/michannel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/michannel_type_live"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:paddingBottom="15dp"
        android:paddingRight="6.67dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/michannel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:lineSpacingExtra="0dp"
            android:maxLines="2"
            android:text="阳光女孩"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_40"/>

        <TextView
            android:id="@+id/display_tv"
            style="@style/michannel_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="北京"/>
    </RelativeLayout>
</LinearLayout>
