<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/center_area"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_190">

    <com.base.image.fresco.view.TintableImageView
        android:id="@+id/single_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <com.base.image.fresco.view.TintableImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/view_dimen_90"
        android:layout_height="@dimen/view_dimen_90"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_50" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_toRightOf="@id/icon_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_black_trans_80"
            android:textSize="@dimen/text_size_42" />

        <TextView
            android:id="@+id/sub_single_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_black_trans_50"
            android:textSize="@dimen/text_size_34" />
    </LinearLayout>

    <View
        android:id="@+id/view_dirver"
        android:layout_width="1px"
        android:layout_height="@dimen/view_dimen_100"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_black_trans_10" />

</RelativeLayout>
