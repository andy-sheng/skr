<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_gravity="center_horizontal"
        android:text="@string/select_birth_day"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_44" />

    <!--        android:layout_marginBottom="@dimen/margin_60"
    android:background="@drawable/list_item_date_bg_normal"
    android:background="@drawable/list_item_first_bg_normal_light_60"
    android:layout_marginTop="@dimen/margin_48"
    android:layout_height="@dimen/view_dimen_760"-->
    <View
        android:id="@+id/up_line"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/list_item_line" />

    <LinearLayout
        android:background="@drawable/list_item_date_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.wali.live.watchsdk.view.WheelView
            android:id="@+id/year"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="0.33dip"
            android:layout_height="match_parent"
            android:background="@color/list_item_line" />

        <com.wali.live.watchsdk.view.WheelView
            android:id="@+id/month"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="0.33dip"
            android:layout_height="match_parent"
            android:background="@color/list_item_line" />

        <com.wali.live.watchsdk.view.WheelView
            android:id="@+id/day"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
