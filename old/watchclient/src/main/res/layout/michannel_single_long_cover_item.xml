<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/cover_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/shadow_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/cover_img"
        android:background="@drawable/shape_gradient_black_no_corner"/>

    <TextView
        android:id="@+id/left_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cover_img"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="label"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold"
        android:visibility="gone"/>

    <com.base.image.fresco.BaseImageView
        android:id="@+id/left_label_Iv"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16.66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6.66dp"
        android:layout_marginTop="6.66dp"
        android:background="@drawable/feeds_video_bg_like_count"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.66dp"
            android:layout_marginRight="5.66dp"
            android:drawableLeft="@drawable/feeds_video_icon_like"
            android:drawablePadding="2.33dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="#cdffffff"
            android:textSize="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover_img"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginLeft="@dimen/margin_20"
        android:drawableLeft="@drawable/home_icon_people"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="小明"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_36"/>

    <TextView
        android:id="@+id/single_tv"
        style="@style/michannel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover_img"
        android:ellipsize="end"
        android:maxHeight="48dp"
        android:maxLines="2"
        android:minHeight="32dp"
        android:paddingBottom="7.66dp"
        android:paddingLeft="6.66dp"
        android:paddingRight="6.66dp"
        android:paddingTop="7.66dp"
        android:text="阳光小姐"/>

</RelativeLayout>