<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rankingRootLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_210"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_cell_bg"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/color_black_trans_10"/>

        <FrameLayout
            android:id="@+id/rankingLayout"
            android:layout_width="@dimen/view_dimen_70"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_dimen_40"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/rankNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/color_black_trans_80"
                android:textSize="@dimen/text_size_40"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rank_avatar_bg"
            android:layout_width="38.67dp"
            android:layout_height="38.67dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rankingLayout">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/rank_avatar"
                android:layout_width="@dimen/rank_avatar_size"
                android:layout_height="@dimen/rank_avatar_size"
                android:layout_gravity="center"/>
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_toLeftOf="@id/btn_area"
            android:layout_toRightOf="@id/rank_avatar_bg"
            android:gravity="left|center_vertical">

            <RelativeLayout
                android:id="@+id/name_gender_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:maxWidth="@dimen/view_dimen_300"
                    android:singleLine="true"
                    android:text="hah哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈hahahahah哈哈"
                    android:textColor="@color/color_black_trans_90"
                    android:textSize="@dimen/text_size_42"/>

                <TextView
                    android:id="@+id/level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@id/txt_username"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="爱幽冥黄"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_24"/>

                <TextView
                    android:id="@+id/gap_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/gap_hint"
                    android:textColor="@color/color_black_trans_50"
                    android:textSize="@dimen/text_size_32"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_gender_level"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/display_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="800"
                    android:textColor="@color/color_black_trans_50"
                    android:textSize="@dimen/text_size_34"/>

                <TextView
                    android:id="@+id/gap_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/vfans_exp_value"
                    android:textColor="@color/color_black_trans_50"
                    android:textSize="@dimen/text_size_32"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</merge>