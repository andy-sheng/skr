<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_190"
    android:background="@drawable/common_list_item_bg">

    <RelativeLayout
        android:id="@+id/avatar_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_30">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="@dimen/view_dimen_110"
            android:layout_height="@dimen/view_dimen_110"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/user_certification_type"
            android:layout_width="@dimen/view_dimen_65"
            android:layout_height="@dimen/view_dimen_42"
            android:layout_alignBottom="@id/avatar"
            android:layout_marginLeft="@dimen/view_dimen_75"
            android:visibility="visible" />

    </RelativeLayout>

    <com.base.view.MLTextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_dimen_170"
        android:layout_marginTop="@dimen/margin_39"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingRight="35dip"
        android:singleLine="true"
        android:text="nickname"
        android:textColor="@color/color_black_trans_90"
        android:textSize="@dimen/text_size_42" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/from"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_39"
        android:layout_marginRight="@dimen/margin_140"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="content"
        android:textColor="@color/color_black_trans_40"
        android:textDirection="3"
        android:textSize="@dimen/text_size_34" />

    <ImageView
        android:id="@+id/conv_unsend_iv"
        android:layout_width="@dimen/text_size_34"
        android:layout_height="@dimen/text_size_34"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginRight="@dimen/view_dimen_30"
        android:gravity="top|center_horizontal"
        android:src="@drawable/icon_talk_failure"
        android:visibility="gone" />

    <com.base.view.MLTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_45"
        android:gravity="top|center_horizontal"
        android:singleLine="true"
        android:text="14:26"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/text_size_34"
        android:visibility="visible" />

    <com.base.view.MLTextView
        android:id="@+id/new_msg_num"
        android:layout_width="@dimen/height_45"
        android:layout_height="@dimen/height_45"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@drawable/little_red_dot_number"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/color_white"
        android:textSize="@dimen/margin_30"
        android:translationY="-0.7dip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/new_msg_alert"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_30"
        android:gravity="center"
        android:includeFontPadding="false"
        android:src="@drawable/little_red_dot"
        android:translationY="-0.9dip"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/conversation_checkbox"
        style="@style/MyCheckBoxRight"
        android:layout_width="@dimen/text_size_60"
        android:layout_height="@dimen/text_size_60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_30"
        android:checked="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="5dip"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@color/color_black_trans_10" />

</RelativeLayout>