<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:is_profile_mode="true"/>

    <!-- 输入框 -->
    <EditText
        android:id="@+id/sign_et"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="13.33dp"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        android:hint="@string/signature_input_text"
        android:paddingLeft="13.33dp"
        android:paddingTop="20dp"
        android:textColor="@color/color_black_trans_90"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/left_character_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_et"
        android:layout_alignRight="@id/sign_et"
        android:layout_marginBottom="13.33dp"
        android:layout_marginRight="13.33dp"
        android:textColor="@color/color_black_trans_60"
        android:textSize="16dp"/>
</RelativeLayout>