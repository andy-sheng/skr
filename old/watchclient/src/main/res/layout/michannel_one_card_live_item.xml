<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_depart"
        android:visibility="gone"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/michannel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wali.live.watchsdk.channel.view.BannerVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_gradient_black_no_corner"/>

        <TextView
            android:id="@+id/left_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_90"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_39"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"/>

        <TextView
            android:id="@+id/name_tv"
            tools:text="Hello world"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_45"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/count_tv"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/michannel_count_bottom_big"
            tools:text="1008"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/milive_homepage_icon_people"
            android:drawablePadding="2.67dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_10" />

</LinearLayout>