<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f2f2f2"
        android:visibility="gone"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/michannel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/channel_side_margin"
        android:layout_marginRight="@dimen/channel_side_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forecast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableTop="@drawable/home_comingsoon"
            android:text="@string/michannel_forecast"
            android:textColor="@color/color_black_trans_50"
            android:textSize="@dimen/text_size_34"/>

        <View
            android:id="@+id/split_view"
            android:layout_width="@dimen/view_dimen_1"
            android:layout_height="@dimen/view_dimen_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/forecast_tv"
            android:background="@color/color_black_trans_20"/>

        <TextView
            android:id="@+id/forecast_btn"
            android:layout_width="@dimen/view_dimen_120"
            android:layout_height="@dimen/view_dimen_60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow_iv"
            android:background="@drawable/follow_btn_bg"
            android:gravity="center"
            android:text="@string/michannel_notice"
            android:textColor="@color/color_black_trans_50"
            android:textSize="@dimen/text_size_32"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/home_arrow_bg"/>

        <com.wali.live.watchsdk.channel.view.RepeatScrollView
            android:id="@+id/repeat_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/forecast_btn"
            android:layout_toRightOf="@id/split_view"/>
    </RelativeLayout>
</LinearLayout>