<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/split_area"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_depart"/>

    <View
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:id="@+id/margin_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <include
        android:id="@+id/title_area"
        layout="@layout/michannel_head_item"
        android:layout_width="match_parent"
        android:layout_height="37.33dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_1054"
        android:layout_marginLeft="@dimen/michannel_side_margin"
        android:layout_marginRight="@dimen/michannel_side_margin">

        <com.base.image.fresco.view.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/cover_iv"
            android:background="@drawable/shape_gradient_black"/>

        <com.base.image.fresco.BaseImageView
            android:id="@+id/anchor_activity_icon"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/left_label"
            style="@style/michannel_dynamic_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_60"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="label"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/michannel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/michannel_type_live"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/live_status_iv"
            android:layout_width="@dimen/view_dimen_60"
            android:layout_height="@dimen/view_dimen_60"
            android:layout_above="@id/user_name_tv"
            android:layout_marginBottom="@dimen/view_dimen_14"
            android:layout_marginLeft="@dimen/view_dimen_19"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/michannel_count_bottom_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:text="12345人"/>

        <TextView
            android:id="@+id/middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="#女生宿舍"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_60"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/display_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_20"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/michannel_name_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_45"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_marginRight="@dimen/view_dimen_16"
            android:layout_toLeftOf="@id/count_tv"
            android:text="小明"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_10"/>

</LinearLayout>