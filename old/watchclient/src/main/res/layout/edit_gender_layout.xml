<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:is_profile_mode="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="13.33dp"
        android:layout_marginLeft="13.33dp"
        android:layout_marginTop="22.67dp"
        android:gravity="center"
        android:text="@string/modify_gender"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/text_size_36"/>

    <LinearLayout
        android:id="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="@drawable/common_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/gender_man"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_42"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_40"/>

        <ImageView
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="@dimen/margin_40"
            android:src="@drawable/me_set_confirmation"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#e0dfde"/>

    <LinearLayout
        android:id="@+id/setting2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="@drawable/common_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/gender_woman"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_42"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_40"/>

        <ImageView
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="@dimen/margin_40"
            android:src="@drawable/me_set_confirmation"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>