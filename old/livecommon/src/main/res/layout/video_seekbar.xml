<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_trans_60"
    android:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout">

    <android.widget.SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:foregroundGravity="center_vertical"
        android:hapticFeedbackEnabled="true"
        android:max="100"
        android:maxHeight="@dimen/view_dimen_6"
        android:minHeight="@dimen/view_dimen_6"
        android:paddingLeft="@dimen/view_dimen_10"
        android:paddingRight="@dimen/view_dimen_10"
        android:progressDrawable="@drawable/video_seek_bar"
        android:thumb="@drawable/video_seek_bar_thumb"
        android:thumbOffset="0dp" />

</merge>