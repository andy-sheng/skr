<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/continue_view_rlytRoot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_100"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="@dimen/view_dimen_430"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/live_bg_head"
            android:paddingRight="40dp">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/sender_iv"
                android:layout_width="@dimen/view_dimen_90"
                android:layout_height="@dimen/view_dimen_90"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:src="@drawable/ic_launcher"
                app:roundingBorderColor="@color/color_4f6ba5"
                app:roundingBorderWidth="0dp" />

            <ImageView
                android:id="@+id/user_badge_iv"
                android:layout_width="@dimen/margin_34"
                android:layout_height="@dimen/margin_34"
                android:layout_below="@id/sender_iv"
                android:layout_marginLeft="-11.33dp"
                android:layout_marginTop="-11.33dp"
                android:layout_toRightOf="@id/sender_iv"
                android:scaleType="fitStart"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/sender_iv"
                android:layout_marginLeft="5.33dp"
                android:layout_toRightOf="@id/sender_iv"
                android:singleLine="true"
                android:text="Angelababy我就是啊"
                android:textColor="@color/color_fed533"
                android:textSize="@dimen/text_size_32" />

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name_tv"
                android:layout_below="@id/name_tv"
                android:layout_marginTop="1dp"
                android:singleLine="true"
                android:text="送了玫瑰花"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36" />

        </RelativeLayout>

        <com.wali.live.common.gift.view.GiftPictureAnimationView
            android:id="@+id/gift_picture_vg"
            android:layout_width="@dimen/view_dimen_128"
            android:layout_height="@dimen/view_dimen_128"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="-3dp"
            android:layout_marginLeft="117.33dp" />

        <com.wali.live.common.gift.view.GiftNumberAnimationView
            android:id="@+id/gift_number_vg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29.67dp"
            android:layout_toRightOf="@id/gift_picture_vg"
            android:paddingRight="2dp" />

        <RelativeLayout
            android:id="@+id/numberS"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="165dp"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/numberXs"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"
                android:src="@drawable/lianfa_number_x_s" />

            <ImageView
                android:id="@+id/number1s"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@id/numberXs"
                android:paddingBottom="4dp"
                android:src="@drawable/lianfa_number_1_s" />

            <ImageView
                android:id="@+id/number2s"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@id/number1s"
                android:paddingBottom="4dp"
                android:src="@drawable/lianfa_number_2_s" />

            <ImageView
                android:id="@+id/number3s"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/number2s"
                android:paddingBottom="4dp"
                android:src="@drawable/lianfa_number_2_s" />

            <ImageView
                android:id="@+id/number4s"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/number3s"
                android:paddingBottom="4dp"
                android:src="@drawable/lianfa_number_2_s" />


            <ImageView
                android:layout_width="21dp"
                android:layout_height="10dp"
                android:layout_below="@id/numberXs"
                android:background="@drawable/liansong" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/numberB"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="200dp"
            android:layout_toRightOf="@id/numberS"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/numberXb"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/lianfa_number_x_b" />

            <ImageView
                android:id="@+id/number1b"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-1dp"
                android:layout_toRightOf="@id/numberXb"
                android:src="@drawable/lianfa_number_1_b" />

            <ImageView
                android:id="@+id/number2b"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/number1b"
                android:src="@drawable/lianfa_number_2_b" />

            <ImageView
                android:id="@+id/number3b"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/number2b"
                android:src="@drawable/lianfa_number_1_b" />

            <ImageView
                android:id="@+id/number4b"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/number3b"
                android:src="@drawable/lianfa_number_2_b" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="270dp"
            android:src="@drawable/lianfa_star_b"
            android:visibility="invisible" />
    </FrameLayout>
</merge>