    >

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_22"
        android:drawablePadding="@dimen/lvl_drawable_padding"
        android:layout_marginTop="@dimen/margin_8"
        android:minWidth="25dip"
        android:gravity="center"
        android:paddingLeft="@dimen/lvl_left_padding"
        android:paddingRight="@dimen/lvl_left_padding"
        android:maxEms="6"
        android:adjustViewBounds="true"
        android:text="10"
        android:textColor="@color/lvl_txt_color"
        android:textSize="@dimen/lvl_text_size"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/barrage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/margin_16"
        android:textColor="@color/color_black_trans_60"
        android:textDirection="3"
        android:textSize="@dimen/text_size_44" />

    <com.base.image.fresco.BaseImageView
        android:id="@+id/gift_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/barrage_tv"
        android:layout_marginBottom="2.66dp"
        android:layout_marginLeft="-3.33dp"
        android:layout_toRightOf="@id/barrage_tv"
        android:visibility="gone" />

