<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15.33dp"
        android:gravity="center"
        android:text="@string/face_beauty"
        android:textColor="@color/color_white_trans_60"
        android:textSize="@dimen/text_size_42" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53.33dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/live_icon_single_beauty"
            android:drawablePadding="6.67dp"
            android:gravity="center"
            android:text="@string/face_beauty"
            android:textColor="@color/color_white_trans_80"
            android:textSize="12.67dp"
            android:translationX="-90dp" />

        <com.wali.live.livesdk.live.view.SwitchButton
            android:id="@+id/switch_btn"
            style="@style/Switch"
            android:layout_width="wrap_content"
            android:layout_height="12.67dp"
            android:layout_marginRight="20dp"
            android:translationX="110dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/color_white_trans_20" />

</LinearLayout>
