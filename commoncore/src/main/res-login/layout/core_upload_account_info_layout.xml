<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="上传个人资料"
        app:centerType="textView" />

    <com.common.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_100_dp"
        android:layout_height="@dimen/view_100_dp"
        android:layout_below="@+id/titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_32_dp" />

    <com.common.view.ex.NoLeakEditText
        android:id="@+id/nickname_et"
        android:hint="昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_marginTop="@dimen/view_20_dp"
        android:layout_marginLeft="@dimen/view_60_dp"
        android:layout_marginRight="@dimen/view_60_dp" />


    <com.common.view.ex.ExTextView
        android:id="@+id/submit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_10_dp"
        android:background="@color/gray"
        android:gravity="center"
        android:paddingLeft="@dimen/view_20_dp"
        android:paddingTop="@dimen/view_10_dp"
        android:paddingRight="@dimen/view_20_dp"
        android:paddingBottom="@dimen/view_10_dp"
        android:text="上传资料" />

</RelativeLayout>
