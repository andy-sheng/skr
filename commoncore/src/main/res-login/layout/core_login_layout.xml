<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="LoginActivity"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/comm_titlebar_back_normal"
        titlebar:leftDrawablePadding="0dp"
        titlebar:leftText="返回"
        titlebar:leftType="textView" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar">

        <com.common.view.ex.ExTextView
            android:id="@+id/logo_tv"
            android:layout_width="@dimen/view_dimen_500"
            android:layout_height="@dimen/view_dimen_500"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="logo"
            android:textSize="@dimen/textsize_dimen_240"/>

        <com.common.view.ex.NoLeakEditText
            android:id="@+id/input_phone_et"
            android:layout_below="@id/logo_tv"
            android:layout_width="@dimen/view_dimen_800"
            android:layout_height="@dimen/view_n_dimen_200"
            android:layout_centerHorizontal="true"
            android:hint="请输入手机号" />

        <com.common.view.ex.ExTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_n_dimen_200"
            android:layout_toLeftOf="@+id/input_phone_et"
            android:layout_alignBottom="@+id/input_phone_et"
            android:layout_marginBottom="@dimen/view_dimen_40"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/black"/>

        <com.common.view.ex.ExTextView
            android:id="@+id/phone_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_40"
            android:layout_below="@+id/input_phone_et"
            android:layout_marginTop="@dimen/view_n_dimen_20"
            android:layout_alignLeft="@+id/input_phone_et"
            android:text="输入手机号码的提示"
            android:textSize="@dimen/textsize_dimen_30"
            android:textColor="@color/red"
            android:visibility="gone"/>

        <com.common.view.ex.ExButton
            android:id="@+id/next_btn"
            android:layout_width="@dimen/view_dimen_400"
            android:layout_height="@dimen/view_dimen_100"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_phone_et"
            android:layout_marginTop="@dimen/view_dimen_40"
            android:padding="@dimen/view_dimen_2"
            android:text="下一步"
            android:gravity="center"
            android:textSize="@dimen/textsize_dimen_45"
            titlebar:bl_shape="rectangle"
            titlebar:bl_solid_color="@color/gray"
            titlebar:bl_corners_radius="@dimen/view_dimen_30"
            titlebar:bl_pressed_color="@color/black"
            titlebar:bl_unpressed_color="@color/white"
            titlebar:bl_pressed_textColor="@color/white"
            titlebar:bl_unPressed_textColor="@color/black"/>

        <com.common.view.ex.ExButton
            android:id="@+id/green_channel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_btn"
            android:layout_marginTop="@dimen/view_dimen_20"
            android:text="绿色通道" />
    </RelativeLayout>


</RelativeLayout>