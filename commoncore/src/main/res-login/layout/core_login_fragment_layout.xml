<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EBE6"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/meinv_launch" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/picture"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="撕歌 | 很高兴，用歌声认识你"
            android:textColor="#514C46"
            android:textSize="@dimen/textsize_16_dp" />

        <LinearLayout
            android:id="@+id/tv_user_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_20_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="《用户服务协议》"
                android:textSize="@dimen/textsize_12_dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/denglu_agree_img" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/denglu_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/container"
        android:layout_marginLeft="@dimen/view_40_dp"
        android:layout_marginRight="@dimen/view_40_dp"
        android:layout_marginTop="-32dp"
        android:orientation="horizontal">

        <com.common.view.ex.ExImageView
            android:id="@+id/weixin_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_64_dp"
            android:layout_weight="1"
            android:src="@drawable/denglu_weixin" />

        <com.common.view.ex.ExImageView
            android:id="@+id/phone_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_64_dp"
            android:layout_weight="1"
            android:src="@drawable/denglu_iphone" />

        <com.common.view.ex.ExImageView
            android:id="@+id/qq_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_64_dp"
            android:layout_weight="1"
            android:src="@drawable/denglu_qq" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>