<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_act_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.common.view.ex.ExTextView
        android:id="@+id/logo_tv"
        android:layout_width="@dimen/view_dimen_500"
        android:layout_height="@dimen/view_dimen_500"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="logo"
        android:textSize="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_dimen_300"
        android:orientation="horizontal">

        <com.common.view.ex.ExTextView
            android:id="@+id/weixin_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_66_67_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/black" />

        <com.common.view.ex.ExTextView
            android:id="@+id/phone_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_66_67_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机"
            android:textColor="@color/black" />

        <com.common.view.ex.ExTextView
            android:id="@+id/weibo_login_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_66_67_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>