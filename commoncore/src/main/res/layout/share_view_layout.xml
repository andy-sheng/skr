<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    app:bl_solid_color="#F1EBE6"
    app:bl_corners_topLeftRadius="@dimen/view_12_dp"
    app:bl_corners_topRightRadius="@dimen/view_12_dp"
    android:paddingLeft="@dimen/view_60_dp"
    android:paddingRight="@dimen/view_60_dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_127_dp">

    <TextView
        android:drawableTop="@drawable/icon_weixin"
        android:gravity="center_horizontal|bottom"
        android:textSize="@dimen/textsize_12_dp"
        android:text="微信好友"
        android:layout_centerVertical="true"
        android:id="@+id/tv_wechat_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_80_dp" />

    <TextView
        android:drawableTop="@drawable/pengyouquan"
        android:gravity="center_horizontal|bottom"
        android:textSize="@dimen/textsize_12_dp"
        android:text="朋友圈"
        android:layout_centerInParent="true"
        android:id="@+id/tv_wechat_circle_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_80_dp" />

    <TextView
        android:drawableTop="@drawable/icon_qq"
        android:gravity="center_horizontal|bottom"
        android:textSize="@dimen/textsize_12_dp"
        android:text="QQ"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_qq_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_80_dp" />
</com.common.view.ex.ExRelativeLayout>