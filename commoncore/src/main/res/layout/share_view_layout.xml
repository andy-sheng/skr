<?xml version="1.0" encoding="utf-8"?>
<com.common.view.ex.ExConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_127_dp"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:bl_corners_topLeftRadius="@dimen/view_12_dp"
    app:bl_corners_topRightRadius="@dimen/view_12_dp"
    app:bl_solid_color="#F1EBE6">

    <TextView
        android:id="@+id/tv_wechat_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_80_dp"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/weixinhaoyou"
        android:gravity="center_horizontal|bottom"
        android:text="微信好友"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_wechat_circle_share"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_height="@dimen/view_80_dp"
        android:id="@+id/tv_wechat_circle_share"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"

        android:drawableTop="@drawable/pengyouquan"
        android:gravity="center_horizontal|bottom"
        android:text="朋友圈"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_qq_share"
        app:layout_constraintStart_toEndOf="@+id/tv_wechat_share"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_height="@dimen/view_80_dp"
        android:id="@+id/tv_qq_share"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/qq"
        android:gravity="center_horizontal|bottom"
        android:text="QQ好友"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_qq_zone"
        app:layout_constraintStart_toEndOf="@+id/tv_wechat_circle_share"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_qq_zone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_80_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/qqkongjian"
        android:gravity="center_horizontal|bottom"
        android:text="QQ空间"
        android:textSize="@dimen/textsize_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_qq_share"
        app:layout_constraintTop_toTopOf="parent" />
</com.common.view.ex.ExConstraintLayout>