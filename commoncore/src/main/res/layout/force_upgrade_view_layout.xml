<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/view_345_dp"
    android:layout_height="@dimen/view_362_dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/qiangzhigengxin_bj">

    <com.common.view.ex.ExTextView
        android:id="@+id/version_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/view_73_dp"
        android:layout_marginRight="@dimen/view_16_dp"
        android:text="v1.1.0"
        android:textColor="#ffffffff"
        android:textSize="@dimen/view_13_dp" />

    <com.common.view.ex.ExTextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_52_dp"
        android:layout_marginTop="@dimen/view_155_dp"
        android:layout_marginRight="@dimen/view_52_dp"
        android:gravity="center"
        android:text="撕歌准备了一个新的大版本给你 为了与其他玩家正常玩耍 快来更新吧～"
        android:textColor="#ff0c2275"
        android:textSize="@dimen/view_17_dp"
        android:textStyle="bold" />

    <com.common.view.ex.ExTextView
        android:id="@+id/size_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/view_52_dp"
        android:layout_marginTop="@dimen/view_18_dp"
        android:layout_marginRight="@dimen/view_52_dp"
        android:gravity="center"
        android:text="更新包23.6Mb，建议在wifi环境下点击更新"
        android:textColor="#ff0c2275"
        android:textSize="@dimen/view_12_dp" />

    <LinearLayout
        android:id="@+id/op_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_40_dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_38_dp"
        android:background="@drawable/quxiaogengxin_btn">

        <com.common.view.ex.ExTextView
            android:id="@+id/quit_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/view_4_dp"
            android:text="取消"
            android:textColor="#0C2275"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold" />

        <com.common.view.ex.ExTextView
            android:id="@+id/update_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/view_4_dp"
            android:text="更新"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/view_16_dp"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/upgrade_bar_include_layout" />

</RelativeLayout>
