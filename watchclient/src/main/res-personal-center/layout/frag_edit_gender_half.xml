<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/place_holder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_953"
        android:background="@drawable/shape_change_name_fragment_bg"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_split">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_130"
            android:background="@drawable/shape_vfans_fragment_bg">

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_dimen_40"
                android:background="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/gender"
                android:textColor="@color/color_black_trans_80"
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_dimen_40"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/color_black_trans_80"
                android:layout_centerVertical="true"
                android:text="@string/ok"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="13.33dp"
            android:layout_marginLeft="13.33dp"
            android:layout_marginTop="22.67dp"
            android:gravity="center"
            android:text="@string/modify_gender"
            android:textColor="@color/color_black_trans_40"
            android:textSize="@dimen/text_size_36"/>

        <LinearLayout
            android:id="@+id/setting1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/common_list_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/gender_man"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/text_size_42"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/text_size_40"/>

            <ImageView
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="@dimen/margin_40"
                android:src="@drawable/me_set_confirmation"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#e0dfde"/>

        <LinearLayout
            android:id="@+id/setting2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height"
            android:background="@drawable/common_list_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="@string/gender_woman"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/text_size_42"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_black_trans_60"
                android:textSize="@dimen/text_size_40"/>

            <ImageView
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="@dimen/margin_40"
                android:src="@drawable/me_set_confirmation"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_0"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>