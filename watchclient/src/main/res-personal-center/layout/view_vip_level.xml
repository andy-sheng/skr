<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/level_icon"
                android:layout_width="@dimen/view_dimen_286"
                android:layout_height="@dimen/view_dimen_330"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_78"
                android:src="@drawable/vip_icon_lv_0"/>

            <!-- 我的等级 提示-->
            <TextView
                android:id="@+id/level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/level_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_9"
                android:background="@drawable/vip_icon_bg_unable"
                android:gravity="center|top"
                android:paddingTop="@dimen/margin_13"
                android:textColor="@color/color_white_trans_90"
                android:textSize="@dimen/text_size_40"/>

        </RelativeLayout>


        <!--进度条-->
        <RelativeLayout
            android:id="@+id/level_progress_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_90"
            android:layout_marginRight="@dimen/margin_90"
            android:layout_marginTop="@dimen/view_dimen_94">

            <com.wali.live.watchsdk.personalcenter.level.view.LevelProgressBarTemp
                android:id="@+id/level_progress_bar"
                android:layout_width="@dimen/view_dimen_680"
                android:layout_height="@dimen/margin_10"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                app:progressBackgroundColor="@color/color_black_trans_10"
                app:progressSolidColor="@color/color_red_ff2966"/>

            <TextView
                android:id="@+id/level_current_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/level_progress_bar"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_red_ff2966"
                android:textSize="@dimen/text_size_36"/>

            <TextView
                android:id="@+id/level_next_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/level_progress_bar"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_red_ff2966"
                android:textSize="@dimen/text_size_36"/>

        </RelativeLayout>

        <!-- 经验值 数字提示 -->
        <RelativeLayout
            android:id="@+id/exp_number_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_60">

            <LinearLayout
                android:id="@+id/exp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <!--累计送出金钻数-->
                <TextView
                    android:id="@+id/total_sent_gold_gem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/color_black_tran_70"
                    android:textSize="@dimen/text_size_44"/>
                <!-- 累计经验值-->
                <TextView
                    android:id="@+id/exp_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/color_black_tran_70"
                    android:textSize="@dimen/text_size_44"/>
            </LinearLayout>

            <!-- 距离升级还差经验值-->
            <TextView
                android:id="@+id/level_up_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exp_area"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/vip_frozen_tip"
                android:textColor="@color/color_black_tran_70"
                android:textSize="@dimen/text_size_44"/>
        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_100"
            android:background="@color/color_black_trans_10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_30"
            android:text="@string/vip_privilege_title"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_44"/>

        <com.wali.live.watchsdk.personalcenter.level.view.VipPrivilegeTableLayout
            android:id="@+id/privilege_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_52"
            app:column="3"
            app:rowSpacing="@dimen/margin_30"/>

        <TextView
            android:id="@+id/vip_instruction_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_64"
            android:layout_marginTop="@dimen/margin_60"
            android:autoLink="all"
            android:text="@string/vip_instruction_tip"
            android:textColor="@color/color_009aff"
            android:textSize="@dimen/text_size_36"/>
    </LinearLayout>

</ScrollView>