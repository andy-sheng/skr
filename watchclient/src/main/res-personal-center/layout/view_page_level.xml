<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/grade_crown" />

        <!-- 等级数字 -->
        <TextView
            android:id="@+id/level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_dimen_195"
            android:text="7"
            android:textColor="@color/color_white_trans_90"
            android:textSize="@dimen/text_size_100" />
        <!-- 我的等级 提示-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_dimen_363"
            android:text="@string/level"
            android:textColor="@color/color_white_trans_90"
            android:textSize="@dimen/text_size_40" />

        <RelativeLayout
            android:id="@+id/level_rights_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_90"
            android:layout_marginRight="@dimen/margin_90"
            android:layout_marginTop="@dimen/view_dimen_496">

            <com.wali.live.watchsdk.personalcenter.level.view.LevelProgressBarTemp
                android:id="@+id/level_progress_bar"
                android:layout_width="@dimen/view_dimen_680"
                android:layout_height="@dimen/margin_10"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                app:progressBackgroundColor="@color/color_black_trans_10"
                app:progressSolidColor="@color/color_red_ff2966" />

            <TextView
                android:id="@+id/level_rights_progressbar_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/level_progress_bar"
                android:gravity="center"
                android:singleLine="true"
                android:text="LV7"
                android:textColor="@color/color_red_ff2966"
                android:textSize="@dimen/text_size_36" />

            <TextView
                android:id="@+id/level_rights_progressbar_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/level_progress_bar"
                android:gravity="center"
                android:singleLine="true"
                android:text="LV8"
                android:textColor="@color/color_red_ff2966"
                android:textSize="@dimen/text_size_36" />

        </RelativeLayout>

        <!-- 经验值 数字提示 -->
        <RelativeLayout
            android:id="@+id/exp_number_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_rights_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_80">

            <!-- 累计经验值-->
            <TextView
                android:id="@+id/total_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/total_exp_text"
                android:textColor="@color/color_black_tran_70"
                android:textSize="@dimen/text_size_44" />

            <!-- 距离升级还差经验值-->
            <TextView
                android:id="@+id/level_up_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_exp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_50"
                android:text="@string/level_up_exp_text"
                android:textColor="@color/color_black_tran_70"
                android:textSize="@dimen/text_size_44" />
        </RelativeLayout>


        <!-- 分割线 -->
        <View
            android:id="@+id/splite_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/exp_number_zone"
            android:layout_marginLeft="13.33dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginTop="30dp"
            android:background="@color/color_black_trans_10" />

        <!-- 等级权益 -->
        <RelativeLayout
            android:id="@+id/level_rights_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/splite_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/margin_110">

            <TextView
                android:id="@+id/level_rights_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_rights_text"
                android:textColor="@color/color_black_trans_80"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/level_rights_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_rights_hint"
                android:layout_marginTop="@dimen/margin_60"
                android:lineSpacingExtra="8dp"
                android:text="@string/level_rights_detail_text"
                android:textColor="@color/color_black_trans_50"
                android:textSize="12.67sp" />

        </RelativeLayout>

        <!-- 如何升级-->
        <RelativeLayout
            android:id="@+id/how_to_level_up_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_rights_zone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/margin_120"
            android:paddingBottom="@dimen/view_dimen_100">

            <TextView
                android:id="@+id/how_to_level_up_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_to_level_up_text"
                android:textColor="@color/color_black_trans_80"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/how_to_level_up_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/how_to_level_up_hint"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/margin_60"
                android:lineSpacingExtra="8dp"
                android:text="@string/how_to_level_up_detail_text"
                android:textColor="@color/color_black_trans_50"
                android:textSize="12.67sp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>