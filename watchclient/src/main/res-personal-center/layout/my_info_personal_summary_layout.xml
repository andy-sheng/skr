<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_800"
    tools:parentTag="android.widget.RelativeLayout">

    <TextView
        android:id="@+id/modify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_dimen_30"
        android:layout_marginTop="@dimen/view_dimen_40"
        android:text="@string/modify_txt"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_36" />

    <com.base.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_dimen_148"
        android:layout_height="@dimen/view_dimen_148"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_73" />

    <RelativeLayout
        android:id="@+id/nickname_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_30">

        <com.base.view.AlwaysMarqueeTextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="@dimen/view_dimen_660"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="名字还不是特别长"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_48" />

        <ImageView
            android:id="@+id/gender_iv"
            android:layout_width="@dimen/view_dimen_42"
            android:layout_height="@dimen/view_dimen_42"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_marginRight="@dimen/view_dimen_4"
            android:layout_toRightOf="@id/name_tv"
            android:background="@drawable/all_man" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_42"
        android:text="123456"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_39" />

    <com.wali.live.common.view.LevelIconsLayout
        android:id="@+id/level_icons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_icons_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_50"
        android:ellipsize="end"
        android:maxWidth="@dimen/view_dimen_720"
        android:singleLine="true"
        android:text="@string/default_sign_txt"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/text_size_36" />

    <RelativeLayout
        android:id="@+id/fan_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_70"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_42" />

        <View
            android:id="@+id/split"
            android:layout_width="@dimen/view_dimen_3"
            android:layout_height="@dimen/view_dimen_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_dimen_50"
            android:layout_toRightOf="@id/follow_tv"
            android:background="@color/color_black_trans_30" />

        <TextView
            android:id="@+id/fan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_dimen_100"
            android:layout_toRightOf="@id/follow_tv"
            android:text="粉丝"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_44" />

    </RelativeLayout>

</merge>