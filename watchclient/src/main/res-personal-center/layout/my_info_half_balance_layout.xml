<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <TextView
        android:id="@+id/total_balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_50"
        android:text="666"
        android:textColor="@color/color_black_trans_80"
        android:textSize="@dimen/view_dimen_100" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_balance_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_12"
        android:text="钻石余额"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/view_dimen_40" />
</merge>