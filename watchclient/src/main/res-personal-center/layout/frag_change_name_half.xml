<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/place_holder_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_966" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_953"
        android:background="@drawable/shape_change_name_fragment_bg"
        android:orientation="vertical"
        android:layout_below="@id/place_holder_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_130"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/view_dimen_40"
                android:background="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/change_nickname_text"
                android:textColor="@color/color_black_trans_80"
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/view_dimen_40"
                android:textSize="@dimen/text_size_40"
                android:textColor="@color/color_black_trans_80"
                android:layout_centerVertical="true"
                android:text="@string/ok"/>

        </RelativeLayout>

        <com.wali.live.watchsdk.income.view.NoLeakEditText
            android:id="@+id/input_et"
            android:layout_width="match_parent"
            android:layout_height="58.33dp"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:paddingLeft="13.33dp"
            android:textColor="@color/color_black_trans_90"
            android:textSize="16sp" />

        <!-- 底部的提示-->
        <TextView
            android:id="@+id/input_nickname_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:paddingLeft="13.33dp"
            android:text="@string/input_nickname_hint_text"
            android:textColor="@color/color_black_trans_60"
            android:textSize="12.67sp"
            android:layout_marginLeft="@dimen/view_dimen_40"/>

    </LinearLayout>

</RelativeLayout>