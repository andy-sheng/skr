<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tab_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_profile_mode="true" />

    <LinearLayout
        android:id="@+id/first_bind_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="156.6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wx_withdraw_noti_first"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/margin_52" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13.3dp"
                android:gravity="center"
                android:text="@string/bind_wx_tip"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/margin_52" />

        </LinearLayout>

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.3dp"
            android:gravity="center"
            android:text="@string/account_fill_wx_info_noti"
            android:textColor="@color/color_black_trans_50"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rebind_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73.33dip"
            android:layout_marginTop="16.67dip"
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_40"
            android:paddingLeft="@dimen/margin_40"
            android:paddingRight="@dimen/margin_40"
            android:paddingTop="@dimen/margin_40">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/bind_account_avatar"
                android:layout_width="@dimen/bind_account_avatar"
                android:layout_height="@dimen/bind_account_avatar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_30" />

            <TextView
                android:id="@+id/bind_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/bind_account_avatar"
                android:textColor="@color/color_2b2b2b"
                android:textSize="@dimen/text_size_48" />

            <TextView
                android:id="@+id/bind_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bind_account_name"
                android:layout_marginTop="4dip"
                android:layout_toRightOf="@+id/bind_account_avatar"
                android:background="@drawable/image_yiyanzheng"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dip"
                android:text="@string/wx_withdraw_has_bind_tip"
                android:textColor="@color/color_black_trans_50"
                android:textSize="@dimen/text_size_30" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dip"
            android:gravity="center"
            android:text="@string/withdraw_rebind_tip"
            android:textColor="@color/cash_color"
            android:textSize="@dimen/text_size_38" />

    </LinearLayout>

    <TextView
        android:id="@+id/withdraw_bind_btn"
        android:layout_width="@dimen/withdraw_btn_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:background="@drawable/withdraw_withdraw_button"
        android:gravity="center"
        android:text="@string/account_withdraw_bind_btn"
        android:textColor="@color/color_white_pressed_white50"
        android:textSize="@dimen/text_size_52" />

</LinearLayout>