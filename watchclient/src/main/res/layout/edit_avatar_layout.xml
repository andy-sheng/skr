<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:is_profile_mode="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_dv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_900"
        android:layout_below="@id/title_bar"
        android:background="#f5f5f5"
        android:scaleType="fitCenter"
        app:placeholderImage="@drawable/live_show_avatar_loading" />

    <!--编辑头像区域-->
    <RelativeLayout
        android:id="@+id/change_pic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/avatar_dv">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/take_pic_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_130"
                android:layout_marginEnd="@dimen/margin_90"
                android:layout_marginStart="@dimen/margin_90"
                android:background="@drawable/button_bai"
                android:gravity="center"
                android:text="@string/take_pic"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/text_size_50" />

            <TextView
                android:id="@+id/select_pic_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_130"
                android:layout_below="@id/take_pic_tv"
                android:layout_marginEnd="@dimen/margin_90"
                android:layout_marginStart="@dimen/margin_90"
                android:layout_marginTop="@dimen/margin_60"
                android:background="@drawable/button_bai"
                android:gravity="center"
                android:text="@string/select_photo_from_phone"
                android:textColor="@color/color_black_trans_90"
                android:textSize="@dimen/text_size_50" />

        </RelativeLayout>
    </RelativeLayout>

    <!--预览区域-->
    <LinearLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="83.33dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_50" />

        <TextView
            android:id="@+id/use_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/use"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_50" />
    </LinearLayout>

</RelativeLayout>