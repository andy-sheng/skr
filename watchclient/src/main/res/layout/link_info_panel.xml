<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <View
        android:id="@+id/middle_view"
        android:layout_width="@dimen/view_dimen_1"
        android:layout_height="@dimen/view_dimen_1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/home_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/middle_view"
        android:background="@drawable/score_area_bg_red"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:text="@string/line_my_zone"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32"
        android:translationX="-6.67dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/middle_view"
        android:background="@drawable/score_area_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:translationX="6.67dp">

        <TextView
            android:id="@+id/guest_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32" />

        <ImageView
            android:id="@+id/follow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line_ata_follow_bg"
            android:paddingLeft="@dimen/margin_17"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/enter_room_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/score_area_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:text="@string/line_guest_into"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32" />

</RelativeLayout>