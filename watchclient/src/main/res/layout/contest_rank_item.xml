<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    tools:background="@color/color_contest_theme">

    <TextView
        android:id="@+id/index_tv"
        android:layout_width="@dimen/view_dimen_100"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_20"
        android:gravity="center"
        android:textColor="@color/color_black_trans_80"
        android:textSize="@dimen/view_dimen_40"
        tools:text="1"/>

    <com.base.image.fresco.BaseImageView
        android:id="@+id/avatar_iv"
        android:layout_width="@dimen/view_dimen_120"
        android:layout_height="@dimen/view_dimen_120"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_20"
        android:layout_toRightOf="@id/index_tv"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_28"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/bonus_tv"
        android:layout_toRightOf="@id/avatar_iv"
        android:textColor="@color/color_black"
        android:textSize="@dimen/view_dimen_45"
        tools:text="12"/>

    <TextView
        android:id="@+id/bonus_tv"
        android:layout_width="@dimen/view_dimen_210"
        android:layout_height="@dimen/view_dimen_90"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_dimen_40"
        android:layout_marginTop="@dimen/view_dimen_20"
        android:background="@drawable/contest_solid_f6f6f6_r50_text_bg"
        android:gravity="center"
        android:textColor="@color/color_contest_theme_text"
        android:textSize="@dimen/view_dimen_36"
        tools:text="12"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_trans_10"/>
</RelativeLayout>



