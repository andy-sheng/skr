<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wali.live.watchsdk.view.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        app:emptyIcon="@drawable/home_empty_icon"
        app:emptyTips="@string/empty_page_tip" />
    <com.base.view.SlidingTabLayout
        android:id="@+id/channel_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_150"
        android:overScrollMode="never"/>
    <com.base.view.NestViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/channel_tab"/>
</RelativeLayout>