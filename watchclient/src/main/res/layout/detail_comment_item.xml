<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_80"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical|left"
        android:lineSpacingExtra="@dimen/margin_1"
        android:textColor="@color/color_black_trans_60"
        android:textDirection="3"
        android:textSize="@dimen/text_size_42" />

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="@dimen/lvl_tv_width"
        android:layout_height="@dimen/lvl_tv_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_18"
        android:drawablePadding="@dimen/lvl_drawable_padding"
        android:gravity="center"
        android:paddingLeft="@dimen/lvl_left_padding"
        android:paddingRight="@dimen/lvl_left_padding"
        android:singleLine="true"
        android:text="10"
        android:textColor="@color/lvl_txt_color"
        android:textSize="@dimen/lvl_text_size" />

</RelativeLayout>