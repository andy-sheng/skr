<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_44"/>

        <TextView
            android:id="@+id/left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:text=""
            android:textColor="@color/text_color_black_trans_50"
            android:textSize="@dimen/text_size_36"/>
    </LinearLayout>

    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_30"
        android:drawablePadding="@dimen/margin_10"
        android:drawableRight="@drawable/withdraw_word_more_normal"
        android:text=""
        android:textColor="@color/text_color_black_trans_50"
        android:textSize="@dimen/text_size_36"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line_e5e5e5"/>
</RelativeLayout>