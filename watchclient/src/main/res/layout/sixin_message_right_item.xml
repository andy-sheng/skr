<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/msg_list_item"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/text_size_50"
              android:clickable="false"
              android:orientation="vertical">

    <com.base.view.MLTextView
        android:id="@+id/recv_msg_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_40"
        android:textColor="@color/color_black_trans_40"
        android:textSize="@dimen/text_size_32"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/text_size_12"
        android:layout_marginRight="55dip">

        <TextView
            android:id="@+id/sender_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="哈哈"
            android:textColor="@color/color_black_trans_70"
            android:textSize="@dimen/text_size_28"
            android:visibility="visible"/>


        <com.wali.live.sixingroup.view.GroupTalkItemLevelView
            android:id="@+id/intimacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toLeftOf="@+id/sender_nickname"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_item_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox"
            style="@style/MyCheckBoxRight"
            android:layout_width="@dimen/text_size_60"
            android:layout_height="@dimen/text_size_60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:checked="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_toLeftOf="@+id/avatar_root"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/resend_btn"
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="@dimen/margin_20"
                android:src="@drawable/icon_talk_failure"
                android:visibility="gone"/>

            <com.base.view.MLTextView
                android:id="@+id/send_msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/margin_20"
                android:text="送达"
                android:textColor="@color/color_black_trans_40"
                android:textSize="@dimen/text_size_30"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/bubble_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/avatar_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_20">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="@dimen/view_dimen_100"
                android:layout_height="@dimen/view_dimen_100"/>

            <ImageView
                android:id="@+id/user_certification_type"
                android:layout_width="@dimen/view_dimen_45"
                android:layout_height="@dimen/view_dimen_45"
                android:layout_marginLeft="@dimen/margin_70"
                android:layout_marginTop="@dimen/margin_70"
                android:scaleType="fitStart"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>