<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/current_rank_txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_rank_avatar_imgSecondBg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@color/color_black_trans_90"
        android:textSize="@dimen/text_size_45" />

    <LinearLayout
        android:id="@+id/current_rank_llytGenderZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/current_rank_imgGender"
            android:layout_width="@dimen/lvl_tv_height"
            android:layout_height="@dimen/lvl_tv_height"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="1.33dp"
            android:background="@drawable/all_man" />

        <TextView
            android:id="@+id/current_rank_txtLevel"
            android:layout_width="@dimen/lvl_tv_width"
            android:layout_height="@dimen/lvl_tv_height"
            android:layout_marginLeft="1.33dp"
            android:drawablePadding="@dimen/lvl_drawable_padding"
            android:gravity="center"
            android:paddingLeft="@dimen/lvl_left_padding"
            android:paddingRight="@dimen/lvl_right_padding"
            android:text="10"
            android:textColor="@color/lvl_txt_color"
            android:textSize="@dimen/lvl_text_size" />

        <TextView
            android:id="@+id/live_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/level_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1.33dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:text="@string/on_air"
            android:textSize="@dimen/lvl_text_size"
            android:background="@drawable/anchor_rank_list_item_icon_live"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_rank_llytVoteArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/current_rank_txtVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="800"
            android:textColor="#7F202020"
            android:textSize="@dimen/text_size_34" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/ticket"
            android:textColor="#7F202020"
            android:textSize="@dimen/text_size_34" />-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/current_rank_rlytClickArea"
        android:layout_width="@dimen/view_dimen_220"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="9dp">

        <TextView
            android:id="@+id/current_rank_txtFollowState"
            android:layout_width="@dimen/view_dimen_180"
            android:layout_height="@dimen/view_dimen_75"
            android:layout_centerInParent="true"
            android:background="@drawable/follow_btn_bg"
            android:duplicateParentState="true"
            android:gravity="center"
            android:textColor="@color/color_follow_btn"
            android:textSize="@dimen/text_size_36"
            />
    </RelativeLayout>

</LinearLayout>