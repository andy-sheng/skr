<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tab_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.base.view.BackTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_profile_mode="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:paddingLeft="13.3dp"
        android:layout_marginTop="20dp"
        android:text="@string/account_fill_info_noti"
        android:textColor="@color/color_black_trans_70"
        android:textSize="13.33dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6.66dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_name"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13.3dp"
            android:gravity="center_vertical"
            android:text="@string/account_name"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_40" />

        <EditText
            android:id="@+id/account_name_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_48" />

    </RelativeLayout>

    <View
        android:id="@+id/splite_diamond_outcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:background="@color/color_black_trans_10" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_alipay"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13.3dp"
            android:gravity="center_vertical"
            android:text="@string/alipay_account"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_40" />

        <EditText
            android:id="@+id/account_alipay_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_48" />
    </RelativeLayout>

    <View
        android:id="@+id/splite_alipay_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:background="@color/color_black_trans_10" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_cid"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13.3dp"
            android:gravity="center_vertical"
            android:text="@string/account_cid"
            android:textColor="@color/color_black_trans_60"
            android:textSize="@dimen/text_size_40" />

        <EditText
            android:id="@+id/account_cid_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_48" />
    </RelativeLayout>

    <View
        android:id="@+id/splite_account_cid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:background="@color/color_black_trans_10" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/withdraw_information_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/withdraw_withdraw_button"
            android:gravity="center"
            android:text="@string/account_fill_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_52" />
    </LinearLayout>


</LinearLayout>