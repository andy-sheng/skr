<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ticketTotalLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_170"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/voteTotalTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_ff2966"
            android:textSize="@dimen/text_size_50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/view_dimen_40"
            android:text="@string/live_ticket"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_50"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_20"
        android:background="@color/color_efeff4"/>
</LinearLayout>