        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mi.live.engine.player.widget.VideoPlayerTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.base.image.fresco.BaseImageView
        android:id="@+id/blur_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.wali.live.watchsdk.watchtop.view.WatchTopInfoSingleView
        android:id="@+id/watch_top_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

