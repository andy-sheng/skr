    <!--评论栏-->
    <com.wali.live.watchsdk.component.view.LiveCommentView
        android:id="@+id/live_comment_view"
        android:layout_width="match_parent"
        android:layout_height="160.33dip"
        android:layout_above="@+id/input_area_view"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="70dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:paddingBottom="13.33dp"
        android:paddingLeft="6dip"
        android:paddingRight="6.67dip"
        android:requiresFadingEdge="none" />

    <!--游戏模式 输入框与弹幕 改为在代码中动态添加，见WatchSdkView-->
    <ViewStub
        android:id="@+id/game_barrage_viewstub"
        android:layout_width="586.66dp"
        android:layout_height="96.77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_168"
        android:layout_marginRight="@dimen/margin_168"
        android:inflatedId="@+id/game_barrage_view"
        android:layout="@layout/view_game_barrage" />

