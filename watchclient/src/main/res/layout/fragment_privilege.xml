<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_black_trans_80">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_iv"
            android:layout_width="@dimen/view_dimen_800"
            android:layout_height="@dimen/view_dimen_1010"
            android:orientation="vertical">
        </ImageView>

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26.67dp"
            android:background="@drawable/close_pet_group"/>

    </LinearLayout>
</RelativeLayout>