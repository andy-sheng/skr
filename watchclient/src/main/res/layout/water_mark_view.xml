<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.base.image.fresco.BaseImageView
        android:scaleType="fitXY"
        android:visibility="gone"
        android:id="@+id/iv_huya_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_mi_logo_area"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_dimen_22"
        android:paddingRight="@dimen/view_dimen_22"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/live_mibologo_bg">
        <ImageView
            android:id="@+id/mi_logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/live_icon_mibo" />

        <TextView
            android:id="@+id/mi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_7"
            android:layout_toRightOf="@id/mi_logo_img"
            android:gravity="center"
            android:shadowColor="@color/transparent"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="#CCdddddd"
            android:textSize="@dimen/text_size_30"
            tools:text="123456"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/mi_logo"
            android:layout_marginTop="0dp"
            android:shadowColor="@color/transparent"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="2016.7.2"
            android:textColor="@color/color_white_trans_90"
            android:textSize="10.66dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!--直播类型水印-->
        <TextView
            android:id="@+id/live_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/mi_logo"
            android:background="@drawable/water_live"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:textSize="8dp"
            android:visibility="gone"
            tools:text="口令"
            tools:visibility="visible" />
    </RelativeLayout>


</merge>