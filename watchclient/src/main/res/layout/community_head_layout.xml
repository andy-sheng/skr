<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_170"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_170"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/anchor_rank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/anchor_rank"
            android:textColor="@color/color_black_trans_80"
            android:textSize="@dimen/text_size_42" />

        <FrameLayout
            android:id="@+id/flytOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/flytTwo">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/user_avatar_iv_first"
                android:layout_width="@dimen/view_dimen_100"
                android:layout_height="@dimen/view_dimen_100"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feeds_community_charts_head_firsticon" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/flytTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/flytThree">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/user_avatar_iv_second"
                android:layout_width="@dimen/view_dimen_100"
                android:layout_height="@dimen/view_dimen_100"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feeds_community_charts_head_secondicon" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flytThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow">

            <com.base.image.fresco.BaseImageView
                android:id="@+id/user_avatar_iv_third"
                android:layout_width="@dimen/view_dimen_100"
                android:layout_height="@dimen/view_dimen_100"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feeds_community_charts_head_thirdicon" />
        </FrameLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6.67dp"
            android:padding="3.33dp"
            android:src="@drawable/more_right_arrow_bg" />
    </RelativeLayout>

</LinearLayout>