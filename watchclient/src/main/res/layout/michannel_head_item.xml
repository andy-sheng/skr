<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_dimen_130"
    android:clickable="true">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_120"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_40"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/head_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="123"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_56"/>

        <TextView
            android:id="@+id/sub_head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/head_tv"
            android:layout_below="@id/head_tv"
            android:layout_marginTop="@dimen/margin_6"
            android:text="sdfa"
            android:textColor="@color/color_black_trans_30"
            android:textSize="@dimen/text_size_36"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <com.base.image.fresco.BaseImageView
            android:id="@+id/icon"
            android:layout_width="13.3dp"
            android:layout_height="13.3dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6.67dp"
            android:layout_toLeftOf="@+id/more_tv"
            android:visibility="visible" />

        <TextView
            android:id="@+id/more_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20"
            android:drawableRight="@drawable/home_classification_icon_more"
            android:gravity="right|center_vertical"
            android:padding="3.33dp"
            android:text="@string/more"
            android:textColor="@color/head_more_tv_selector"
            android:textSize="@dimen/text_size_36"
            android:visibility="visible" />
    </LinearLayout>


    <View
        android:id="@+id/split_line"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_black_trans_10" />
</RelativeLayout>



