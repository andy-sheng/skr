<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.base.image.fresco.view.TintableImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/shadow_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/cover_iv"
            android:background="@drawable/home_new_human_big_bg"/>

        <com.base.image.fresco.BaseImageView
            android:id="@+id/anchor_activity_icon"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/michannel_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/michannel_type_live"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/count_tv"
            style="@style/michannel_count_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/cover_iv"/>

        <TextView
            android:id="@+id/display_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_20"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_iv"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toLeftOf="@+id/display_tv"
            android:paddingRight="2dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/home_icon_people"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="6.67dip"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/michannel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="2"
            android:text="阳光女孩"/>
    </RelativeLayout>
</LinearLayout>
