<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_40"
        android:textColor="@color/color_black_trans_90"
        android:text="@string/vfans_daily_tasks_title"/>

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_45"
        android:layout_toRightOf="@+id/title_tv"
        android:text="@string/vfans_daily_tasks_title_notice"
        android:textColor="@color/color_black_trans_30"
        android:textSize="@dimen/margin_32"/>

</RelativeLayout>