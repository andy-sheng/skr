<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/all_blue_bg_color">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/advertising_icon_iv"
        android:layout_width="@dimen/view_dimen_120"
        android:layout_height="@dimen/view_dimen_120"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_180"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_20"
        android:layout_marginRight="@dimen/view_dimen_20"
        android:layout_toRightOf="@id/advertising_icon_iv"
        android:layout_toLeftOf="@+id/status_tip_tv"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/advertising_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_48"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/status_tip_tv"
        android:layout_width="@dimen/view_dimen_400"
        android:layout_height="@dimen/view_dimen_100"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/view_dimen_40"
        android:background="@drawable/contest_theme_solid_r50_btn_bg"
        android:gravity="center"
        android:textColor="@color/color_white_pressed_50_disable_30"
        android:textSize="@dimen/text_size_40" />
</merge>