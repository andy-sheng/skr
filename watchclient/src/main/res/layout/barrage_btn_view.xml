<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/barrage_btn_view_txt"
        android:layout_width="@dimen/view_dimen_424"
        android:layout_height="@dimen/view_dimen_110"
        android:layout_gravity="bottom|left"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/margin_37"
        android:text=""
        android:textColor="@color/color_white_trans_70"
        android:textSize="@dimen/text_size_44"
        android:background="@drawable/live_chat_bg_static"/>

    <ImageView
        android:id="@+id/barrage_btn_view_img"
        android:layout_width="@dimen/view_dimen_100"
        android:layout_height="@dimen/view_dimen_100"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/margin_7"
        android:layout_marginBottom="@dimen/view_dimen_7"
        android:padding="@dimen/margin_15"
        android:src="@drawable/bg_send_smart_barrage" />

</merge>