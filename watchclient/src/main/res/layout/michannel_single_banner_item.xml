<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.base.image.fresco.view.TintableImageView
        android:id="@+id/banner_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner_ffbc21_bg"
            android:ellipsize="end"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/color_white"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/display_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:shadowColor="@color/color_black"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@color/color_white_trans_70"
            android:textSize="@dimen/text_size_32"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>


