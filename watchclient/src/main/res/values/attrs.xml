<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmptyView">
        <attr name="emptyIcon" format="reference"/>
        <attr name="emptyTips" format="string"/>
    </declare-styleable>
    <declare-styleable name="PlayerView">
        <attr name="real_time" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SwitchButton">
        <!-- Drawable to use as the "thumb" that switches back and forth. -->
        <attr name="appThumb" format="reference" />
        <!-- Drawable to use as the "track" that the switch thumb slides within. -->
        <attr name="appTrack" format="reference" />
        <!-- Text to use when the switch is in the checked/"on" state. -->
        <attr name="appTextOn" format="string" />
        <!-- Text to use when the switch is in the unchecked/"off" state. -->
        <attr name="appTextOff" format="string" />
        <!-- Amount of padding on either side of text within the switch thumb. -->
        <attr name="appThumbTextPadding" format="dimension" />
        <!-- TextAppearance style for text displayed on the switch thumb. -->
        <attr name="appSwitchTextAppearance" format="reference" />
        <!-- Minimum width for the switch component -->
        <attr name="appSwitchMinWidth" format="dimension" />
        <!-- Minimum space between the switch and caption text -->
        <attr name="appSwitchPadding" format="dimension" />
    </declare-styleable>
</resources>