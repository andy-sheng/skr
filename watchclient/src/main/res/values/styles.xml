<resources>

    <style name="AppThemeLive" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TransparentTheme" parent="AppThemeLive">
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.WhiteBackground" parent="AppThemeLive">
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.CustomDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="progressLoading">
        <item name="android:minHeight">16.67dip</item>
        <item name="android:maxHeight">16.67dip</item>
        <item name="android:minWidth">16.67dip</item>
        <item name="android:maxWidth">16.67dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:progressDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">720</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="michannel_type">
        <item name="android:layout_marginRight">@dimen/view_dimen_20</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_20</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/view_dimen_12</item>
        <item name="android:paddingRight">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/color_black_trans_70</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <style name="michannel_title">
        <item name="android:textColor">@color/color_black_trans_90</item>
        <item name="android:textSize">@dimen/text_size_40</item>
    </style>

    <style name="michannel_display">
        <item name="android:textColor">@color/color_black_trans_50</item>
        <item name="android:textSize">@dimen/text_size_36</item>
    </style>

    <style name="michannel_type_label">
        <item name="android:layout_marginRight">@dimen/view_dimen_30</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_30</item>
        <item name="android:background">@drawable/shape_live_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <style name="michannel_count">
        <item name="android:layout_marginRight">@dimen/view_dimen_18</item>
        <item name="android:layout_marginBottom">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/color_white_trans_80</item>
        <item name="android:textSize">@dimen/text_size_34</item>
    </style>

    <style name="michannel_count_top">
        <item name="android:layout_marginRight">@dimen/view_dimen_20</item>
        <item name="android:layout_marginTop">@dimen/view_dimen_12</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_34</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">@color/color_black_trans_60</item>
    </style>
</resources>