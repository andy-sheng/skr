<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/iconWithContentArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_20">


        <RelativeLayout
            android:id="@+id/content_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/lv_up_1"
            android:gravity="center">

            <TextView
                android:id="@+id/congratulate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_level_brrage_congratulate"
                android:textColor="@color/color_ffd05e"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/congratulate_tv"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@id/congratulate_tv"
                android:text="Angelababy"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/notify_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/name_tv"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@id/name_tv"
                android:singleLine="true"
                android:text="@string/high_level_brrage_level_upgrade"
                android:textColor="@color/color_ffd05e"
                android:textSize="@dimen/text_size_34" />

            <ImageView
                android:id="@+id/light_iv"
                android:layout_width="76dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/light"
                android:visibility="gone" />

        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon_iv"
            android:layout_width="22.2dip"
            android:layout_height="22.2dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dip"
            android:gravity="center"
            app:roundAsCircle="false" />

        <!--<ImageView-->
            <!--android:id="@+id/certification_iv"-->
            <!--android:layout_width="10dip"-->
            <!--android:layout_height="10dip"-->
            <!--android:layout_alignBottom="@id/icon_iv"-->
            <!--android:layout_alignRight="@id/icon_iv" />-->

        <ImageView
            android:id="@+id/anime_iv"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"/>

    </RelativeLayout>
</RelativeLayout>