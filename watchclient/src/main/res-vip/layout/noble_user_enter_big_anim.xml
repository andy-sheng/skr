<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vip_area"
        android:layout_width="@dimen/view_dimen_1080"
        android:layout_height="@dimen/view_dimen_510"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_200">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/big_anim_view"
            android:layout_width="@dimen/view_dimen_1080"
            android:layout_height="@dimen/view_dimen_510" />

        <com.base.image.fresco.BaseImageView
            android:id="@+id/vip_anim_avatar_iv"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerInParent="true"
            android:translationX="0.83dp"
            android:translationY="0.83dp" />

        <ImageView
            android:id="@+id/level_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vip_anim_avatar_iv"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_view"
        android:layout_below="@+id/vip_area"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_gradient_vip_name_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minWidth="121dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:shadowColor="@color/color_black"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:singleLine="true"
                android:textColor="@color/color_ffd05e"
                android:textSize="@dimen/text_size_42" />

            <TextView
                android:id="@+id/level_hit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:shadowColor="@color/color_black"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_42" />

        </LinearLayout>

    </RelativeLayout>
    
    <com.base.image.fresco.BaseImageView
        android:id="@+id/nobel_image"
        android:layout_width="@dimen/view_dimen_1080"
        android:layout_height="242.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_dimen_300"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>