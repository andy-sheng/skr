<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_info_btn"
    android:layout_width="@dimen/view_dimen_206"
    android:layout_height="@dimen/view_dimen_87"
    android:background="@drawable/my_info_btn_bg"
    tools:parentTag="android.widget.RelativeLayout">

    <RelativeLayout
        android:id="@+id/avator_container"
        android:layout_width="@dimen/view_dimen_73"
        android:layout_height="@dimen/view_dimen_73"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_10">

        <View
            android:layout_width="@dimen/view_dimen_73"
            android:layout_height="@dimen/view_dimen_73"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_game_my_info_avator"/>

        <com.base.image.fresco.BaseImageView
            android:id="@+id/my_avatar_iv"
            android:layout_width="@dimen/view_dimen_69"
            android:layout_height="@dimen/view_dimen_69"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar_default" />

    </RelativeLayout>

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_dimen_12"
        android:layout_toRightOf="@id/avator_container"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/color_black"
        android:textSize="@dimen/view_dimen_36" />

    <ImageView
        android:id="@+id/new_msg_point_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/view_dimen_10"
        android:src="@drawable/new_msg_point"
        android:visibility="gone" />
</RelativeLayout>