<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_tab_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="@dimen/view_dimen_208">
        <com.wali.live.watchsdk.watch.view.watchgameview.TwoSelectTabLayout
            android:id="@+id/two_select_tab"
            android:layout_width="@dimen/view_dimen_878"
            android:layout_height="@dimen/view_dimen_88"
            app:cornorRadius="@dimen/view_dimen_18"
            app:tabColor="@color/color_14b9c7"
            app:leftText="人气推荐"
            app:rightText="我的关注"/>
    </LinearLayout>
    <com.base.view.NestViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_dimen_208"/>
</merge>