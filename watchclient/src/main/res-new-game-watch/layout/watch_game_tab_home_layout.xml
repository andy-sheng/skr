<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/game_info_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_dimen_260"
                android:layout_marginBottom="@dimen/view_dimen_28"
                android:layout_marginLeft="@dimen/view_dimen_36"
                android:layout_marginRight="@dimen/view_dimen_36"
                android:layout_marginTop="@dimen/view_dimen_28"
                android:background="@color/white">

                <com.base.image.fresco.BaseImageView
                    android:id="@+id/game_icon_iv"
                    android:layout_width="@dimen/view_dimen_180"
                    android:layout_height="@dimen/view_dimen_180"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/view_dimen_40" />

                <TextView
                    android:id="@+id/game_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/game_icon_iv"
                    android:layout_marginLeft="@dimen/view_dimen_30"
                    android:layout_marginTop="@dimen/view_dimen_15"
                    android:layout_toRightOf="@+id/game_icon_iv"
                    android:text="小米枪战"
                    android:textColor="@color/color_black_trans_90"
                    android:textSize="@dimen/view_dimen_51" />


                <TextView
                    android:id="@+id/game_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/game_name_tv"
                    android:layout_below="@+id/game_name_tv"
                    android:layout_marginTop="@dimen/view_dimen_30"
                    android:drawableLeft="@drawable/live_teb_gameintroduced_icon_score"
                    android:drawablePadding="@dimen/view_dimen_15"
                    android:text="8.0"
                    android:textColor="@color/color_14b9c7"
                    android:textSize="@dimen/view_dimen_36" />

                <TextView
                    android:id="@+id/install_btn"
                    android:layout_width="@dimen/view_dimen_240"
                    android:layout_height="@dimen/view_dimen_90"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/view_dimen_72"
                    android:background="@drawable/game_watch_home_install_btn_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_dimen_10"
                    android:paddingLeft="@dimen/view_dimen_30"
                    android:paddingRight="@dimen/view_dimen_30"
                    android:paddingTop="@dimen/view_dimen_10"
                    android:text="安装"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_dimen_42" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/game_preview_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_dimen_608"
                android:layout_below="@+id/game_info_container"
                android:layout_marginTop="@dimen/view_dimen_46">

                <android.support.v4.view.ViewPager
                    android:id="@+id/game_preview_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>

                <!-- 看看是否要将播放器的所有控件封装一下 -->
                <com.wali.live.watchsdk.watch.view.watchgameview.VideoPluginView
                    android:id="@+id/video_plugin_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/label_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/view_dimen_40">

                    <TextView
                        android:id="@+id/video_label_tv"
                        android:layout_width="@dimen/view_dimen_136"
                        android:layout_height="@dimen/view_dimen_60"
                        android:background="@drawable/game_watch_home_preview_label_bg"
                        android:drawableLeft="@drawable/live_teb_gameintroduced_icon_play"
                        android:drawablePadding="@dimen/view_dimen_1"
                        android:gravity="center"
                        android:paddingLeft="@dimen/view_dimen_30"
                        android:text="视频"
                        android:textColor="@color/color_watch_game_home_page_label_text_color"
                        android:textSize="@dimen/view_dimen_27" />

                    <TextView
                        android:id="@+id/pic_label_tv"
                        android:layout_width="@dimen/view_dimen_136"
                        android:layout_height="@dimen/view_dimen_60"
                        android:layout_marginLeft="@dimen/view_dimen_34"
                        android:layout_toRightOf="@+id/video_label_tv"
                        android:background="@drawable/game_watch_home_preview_label_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/view_dimen_10"
                        android:paddingRight="@dimen/view_dimen_10"
                        android:text="图片"
                        android:textColor="@color/color_watch_game_home_page_label_text_color"
                        android:textSize="@dimen/view_dimen_27" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/index_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/view_dimen_51"
                    android:layout_marginRight="@dimen/view_dimen_63"
                    android:gravity="center"
                    android:padding="@dimen/view_dimen_10"
                    android:text="1/5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/view_dimen_27" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/game_detail_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/game_preview_container"
                android:background="@color/white">

                <TextView
                    android:id="@+id/game_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/view_dimen_64"
                    android:gravity="center"
                    android:text="全新百人大地图、新载具、新武器"
                    android:textColor="@color/color_black_trans_90"
                    android:textSize="@dimen/view_dimen_51" />

                <TextView
                    android:id="@+id/game_introduce_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_desc_tv"
                    android:layout_marginLeft="@dimen/view_dimen_36"
                    android:layout_marginRight="@dimen/view_dimen_36"
                    android:layout_marginTop="@dimen/view_dimen_24"
                    android:gravity="left"
                    android:lineSpacingExtra="@dimen/view_dimen_24"
                    android:text="本游戏为小米枪战抢先测试服，测试服会频繁不定期更新，任何新要素会提前在体验服中到。任何新要素会提前在体验服中到在体验服中体验服中测试服..."
                    android:textColor="@color/color_black_trans_90"
                    android:textSize="@dimen/view_dimen_42" />

                <com.wali.live.watchsdk.watch.view.watchgameview.GameTagView
                    android:id="@+id/game_tag_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_introduce_tv"
                    android:layout_marginLeft="@dimen/view_dimen_30"
                    android:layout_marginRight="@dimen/view_dimen_30"/>

                <com.wali.live.watchsdk.watch.view.watchgameview.GameTagView
                    android:id="@+id/game_tag_1_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_dimen_28"
                    android:layout_below="@id/game_tag_view"
                    android:layout_marginLeft="@dimen/view_dimen_30"
                    android:layout_marginRight="@dimen/view_dimen_30"
                    android:layout_marginBottom="@dimen/view_dimen_30"/>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>
</merge>













