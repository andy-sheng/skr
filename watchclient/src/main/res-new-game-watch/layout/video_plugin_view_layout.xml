<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <TextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/player_control_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen_120"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/voice_btn"
            android:layout_width="@dimen/view_dimen_80"
            android:layout_height="@dimen/view_dimen_80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_dimen_57"
            android:scaleType="centerInside"
            android:src="@drawable/watch_game_preview_video_sounds_btn" />

        <TextView
            android:id="@+id/player_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_dimen_39"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_dimen_50"
            android:layout_toRightOf="@+id/voice_btn"
            android:text="00:00/00:00"
            android:textColor="@color/white"
            android:textSize="@dimen/view_dimen_30" />

        <com.wali.live.video.view.VideoSeekBar
            android:id="@+id/video_seekbar"
            android:layout_width="@dimen/view_dimen_600"
            android:layout_height="@dimen/view_dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_dimen_20"
            android:layout_toRightOf="@+id/player_time_tv" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/player_control_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/watch_game_preview_play_btn_bg" />

</merge>













