<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tab_tv"
        android:layout_width="80dip"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@drawable/color_admin_tab_text"
        android:textSize="@dimen/text_size_44" />

    <ImageView
        android:id="@+id/red_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tab_tv"
        android:layout_alignRight="@id/tab_tv"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/home_botton_icon_red"
        android:visibility="gone"/>
</RelativeLayout>