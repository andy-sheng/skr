<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/user_avatar_iv"
        app:fadeDuration="300"
        android:layout_width="@dimen/view_dimen_100"
        android:layout_height="@dimen/view_dimen_100"
        />

    <ImageView
        android:id="@+id/user_crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/avatar_item_crown_gold"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/user_badge_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/user_avatar_iv"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@id/user_avatar_iv"
        android:scaleType="fitStart"
        android:visibility="visible" />

    <View
        android:layout_width="@dimen/margin_20"
        android:layout_height="8dp"
        android:layout_alignTop="@id/user_avatar_iv"
        android:layout_toRightOf="@id/user_avatar_iv" />
</RelativeLayout>