<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_dimen_150"
                android:background="@drawable/recharge_pay_way_list_item_bg">

    <TextView
        android:id="@+id/pay_way_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_30"
        android:drawableLeft="@drawable/pay_icon_weixin_pressed"
        android:drawablePadding="@dimen/margin_30"
        android:drawableStart="@drawable/pay_icon_weixin_pressed"
        android:gravity="center"
        android:text="微信"
        android:textColor="@color/color_black_trans_90"
        android:textSize="@dimen/text_size_42"/>

    <TextView
        android:id="@+id/other_pay_way_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:text="@string/other_pay_way"
        android:textColor="@color/color_black_trans_50"
        android:textSize="@dimen/text_size_36"/>

    <!-- 箭头-->
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:src="@drawable/pay_activity_diamond_more"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line_e5e5e5"
        android:visibility="gone"/>

</RelativeLayout>
