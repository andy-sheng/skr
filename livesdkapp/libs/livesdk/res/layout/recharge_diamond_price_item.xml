<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/recharge_diamond_price_item_bg">

    <com.base.image.fresco.BaseImageView
        android:id="@+id/corner_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/diamond_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-3dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="1280钻"
            android:textColor="@color/color_black_trans_90"
            android:textSize="@dimen/text_size_45"/>

        <View
            android:id="@+id/gap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_14"
            android:layout_below="@id/diamond_number"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            android:gravity="center"
            android:text="128元"
            android:textColor="@color/color_black_trans_50"
            android:textSize="@dimen/text_size_36"/>

    </RelativeLayout>
</RelativeLayout>